			<form
				action = "leg_ballot.mhtml"
				method = "post"
			>

			<input
				type  = "hidden"
				name  = "savemebaby"
				value = "yep"
			>

			<input
				type  = "hidden"
				name  = "event_id"
				value = "<% $event_id %>"
			>

			<span class="sixth nospace semibold rightalign">
				Entry Vote Opens
			</span>

			<span class="quarter nospace centeralign">
				<span class="threefifths nospace">
<%perl>
					my $opens = eval {
						$event_settings{"leg_ballot_opens"}->set_time_zone($tz);
						return $event_settings{"leg_ballot_opens"};
					};
</%perl>
					<&
						"/funclib/datepicker.mas",
						id  => "leg_ballot_opens",
						max => $tourn->end
					&>

					<input
						type		= "text"
						name		= "leg_ballot_opens"
						id		  = "leg_ballot_opens"
						placeholder = "Date.."
						size		= "12"
						value	   = "<% ($opens) ?  $opens->mdy('/') : "" %>"
					>
				</span>

				<span class="twofifths nospace">
					<&
						"/funclib/timepicker.mas",
						name		=> "leg_ballot_openstime",
						time		=> $opens,
						size		=> 8,
						placeholder => "Time..."
					&>
				</span>
			</span>

			<span class="sixth nospace semibold rightalign">
				Entry Vote Closes
			</span>

