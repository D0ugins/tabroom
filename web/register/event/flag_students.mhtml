<%args>
	$tourn
	$tourn_settings
	$person
	$event_id => undef
	$breakout => undef
</%args>
<%init>

	use JSON;

	my $event = Tab::Event->retrieve($event_id) if $event_id;

	my @students = $m->comp(
		"/funclib/event_students.mas",
		event => $event
	);

	my %flagged_students = ();

	foreach my $breakout (1 .. $event->setting("breakouts")) { 

		next if $event->setting("breakout_".$breakout."_delete");

		$flagged_students{$breakout} = 
			JSON::decode_json $event->setting('breakout_'.$breakout.'_students')
			if $event
			&& $event->setting('breakout_'.$breakout."_students");

	}
	
	my %entries = map {$_->id => $_} $event->entries( unconfirmed => 0);

</%init>

	<& "menu.mas", 
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		event          => $event,
		whoami         => "breakout_students"
	&>

	<div class="main">

		<div class="full nospace">

			<span class="half nospace">
				<h4 class="nospace">
					Breakout Speakers
				</h4>
			</span>

			<span class="third centeralign nospace">
				<h4 class="nospace">
					<% $event->abbr %>
				</h4> 
			</span>

			<span 
				id    = "breakout_buttonarea"
				class = "sixth martop rightalign"
			></span>

		</span>

		<form 
			action = "flagged_students_save.mhtml"
			method = "post"
		>

		<input 
			type  = "hidden"
			name  = "event_id"
			value = "<% $event->id %>"
		>

		<input 
			type  = "hidden"
			name  = "breakout"
			value = "<% $breakout %>"
		>
		
		<& "/funclib/tablesorter.mas", 
			table => "breakout"
		&>

		<table id="breakout">

			<thead>

				<tr class="yellowrow">

					<th>
						First
					</th>

					<th>
						Last
					</th>

					<th>
						Nov
					</th>

					<th>
						Entry
					</th>

					<th>
						Institution
					</th>

%                   foreach my $breakout (1 .. $event->setting("breakouts")) { 

%                       next if $event->setting("breakout_".$breakout."_delete");

%                       my $label = $event->setting("breakout_".$breakout."_label");

                        <th>
                            <% $label %>
                        </th>
%                   }

				</tr>

			</thead>

			<tbody>

%			foreach my $student (@students) { 

				<tr>

					<td>
						<% $student->first %>
					</td>

					<td>
						<% $student->last %>
					</td>

					<td class="centeralign">
						<% $student->novice ? "Y" : "" %>
					</td>

					<td class="nospace">
						<a 
							class="full button white leftalign" 
							href="/register/entry/edit.mhtml?entry_id=<% $student->entry %>"
						>
							<% $entries{$student->entry}->code %>
						</a>
					</td>

					<td class="nospace">
						<a 
							class="full button white leftalign" 
							href="/register/index.mhtml?school_id=<% $entries{$student->entry}->school->id %>"
						>
							<% $entries{$student->entry}->school->short_name %>
						</a>
					</td>

%					foreach my $breakout (1 .. $event->setting("breakouts")) { 

%						next if $event->setting("breakout_".$breakout."_delete");

%						my $label = $event->setting("breakout_".$breakout."_label");

						<td title="<% $label %>" class="nospace">
							<span class="hidden">
							<% $flagged_students{$breakout}{$student->id} 
								? 1 
								: 0
							%>
							</span>

							<label for="<% $breakout %>_<% $student->id %>">

								<span class="full marno padmore hover centeralign">

									<input 
										type  = "checkbox"
										value = "1"
										name  = "<% $breakout %>_<% $student->id %>"
										id    = "<% $breakout %>_<% $student->id %>"
										<% $flagged_students{$breakout}{$student->id} 
											? 'checked="checked"' 
											: ""
										%> >
								</span>
							</label>
						</td>

%					}

				</tr>
%			}

			</tbody>

			<tr class="liblrow">

				<td colspan="6" class="rightalign">
					<input 	
						type  = "submit"
						value = "Save Breakout Status"
					>
					</form>
				</td>

			</tr>

			</form> 

		</table>

	</div>

