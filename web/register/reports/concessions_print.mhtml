<%args>
	$tourn
	$session
</%args>
<%init>

	my $switch = 1;

    my $now = DateTime->now;
    $now->set_time_zone($tourn->tz);

    my $name = $tourn->name;
    $name =~ s/[\W_]//g;

    my $filename = "ConcessionReport-$name-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;

    $m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		head     => 1
	);

    open (TEXOUT, ">>$filepath.tex");

	print TEXOUT "\\bigskip\n";
	print TEXOUT "\\noindent\n";
	print TEXOUT "{\\Large \\bf ";
	print TEXOUT Tab::texify($tourn->name);
	print TEXOUT "\\hfill Concessions Report } \\\\ \n";
	print TEXOUT "\\newline\n";

	print TEXOUT "{\\normalsize \\bf By Item: } \n";
	print TEXOUT "\\newline\n";

	my $tabular = "\\begin{tabular}{p{3.5in}p{1in}p{1in}p{1in}}\n";
	print TEXOUT $tabular;
	print TEXOUT "\\rowcolor[rgb]{1,.95,.72}\[5.5pt\]\[5.5pt\]\n";
	print TEXOUT "\\bf Item & \\bf Unit Cost & \\bf Quantity & \\bf Total Cost \\\\ \n";
	print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\newline\n";

	foreach my $concession (sort {$a->name cmp $b->name} $tourn->concessions) {

		my @purchases = $concession->purchases;
		my $total;
		foreach (@purchases) {  $total += $_->quantity; }

		print TEXOUT $tabular;
		print TEXOUT "\\rowcolor[rgb]{.84,.89,.94}\[5.5pt\]\[5.5pt\]\n" if ($switch++ % 2);
		print TEXOUT &Tab::texify($concession->name)." & ";
		print TEXOUT &Tab::texify("\$".$concession->price)." & ";
		print TEXOUT &Tab::texify($total)." & ";
		print TEXOUT &Tab::texify("\$".$total * $concession->price);
		print TEXOUT "\\\\ \n";
		print TEXOUT "\\end{tabular}\n";
		print TEXOUT "\\newline\n";

	}

	print TEXOUT "\\vspace{.15in}\n";
	print TEXOUT "\\newline\n";
	print TEXOUT "{\\normalsize \\bf By School: } \n";
	print TEXOUT "\\newline\n";

	$tabular = "\\begin{tabular}{p{2in}p{1.75in}p{.5in}p{1.25in}p{.75in}}\n";

	print TEXOUT $tabular;
	print TEXOUT "\\rowcolor[rgb]{1,.95,.66}\[5.5pt\]\[5.5pt\]\n";
	print TEXOUT "\\bf School & \\bf Item & \\bf Qty & \\bf Spec & \\bf Total Cost \\\\ \n";
	print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\newline\n";

	foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) {

		my @purchases = Tab::ConcessionPurchase->search(
			school => $school->id
		);

		next unless @purchases;

		foreach my $purchase (@purchases) {

			next unless $purchase->quantity > 0;

			print TEXOUT $tabular;
			print TEXOUT "\\rowcolor[rgb]{.84,.89,.94}\[5.5pt\]\[5.5pt\]\n" if ($switch++ % 2);
			print TEXOUT "\\truncate{1.85in}{".&Tab::texify($school->short_name)."}";
			print TEXOUT " & ";
			print TEXOUT &Tab::texify($purchase->concession->name);
			print TEXOUT " & ";
			print TEXOUT &Tab::texify($purchase->quantity);
			print TEXOUT " & ";

			foreach my $option ($purchase->options) {
				print TEXOUT &Tab::texify($option->name)." ";
			}

			print TEXOUT " & ";
			print TEXOUT &Tab::texify("\$".$purchase->quantity * $purchase->concession->price);
			print TEXOUT " \\\\ \n";
			print TEXOUT "\\end{tabular}\n";
			print TEXOUT "\\newline\n";

       }

	}

	close TEXOUT;

    $m->comp("/funclib/printout.mas",
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>

<div id="content">

<p><% $filename %></p>


</%init>

