<%args>
	$tourn
	$tourn_settings
</%args>
<%init>

	my $district = Tab::District->retrieve($tourn_settings->{"nsda_district"});

	my @district_members = $m->comp(
		"/funclib/district_schools.mas", 
		district => $district
	);

</%init>

	<div class="menu">

		<div class="sidenote">

			<h4>Navigation</h4>

			<a href="index.mhtml" class="blue full">
				Return to Reports
			</a>

			<a
				class="dkyellow full martopmore"
			>
				School NSDA Memberships
			</a>

			<a
				class="yellow full marbottommore"
				href="nsda_student_memberships.mhtml"
			>
				Student NSDA Memberships
			</a>
		</div>

	</div>

	<div class="main">

		<span class="half">
			<h4>NSDA Membership Confirmations</h4>
		</span>

		<span 
			class="half rightalign"
			id="schools_buttonarea"
		>
		</span>

		<& "/funclib/tablesorter.mas", table => 'schools' &>

		<form 
			action="nsda_memberships_save.mhtml" 
			method="post"
		>

		<table id="schools">

			<thead>
				<tr class="yellowrow semibold">

					<th class="padvert">
						School
					</th>

					<th>
						NSDA ID
					</th>

					<th>
						NSDA Member Name
					</th>

				</tr>
			</thead>

			<tbody>

%			foreach my $school ($tourn->schools) { 

				<tr>

					<td>
						<% $school->name %>
					</td>

					<td class="centeralign">
						<% $school->chapter->nsda %>
					</td>

					<td>

%						if ($school->chapter->nsda) { 
							<% $school->chapter->name %>
%						} else { 
						
							<select name="<% $school->id %>">
								<option value=""></option>
%								foreach my $member (@district_members) { 
									<option 
										value="<% $member->school_id %>"
									><% $member->school_name %> (<% $member->school_id %>)</option>
%								}
							</select>
%						}

					</td>

				</tr>

%			}
			
			</tbody>

			<tr class="liblrow rightalign">

				<td colspan="4">
					<input 
						type  = "submit"
						value = "Save Affiliations"
					>
					</form>
				</td>

			</tr>

		</table>

	</div>

