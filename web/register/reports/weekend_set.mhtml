<%args>
	$tourn
	$person
	$perms
	$session
	$target_id      => undef
	$property_value => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No weekend sent"}');
		$m->abort();
	}

	if ($property_value) { 
		$session->weekend($property_value);
		$session->update();
	} else { 
		$session->weekend("");
		$session->update();
	}

	my $message;

	if ($session->weekend > 0) { 
		$message = "Weekend changed to ".$session->weekend->name." for reports";
	} else { 
		$message = "No specific weekend for reports";
	}

	$m->print('{ "error": false, "message": "'.$message.'"}');

	$m->abort();

</%init>

