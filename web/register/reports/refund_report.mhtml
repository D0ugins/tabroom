<%args>
	$tourn
	$tourn_settings
</%args>
<%init>

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("

		select school.id, school.name, refund_payable.value_text, refund_address.value_text

		from school

		left join school_setting refund_payable
			on refund_payable.tag = 'refund_payable'
			and refund_payable.school = school.id

		left join school_setting refund_address
			on refund_address.tag = 'refund_address'
			and refund_address.school = school.id

		where school.tourn = ?
		order by school.name
	");

	$sth->execute($tourn->id);

</%init>

	<& "menu.mas",
		tourn => $tourn,
		tourn_settings => $tourn_settings,
		whoami => "refund_report"
	&>

	<div class="main">

		<div class="full nospace">

			<span class="threequarters nospace">
				<h4>Refund Contact Info</h4>
			</span>

			<span
				class="quarter nospace rightalign"
				id="refunds_buttonarea"
			>
				<a
					href  = "refund_report_csv.mhtml"
					class = "buttonwhite bluetext fa fa-sm fa-file-excel-o"
				></a>
			</span>

		</div>

		<& "/funclib/tablesorter.mas", table => "refunds" &>

		<table id="refunds">

			<thead>

				<tr class="smallish yellowrow">

					<th>
						School Name
					</th>

					<th>
						Payable To
					</th>

					<th>
						Address
					</th>

				</tr>

			</thead>

			<tbody>

<%perl>

			while (
				my (
					$school_id, $school_name, $refund_payable, $refund_address
				) = $sth->fetchrow_array()
			) {

</%perl>
				<tr class="row">

					<td class="nospace padleft">
						<a
							class="white full padvert"
							href="/register/school/edit.mhtml?school_id=<% $school_id %>"
						>
							<% $school_name %>
						</a>
					</td>

					<td>
						<% $refund_payable %>
					</td>

					<td>
						<pre><% $refund_address %></pre>
					</td>

				</tr>

%			} # end of foreach school

			</tbody>

		</table>

	</div>


