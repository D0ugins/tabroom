<%args>
	$tourn
</%args>

	<& "menu.mas", tourn => $tourn, whoami => "refund_report" &>

	<div class="main">

		<div class="full nospace">

			<span class="threequarters nospace">
				<h4>Refund Contact Info</h4>
			</span>

			<span class="quarter nospace rightalign">
				<a href="refund_report_csv.mhtml" class="button buttonwhite greentext fa fa-lg fa-file-excel-o"></a>
			</span>

		</div>

		<& "/funclib/tablesorter.mas", table => "sortme" &>

		<table id="sortme">

			<thead>

				<tr class="smallish yellowrow">

					<th>
						School Name
					</th>

					<th>
						Payable To
					</th>

					<th>
						Address
					</th>

				</tr>

			</thead>

			<tbody>

%			foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) {

				<tr class="row">
					
					<td>
						<a class="white" href="/register/school/edit.mhtml?school_id=<% $school->id %>">
						<% $school->name %>
						</a>
					</td>
				
					<td>
						<pre><% $school->setting("refund_payable") %></pre>
					</td> 

					<td>
						<pre><% $school->setting("refund_address") %> </pre>
					</td> 
					
				</tr>

%			} # end of foreach school

			</tbody>

		</table>

	</div>


