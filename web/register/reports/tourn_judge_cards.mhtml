<%args> 
	$tourn 
	$session
	$category_id => undef
	$sort_by     => undef
</%args>
<%init>

	my $name = $tourn->name;
	$name =~ s/[\W_]//g;

    my $filename = "JudgeCards-$name-".$session->id;

    my $filepath = $Tab::file_root."/tmp/$filename";

	system "/bin/rm -rf $filepath.*";

	$m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		head     => 1
	);

	my @judges;

	if ($category_id) { 

		my $category = Tab::Category->retrieve($category_id);

		@judges = $m->comp(
			"/funclib/category_judges.mas", 
			category => $category
		);

	} else { 

		@judges = $m->comp(
			"/funclib/tourn_judges.mas", 
			tourn => $tourn
		);

	}

	@judges = 
		sort {$a->code cmp $b->code} @judges 
		if $sort_by eq "code";

	@judges = 
		sort {$a->schoolname cmp $b->schoolname} @judges 
		if $sort_by eq "school";

	foreach my $judge (@judges) { 
	
		$m->comp("/register/judge/print/sheet.mas", 
			filename   => $filename,
			judge      => $judge,
			tourn      => $tourn,
			linebreaks => "woof"
		);
	}

	$m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>

