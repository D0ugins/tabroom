<%args>
	$tourn
</%args>

	<& "menu.mas", tourn => $tourn, whoami => "contact_list" &>

	<div class="main">

		<h2>School Contacts</h2>

		<& "/funclib/tablesorter.mas", table => 'bully' &>

		<table id="bully">

			<thead>

			<tr class="yellowrow">
				
				<th class="smaller">
					School	
				</th>

				<th class="smaller">
					Contact
				</th>

				<th class="smaller">
					Phone
				</th>

				<th class="smaller">
					Email
				</th>

				<th class="smaller">
					Checked in?
				</th>

			</tr>
			</thead>

			<tbody>

%			foreach my $school ($tourn->schools) { 

				<tr>
			
					<td>
						<a 
							class="white" 
							href="/register/school/edit.mhtml?school_id=<% $school->id %>"
						>
							<% $school->name %>
						</a>
					</td> 
					
					<td>
						<% $school->setting("contact_name") %>
					</td>

					<td>
						<% Tab::phoneme($school->setting("contact_number")) %>
					</td>

					<td class="smallish">
						<% $school->chapter > 0 ? "" : "NO LINKED ACCOUNT" %>
						<% $school->setting("contact_email") %>
					</td>

					<td class="centeralign smallish nowrap">
						<span class="hidden">
							<% $school->onsite ? "1" : "0" %>
						</span>
						
						<span 
							class="buttonwhite fa fa-lg
							<% ($school->onsite) ? "fa-check greentext" : "fa-times redtext" %>"
						></span>
							
					</td>

				</tr>

%			}

			</tbody>

		</table>

	</div>

