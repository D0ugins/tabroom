<%args>
	$tourn
	$tourn_settings
	$session
	$person
</%args>
<%perl> 

	my $currency = $tourn_settings->{"currency"};

</%perl>

	<& "menu.mas", 
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		whoami         => "concessions"
	&>

	<div class="main">

		<div class="nospace full">

			<span class="fourfifths nospace">
				<h2><% $tourn_settings->{"concession_name"} 
					? $tourn_settings->{"concession_name"} 
					: "Concession" 
				%> pre-orders</h2>
			</span>

			<span class="twotenths nospace rightalign">
				<a 
					class="buttonwhite redtext fa fa-2x fa-file-pdf-o"
					href="concessions_orders.mhtml?format=pdf"
				></a>
				<a 
					class="buttonwhite greentext fa fa-2x fa-file-excel-o"
					href="concessions_orders.mhtml?format=csv"
				></a>
			</span>

		</div>

		<h4>By item</h4>

		<table>

			<tr class="yellowrow">
	
				<th>
					Item
				</th>
				
				<th>
					Unit Cost
				</th> 
				
				<th>
					Quantity
				</th>
				
				<th>
					Total Cost
				</th>
				
			</tr>

<%perl>

 			my $switch; 

			foreach my $concession (sort {$a->name cmp $b->name} $tourn->concessions) { 

				my @purchases = $concession->purchases;
				my $total;

				foreach (@purchases) {  $total += $_->quantity; } 

</%perl>

				<tr class="row">

					<td>
						<% $concession->name %>
					</td> 
					
					<td class="rightalign">
						$<% $concession->price %>
					</td>

					<td class="rightalign">
						<% $total %>
					</td> 
					
					<td class="rightalign">
						<% $currency %><% $total*$concession->price %>
					</td>

				</tr>

%			}

		</table>

		<h4>By School</h4>

		<table>

			<tr class="yellowrow">
	
				<th>
					School
				</th>

				<th>
					State
				</th>
				
				<th>
					Item
				</th> 
				
				<th>
					Qty
				</th>
				
				<th>
					Spec
				</th>

				<th>
					Total Cost
				</th>

				<th>
					Picked up?
				</th>
				
			</tr>
<%perl>

			foreach my $school (sort {$a->name cmp $b->name} $tourn->schools) {

				my @purchases = 
					Tab::ConcessionPurchase->search( 
						school => $school->id 
					);

				next unless @purchases; 

				foreach my $purchase (@purchases) {  

					next unless $purchase->quantity > 0;

</%perl>
					<tr class="row">

						<td>
							<% $school->short_name %>
							<% $purchase->id %>
						</td> 

						<td>
							<% $school->state %>
						</td> 

						<td>
							<% $purchase->concession->name %>
						</td> 

						<td>
							<% $purchase->quantity %>
						</td>
					
						<td>
%							foreach my $option ($purchase->options) { 
								<% $option->name %>
%							}
						</td>

						<td class="rightalign">
							<% $currency %><% $purchase->quantity * $purchase->concession->price %>
						</td> 
					
						<td class="centeralign padless">

                            <span class="hidden"><% $purchase->fulfilled %></span>

                            <label class="switch">
                                <input 
                                    type          = "checkbox"
                                    value         = "1"
                                    id            = "<% $purchase->id %>_fulfilled"
                                    property_name = "fulfilled"
                                    target_type   = "purchase"
                                    target_id     = "<% $purchase->id %>" 
                                    onChange      = "postSwitch( this, 'purchase_switch.mhtml');"
                                    <% $purchase->fulfilled ? 'checked="checked"' : "" %>
                                >
                                <div class="slider"></div>
                            </label>

						</td>

					</tr>
%				}

%			}

		</table>

	</div>
