<%args>
	$tourn     => undef
	$school_id => undef
	$pkd_id    => undef
</%args>
<%init>

	use Tab::NSDA::MemberSchool;

	my $school = Tab::School->retrieve($school_id);

	my $nsda_school = 
		Tab::NSDA::MemberSchool->retrieve($pkd_id) 
		if $pkd_id;

	my $msg;
	my $err;

	if ($school && $nsda_school) { 

		my $chapter = $school->chapter;
		$chapter->nsda($pkd_id);
		$chapter->update();

		$msg = $m->comp(
			"/funclib/chapter_import.mas",
			chapter     => $chapter,
			nsda_school => $nsda_school
		);

	} else { 

		$err = "No school found for ID $pkd_id";

	}

	$m->redirect("pkd.mhtml?school_id=".$school_id."&err=$err&msg=$msg");

</%init>
