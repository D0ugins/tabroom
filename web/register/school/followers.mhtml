<%args>
	$tourn
	$tourn_settings
	$person
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

    my %reasons;

    %reasons = $m->comp(
        "/funclib/judgemath/nats_check_judging.mas",
        school => $school
    ) if $tourn_settings->{"nsda_nats"};

	my %school_settings = $school->all_settings();

</%init>

	<& "/register/menubar.mas",
		school         => $school,
		whoami         => "follower",
    	reasons        => \%reasons,
		tourn_settings => $tourn_settings,
		tourn          => $tourn
	&>

%     	if ($tourn_settings->{"mailing_address"}) {
			<h5 class="martopmore">
				Shipping Address
			</h5>

				<form
					action = "mailing_save.mhtml"
					method = "post"
				>

				<input
					type  = "hidden"
					name  = "school_id"
					value = "<% $school->id %>"
				>

				<div class="even">

					<span class="quarter semibold bluetext">
						Shipping Address
					</span>

					<span class="half padvert">
						<textarea
							name="mailing_address"
							cols="64"
							rows="4"
						><% $school_settings{"mailing_address"} %></textarea>
					</span>

					<span class="quarter centeralign nospace">
						<input type="submit" value="Save Address">
						</form>
					</span>
				</div>
%			}

%			if ($tourn_settings->{"refund_information"}) {

				<h5 class="martopmore">
					Refund information
				</h5>

				<form
					action = "refund_save.mhtml"
					method = "post"
				>

				<input
					type  = "hidden"
					name  = "school_id"
					value = "<% $school->id %>"
				>

				<div class="row">

					<span class="quarter semibold">
						Make refund checks payable to:
					</span>

					<span class="half">
						<input
							type  = "text"
							name  = "refund_payable"
							size  = "64"
							value = "<% $school_settings{'refund_payable'} %>"
						>
					</span>

				</div>

				<div class="row">

					<span class="quarter semibold">
						Address for refund checks
					</span>

					<span class="half padvert">
						<textarea
							name="refund_address"
							cols="64"
							rows="4"
						><% $school_settings{"refund_address"} %></textarea>
					</span>

					<span class="quarter centeralign">
						<input type="submit" value="Save Refund Info">
						</form>
					</span>
				</div>

%			}

		<div class="full nospace martopmore">
			<span class="twofifths nospace">
				<h5>
					School Live updates
				</h5>
			</span>

			<span class="threefifths semibold rightalign italic">
				These accounts get all pairings and results in one
				message. Email only, no texts.
			</span>
		</div>

%		foreach my $follower_person ($school->followers) {

%			next unless $follower_person && $follower_person->id;

			<div class="row">

				<span class="twofifth">
					<% $follower_person->first." ".$follower_person->last %>
				</span>

				<span class="twofifth">
					<% $follower_person->email %>
				</span>

				<span class="fifth centeralign">
					<a
						class="buttonwhite redtext fa fa-lg fa-trash"
						href="unfollow.mhtml?school_id=<% $school->id %>&person_id=<% $follower_person->id %>"
					></a>
				</span>
			</div>

%		}

		<form action="follow.mhtml" method="post">

			<input
				type  = "hidden"
				name  = "school_id"
				value = "<% $school->id %>"
			>

			<div class="row libl">

				<span class="twofifths semibold">
					Add follower
				</span>

				<span class="twofifths">
					<input
						type        = "text"
						name        = "email"
						size        = "48"
						placeholder = "Email of Tabroom account"
					>
				</span>

				<span class="fifth centeralign">
					<input
						type  = "submit"
						value = "Add"
					>
				</span>

			</div>

			</form>
