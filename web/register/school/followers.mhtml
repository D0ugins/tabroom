<%args>
	$tourn
	$tourn_settings
	$person
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

</%init>

	<& "/register/menubar.mas",
			school         => $school,
			whoami         => "follower",
			tourn_settings => $tourn_settings,
			tourn          => $tourn 
	&>


		<h4>Live updates</h4>

		<p class="centeralign bluetext">
			The following accounts get all emailed pairings and results in one
			message.  Tap to remove.
		</p>

%		my $switch;

%		foreach my $follower ($school->followers) { 

%			my $follower_person = $follower->follower;
%			next unless $follower_person;

			<div class="lightrow">

				<span class="twofifth">
					<% $follower_person->first." ".$follower_person->last %>
				</span>

				<span class="twofifth">
					<% $follower_person->email %>
				</span>

				<span class="fifth centeralign">
					<a 
						class="buttonwhite redtext fa fa-lg fa-trash" 
						href="unfollow.mhtml?school_id=<% $school->id %>&person_id=<% $follower_person->id %>"
					></a>
				</span>
			</div>
					
%		}

		<h5 class="martopmore">
			Add all-school follower
		</h5>

			<form action="follow.mhtml" method="post">

			<input 
				type  = "hidden"
				name  = "school_id"
				value = "<% $school->id %>"
			>
		
			<div class="lightrow libl">
					
				<span class="threequarter centeralign">
					<input 
						type        = "text"
						name        = "email"
						size        = "64"
						placeholder = "Email of Tabroom account"
					>
				</span>

				<span class="quarter centeralign">
					<input 
						type  = "submit"
						value = "Add Follower"
					>
				</span>

			</div>

			</form>
