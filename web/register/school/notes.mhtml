<%args>
	$tourn
	$tourn_settings
	$school_id => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;
	$m->abort unless $school;

    my %reasons;

    %reasons = $m->comp(
        "/funclib/judgemath/nats_check_judging.mas", 
        school => $school
    ) if $tourn_settings->{"nsda_nats"};

</%init>

	<& "/funclib/editor.mas" &>

	<& 
		"/register/menubar.mas", 
		school         => $school,
		whoami         => "tourn",
		tourn          => $tourn,
		reasons        => \%reasons,
		tourn_settings => $tourn_settings
	&>

		<form 
			action="notes_save.mhtml" 
			method="post"
		>

			<input
				type  = "hidden"
				name  = "school_id"
				value = "<% $school->id %>"
			>

			<h5 class="martopmore">Notes</h5>

			<div class="centeralign block">
				<textarea 
					rows = "30"
					cols = "80"
					name = "notes"
				><% $school->setting("notes") %></textarea>
			</div>

			<div class="liblrow rightalign marno">
				<input 
					type  = "submit"
					value = "Save Notes"
				>
			</div>

		</form>
		
	</div>
		
