<%args>
    $person
    $school     => undef
    $school_id  => undef
    $admin      => undef
</%args>
<%init>

	$school_id = $ARGS{"target_id"} if ($ARGS{"target_id"} && (not defined $school_id));
    
    $school = Tab::School->retrieve($school_id) unless $school;

    $admin = 0 unless $admin;

    $m->comp( "/funclib/create_nsda_invoice.mas", 
        person => $person,
        school => $school,
        $admin => $admin
    );

</%init>
