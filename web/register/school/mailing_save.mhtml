<%args>
	$person
	$school_id       => undef
	$mailing_address => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id) if $school_id;

	$m->abort unless $school;

	if ($mailing_address) {
		$school->setting('mailing_address', "text", $mailing_address)
	} else {
		$school->setting('mailing_address', 0);
	}

	my $msg = "Mailing address saved";
	$m->redirect("edit.mhtml?school_id=$school_id&msg=$msg");



</%init>
