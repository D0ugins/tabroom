<%args>
	$person
	$perms
	$target_id 		=> undef
	$property_name  => undef
	$property_value => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No school ID sent"}');
		$m->abort();
	}

	unless ($property_name) { 
		$m->print('{ "error": true, "message": "No property to change sent"}');
		$m->abort();
	}

	my $school = Tab::School->retrieve($target_id);

	unless ($school) { 
		$m->print('{ "error": true, "message": "No school found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;
	
	$message = $property_name;
	$message = "not ".$message if $property_value < 1;

	$school->$property_name($property_value);
	$school->update;

	$m->print('{ "error": false, "message": "'.$school->name.' marked as '.$message.'"}');

	$m->abort();

</%init>

