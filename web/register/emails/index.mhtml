<%args>
	$tourn
	$person
	$email_id => undef
</%args>
<%init>

	my $email = Tab::Email->retrieve($email_id) 
		if $email_id;

	use Text::Wrap
    $Text::Wrap::columns = 72;

	my $switch;

</%init>

	<& 
		"email_menu.mas",
		tourn    => $tourn,
		email_id => $email_id
	&>

	<div class="main">

%		if ($email_id) { 
	
			<h2>Previously sent message</h4>
				
			<table>
			
				<tr class="lightrow">
					<th>Subject:</th>
					<td><% $email->subject %></td>
				</tr>
				
				<tr class="lightrow">

					<th>Sender:</th>

					<td>
						<% $email->sender->first." ".$email->sender->last %>
					</td>

				</tr>
				
				<tr class="lightrow">

					<th>Sent to:</th>

					<td><% $email->sent_to %></td>

				</tr>
				
				<tr class="lightrow">

					<th>
						Sent on:
					</th>

					<td>
						<% Tab::nicedt($email->sent_at->set_time_zone($tourn->tz)) %>
					</td>
				</tr>
				
				<tr>
					<th colspan="2">
						<h4>Text of message:</h4>
					</th>
				</tr>


				<tr>
					<td colspan="2" class="marbottom">
						<% $email->content %>
					</td>
				</tr>

				<tr class="liblrow">

					<td colspan="2" class="rightalign">

						<form action="compose.mhtml" method="post">

						<input 
							type  = "hidden"
							name  = "email_id"
							value = "<% $email->id %>"
						>

						<input 
							type  = "submit"
							value = " Edit/Send Again "
						>

						</form>

					</td>

				</tr>

			</table>
				
%		}
	
	</div>

