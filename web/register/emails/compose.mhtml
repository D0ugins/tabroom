<%args>
	$tourn
	$tourn_settings
	$person
	$email_id => undef;
</%args>
<%init>

	my $email = Tab::Email->retrieve($email_id) if $email_id;

	my $ncfl++ if $tourn_settings->{"ncfl"};

</%init>

	<& "/funclib/editor.mas" &>

	<form action="send.mhtml" method="post"> 

	<input 
		type  = "hidden"
		name  = "email_id"
		value = "<% $email_id %>"
	>

	<div class="menu">

		<div class="sidenote">

		<h4>Send email to:</h4>

			<label for="everybody">

				<div class="libl hover nospace marbottom">

					<span class="twothirds nospace padleftmore">
						All coaches
					</span>

					<div class="fifth nospace">
						<input 
							type  = "checkbox"
							id    = "everybody"
							name  = "everybody"
							value = "1"
						>
					</div>

				</div>

			</label>

%			if ($ncfl) { 

				<div class="row">

					<span class="fourfifths">
						<label for="diodirs">
							Diocese Administrators
						</label>
					</td>

					<td class="centeralign nospace nospace">
						<input 
							type  = "checkbox"
							id    = "diodirs"
							name  = "diodirs"
							value = "1"
						>
					</td>

				</div>

%			}

			<label for="short">
				<div class="row hover">

					<span class="twothirds nospace padleftmore">
						Programs short on judges
					</span>

					<span class="fifth nospace">
						<input 
							type  = "checkbox"
							id    = "short"
							name  = "judge_short"
							value = "1"
						>
					</span>
				</div>
			</label>

			<label for="tba">

				<div class="row hover">

					<span class="twothirds nospace padleftmore">
						Programs w/TBA names
					</span>

					<span class="fifth nospace">
						<input 
							type  = "checkbox"
							id    = "tba"
							name  = "tba"
							value = "1"
						>
					</span>
				</div>
			</label>

			<label for="moneyshort">
				<div class="row hover marbottommore">

					<span class="twothirds nospace padleftmore">
						Programs owing money 
					</span>

					<span class="fifth nospace">
						<input 
							type  = "checkbox"
							id    = "moneyshort"
							name  = "money_short"
							value = "1"
						>
					</span>
				</div>
			</label>

%			if ($tourn_settings->{"nsda_nats"} || $tourn_settings->{"nsda_ms_nats"}) { 
				<label for="invoiceshort">
					<div class="row hover marbottommore">

						<span class="twothirds nospace padleftmore">
							Schools with uninvoiced balances
						</span>

						<span class="fifth nospace">
							<input 
								type  = "checkbox"
								id    = "invoiceshort"
								name  = "invoice_short"
								value = "1"
							>
						</span>
					</div>
				</label>
%			}

			<h6 class="marbottom">Programs w/entries in:</h6>

%			foreach my $event (sort {$a->abbr cmp $b->abbr} $tourn->events) { 

				<div class="row">

					<span class="fourtenths nospace padleftmore semibold bluetext">
						<% $event->abbr %>
					</span>

					<label for="<% $event->id %>">
						<span class="quarter marno hover padless">
							<input 
								type  = "checkbox"
								id    = "<% $event->id %>"
								name  = "event_<% $event->id %>"
								value = "1"
							>
						</span>
					</label>

					<label for="<% $event->id %>_wl">
						<span 
							class = "quarter marno hover padless"
							title = "Include waitlist"
						>
							w/WL:
							<input 
								type  = "checkbox"
								id    = "<% $event->id %>_wl"
								name  = "wl_<% $event->id %>"
								value = "1"
							>
						</span>
					</label>
				</div>

% 			}

			<h6 class="martopmore marbottom">
				Judges in category:
			</h6>

%			foreach my $category (sort {$a->name cmp $b->name} $tourn->categories) { 

				<label for="<% $category->id %>">

					<div class="row hover">

						<span class="twothirds nospace padleftmore">
							<% $category->name %>
						</span>

						<span class="fifth nospace">
							<input 
								type  = "checkbox"
								id    = "<% $category->id %>"
								name  = "category_<% $category->id %>"
								value = "1"
							>
						</span>

					</div>
				</label>

% 			}

			<p class="smaller explain">
				*All tournament administrators will also receive all emails
			</p>

		</div>
	
	</div>

	<div class="main">
	
		<h2>Email registered coaches</h2>

			<h5>
				Subject Line:
			</h5>

			<div class="row full centeralign padmore">
				<input 
					type  = "text"
					id    = "subject"
					name  = "subject"
					size  = "64"
					value = "<% ($email) ? $email->subject : "" %>"
				>

				<script> 
					$(document).ready(function() {
						document.getElementById('subject').focus();
					});
				</script>
			</div>

			<h5>
				Text:
			</h5>


			<div class="row full centeralign">
				<textarea 
					name = "content"
					cols = "45"
					rows = "20"
				><% ($email) ? $email->content : "" %></textarea>
			</div>

			<div class="libl full rightalign">
				<input type="submit" value="  Send Email ">
				</form>
			</div>

	</div>

