<%args>
	$person
	$tourn
	$region
</%args>
<%init>

	my $tz = $person->tz;
	$tz = "UTC" unless $tz;

</%init>

	<& menubar.mas, 
		tourn  => $tourn,
		region => $region,
		whoami => "summary" &>

		<div class="row full strong martopmore">

			<span class="quarter padtop padbottom">
				Diocese Code:
			</span>

			<span class="quarter nospace">
				<h6><% $region->code %></h6>
			</span>

			<span class="quarter strong">
				Entry Limit:
			</span>
			<span class="quarter nospace">
				<h6>
					<% $region->quota %>
				</h6>
			</span>
		</div>

		<h4>Contacts:</h4>

%			my $main;

%			foreach my $admin ($region->admins) { 

				<div class="full row nospace">

					<span class="fifth strong">
						Contact Name:
					</span>

					<span class="third">
						<% $admin->first." ".$admin->last %>
					</span>

					<span class="third">
						<a 
							class="white full marno padtop padbottom"
							href="mailto:<% $admin->email %>"
						> <% $admin->email %> </a>
					</span>

				</div>

%				$main = $admin unless $main;


%			}

			<form action="contact_save.mhtml">

			<input 
				type  = "hidden"
				name  = "tourn_id"
				value = "<% $tourn->id %>"
			>
			<input 
				type  = "hidden"
				name  = "region_id"
				value = "<% $region->id %>"
			>

			<div class="full marno row">

				<span class="fifth strong">
					Contact Phone:
				</span>

				<span class="half nospace">
					<input 
						type  = "tel"
						name  = "phone"
						value = "<% Tab::phoneme($region->setting("contact_phone"))  %>"
					>
				</span>
			</div>

			<div class="full marno row">

				<span class="fifth strong">
					Contact Hotel:
				</span>
				<span class="half nospace">
					<input 
						type  = "text"
						size  = "40"
						name  = "hotel"
						value = "<% $region->setting("contact_hotel")  %>"
					>
				</span>
			</div>

			<div class="liblrow full rightalign marno marleft marright">
				<input 
					type="submit" 
					value="Save Contact Info"
				>
				</form>
			</div>

	</div>

	<div class="menu">

		<div class="sidenote">

            <h4>Status</h4>

                <label 
					for   = "<% $region->id %>_registered"
					class = "nospace"
				>

                    <div class="full row nospace">

                        <span class="twothirds strong centeralign">
                            Confirmed Onsite?
                        </span>

                        <span class="third centeralign">

                            <span class="hidden"><% $region->setting("registered_".$tourn->id) %></span>

                            <label class="switch">
                                <input 
                                    type         = "checkbox"
                                    value        = "1"
                                    id           = "<% $region->id %>_registered"
                                    setting_name = "registered_<% $tourn->id %>"
                                    target_type  = "region"
                                    target_id    = "<% $region->id %>"
                                    onChange     = "postSwitch( this, 'region_switch.mhtml');"

                                    <% $region->setting("registered_".$tourn->id) 
										? 'checked="checked"' 
										: ""
									%>
                                >
                                <div class="slider"></div>

                            </label>

                        </span>

                    </div>

                </label>

%			if ($region->setting('registered')) { 

%				my $regtime = $region->setting("registered_at");
%				$regtime->set_time_zone($tz) if $regtime;

				<div class = "full row martopmore" >

					<span class="half">
						Registered At 
					</span>

					<span class="half">
						<% Tab::nicetime($regtime) %>
					</span>

				</div>

%				my $reg_by = $region->setting("registered_by");

				<div class = "full row martopno" >

					<span class="twofifths">
						Registered By
					</span>

					<span class="threefifths">
						<% $reg_by %>
					</span>

				</div>

%			} 
	
		</div>
	
		<div class="sidenote">

			<h4>Records</h4>

			<a 
				href="tourn_print_event.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>" 
				class="blue full"
			>
				Print Registration (by Event)
			</a>

			<a 
				href="tourn_print_school.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>" 
				class="blue full">
				Print Registration (by School)
			</a>

			<h4>Invoices</h4>

			<a 
				href="invoice_print.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>" 
				class="blue full">
				Print Diocese Invoice
			</a>

			<a 
				href="invoice_school_print.mhtml?tourn_id=<% $tourn->id %>&region_id=<% $region->id %>" 
				class="blue full">
				Print Individual School Invoices
			</a>

			<h4>Cards</h4>

			<a 
				href="entry_cards_print.mhtml?region_id=<% $region->id %>" 
				class="blue full">
				Entry Cards
			</a>

			<a 
				href="judge_cards_print.mhtml?region_id=<% $region->id %>" 
				class="blue full">
				Judge Cards
			</a>

			<h4>Assignments</h4>

			<a 	
				href="entry_report_print.mhtml?region_id=<% $region->id %>" 
				class="blue full">
				Entry Report
			</a>

			<a 
				href="judge_report_print.mhtml?region_id=<% $region->id %>" 
				class="blue full">
				Judge Report
			</a>

			<a 
				href="combined_report_print.mhtml?region_id=<% $region->id %>" 
				class="blue full">
				Combined Report
			</a>

		</div>

	</div>

