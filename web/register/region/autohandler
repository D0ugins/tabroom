<%args>
	$tourn
	$session
	$person
	$region_id => undef
</%args>
<%init>

	my $region = Tab::Region->retrieve($region_id) if $region_id;

	unless ($region 
		|| $r->uri =~ /index.mhtml/
		|| $r->uri =~ /region_switch.mhtml/
	) { 
		$m->redirect("/register/region/index.mhtml");
	}


	$m->call_next(
		person  => $person,
		tourn   => $tourn,
		session => $session,
		region  => $region
	);

</%init>


