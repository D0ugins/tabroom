<%args>
	$region_id
	$tourn
	$undo => undef
</%args>
<%init>

	my $region = Tab::Region->retrieve($region_id);

	my @schools = Tab::School->search( region => $region_id, tourn => $tourn->id );

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $now = DateTime->now( time_zone => $tz );

	foreach my $school (@schools) {

		if ($undo) { 
			$school->onsite(0);
		} else { 
			$school->onsite(1);
			$school->setting("registered_on", "date", $now);
		}

		$school->update;

	}

	my $msg = "Diocese marked as onsite";
	$msg = "Diocese marked as onsite" unless $undo;

	$m->redirect("tourn.mhtml?region_id=$region_id&msg=$msg");

</%init>
