<%args>
	$person
	$tourn
	$region
	$event_id => undef
</%args>
<%init>

	my $switch; 

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $event = Tab::Event->retrieve($event_id) if $event_id;
	my $quota = $region->setting("quota");
	my $max = $event->setting("max_entry") if $event;
	my $now = DateTime->now(time_zone => $tz);


</%init>

	<& "menubar.mas",
		tourn  => $tourn,
		region => $region,
		whoami => "entries" 
	&>

%		unless ($event) { 

			<h4>Choose an event</h4>
			<p>Choose an event to right to enter students</p>

%		} else { 

			<div class="full padless">

				<span class="twothirds nospace">
					<h4>Entry in <% $event->name %></h4>
				</span>

				<span class="third nospace rightalign">
					<h4>Limit is <% $quota %></h4>
				</span>

			</div>

			<form action="tourn_entries_save.mhtml" method="post">

			<input 
				type  = "hidden"
				name  = "region_id"
				value = "<% $region->id %>"
			>
			<input 
				type  = "hidden"
				name  = "tourn_id"
				value = "<% $tourn->id %>"
			>
			<input 
				type  = "hidden"
				name  = "event_id"
				value = "<% $event->id %>"
			>

			<table id="hola">

				<tr class="yellowrow">

					<th class="smallish">
					</th>

					<th class="smallish">
						Code
					</th>

					<th class="smallish">
						School
					</th>

					<th class="smallish">
						First
					</th>

					<th class="smallish">
						Last
					</th>


				</tr>

<%perl>
				my @entries = $m->comp(
					"/funclib/region_entries.mas", 
					region => $region,
					event  => $event
				);

				my @schools = Tab::School->search(  
					region => $region->id,
					tourn  => $tourn->id
				);

				my $num_entries = scalar @entries;

				my $num_slots = $quota;
				$num_slots = $num_entries if $num_entries > $num_slots;

				foreach my $step (1 .. $num_slots) { 

					my $entry = shift @entries if @entries;

					my @students = $entry->students if $entry;

					my $alert++ if $step > $quota;
					my $dropped++ if $entry && $entry->dropped;

</%perl>
					<tr class="<% $alert ? "lird" : "" %>row <% $max > 1 ? "libordertop" : "" %>" >

						<td rowspan="<% $max %>" class="centeralign">
%							if ($entry) { 
								<a 	href="/register/entry/edit.mhtml?entry_id=<% $entry->id %>" 
									class="buttonwhite fa fa-lg fa-edit bluetext"
								></a>
%							}
						</td>

						<td
							rowspan="<% $max %>"
							class="centeralign <% $dropped ? "redtext strong" : ""%>"
						>
							<% $entry ? $dropped ? "DROP" : $entry->code : "" %>
						</td>

						<td rowspan = "<% $max %>"
							class   = "centeralign">

							<select 
								name  = "school_<% $step %>"
								class = "fixedmed"
							>

								<option value=""></option>

%									foreach my $school (@schools) { 

										<option value="<% $school->id %>" 
											<% $entry && $entry->school->id == $school->id ? "selected" : "" %>
										><% $school->name %> </option>
%									}

								<option value="">Drop Entry</option>
							</select>

						</th>

%						my $notfirst;

%						foreach my $stu (1 .. $max) { 

%							my $student = shift @students if @students;

%							if ($notfirst) { 
								<tr class="<% $step % 2 ? "evenrow" : "oddrow" %>">
%							}

%							$notfirst++;

							<td class="centeralign nospace">

								<span class="hidden"><% $student ? $student->first : "" %></span>

								<input 
									type  = "text"
									size  = "24"
									name  = "<% $step %>_<% $stu %>_first"
									value = <% $student ? $student->first : "" %>
								>
							</td>

							<td class="centeralign nospace">

								<span class="hidden"><% $student ? $student->last : "" %></span>

								<input 
									type  = "text"
									size  = "24"
									name  = "<% $step %>_<% $stu %>_last"
									value = <% $student ? $student->last : "" %>
								>
							</td>

						</tr>

%					}

%				}

				<tr class="liblrow">
					
					<td colspan="5" class="rightalign">
						<input type="submit" value="Save Entries">
						</form>
					</td>

				</tr>
				
			</table>

%		}

	</div>

	<div class="menu">
	
		<div class="sidenote">

			<h4>Events</h4>

<%perl>

				foreach my $oevent (sort {$a->name cmp $b->name} $tourn->events) { 

					my @entries = $m->comp("/funclib/region_entries.mas", region => $region, event => $oevent);

					my $full;

					if (scalar @entries == $quota) { 

						if ($event && $event->id == $oevent->id) { 
							$full = "dkblue";
						} else { 
							$full = "green";
						}

					} else { 

						if ($event && $event->id == $oevent->id) { 
							$full = "dkred";
						} else { 
							$full = "red";
						}
					}

</%perl>

					<a 
						class="<% $full %> full noline" 
						href="tourn_entries.mhtml?event_id=<% $oevent->id %>&region_id=<% $region->id %>&tourn_id=<% $tourn->id %>">

						<span class="fourfifths padno">
							<% $oevent->name %>
						</span>

						<span class="fifth padno">
							<% scalar @entries %>/<% $quota %>
						</span>
					</a>
%				}

		</div>

	</div>
