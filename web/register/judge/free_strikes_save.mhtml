<%args>
	$category_id
</%args>
<%init>


	my $category = Tab::Category->retrieve($category_id);

	foreach my $judge ($category->judges) { 

		my $setting = 0;
		$setting = $ARGS{$judge->id} if $ARGS{$judge->id};
		$judge->setting("free_strike", $setting);

	}

	my $msg = "Free strikes saved";

	$m->redirect("/register/judge/free_strikes.mhtml?category_id=$category_id&msg=$msg");


</%init>
