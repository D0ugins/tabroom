<%args>
	$category_id
	$tourn
	$only_category => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);

	my $by_round++ if $category->setting("rounds_per"); 
	
	my $freebieref = $m->comp("/funclib/free_strikes.mas", category => $category); 
	my %freebie = %{$freebieref}; 

</%init>

	<& menu.mas, only_category => $only_category,  tourn => $tourn, whoami => "roster", category => $category &>

	<div class="main">

		<form action="free_strikes_save.mhtml" method="post">
		<input type="hidden" name="category_id" value="<% $category->id %>">

		<H2>Designate Free Strikes</h2>

		<p>Free strikes will not count against user quotas for strikes or pref ratings</p>

		<& /funclib/tablesorter.mas, table => "fu" &>
		
		<table cellpadding="4" id="fu">

			<thead>

				<tr class="yellowrow">
					
					<th class="smallish">
						First
					</th>

					<th class="smallish">
						Last
					</th>

					<th class="smallish">
						School
					</th>

%					if ($by_round) { 
						<th class="smallish">
							Rounds
						</th>
%					}

					<th class="smallish">
						Free Strike?
					</th>

				</tr>

			</thead>

			<tbody>

%			foreach my $judge (sort {$a->first cmp $b->last} $category->judges) { 

				<tr <% $freebie{$judge->id} ? 'class="liblrow"' : "" %>>
					
					<td>
						<label for="<% $judge->id %>">
							<% $judge->first %>
						</label>
					</td>

					<td>
						<label for="<% $judge->id %>">
							<% $judge->last %>
						</label>
					</td>

					<td>
						<label for="<% $judge->id %>">
							<% $judge->school && $judge->school->id ? $judge->school->short_name : "Hired"  %>
						</label>
					</td>

%					if ($by_round) { 
						<td>
							<label for="<% $judge->id %>">
								<% $judge->obligation + $judge->hired %>
							</label>
						</td>
%					}

					<td class="centeralign">
						<span class="hidden">
							<% $freebie{$judge->id} %>
						</span>
						<input id="<% $judge->id %>" type="checkbox" class="check" name="<% $judge->id %>" value="1" <% $freebie{$judge->id} ? 'checked="checked"' : ""%>>
					</td>

				</tr>

%			}

			</tbody>

			<tr class="liblrow">
				
				<td colspan="5" class="rightalign">
					<input type="submit" value=" Save Free Strikes ">
					</form>
				</td>

			</tr>

		</table>


	</div>
