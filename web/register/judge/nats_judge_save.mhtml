<%args>
	$school_id   => undef
	$category_id => undef
	$judge_id    => undef
	$return      => undef
</%args>
<%init>

	use Email::Valid;

	my $judge = Tab::Judge->retrieve($judge_id) if $judge_id;

	my $school = Tab::School->retrieve($school_id) if $school_id;

	my $category;

	if ($judge) {
		$category = $judge->category;
	} elsif ($category_id) {
		$category = Tab::Category->retrieve($category_id);
	}

	unless ($category) {
		$m->comp('/funclib/abort.mas',
			message => "No judge category found for $category_id"
		);
	}

	my $tourn = $category->tourn;
	my $chapter = $school->chapter if $school;

	my $person;
	my $nsda_person_ref;
	my $chapter_judge;

	my $max_rounds = $category->setting('max_rounds');
	$max_rounds = 8 unless $max_rounds;

	my $msg;

	unless ($judge) {

		$chapter_judge =
			Tab::ChapterJudge->retrieve($ARGS{"chapter_judge_id"});

		$nsda_person_ref = $m->comp("/funclib/nsda/person.mas", nsda_id => $ARGS{"nsda"}) if $ARGS{"nsda"};

		foreach my $email ($ARGS{"tabroom_email"}, $ARGS{"email"}) {

			next unless $email;
			next if $person;

			$person = Tab::Person->search(
				email => $email
			)->first;

			unless ($nsda_person_ref) {
				$nsda_person_ref = $m->comp("/funclib/nsda/person.mas", email => $email);
			}
		}

		unless ($person) {
			$person = $chapter_judge->person if $chapter_judge
				&& $chapter_judge->person > 0;
		}

		unless ($chapter_judge
			|| $nsda_person_ref
			|| $person
			|| ($ARGS{"first"} && $ARGS{"last"})
		) {

			my $err = "Insufficient information provided to register a judge: must have at least one of a valid Tabroom judge, a NSDA coach record, a valid Tabroom account email or a first and last name";

			$m->redirect("add.mhtml?category_id=".$category->id."&school_id=".$school."&err=$err");

		}

		#Check for duplicates

		my @existing;

		if ($person > 0) {
			push @existing, $m->comp(
				"/funclib/person_judges.mas",
				person => $person,
				tourn  => $tourn
			);
		}

		if ($nsda_person_ref > 0 ) {
			push @existing, $m->comp(
				"/funclib/nsda/person_judges.mas",
				nsda_id => $nsda_person_ref->{person_id},
				tourn   => $tourn
			);
		}

		if ($chapter_judge > 0) {

			Tab::Judge->set_sql( tourn => "
				select judge.*
				from judge, category
					where category.tourn = ?
					and category.id = judge.category
					and judge.chapter_judge = ?
			");

			push @existing, Tab::Judge->search_tourn(
				$tourn->id,
				$chapter_judge->id
			);
		}

		if (@existing) {

			my $err = "That judge is already registered in the tournament: ";

			my %done;

			foreach my $other (@existing) {

				next if $done{$other->id}++;

				$err .= "<br />" if $err;
				$err .= $other->first." ".$other->last;
				$err .= " from ".$other->school->name." " if $other->school > 0;
				$err .= " in ".$other->category->abbr;
			}

			$m->redirect("add.mhtml?category_id=".$category->id."&school_id=".$school."&err=$err");

		} else {

			my $warning;

			unless ($nsda_person_ref) {

				my $nsda;
				my $email;

				$nsda = $person->nsda
					if ($person && $person->nsda);

				$nsda = $chapter_judge->nsda
					if ($chapter_judge && $chapter_judge->nsda);

				$email = $chapter_judge->email
					if $chapter_judge
					&& $chapter_judge->email;

				$email = $person->email
					if $person;

				if ($nsda) {
					$nsda_person_ref = $m->comp("/funclib/nsda/person.mas", nsda_id => $nsda);
				}

				unless ($nsda_person_ref) {
					$nsda_person_ref = $m->comp("/funclib/nsda/person.mas", email => $email);
				}
			}

			unless ($person) {

				my $nsda;
				my $email;

				$nsda = $chapter_judge->nsda
					if ($chapter_judge && $chapter_judge->nsda);

				$nsda = $nsda_person_ref->{person_id}
					if ($nsda_person_ref && $nsda_person_ref->{person_id});

				$email = $chapter_judge->email
					if ($chapter_judge && $chapter_judge->email);

				$email = $nsda_person_ref->{email}
					if ($nsda_person_ref && $nsda_person_ref->{email});

				undef $email unless Email::Valid->address(
					  -address => $email,
					   -mxcheck => 0
				);

				$person = Tab::Person->search(
					email => $email
				)->first if $email;

				unless ($person) {
					$person = Tab::Person->search(
						nsda => $nsda
					)->first if $nsda;
				}
			}

			if ($person && $nsda_person_ref && $person->nsda != $nsda_person_ref->{person_id}) {
				$person->nsda($nsda_person_ref->{person_id});
				eval { $person->update; };
			}

			if ($chapter_judge) {

				if ($person) {
					$chapter_judge->person($person->id);
				}

				if ($nsda_person_ref) {
					$chapter_judge->nsda($nsda_person_ref->{person_id});
				}

				$chapter_judge->update();

			} elsif ($school && $chapter) {

				if ($person && $chapter) {
					$chapter_judge = $person->chapter_judges(
						chapter => $chapter->id,
						last    => $person->last
					)->first;
				}

				unless ($chapter_judge) {
					if ($nsda_person_ref && $chapter) {
						$chapter_judge = $chapter->chapter_judges(
							nsda => $nsda_person_ref->{person_id}
						)->first;
					}
				}

				unless ($chapter_judge) {

					# There might be another one by name or something but I
					# could be here all friggin day checking iterations

					my $first = $ARGS{"first"};
					my $middle;
					my $last  = $ARGS{"last"};
					my $phone = $ARGS{"phone"};
					my $email = $ARGS{"email"};
					my $nsda;
					my $person_id;

					if ($nsda_person_ref) {
						$first   = $nsda_person_ref->{first};
						$middle  = $nsda_person_ref->{middle};
						$last    = $nsda_person_ref->{last};
						$phone   = $nsda_person_ref->{phone};
						$email   = $nsda_person_ref->{email};
						$nsda    = $nsda_person_ref->{person_id};
					}

					if ($person) {
						$first     = $person->first;
						$middle    = $person->middle;
						$last      = $person->last;
						$email     = $person->email;
						$phone     = $person->phone;
						$person_id = $person->id;
					}

					undef $email unless Email::Valid->address(
						  -address => $email,
						   -mxcheck => 0
					);

					unless ($first && $last) {

						my $err = "You must supply a name, or a Coach/Tabroom record, to register a judge";
						$m->redirect("add.mhtml?category_id=".$category->id."&school_id=".$school."&err=$err");
					} else {

						$chapter_judge = Tab::ChapterJudge->search(
							first   => $first,
							last    => $last,
							chapter => $chapter,
						)->first;

						if ($chapter_judge) {
							$chapter_judge->nsda($nsda) if $nsda;
							$chapter_judge->update();
						}
					}

					unless ($chapter_judge) {

						$chapter_judge = Tab::ChapterJudge->create({
							first   => $first,
							middle  => $middle,
							last    => $last,
							chapter => $chapter,
							phone   => $phone,
							email   => $email,
							nsda    => $nsda,
							person  => $person_id
						});
					}
				}
			}

			if ($chapter_judge) {

				my $nsda = $nsda_person_ref->{person_id} if $nsda_person_ref;
				my $person_id = $person->id if $person;
				$person_id = 0 unless $person_id;

				$judge = Tab::Judge->create({
					chapter_judge => $chapter_judge->id,
					first         => $chapter_judge->first,
					middle        => $chapter_judge->middle,
					last          => $chapter_judge->last,
					active        => 1,
					obligation    => $max_rounds,
					category      => $category->id,
					covers        => $category->id,
					school        => $school,
					person        => $person_id
				});

				$judge->setting("nsda", $nsda) if $nsda;

			} elsif (not defined $school) {

				my $person_id = $person->id if $person;
				$person_id = 0 unless $person_id;

				my $first = $ARGS{"first"};
				my $middle;
				my $last  = $ARGS{"last"};
				my $phone = $ARGS{"phone"};
				my $email = $ARGS{"email"};

				if ($nsda_person_ref) {
					$first   = $nsda_person_ref->{first};
					$middle  = $nsda_person_ref->{middle};
					$last    = $nsda_person_ref->{last};
					$phone   = $nsda_person_ref->{phone};
					$email   = $nsda_person_ref->{email};
				}

				if ($person) {
					$first     = $person->first;
					$middle    = $person->middle;
					$last      = $person->last;
					$email     = $person->email;
					$phone     = $person->phone;
				}

				undef $email unless Email::Valid->address(
					  -address => $email,
					   -mxcheck => 0
				);

				$judge = Tab::Judge->create({
					first      => $first,
					middle     => $middle,
					last       => $last,
					active     => 1,
					obligation => $max_rounds,
					category   => $category->id,
					covers     => $category->id,
					person     => $person_id
				});

				unless ($person) {
					$judge->setting("phone", $phone) if $phone;
					$judge->setting("email", $email) if $email;
				}
			}
		}

		$msg = "Judge ".$judge->first." ".$judge->last." created";
	}

	if ($judge) {

		$chapter_judge = $judge->chapter_judge;

		if ($chapter_judge) {
			if ($ARGS{"nsda"} && $ARGS{"nsda"} != $chapter_judge->nsda) {
				$chapter_judge->nsda($ARGS{"nsda"});
				$chapter_judge->update();
			}
		}

		if ($ARGS{"nsda"}) {

			my $diamonds;

			$diamonds = $m->comp('/funclib/nsda/member_honors.mas',
				diamonds_only => 1,
				nsda_id => $ARGS{"nsda"}
			);

			$diamonds = 0 unless $diamonds;

			if ($person) {
				$person->setting('diamonds', $diamonds);
			}
		}

		if ($ARGS{"tabroom_email"}
			&& ( (not defined $person)
				|| ($ARGS{"tabroom_email"} != $person->email)
			)
		) {

			$person = Tab::Person->search(
				email => $ARGS{"tabroom_email"}
			)->first;

			$judge->person($person->id) if $person;

			if ($chapter_judge) {
				$chapter_judge->person($person->id) if $person;
				$chapter_judge->update();
			}

			$judge->update();
		}

		foreach my $setting ("diverse", "prefers_congress", "parli") {
			if ($ARGS{$setting}) {
				$judge->setting($setting, 1);
			} else {
				$judge->setting($setting, 0);
			}
		}

		$judge->obligation($ARGS{"obligation"}) if $ARGS{"obligation"};
		$judge->update();

		my @jpools = $m->comp(
			"/funclib/category_jpools.mas",
			category => $category,
			limit    => "registrant"
		);

		foreach my $jpool (@jpools) {

			my $exists = Tab::JPoolJudge->search(
				judge => $judge->id,
				jpool => $jpool->id
			)->first;

			if ($ARGS{$jpool->id}) {
				unless ($exists) {
					$exists = Tab::JPoolJudge->create({
						judge => $judge->id,
						jpool => $jpool->id
					});
				}
			} elsif ($exists) {
				$exists->delete();
			}
		}

		my %nomination;

		if ($judge->setting("nomination")) {
			%nomination = eval{
				return %{JSON::decode_json($judge->setting("nomination"))};
			};
		}

		if ($ARGS{"self_nominated"}) {

			$nomination{'self_nominated'} = 1;
		} else {

			if ($nomination{'self_nominated'}) {

				my $msg = "Judge ".$judge->first." ".$judge->last." removed their semi/finals nomination";

				$m->comp("/funclib/log.mas",
					tourn       => $category->tourn,
					category    => $category,
					school      => $school,
					type        => "registration",
					person      => $person,
					description => $msg
				);

				delete $nomination{'self_nominated'};
			}
		}

		foreach my $key ("phonetic", "bio", "text") {

			if ($ARGS{$key}) {
				$nomination{$key} = $m->comp(
					"/funclib/save_editor.mas",
					text => $ARGS{$key}
				);
			} else {
				delete $nomination{$key};
			}
		}

		my @types = (
			"Policy",
			"LD",
			"PF",
			"Congress",
			"Address IEs",
			"Interp IEs",
			"Supps &amp; Cons",
			"Big Questions",
			"Worlds Debate"
		);

		foreach my $type (@types) {
			if ($ARGS{$type}) {
				$nomination{"type"}{$type} = $ARGS{$type};
			} else {
				delete $nomination{"type"}{$type};
			}
		}

		if (keys %nomination) {
			$judge->setting("nomination", "text", JSON::encode_json(\%nomination));
		} else {
			$judge->setting("nomination", 0);
		}

		}

	$m->comp("/user/enter/nats/judge_complete_check.mas", judge => $judge) if $judge;

	$m->redirect("/register/judge/edit.mhtml?judge_id=".$judge->id."&msg=$msg");

</%init>
