<%args>
	$tourn
	$only_category => undef
</%args>
<%init>

	my $switch;

</%init>

	<& 
		"menu.mas", 
		only_category => $only_category,
		tourn         => $tourn
	&>

	<div class="main">

		<h2>Judge Account Requests</h2>

		<table>

%			foreach my $judge ($m->comp("/funclib/judge_requests.mas", tourn => $tourn)) { 

			 <tr class="lightrow">

			 	<td>
					<% $judge->code %>
				</td>

				<td>
					<% $judge->first." ".$judge->last %>
				</td>

				<td>
					<% $judge->person_request->first." ".$judge->person_request->last %>
				</td>

				<td>
					<% $judge->person_request->email %>
				</td>

				<td class="centeralign">
					<a 
						class = "buttonwhite redtext fa fa-lg fa-times-rectangle invert" 
						href  = "permit.mhtml?judge_id=<% $judge->id %>&from=1">
					</a>
				</td>

				<td class="centeralign">
					<a 
						class = "buttonwhite fa fa-lg fa-check-square greentext invert" 
						href  = "deny.mhtml?judge_id=<% $judge->id %>&from=1">
					</a>
				</td>

			</tr>

%		}

		</table>

	</div>
