<%args>
	$tourn
	$only_category => undef
</%args>
<%init>

	my $switch;

</%init>

	<& menu.mas, only_category => $only_category,  tourn => $tourn &> 

	<div class="main">

		<h2>Judge Account Requests</h2>

		<table cellpadding="3" cellspacing="1">

%			foreach my $judge ($m->comp("/funclib/judge_requests.mas", tourn => $tourn)) { 

			 <tr class="<% ($switch++ % 2) ? "oddrow" : "evenrow" %>">

			 	<td>
					<% $judge->code %>
				</td>

				<td>
					<% $judge->first." ".$judge->last %>
				</td>

				<td>
					<% $judge->person_request->first." ".$judge->person_request->last %>
				</td>

				<td>
					<% $judge->person_request->email %>
				</td>

				<td class="centeralign">
					<a class="dkblue block" href="permit.mhtml?judge_id=<% $judge->id %>&from=1">
						Approve
					</a>
				</td>

				<td class="centeralign">
					<a class="dkred block" href="deny.mhtml?judge_id=<% $judge->id %>&from=1">
						Deny
					</a>
				</td>

			</tr>

%		}

		</table>

	</div>
