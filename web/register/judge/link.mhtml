<%args>
	$person
	$perms
	$judge_id => undef
	$email    => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($judge_id) {
		$m->print('{ "error": true, "message": "No judge ID sent"}');
		$m->abort();
	}

	unless ($email) {
		$m->print('{ "error": true, "message": "No email sent"}');
		$m->abort();
	}

	my $judge = Tab::Judge->retrieve($judge_id);

	unless ($judge) {
		$m->print('{ "error": true, "message": "No judge found for ID '.$judge_id.'"}');
		$m->abort();
	}

	my $message;

	my $link = Tab::Person->search(email => $email)->first;

	unless ($link) {
		my $login = Tab::Login->search(username => $email)->first;
		$link = $login->person if $login;
	}

	unless ($link) {
		$m->print('{ "error": true, "message": "No account found for email '.$email.'"}');
		$m->abort();
	}

	$judge->person($link->id);
	$judge->update();

	my $cj = $judge->chapter_judge;

	if ($cj) {

		$cj->person($link->id);

		if ($link->nsda) {
			$cj->nsda($link->nsda);
		}

		$cj->update();

		if ($cj->nsda) {
			$m->comp("/funclib/nsda/judge_link.mas",
				chapter_judge => $cj,
				nsda_id       => $cj->nsda
			);
		}
	}

	$m->print('{ "error": false, "reply": "'.$link->email.'", "message": "'.$judge->first." ".$judge->last.' linked to '.$link->email.'! "}');

	$m->abort();

</%init>

