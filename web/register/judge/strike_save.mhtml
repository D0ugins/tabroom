<%args> 
	$tourn
	$person
	$type     => undef
	$judge_id => undef
	$from     => undef
</%args>
<%init> 

	$m->abort unless $type;
	$m->abort unless $judge_id;

	my $now = DateTime->now;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	if ($type eq "time") { 
	
		my $start_date = $ARGS{"start_date"};
		my $start_time = $ARGS{"start_time"};

		my $end_date = $ARGS{"end_date"};
		my $end_time = $ARGS{"end_time"};

		$end_date = $start_date unless $end_date;

		my $start_dt;
		my $end_dt;

		eval { 
			$start_dt = Tab::dtme($start_date, $start_time, $tz);
			$end_dt = Tab::dtme($end_date, $end_time, $tz);
		};

		my $msg;
		my $err;

		unless ($start_dt && $end_dt) { 
			
			$err = "You did not send valid dates and times.  Please use the date picker to get the format right.";

		} elsif ($start_dt > $end_dt) { 

			$err = "Your strike time starts after it ends.  Tabroom.com does not support travel back in time.  Try again";

		} else {
			
			my $strike = Tab::Strike->create({
				judge => $judge_id,
				tourn => $tourn->id,
				type  => "time",
				start => $start_dt,
				end   => $end_dt
			});

			$msg = "Time strike saved";

		}

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&err=$err&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&err=$err&msg=$msg");

	} elsif ($type eq "timeslot") { 

		my $timeslot_id = $ARGS{"timeslot_id"};
		my $err;
		my $msg;

		my $timeslot = Tab::Timeslot->retrieve($timeslot_id) if $timeslot_id;

		unless ($timeslot) {

			$err = "You did not send a valid timeslot";

		} else {
			
			my $strike = Tab::Strike->create({
				judge => $judge_id,
				tourn => $tourn->id,
				type  => "time",
				start => $timeslot->start,
				end   => $timeslot->end
			});

			$msg = "Time strike saved";

		}

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&err=$err&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&err=$err&msg=$msg");

	} elsif ($type eq "day") { 

		my $day_date = $ARGS{"day_date"};

		my $start_time = "00:00:00";
		my $end_time = "23:59:00";

		my $start_dt;
		my $end_dt;

		eval { 
			$start_dt = Tab::dtme($day_date, $start_time, $tz);
			$end_dt = Tab::dtme($day_date, $end_time, $tz);
		};

		my $msg;
		my $err;

		unless ($start_dt && $end_dt) { 
			$err = "You did not send valid dates and times.  Please use the date picker to get the format right.";
		} else {
			
			my $strike = Tab::Strike->create({
				judge => $judge_id,
				tourn => $tourn->id,
				type  => "time",
				start => $start_dt,
				end   => $end_dt
			});

			$msg = "Time strike saved";

		}

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&err=$err&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&err=$err&msg=$msg");

	} elsif ($type eq "event") { 
	
	} elsif ($type eq "event") { 
	
		my $event = Tab::Event->retrieve($ARGS{event});
		my $msg;

		if ($event && $event->id) { 

			my $strike = Tab::Strike->create({ 
				judge => $judge_id,
				tourn => $tourn->id,
				type  => "event",
				event => $event->id
			});

			$msg = "Judge struck against ". $event->abbr;
		}

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;

		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");
	
	} elsif ($type eq "elim") {
	
		my $event = Tab::Event->retrieve($ARGS{event});

		my $strike = Tab::Strike->create({ 
			judge => $judge_id,
			tourn => $tourn->id,
			type  => "elim",
			event => $event->id
		});

		my $msg = "Judge reserved for elims in ". $event->abbr;

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");

	} elsif ($type eq "entry") {

		my $entry_id = $ARGS{entry_id};

		my $msg;
		my $err;

		my $entry = Tab::Entry->retrieve($entry_id) if $entry_id;

		if ($entry) { 

			my $strike = Tab::Strike->create({ 
				tourn => $tourn->id,
				judge => $judge_id,
				type  => "entry",
				entry => $entry->id
			});

			$msg = "Judge blocked against ". $entry->code." (".$entry->name.") <br />";

		} else { 
		
			$err = "No valid entry found from input";
		}

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg&err=$err");

	} elsif ($type eq "student") {

		my $msg;

		my $student = Tab::Student->retrieve($ARGS{student_id}) if $ARGS{student_id};

		my @entries = $m->comp('/funclib/student_entries.mas', 
			student => $student,
			tourn   => $tourn
		) if $student;

		foreach my $entry (@entries) { 

			my $strike = Tab::Strike->create({ 
				tourn => $tourn->id,
				judge => $judge_id,
				type  => "entry",
				entry => $entry->id
			});
			
			$msg .= "Judge was conflicted against ".$entry->code." <br />";
				
		}
			
		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");

	} elsif ($type eq "school") {
	
		my $school = Tab::School->retrieve($ARGS{school});

		my $strike = Tab::Strike->create({ 
			tourn  => $tourn->id,
			judge  => $judge_id,
			type   => "school",
			school => $school->id,
		});

		my $msg = "Judge struck against school ".$school->name;

		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");
	
	} elsif ($type eq "region") { 
	
		my $region = Tab::Region->retrieve($ARGS{region});

		my $strike = Tab::Strike->create({ 
			tourn  => $tourn->id,
			judge  => $judge_id,
			type   => "region",
			region => $region->id,
		});

		my $msg = "Judge struck against region ".$region->name;
		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");

	} elsif ($type eq "district") { 
	
		my $district = Tab::District->retrieve($ARGS{district});

		my $strike = Tab::Strike->create({ 
			tourn    => $tourn->id,
			judge    => $judge_id,
			type     => "district",
			district => $district->id,
		});

		my $msg = "Judge struck against district ". $district->name;
		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");

	} elsif ($type eq "diocese") { 
	
		my $diocese = Tab::Region->retrieve($ARGS{diocese});

		my $strike = Tab::Strike->create({ 
			tourn  => $tourn->id,
			judge  => $judge_id,
			type   => "diocese",
			region => $diocese->id,
		});

		my $msg = "Judge struck against diocese ". $diocese->name;
		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");

	} elsif ($type eq "strike_timeslot") {

		my $judge = Tab::Judge->retrieve($judge_id);

	    foreach my $strike_timeslot ($judge->category->strike_timeslots) {

   	  		my $strike_timeslotkey = "strike_timeslot_".$strike_timeslot->id;
        	my $existing_strike = $strike_timeslot->strike($judge);

        	my $strike_timeslot_yes = $ARGS{$strike_timeslotkey};

        	next if $strike_timeslot_yes && $existing_strike;
        	next unless $strike_timeslot_yes || $existing_strike;

        	if ( defined $strike_timeslot_yes &! defined $existing_strike) {

				# There should be one.  and there ISN'T ALREADY!!!  HAHAHAHAHA

        	    my $strike = Tab::Strike->create({
        	        tourn           => $tourn->id,
        	        strike_timeslot => $strike_timeslot->id,
        	        type            => "time",
        	        judge           => $judge->id,
        	        start           => $strike_timeslot->start,
        	        end             => $strike_timeslot->end            
				});

        	}

        	if ( defined $existing_strike &! defined $strike_timeslot_yes) {
	
	            $existing_strike->delete;
	
   		     }
   		}

		my $msg = "Time strike saved";
		$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg#yo") if $from;
		$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");
	}

	my $msg = "That type of strike is unknown.  This is either a bug or you're attemping something weird.";
	$m->redirect("/register/judge/edit.mhtml?judge_id=$judge_id&msg=$msg") if $from;
	$m->redirect("/register/judge/judge_strikes.mhtml?judge_id=$judge_id&msg=$msg");

</%init>
