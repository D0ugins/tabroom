<%args>
	$category_id
</%args>
<%init>


	my $category = Tab::Category->retrieve($category_id);

	foreach my $judge ($category->judges) { 

		$judge->setting("diverse", $ARGS{$judge->id});
		$judge->update;

	}

	my $msg = "Saved judge ratings";
	$m->redirect("diversity.mhtml?msg=$msg&category_id=$category_id");


</%init>
