<%args>
	$tourn
	$person
	$session
	$group_id
	$only_group => undef
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id);
	$group = $only_group if $only_group;
	my $no_codes++ if $group->setting("no_codes");

</%init>

	<& menu.mas, only_group => $only_group,  group => $group, tourn => $tourn, whoami => "contacts" &>

	<div class="main">

		<h2><% $group->abbr %> judge contacts</h2>

		<& /funclib/tablesorter.mas, table => "sortmehard" &>

		<table id="sortmehard" cellpadding="3" cellspacing="1">

			<thead>

			<tr class="yellowrow">

%				unless ($no_codes) { 
					<th class='smallish'>
						Code
					</th>
%				}

				<th class='smallish'>
					First
				</th>

				<th class='smallish'>
					Last
				</th>

				<th class='smallish'>
					School
				</th>

				<th class='smallish'>
					Phone
				</th>

				<th class='smallish'>	
					Email
				</th>

			</tr>

			</thead>
			<tbody>

%			foreach my $judge (sort {$a->last cmp $b->last} $group->judges) { 

				<tr>

					<td>
						<% $judge->first %>
					</td>

					<td>
						<% $judge->last %>
					</td>

					<td>
						<% $judge->school ? $judge->school->short_name : "Hired" %>
					</td>

					<td>
						<% $judge->person && $judge->person->phone ? $judge->person->phone : $judge->setting("phone") %>
					</td>

					<td>
						<% $judge->person && $judge->person->email ? $judge->person->email : $judge->setting("email") %>
					</td>

				</tr>

%			}

			</tbody>

		</table>

	</div>

