<%args>
	$group_id => undef
	$tourn
</%args>
<%init>

	my $group = Tab::JudgeGroup->retrieve($group_id); 

	$m->abort unless $group;

	my @judges = sort {$a->last cmp $b->last } Tab::Judge->search(  person => 0, judge_group => $group->id );

	my $err;
	my $count;

	foreach my $judge (@judges) { 

		my $email = $ARGS{$judge->id};
		next unless $email;

		my $person = Tab::Person->search( email => $email)->first;

		$err .= "No person found for $email</br>" unless $person;
		next unless $person;

		$m->comp("/funclib/conflict.mas", tourn => $tourn, person => $person);

		$judge->person($person->id);
		$judge->setting("phone", $person->phone);
		$judge->setting("email", $person->email);
		$judge->update;
		$count++;

	}

	my $msg = "$count persons linked to judge records" if $count > 0;

	$m->redirect("link_persons.mhtml?group_id=$group_id&msg=$msg&err=$err");

</%init>
