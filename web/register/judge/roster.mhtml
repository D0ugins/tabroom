<%args>
	$tourn
	$category_id
	$hires         => undef
	$only_category => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id); 
	$category = $only_category if $only_category;

	$m->abort unless $category;

	my @judges = $m->comp("/funclib/category_judges.mas", category => $category, hires => $hires);

	my @events = $category->events;

	my $regions++ if $tourn->setting("ncfl");
	$regions++ if $tourn->setting("regions");

	Tab::Judge->set_sql( check_rounds => 
		"select coalesce(sum(obligation),0) + coalesce(sum(hired),0) from judge where judge.category = ? "
	);

	my $rounds = Tab::Judge->sql_check_rounds->select_val($category->id) if $category->setting("rounds_per");

	my %rating_name = ();

	foreach my $tier ($category->rating_tiers) { 
		$rating_name{$tier->id} = $tier->name;
	}

	my %rating_by_judge = ();

	foreach my $rating ($m->comp("/funclib/category_ratings.mas", category => $category, type => "coach")) { 
		$rating_by_judge{$rating->judge->id} = $rating_name{$rating->rating_tier->id} if $rating->rating_tier && $rating->judge;
	}

	my $tab_rating = $category->setting("tab_ratings");

	my $total_obligation;
	my $total_hired;

</%init>

	<& menu.mas, tourn => $tourn, whoami => "roster", category => $category, hires => $hires, only_category => $only_category &> 

	<div class="main">

		<div>

			<span class="threequarters nospace">
				<h2>
					<% ($hires) ? "Hired" : "" %> <% $category->name %> Judges 
				</h2>
			</span>

			<span class="quarter rightalign nospace">
				<h4>
					<% ($rounds) ? $rounds." rounds/" : "" %><% scalar @judges." judges" %>
				</h4>
			</span>

		</div>

	</span>

	<& /funclib/tablesorter.mas, table => "judges" &>

	<table id="judges" class="narrow smallish">

		<thead>

			<tr class="yellowrow">

%				unless ($category->setting("no_codes")) { 
					<th>
						Code
					</th>
%				}

				<th>
					First
				</th>

				<th>
					Last
				</th>

				<th>
					School
				</th>

%				if ($tab_rating) { 
					<th class="centeralign">
						Rating
					</th>
%				}


%				if ($category->setting("rounds_per") || $rounds) { 
					<th class="centeralign">
						Rds
					</th>

					<th class="centeralign">
						Hire
					</th>
%				}

%				if ($category->setting("coach_ratings")) { 
					<th class="centeralign">
						Rtng	
					</th>
%				}

%				if ($category->setting("ask_parli")) { 
					<th class="centeralign">
						Parli
					</th>
%				}

%				$m->print("<th>Dio</th>") if $tourn->setting("ncfl");

				<th class="centeralign">
					Coach Notes
				</th>

			</tr>
		</thead>
		<tbody>

% 		my $switch;

%		foreach my $judge (@judges) { 


%			my $region = $judge->school->region if $judge->school && $regions;

			<tr <% $judge->active ? "" : 'class="lirdrow"' %>>

%				unless ($category->setting("no_codes")) { 
					<td class="centeralign">
						<a class="white" href="/register/judge/edit.mhtml?from=list&judge_id=<% $judge->id %>">
							<% ($judge->code) ? $judge->code : "Edit"%>
						</a>
					</td>
%				}

				<td >
					<a class="white" href="/register/judge/edit.mhtml?from=list&judge_id=<% $judge->id %>">
						<% $judge->first %>
					</a>
				</td>

				<td >
					<a class="white" href="/register/judge/edit.mhtml?from=list&judge_id=<% $judge->id %>">
						<% $judge->last %>
					</a>
				</td>

				<td class="padleft">
					<a class="white" href="
					<% $judge->school > 0 ? "/register/school/judges.mhtml?from=list&category_id=".$category_id."&school_id=".$judge->school : "/register/judge/roster.mhtml?hires=1&category_id=".$category_id %>">
						<% ($judge->setting("neutral")) ? "Neutral (" : "" %><% ($judge->school && $judge->school->short_name) ? substr($judge->school->short_name,0,25) : "Hired" %><% ($judge->setting("neutral")) ? ")" : "" %>
					</a>
				</td>

%				if ($tab_rating) { 
					<td class="centeralign">
						<% $judge->setting("tab_rating") %>
					</td>
%				}

%				if ($category->setting("rounds_per") || $rounds) { 

%					$total_obligation += $judge->obligation;
%					$total_hired += $judge->hired;
					<td class="centeralign">
						<% $judge->obligation %>
					</td>
					<td class="centeralign">
						<% $judge->hired %>
					</td>
%				}

%				if ($category->setting("coach_ratings")) { 
					<td class="centeralign">
						<% $rating_by_judge{$judge->id} %>
					</td>
%				}	
%				if ($category->setting("ask_parli")) { 
					<td class="centeralign">
						<% $judge->setting("parli") %>
					</td>
%				}	

%				if ($tourn->setting("ncfl")) { 

					<td class="centeralign padno">
						<% $region ? $region->code : "" %>
					</td>

%				}	

				<td class="limit2 smallish">
					<% $judge->setting('notes') %>
				</td>

			</tr>

% 		} 

		<tbody>

%		if ($category->setting("rounds_per") || $rounds) { 

			<tr class="liblrow">

				<th colspan="3" class="rightalign">
					Totals:
				</th>

				<th class="centeralign">
					<% $total_obligation %>
				</th>

				<th class="centeralign">
					<% $total_hired %>
				</th>

				<th class="centeralign">
					<% $total_obligation + $total_hired %>
				</th>

				<th class="centeralign">
				</th>

			</tr>
% 		} 

	</table>

</div>

