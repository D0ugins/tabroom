<%args>
	$tourn
	$category_id
	$hires => undef
	$only_category => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id); 
	$category = $only_category if $only_category;
	$m->abort unless $category;

</%init>

	<& menu.mas, only_category => $only_category,  tourn => $tourn, whoami => "quals", category => $category, hires => $hires &>

	<div class="main">

		<h2>
			<% $category->name %> judge qualifications
		</h2>

%		my $switch;

%		foreach my $judge ($category->judges) { 

			<div class="<% ($switch++ % 2) ? "odd" : "even" %>">

				<div class="nospace">
					<span class="half">
						<h4><% $judge->first." ".$judge->last %></h4>
					</span>

					<span class="quarter">
						<% $judge->school ? $judge->school->name : "Hired" %>
					</span>

					<span class="quarter">
						<% $judge->obligation || $judge->hired ? $judge->obligation + $judge->hired." rounds " : "" %>
					</span>
				</div>

				<p><% $judge->setting("qual_history") %></p>

			</div>

% 		} 

	</div>

