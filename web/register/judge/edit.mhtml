<%init>

	my $dbh = Tab::DBI->db_Main();

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $judge = Tab::Judge->retrieve($judge_id) if $judge_id;

	$m->abort unless $judge;

	my %judge_settings = $judge->all_settings;

	my $school = $judge->school;
	my $district = $school->district if $tourn_settings->{"nsda_nats"};
	my $diocese = $school->region if $tourn_settings->{"ncfl"};

	my $category = $judge->category;
	my %category_settings = $category->all_settings;

	my $cap_repel;
	my $usa_wsdc;

	foreach my $event ($category->events) {
		$cap_repel++ if $event->setting("wsdc_cap_repel");
		$usa_wsdc++ if $event->setting("usa_wsdc");
	}

	my @districtschools;

	if ($district) {
		@districtschools =
			sort {$a->name cmp $b->name}
			$district->schools(tourn => $tourn->id);
	}

	my @dioschools;

	if ($diocese) {
		@dioschools =
			sort {$a->name cmp $b->name}
			$diocese->schools(tourn => $tourn->id);
	}

 	my @panels = $m->comp(
		'/funclib/judge_panels.mas',
		judge => $judge
	);

	my @online = $m->comp(
		"/funclib/category_online.mas",
		category => $category
	);

	my $hired++ unless $school && $school->id;

	my $num_sites = scalar($tourn->sites);

	my @this_jpools;
	my @other_jpools;

	my @questionnaires;
	my $ask_parli;
	my $prefer_congress;

	my %in_jpool = map {$_->id => $_} $judge->jpools();

	my %all_jpools;

	if ($tourn_settings->{"nsda_nats"}) {

		push @questionnaires, "NSDADiversity";

		push @this_jpools, $m->comp(
			"/funclib/category_jpools.mas",
			category => $category,
			limit   => "registrant"
		);

		foreach my $jpool (@this_jpools) {
			next unless $in_jpool{$jpool->id};

			push @questionnaires, $jpool->setting("paradigm_form")
				if $jpool->setting("paradigm_form");

			$ask_parli++ if $jpool->setting("parli");
			$prefer_congress++ if $jpool->setting("prefer");
		}

        my $dbh = Tab::DBI->db_Main();

        my $sth = $dbh->prepare("
            select
                jpool.id, jpool.name,
                rounds.value,
				round.name,
                event.abbr, event.id,
                jpool_judge.id,
                timeslot.id, timeslot.start, timeslot.end,
				count(others.judge)
            from (jpool, jpool_round, round, event, category, timeslot)

            left join jpool_setting rounds on rounds.tag = 'rounds' and rounds.jpool = jpool.id
            left join jpool_judge on jpool_judge.judge = ? and jpool_judge.jpool = jpool.id
			left join jpool_judge others on others.jpool = jpool.id

            where jpool.category = category.id
                and category.tourn = ?
                and jpool.id = jpool_round.jpool
                and jpool_round.round = round.id
                and round.event = event.id
                and round.timeslot = timeslot.id

			and not exists (
				select jpool_setting.id
				from jpool_setting
				where jpool_setting.jpool = jpool.id
				and jpool_setting.tag = 'registrant'
			)
			group by jpool.id
            order by round.name, jpool.name
        ");

        $sth->execute($judge->id, $tourn->id);

		my %tslot_cache;

        while (
            my (
                $jpool_id, $jpool_name,
				$rounds_value, $round_name,
                $event_abbr, $event_id,
                $jpool_judge_id,
				$timeslot_id, $timeslot_start, $timeslot_end,
				$count_judges
            ) = $sth->fetchrow_array()
        ) {

            $all_jpools{$jpool_id}{"name"}         = $jpool_name;
            $all_jpools{$jpool_id}{"rounds"}       = $rounds_value;
            $all_jpools{$jpool_id}{"round_name"}   = $round_name;
            $all_jpools{$jpool_id}{"event_abbr"}   = $event_abbr;
            $all_jpools{$jpool_id}{"event_id"}     = $event_id;
            $all_jpools{$jpool_id}{"count_judges"} = $count_judges;

			unless ($tslot_cache{$timeslot_start}) {
				$tslot_cache{$timeslot_start} = DateTime::Format::MySQL->parse_datetime($timeslot_start);
				$tslot_cache{$timeslot_start}->set_time_zone("UTC");
				$tslot_cache{$timeslot_start}->set_time_zone($tz);
			}

			unless ($tslot_cache{$timeslot_end}) {
				$tslot_cache{$timeslot_end} = DateTime::Format::MySQL->parse_datetime($timeslot_end);
				$tslot_cache{$timeslot_end}->set_time_zone("UTC");
				$tslot_cache{$timeslot_end}->set_time_zone($tz);
			}

            if ($tslot_cache{$timeslot_start}) {
				$all_jpools{$jpool_id}{"start"}       = $tslot_cache{$timeslot_start};
				$all_jpools{$jpool_id}{"start_epoch"} = $tslot_cache{$timeslot_start}->epoch;
			}

            $all_jpools{$jpool_id}{"end"} = $tslot_cache{timeslot_end};
            $all_jpools{$jpool_id}{"in"}  = 1 if $jpool_judge_id;

		}

	} else {

		push @this_jpools, $judge->category->jpools();

		push @this_jpools, $judge->alt_category->jpools
			if $judge->alt_category > 0;

		foreach my $category (sort {$a->abbr cmp $b->abbr} $tourn->categories) {
			next if $category == $judge->category;
			next if $category == $judge->alt_category;
			push @other_jpools, sort {$a->name cmp $b->name} $category->jpools;
		}
	}

	push @questionnaires, $category_settings{"paradigm_form"}
		if $category_settings{"paradigm_form"};

	@this_jpools = sort {$a->name cmp $b->name} @this_jpools;

	my %seen = ();
	@this_jpools = grep { ! $seen{$_->id} ++ } @this_jpools;
	@other_jpools = grep { ! $seen{$_->id} ++ } @other_jpools;

	my @tabs;
	push @tabs, "edit";
	push @tabs, "pools" if @this_jpools || @other_jpools;
	push @tabs, "noms" if $tourn_settings->{"nsda_nats"};
	push @tabs, "TabRoom" if $category_settings{"tab_room"};
	push @tabs, "rounds" if @panels;
	push @tabs, "paradigm" if ($category_settings{"ask_paradigm"} && $judge->person);

	my %links;
	$links{"strikes"} = "judge_strikes.mhtml?judge_id=".$judge->id;

	my %reasons;

	%reasons = $m->comp(
		"/funclib/judgemath/nats_check_judging.mas",
		school => $school
	) if $tourn_settings->{"nsda_nats"};

</%init>

	<script>

		function statusSwitch(targetStatus) {
			$("."+targetStatus).toggleClass('hidden');
