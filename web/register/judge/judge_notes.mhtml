<%args>
	$person
	$perms
	$target_id      => undef
	$property_name  => undef
	$setting_name   => undef
	$property_value => 0
	$flag           => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) {
		$m->print('{ "error": true, "message": "No judge ID sent"}');
		$m->abort();
	}

	unless ($property_name || $setting_name) {
		$m->print('{ "error": true, "message": "No property to change sent"}');
		$m->abort();
	}

	my $judge = Tab::Judge->retrieve($target_id);

	unless ($judge) {
		$m->print('{ "error": true, "message": "No judge found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;

	if ($setting_name eq "notes") {

		$judge->setting("notes", "text", $property_value);
		my $now = DateTime->now();

		if ($judge->chapter_judge) {

			my $cj = $judge->chapter_judge;
			$cj->notes($property_value);
			$cj->notes_timestamp($now);
			$cj->update();
		}

		$message = " notes updated"

	} elsif ($setting_name eq "notes_processed") {

		unless ($property_value) {
			$property_value = 0;
		}

		$judge->setting('notes_processed', $property_value);
		$message = "notes processed";
	}

	my $msg = $judge->last.' marked as '.$message;

    my %response = (
		error   => 0,
		message => $msg
    );

    $m->print(JSON::encode_json(\%response));

	$m->abort();

</%init>

