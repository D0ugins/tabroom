<%args>
	$tourn
</%args>
<%init>

	foreach my $region ($tourn->regions) { 

		my $namekey = "name_".$region->id;

		$region->name($ARGS{"name_".$region->id});
		$region->code($ARGS{"code_".$region->id});
		$region->update();
		$region->setting("bullshit_conflict", $ARGS{"bullshit_conflict_".$region->id});

	}

	if ($ARGS{"name_new"}) {

		my $region = Tab::Region->create({
			name  => $ARGS{"name_new"},
			code  => $ARGS{"code_new"},
			tourn => $tourn->id
		});

		$region->setting("bullshit_conflict", $ARGS{"new_bullshit_conflict_".$region->id});

	}

	my $msg = "Region data saved";
	$m->redirect("regions.mhtml?msg=$msg");

</%init>


