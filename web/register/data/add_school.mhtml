<%args>
	$tourn
	$tourn_settings
	$person
	$person_settings
</%args>
<%init>

	my @schools = sort {ucfirst($a->name) cmp ucfirst($b->name)} $tourn->schools;

	my %used_schools = ();

	foreach my $school (@schools) {
		next unless $school->chapter;
		$used_schools{$school->chapter->id}++;
	}

	my @chapters;

	my %circuits = ();
	my %seen;
	
	if ($tourn_settings->{"nsda_district"}) { 

		foreach my $chapter (
			Tab::Chapter->search( 
				district => $tourn_settings->{"nsda_district"}
			) 
		) {

			next if $used_schools{$chapter->id};
			next if $seen{$chapter->id}++;
			push (@chapters, $chapter);
		}

	} else { 

		foreach my $circuit (
			$m->comp("/funclib/tourn_circuits.mas", 
				tourn => $tourn
			)
		) { 

			foreach my $chapter (
				$m->comp(
					"/funclib/circuit_chapters.mas", 
					circuit => $circuit
				)
			) {

				next if $used_schools{$chapter->id};
				next if $seen{$chapter->id}++;


				$circuits{$chapter->id} .= ", " if $circuits{$chapter->id};
				$circuits{$chapter->id} .= $circuit->abbr;

				push (@chapters, $chapter);
			}
		}
	}

	@chapters = sort {ucfirst($a->name) cmp ucfirst($b->name)} @chapters;
	
</%init>

	<& "menu.mas",
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		person         => $person,
		whoami         => "add_school"
	&>

	<div class="main">

		<h2>Add school to tournament</h2>

		<form action="add_school_save.mhtml" method="post">

%		if ($tourn_settings->{"nsda_nats"}) { 

			<div class="row">

				<span class="third">
					Add district team:
				</span>

				<span class="half">
					<select 
						name  = "district_id"
						class = "fixedbig"
					>
						<& "/funclib/district_select.mas" &>
					</select>
				</span>

				<span class="sixth rightalign">
					<input 
						type  = "submit"
						class = "thin"
						value = "Add"
					>
				</span>

			</div>

%		}

%		if ($tourn_settings->{"nsda_district"}) { 

			<div class="row">

				<span class="third strong">
					Add school from district
				</span>

				<span class="half">

					<select 
						name  = "chapter_id"
						class = "fixedbig"
					>
%						foreach my $chapter (@chapters) { 

							<option 
								value="<% $chapter->id %>"
							><% $chapter->name %></option>
%		 				}
					</select>

				</span>

				<span class="sixth rightalign">
					<input 
						type  = "submit"
						class = "thin"
						value = "Add"
					>
					</form>
				</span>

			</div>

%		} else { 

			<div class="row">

				<span class="third">
					Add school from circuit
				</span>

				<span class="half">
					<select name="chapter_id" class="fixedbig">

%						foreach my $chapter (@chapters) { 

							<option 
								value="<% $chapter->id %>"
							><% $chapter->state." - ".$chapter->short_name." (".$circuits{$chapter->id}.")" %> </option>
%		 				}
					</select>
				</span>

				<span class="sixth rightalign">
					<input 
						type  = "submit"
						class = "thin"
						value = "Add"
					>
					</form>
				</span>

			</div>

%		}

		<h4 class="martop">Or, add a brand new school</h4>

		<form action="add_school_create.mhtml" method="post">

		<table>

			<tr class="row">

				<td>
					School/Institution Name
				</td>

				<td>
					<input 
						type = "text"
						name = "name"
						size = "32"
					>
				</td>

			</tr>

			<tr class="row">

				<td>
					Coach Email
				</td>

				<td>
					<input 
						type = "text"
						name = "email"
						size = "32"
					>
				</td>

			</tr>

%			if ($tourn_settings->{"nsda_nats"}) { 

				<tr class="row">

					<td>
						District
					</td>

					<td>
						<select 
							name  = "district_id"
							class = "fixedbig"
						>
							<& "/funclib/district_select.mas" &>
						</select>
					</td>

				</tr>

%			}

			<tr class="row">

				<td>
					Country
				</td>

				<td>
					<select 
						name  = "country"
						class = "fixedbig"
					>
						<& "/funclib/country_select.mas", country => $tourn->country &>
					</select>
				</td>

			</tr>

			<tr class="row">

				<td>
					State
				</td>

				<td>
					<select 
						name  = "state"
						class = "fixedbig"
					>
						<& "/funclib/state_select.mas", state => $tourn->state &>
					</select>
				</td>

			</tr>

			<tr class="liblrow">
				<td colspan="2" class="rightalign">
					<input 
						type  = "submit"
						class = "thin"
						value = "Add"
					>
					</form>
				</td>
			</tr>
		</table>


%		if ($person_settings->{"nsda_admin"} || $person->site_admin) { 

			<h4>Secret super duper method</h4>

			<form action="add_school_id.mhtml" method="post">

				<div class="row">

					<span class="half semibold redtext">
						Add any school by chapter id (Admin only):
					</span>

					<span class="quarter">
						<input
							type="number"
							name="chapter_id"
							size="16"
							min=0
							max=99999999
						>
					</span>

					<span class="quarter rightalign">
						<input
							type="submit"
							value="Add School"
							class="thinner"
						>
					</span>
				</div>
			</form>

			<form action="add_school_id.mhtml" method="post">

				<div class="row">

					<span class="half semibold redtext">
						Add any school by NSDA School ID
					</span>

					<span class="quarter">
						<input
							type = "number"
							name = "nsda_school_id"
							size = "16"
							min  = 0
							max  = 99999999
						>
					</span>

					<span class="quarter rightalign">
						<input
							type="submit"
							value="Add School"
							class="thinner"
						>
					</span>
				</div>
			</form>
%		}

	</div>

