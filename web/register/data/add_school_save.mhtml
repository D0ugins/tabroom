<%args>
	$tourn
	$tourn_settings
	$person
	$chapter_id  => undef
	$return      => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my ($school, $err) = $m->comp("/funclib/school_create.mas", 
			person         => $person,
			tourn          => $tourn,
			chapter        => $chapter,
			tourn_settings => $tourn_settings,
			nodeadlines    => 1
		);

	return $school if $return;

	$m->redirect("/register/data/add_school.mhtml?err=$err");


</%init>
