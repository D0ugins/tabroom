<%args>
	$tourn
	$person
</%args>
<%init>

	my $switch;

	my @events = $tourn->events;

	@events = sort {$a->name cmp $b->name} @events;

</%init>

	<& menu.mas, tourn => $tourn, person => $person, whoami => "mail_managers" &>

	<& /funclib/tablesorter.mas, table => "yo" &>

	<div class="main">

		<form action="mail_round_send.mhtml">

%			foreach my $event ($tourn->events) { 

				<div class="row">

					<span class="quarter">
						<form class="mail_round_send.mhtml" method="post">
						<input type="hidden" name="event_id" value="<% $event->id %>">
						<% $event->abbr %>
					</span>

					<span class="half">
						<select name="round_id" class="fixedmed">

%							foreach my $round ($event->rounds) { 
								<option value="<% $round->id %>"><% $round->realname %> </option>
%							}

						</select>
					</span>

					<span class="quarter">
						<input type="submit" value="Send Points">
						</form>
					</span>

				</div>

%			}

		</form>

	</div>
