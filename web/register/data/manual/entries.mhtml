<%args>
	$tourn	
	$event_id => undef
</%args>
<%init>
	
</%init>

	<& sidebar.mas, 
		tourn    => $tourn,
		person   => $person,
		whoami   => "entries",
		event_id => $event_id 
	&>

	<div class="main">

		<h2>Manually add entries</h2>

		<p class="explain">
			Only use these screens to hand-add entries for
			schools &amp; tournaments where no one has Tabroom accounts.
		</p>

%		if ($event_id) { 

%			my $event = Tab::Event->retrieve($event_id);

			<table>

				<form 
					action = "school_save.mhtml"
					method = "post"
				>

				<tr class="yellowrow">

					<th>
					</th>

					<th class="smallish">
						School Name
					</th>

%					if ($codes eq "registrant" || $codes eq "shortname" ) { 
						<th class="smallish">
							School Code
						</th>
%					}

				</tr>

%				foreach (1 .. 10) { 

					<tr class="row">

						<td>
							<% $_ %>
						</td>

						<td>
							<input type="text" name="<% $_ %>_name" size="25">
						</td>

%						if ($codes eq "registrant" || $codes eq "shortname" ) { 
							<td>
								<input type="text" name="<% $_ %>_code" size="10">
							</td>
%						}

					</tr>

%				}

				<tr class="liblrow smallish">
					
					<td colspan="3" class="rightalign">
						<input type="submit" value=" Save Schools">
						</form>
					</td>

				</tr>

			</table>
%		}

	</div>

