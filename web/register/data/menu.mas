<%args> 
	$tourn
	$tourn_settings
	$person
	$whoami => undef
</%args>

	<div class="menu">

		<div class="sidenote">

			<h4>Entry Manipulation</h4>

				<a 
					class="<% ($whoami eq "add_school") ? "dk" : "" %>blue half " 
					href="add_school.mhtml"
				>
					Add new school
				</a>
				
				<a 
					class="<% ($whoami eq "empty_schools") ? "dk" : "" %>blue half " 
					href="empty_schools.mhtml"
				>
					Empty schools
				</a>

				<a 
					class="<% ($whoami eq "onsite") ? "dk" : "" %>blue full" 
					href="onsite.mhtml"
				>
					Onsite Schools
				</a>

				
%				my $warn = "This will mark all TBA entries as drops and deletes all TBA waitlisted entries.  Continue?";

%				my $owarn = "This will FULLY DELETE all TBA entries.  They will not owe money or judges.  Continue?";

				<a class="yellow half " 
					href="tba_drop.mhtml" 
					<& "/funclib/confirm.mas", warn => $warn &>
				>
					Drop TBAs
				</a>

				<a 
					class = "yellow half "
					href  = "tba_drop.mhtml?delete = yes"
					<& "/funclib/confirm.mas", warn => $owarn &>
				>
					Delete TBAs
				</a>

%				if ($person->site_admin) { 
					<a 
						class="<% $whoami eq "chapter_merge" ? "dk" : "" %>blue full martop" 
						href="chapter_merge.mhtml"
					>
						Chapter Merging (Site Admin Only)
					</a>
%				}


%				if ($tourn_settings->{"ncfl"}) { 
					<a class="<% $whoami eq "ncfl_regions" ? "dk" : "" %>blue full martop" 
						href="ncfl_dio_regions.mhtml">
						NCFL Debate Diocese Regions
					</a>
%				}

%			if ($tourn_settings->{"nsda_nats"}) { 

				<h4>NSDA Nationals</h4>

				<a class="<% ($whoami eq "district_regions") ? "dk" : "" %>yellow half " 
					href="district_regions.mhtml">
					District Regions
				</a>

				<a class="<% ($whoami eq "district_authorships") ? "dk" : "" %>yellow half " 
					href="district_authorships.mhtml">
					Districts w/Legislation
				</a>

				<a class="blue full" 
					href="autoquals.mhtml"
				>Auto-quals</a>
%			}

			<h4>Codes & Names</h4>

				<a class="<% ($whoami eq "school_recode") ? "dk" : "" %>blue half " 
					href="school_recode.mhtml">
					School codes
				</a>

				<a class="<% ($whoami eq "school_restate") ? "dk" : "" %>blue half " 
					href="school_states.mhtml">
					School states
				</a>

%				if ($tourn_settings->{"regions"}) { 

					<a class="<% ($whoami eq "regions") ? "dk" : "" %>blue half " 
						href="regions.mhtml">
						Edit regions
					</a>

					<a class="<% ($whoami eq "school_regions") ? "dk" : "" %>blue half " 
						href="school_regions.mhtml">
						School regions
					</a>

%					if ($tourn_settings->{"nsda_nats"}) { 
						<a class="<% ($whoami eq "nats_states") ? "dk" : "" %>blue full" 
							href="nats_regions.mhtml">
							Nationals States
						</a>
%					}

%				}

				<a class="<% ($whoami eq "entry_recode") ? "dk" : "" %>blue half " 
					href="entry_recode.mhtml">
					Entry codes
				</a>
				<a class="<% ($whoami eq "entry_rename") ? "dk" : "" %>blue half " 
					href="entry_rename.mhtml">
					Entry names
				</a>

				<a class="<% ($whoami eq "judge_recode") ? "dk" : "" %>blue full" 
					href="judge_recode.mhtml">
					Judge codes
				</a>

%				if ($tourn_settings->{"nsda_nats"}) { 
					<a class="<% ($whoami eq "nsda_mutual_strikes") ? "dk" : "" %>blue full" 
						href="nsda_mutual_strikes.mhtml">
						Mutually conflict district judges
					</a>

%				} elsif ($tourn_settings->{"ncfl"}) { 
					<a class="<% ($whoami eq "ncfl_mutual_strikes") ? "dk" : "" %>blue full" 
						href="ncfl_mutual_strikes.mhtml">
						Mutually conflict dioceses judges
					</a>
%				} else { 
					<a class="<% ($whoami eq "mutual_strikes") ? "dk" : "" %>blue full" 
						href="mutual_strikes.mhtml">
						Mutually conflict schools' judges
					</a>
%				}

				<a class="blue full" 
					href="school_contacts.mhtml">
					School Contacts
				</a>

		</div>
		
		<div class="sidenote">

			<h4>Import</h4>
			
			<a class="<% ($whoami eq "import_qualifiers") ? "dk" : "" %>yellow full" 
				href="import_qualifiers.mhtml">
				Import Qualifiers from Another Tournament
			</a>

%			if ($person->site_admin) { 
%				#This doesn't yet work with panel/ballot ID collisions
				<a class="<% ($whoami eq "import_json_restore") ? "dk" : "" %>yellow martop full" 
					href="import_json_restore.mhtml">
					JSON Backup &amp; Restore
				</a>
%			}

			<a class="<% ($whoami eq "export_xml") ? "dk" : "" %>blue martop half" 
				href="export_xml.mhtml">
				Export Tabroom XML 
			</a>

			<a class="<% ($whoami eq "import_native_xml") ? "dk" : "" %>yellow half martop " 
				href="import_native_xml.mhtml">
				Import Tabroom XML
			</a>

			<a class="<% ($whoami eq "export_trpc") ? "dk" : "" %>blue half" 
				href="export_trpc.mhtml">
				Export to TRPC
			</a>

			<a class="<% ($whoami eq "import_xml") ? "dk" : "" %>yellow half" 
				href="import_xml.mhtml">
				Import from TRPC
			</a>


			<a class="<% ($whoami eq "export_jot") ? "dk" : "" %>blue half" 
				href="export_jot.mhtml">
				Export to JOT
			</a>

			<a class="<% ($whoami eq "import_joy") ? "dk" : "" %>yellow half" 
				href="import_joy.mhtml">
				Import from JOT
			</a>

			<a class="<% ($whoami eq "export_trie") ? "dk" : "" %>blue half" 
				href="export_trie.mhtml">
				Export to TRIE/PC
			</a>

			<a class="<% ($whoami eq "import_csv") ? "dk" : "" %>yellow half" 
				href="import_csv.mhtml">
				Import CSV/Excel 
			</a>


%			if ($tourn_settings->{"wsdc"}) { 
				<a 
					class = "<% $whoami eq "team_managers" ? "dk" : "" %>yellow full"
					href  = "team_managers.mhtml"
				>
					Team Managers
				</a>
%			}


		</div>

		<div class="sidenote">

			<h4>Reset Tournament</h4>

				<p>Pressing this button will not do anything *yet*; you will
				have to confirm once again before any data is actually
				deleted:</p>

				<a class="dkred full" 
					href="reset.mhtml">
					Reset Tournament Data
				</a>

		</div>

	</div>

