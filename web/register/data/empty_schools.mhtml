<%args>
	$tourn
	$tourn_settings
	$person
	$delete_me => undef
</%args>
<%init>

	Tab::School->set_sql( by_empties => "
		select distinct school.*
		from school
		where school.tourn = ? 
		and not exists ( 
			select entry.id from entry 
			where entry.active = 1
			and entry.school = school.id)
		order by school.name
	");

	my @empty_schools = Tab::School->search_by_empties($tourn->id);

	if ($delete_me) { 
		my $msg = scalar @empty_schools." have been deleted.";
		foreach my $school (@empty_schools) { 
			$school->delete;
		}
		$m->redirect("empty_schools.mhtml?msg=$msg");
	}

</%init>

	<& menu.mas, 
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		person         => $person,
		whoami         => "schools_empty"
	&>

	<div class="main">

		<div class="nospace full">

			<span class="threetenths nospace">
				<h4><% scalar @empty_schools %> empty schools</h4>
			</span>

<%perl>

			my $warn = "This will delete all records of these ".scalar
			@empty_schools." having ever entered your tournament, including
			drop fees etc.  Contine?";

</%perl>

			<span class="fifth centeralign nospace">

				<a 
					class="buttonwhite greentext smallish"
					href="empty_school_judges.mhtml"
				>
					Deactivate Judges
				</a>
			</span>

			<span class="fifth centeralign nospace">

				<a 
					class="buttonwhite bluetext smallish"
					href="empty_school_checkin.mhtml"
				>
					Check Them In
				</a>
			</span>

			<span class="fifth centeralign nospace">

				<a 
					class="buttonwhite redtext smallish"
					<& "/funclib/confirm.mas", warn => $warn &> 
					href="empty_schools.mhtml?delete_me=like_you_mean_it"
				>
					Slay them all
				</a>
			</span>

			<span 
				class = "tenth rightalign"
				id    = "empty_schools_buttonarea"
			></span>

		</div>

		<& "/funclib/tablesorter.mas", 
			table => "empty_schools"
		&>

		<table id="empty_schools">

			<thead>

				<tr class="yellowrow smallish">

					<th>
						School
					</th>

					<th>
						Entries
					</th>

					<th>
						Judges
					</th>

					<th>
						Status
					</th>

					<th>
						Fees owed
					</th>

					<th>
						Fees paid
					</th>

					<th>
					</th>
				</tr>

			</thead>


<%perl>

		foreach my $school (@empty_schools) { 

			next unless $school & $school->id;

			my ($fee, $feline_ref) = 
				$m->comp(
					"/funclib/school_fees.mas", 
					school  => $school,
					entry_fees => 1
				);

			my ($payments, $payments_ref) = 
				$m->comp(
					"/funclib/school_fees.mas", 
					school  => $school,
					payments => 1
				);
</%perl>

			<tr class="row">
			
				<td>
					<a 
						class = "white" 
						href  = "/register/school/edit.mhtml?school_id=<% $school->id %>">
						<% $school->short_name %>
					</a>
				</td>

				<td>
					<div class="full padless marno">
						<% scalar $school->entries(waitlist => 1) %> waitlisted
					</div>

					<div class="full padless marno">
						<% scalar $school->entries(dropped => 1) %> dropped
					</div>
				</td>

				<td>
					<div class="full padless marno">
						<% scalar $school->judges %> judges
					</div>

					<div class="full padless marno">
						<% scalar $school->judges( active => 1) %> active
					</div>
				</td>

				<td class="centeralign">
					<% $school->onsite ? "Checked in" : "Not checked in" %>
				</td>

				<td class="rightalign">
					<% $tourn->setting("currency") %><% $fee ? $fee : 0 %>
				</td>

				<td class="rightalign">
					<% $tourn->setting("currency") %><% $payments ? $payments : 0 %>
				</td>

<%perl>

				my $warn = "This will delete the entire record of
				".$school->short_name." ever entering your tournament,
				including drop fees etc.  Contine?";

</%perl>

				<td class="centeralign">
					<a 
						class="buttonwhite redtext hover fa fa-lg fa-trash"
						href="empty_drop.mhtml?school_id=<% $school->id %>"
						<& "/funclib/confirm.mas", warn => $warn &> 
					>
					</a>
				</td> 
				
			</tr>

%		} 

	</table>

	</div>
