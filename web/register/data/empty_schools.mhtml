<%args>
	$tourn
	$person
	$delete_me => undef
</%args>
<%init>

	Tab::School->set_sql( by_empties => "
		select distinct school.*
		from school
		where school.tourn = ? 
		and not exists ( 
			select entry.id from entry 
			where entry.active = 1
			and entry.school = school.id)
		order by school.name
	");

	my @empty_schools = Tab::School->search_by_empties($tourn->id);

	if ($delete_me) { 
		my $msg = scalar @empty_schools." have been deleted.";
		foreach my $school (@empty_schools) { 
			$school->delete;
		}
		$m->redirect("empty_schools.mhtml?msg=$msg");
	}

</%init>

	<& menu.mas, 
		tourn  => $tourn,
		person => $person,
		whoami => "schools_empty" 
	&>

	<div class="main">

		<div class="nospace full">

			<span class="half nospace">
				<h4><% scalar @empty_schools %> empty schools</h4>
			</span>

<%perl>

			my $warn = "This will delete all records of these ".scalar
			@empty_schools." having ever entered your tournament, including
			drop fees etc.  Contine?";

</%perl>

			<span class="quarter centeralign nospace">

				<a 
					class="buttonwhite greentext hover"
					<& "/funclib/confirm.mas", warn => $warn &> 
					href="empty_school_judges.mhtml?delete_me=like_you_mean_it"
				>
					Deactivate Their Judges
				</a>
			</span>

			<span class="quarter centeralign nospace">

				<a 
					class="buttonwhite redtext hover"
					<& "/funclib/confirm.mas", warn => $warn &> 
					href="empty_schools.mhtml?delete_me=like_you_mean_it"
				>
					Slay them all
				</a>
			</span>

		</div>

		<table>

%		foreach my $school (@empty_schools) { 

<%perl>

			my ($fee, $feline_ref) = 

				$m->comp(
					"/funclib/school_fees.mas", 
					school_id  => $school->id,
					entry_fees => 1
				);
</%perl>

			<tr class="row">
			
				<td>
					<a 
						class="white" 
						href="/register/school/edit.mhtml?school_id=<% $school->id %>">
						<% $school->short_name %>
					</a>
				</td>

				<td>
					<div class="full padless marno">
						<% scalar $school->judges %> judges
					</div>
					<div class="full padless marno">
						<% scalar $school->judges( active => 1) %> active
					</div>
				</td>

				<td>
					<% $fee ? $fee : 0 %> in fees
				</td>

<%perl>

				my $warn = "This will delete the entire record of
				".$school->short_name." ever entering your tournament,
				including drop fees etc.  Contine?";

</%perl>

				<td class="centeralign">
					<a 
						class="buttonwhite redtext hover smallish"
						href="empty_drop.mhtml?school_id=<% $school->id %>"
						<& "/funclib/confirm.mas", warn => $warn &> 
					>
						Delete
					</a>
				</td> 
				
			</tr>

%		} 

	</table>

	</div>
