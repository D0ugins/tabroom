<%args>
	$tourn
	@days  => undef
	$today => undef
	$event => undef
</%args> 

	<div class="menu">

%		if (@days && scalar @days > 1) { 

			<div class="sidenote padbottom">

				<h4>Timeslot Schedule</h4>

%				foreach my $tday (@days) { 

					<a 
						href="sked.mhtml?date=<% $tday->mdy('/') %>" 
						class="full <% ($today && $tday->dmy == $today->dmy) ? "dkblue" : "blue" %>"
					>
						<span class="fourfifth">
							<% $tday->day_name %>
						</span>
						<span class="fifth">
							(<% Tab::niceshortdate($tday) %>)
						</span>
					</a>
%				}

			</div>

%		}

		<div class="sidenote">

			<h4>Schedule Rounds</h4>
			
			<a 
				href  = "print.mhtml"
				class = "blue full marbottom"
			>Print Master Schedule</a>

<%perl>

			my $undone;

			foreach my $ev (
				sort {$a->name cmp $b->name} 
				$m->comp("/funclib/tourn_events.mas", tourn => $tourn) 
			) { 

				$undone++ unless $ev->rounds;

</%perl>

				<a 
					href="event.mhtml?event_id=<% $ev->id %>" 
					class="<% 
						$ev->rounds
						? $event && $event->id == $ev->id
							? "dkblue" 
							: "blue" 
						: "dkred" 
					%> full nowrap">
					<% $ev->name %>
				</a>

%			}

%			if ($undone) { 

				<p class="warning smaller">
					Events in red have no rounds scheduled.  You MUST schedule
					rounds for events before pairing or exporting to the CAT.
				</p>

%			}

		
		</div>

	</div>

