<%args>
	$site_id
	$tourn
	$person
</%args>
<%init>

	my $site = Tab::Site->retrieve($site_id);

	unless ($site) { 
		$m->comp("/funclib/abort.mas", 
			message => "No site with id $site_id found"
		);
	}

</%init>



	<& menu.mas, 
		tourn => $tourn, 
		whoami => "site_edit" 
	&>

%	my $switch; 

	<& "/funclib/editor.mas" &>	

	<div class="main">

		<h2>Edit <% $site->name %></h2>

		<table>

			<tr class="row"> 

				<th>
					Name
				</th>

				<td>
					<form action="site_save.mhtml" method="post">

					<input 
						type  = "hidden"
						name  = "site_id"
						value = "<% $site_id %>"
					>
					<input 
						type  = "text"
						name  = "name"
						size  = "50"
						value = "<% $site->name %>"
					>
				</td>

			</tr>

			<tr class="row"> 

				<th>
					Ballot Dropoff Location
				</th>

				<td>
					<input 
						type  = "text"
						name  = "dropoff"
						size  = "50"
						value = "<% $site->dropoff %>"
					>
				</td>

			</tr>

			<tr class="row" align="left"> 
				<td colspan="2">
					<h4>
						Directions:
					</h4>
				</td>
			</tr>

			<tr class="row">

				<td colspan="2" align="right">
					<textarea 
						name        = "directions"
						rows        = "8"
						placeholder = "Directions & Location"
						cols        = "50"
					><% $site->directions %></textarea>
				</td>

			</tr>

			<tr class="liblrow">

				<td colspan="2" align="right">
					<input type="submit" value="  Save Site Details ">
					</form>
				</td>

			</tr>

		</table>

	</div>

