							<td class="centeralign">
								<input
									type      = "url"
									name      = "new_<% $room %>_url"
									size      = "32"
									maxlength = "255"
								>
							</td>

							<td class="centeralign nospace">
								<label for="new_<% $room %>_ada">
									<span class="padvertless full hover">
										<input
											type  = "checkbox"
											name  = "new_<% $room %>_ada"
											id    = "new_<% $room %>_ada"
											value = 1
										>
									</span>
								</label>
							</td>
%						}

