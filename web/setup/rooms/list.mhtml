<%args>
	$tourn
	$tourn_settings
	$site_id => undef
	$add     => undef
</%args>
<%init>

	my $site = Tab::Site->retrieve($site_id);

	my %rooms;
	my @ids;

	unless ($site) {
		my @all_sites = $tourn->sites;
		$site = shift @all_sites if @all_sites && not defined $site;
	}

	if ($site) {

		my $dbh = Tab::DBI->db_Main();

		my $sth = $dbh->prepare("
			select
				room.id, room.name,
				room.quality, room.notes, room.capacity,
				room.inactive, room.ada,
				room.url, room.password,
				room.judge_url, room.judge_password,
				room.api
			from room
				where room.site = ?
				and room.deleted = 0
			order by room.name
		");

		$sth->execute($site->id);

		while (
			my (
				$id, $name,
				$quality, $notes, $capacity,
				$inactive, $ada,
				$url, $password,
				$judge_url, $judge_password,
				$api
			) = $sth->fetchrow_array()
		) {
			$rooms{$id}{"name"}           = $name;
			$rooms{$id}{"quality"}        = $quality;
			$rooms{$id}{"capacity"}       = $capacity;
			$rooms{$id}{"inactive"}       = $inactive;
			$rooms{$id}{"ada"}            = $ada;
			$rooms{$id}{"url"}            = $url;
			$rooms{$id}{"password"}       = $password;
			$rooms{$id}{"judge_password"} = $judge_password;
			$rooms{$id}{"url"}            = $url;
			$rooms{$id}{"api"}            = $api;
			$rooms{$id}{"notes"} = $notes;
		}

		@ids = map  { $_->[0] }
            sort { $a->[1] <=> $b->[1] }
            map  { [$_, $rooms{$_}{"name"}=~/(\d+)/] }
			keys %rooms;

		@ids = map  { $_->[0] }
            sort { uc($a->[1]) cmp uc($b->[1]) }
            map  { [$_, $rooms{$_}{"name"} =~ /(\D+)/] }
			@ids;
	}


</%init>

	<& menu.mas,
		tourn => $tourn,
		mysite => $site
	&>

