									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type  = "text"
									size  = "12"
									name  = "<% $id %>_passcode"
									value = "<% $rooms{$id}{"password"} %>"
								>
							</td>

							<td class="centeralign">
								<span class="hidden"> <% $rooms{$id}{"judge_url"} ? $rooms{$id}{"judge_url"} : 0 %> </span>
								<input
									type      = "url"
									name      = "<% $id %>_judge_url"
									value     = "<% $rooms{$id}{"judge_url"} %>"
									size      = "24"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type  = "text"
									size  = "12"
									name  = "<% $id %>_judge_passcode"
									value = "<% $rooms{$id}{"judge_password"} %>"
								>
							</td>

							<td class="centeralign">
								<input
									type  = "text"
									size  = "8"
									name  = "<% $id %>_api"
									value = "<% $rooms{$id}{"api"} %>"
								>
							</td>

%						} else {

							<td class="centeralign">
								<span class="hidden">
									<% $rooms{$id}{"name"} %>
								</span>

								<input
									type  = "text"
									name  = "<% $id %>_name"
									value = '<% $rooms{$id}{"name"} %>'
									size  = "16"
								>
							</td>

							<td class="centeralign">
								<span class="hidden"><% $rooms{$id}{"quality"} %></span>
								<input
									type  = "number"
									class = "smaller"
									name  = "<% $id %>_quality"
									value = "<% $rooms{$id}{"quality"} ? $rooms{$id}{"quality"} : ""%>"
									size  = "3"
								>
							</td>

							<td class="centeralign">
								<span class="hidden"><% $rooms{$id}{"capacity"} %></span>
								<input
									type  = "number"
									class = "smaller"
									name  = "<% $id %>_capacity"
									value = "<% ($rooms{$id}{"capacity"}) ? $rooms{$id}{"capacity"} : "" %>"
									size  = "3"
								>
							</td>

							<td class="centeralign">
								<span class="hidden"> <% $rooms{$id}{"notes"} %> </span>
								<input
									type  = "text"
									name  = "<% $id %>_notes"
									value = "<% $rooms{$id}{"notes"} %>"
								>
							</td>

							<td class="centeralign">
								<span class="hidden"> <% $rooms{$id}{"url"} ? $rooms{$id}{"url"} : 0 %> </span>
								<input
									type      = "url"
									name      = "<% $id %>_url"
									value     = "<% $rooms{$id}{"url"} %>"
									maxlength = "255"
								>
							</td>

							<td class="centeralign">
								<span class="hidden"><% $rooms{$id}{"ada"} %></span>
								<label class="switch smaller">
									<input
										type          = "checkbox"
										value         = "1"
										id            = "<% $id %>_ada"
										property_name = "ada"
										target_type   = "room"
										target_id     = "<% $id %>"
										onChange      = "postSwitch( this, 'room_switch.mhtml');"

										<% $rooms{$id}{"ada"} ? 'checked="checked"' : "" %>
									>
									<div class="slider"></div>
								</label>
							</td>
%						}

						<td class="centeralign">
							<span class="hidden"><% $rooms{$id}{"inactive"} %></span>

							<label class="switch smaller">
								<input
									type          = "checkbox"
									value         = "1"
									id            = "<% $id %>_inactive"
									property_name = "inactive"
									target_type   = "room"
									target_id     = "<% $id %>"
									onChange      = "postSwitch( this, 'room_switch.mhtml');"

									<% $rooms{$id}{"inactive"} ? "" : 'checked="checked"' %>
								>
								<div class="slider"></div>
							</label>
                	    </td>
					</tr>
%				}

				</tbody>

			</table>

			<div class="libl rightalign">
				<input
					type="submit"
					value="Save Room Changes"
				>
			</div>

			</form>

%		} else {

%			if ($site->online) {

				<h5>Auto-create online rooms</h5>

				<form
					action = "site_online_autocreate.mhtml"
					method = "post"
				>

				<input
					type  = "hidden"
					name  = "site_id"
					value = "<% $site->id %>"
				>

				<div class="row marbottom">

					<span class="ninetenths nospace">

						<span class="sixth">
							Letter prefix
						</span>

						<span class="tenth">
							<input
								type      = "text"
								name      = "prefix"
								size      = "4"
								maxlength = "4"
							>
						</span>

						<span class="tenth">
							Starting #
						</span>

						<span class="tenth">
							<input
								type      = "text"
								size      = "6"
								maxlength = "6"
								name      = "start"
								value     = "101"
							>
						</span>

						<span class="eighth rightalign">
							Room Count
						</span>

						<span class="tenth">
							<input
								type      = "text"
								size      = "6"
								maxlength = "6"
								name      = "roomcount"
							>
						</span>

						<label for="append">
							<span class="quarter true centeralign hover">
								Append Room # To URLs
								<span class="tenth nospace marbottomless padbottomless">
									<input
										type  = "checkbox"
										name  = "append"
										id    = "append"
										value = 1
									>
								</span>
							</span>
						</label>

						<span class="sixth">
							Entry URL
						</span>
						<span class="third">
							<input
								type        = "url"
								name        = "entry_url"
								size        = "32"
								value       = ""
								placeholder = "If all URLs are the same"
							>
						</span>

						<span class="sixth">
							Entry Passcode
						</span>
						<span class="third">
							<input
								type        = "text"
								name        = "entry_password"
								size        = "32"
								value       = ""
								placeholder = "If all passcodes are the same"
							>
						</span>

						<span class="sixth">
							Judge URL
						</span>
						<span class="third" title="If blank, will use entry URL">
							<input
								type        = "url"
								name        = "judge_url"
								size        = "32"
								value       = ""
								placeholder = "If blank, will use entry URL"
							>
						</span>

						<span class="sixth">
							Judge Passcode
						</span>
						<span class="third" title= "If blank, will use entry code">
							<input
								type        = "text"
								name        = "judge_password"
								size        = "32"
								placeholder = "If blank, will use entry code"
							>
						</span>

					</span>

					<span class="tenth rightalign">
						<input
							type  = "submit"
							class = "thin"
							value = "Create"
						>
					</span>

					</form>
				</div>

				<h5>Manually create rooms</h5>
%			}

			<form
				action = "site_rooms_add.mhtml"
				method = "post"
			>

			<input
				type  = "hidden"
				name  = "site_id"
				value = "<% $site->id %>"
			>

			<table id="roomlist">

				<thead>

					<tr class="yellowrow">

						<th class="smaller">
							Name
						</th>

%						if ($site->online) {

							<th class="smaller">
								Entry URL
							</th>

							<th class="smaller">
								Entry Passcode
							</th>

							<th class="smaller">
								Judge URL
							</th>

							<th class="smaller">
								Judge Passcode
							</th>

%						} else {

							<th class="tiny">
								Quality
							</th>

							<th class="tiny">
								Capacity
							</th>

							<th class="smaller">
								Notes
							</th>

							<th class="smaller">
								Map URL
							</th>

							<th class="smaller">
								Accessible
							</th>
%						}
					</tr>

				</thead>

				<tbody>

%				foreach my $room (1 .. 10) {

					<tr>

%						if ($site->online) {

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_name"
									size = "8"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "url"
									name      = "new_<% $room %>_url"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "text"
									name      = "new_<% $room %>_passcode"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "url"
									name      = "new_<% $room %>_judge_url"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

							<td class="centeralign">
								<input
									type      = "text"
									name      = "new_<% $room %>_judge_passcode"
									size      = "16"
									maxlength = "255"
									class     = "smaller"
								>
							</td>

%						} else {

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_name"
									size = "20"
								>
							</td>

							<td class="centeralign">
								<input
									type="text"
									name="new_<% $room %>_quality"
									size="5"
								>
							</td>

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_capacity"
									size = "5"
								>
							</td>

							<td class="centeralign">
								<input
									type = "text"
									name = "new_<% $room %>_notes"
