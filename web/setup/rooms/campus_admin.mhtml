<%args>
	$tourn
	$tourn_settings
	$person
</%args>
<%init>

	unless ($person->site_admin) {
		$m->abort("/funclib/abort.mas", message => "That function is for site admins only.");
	}

	if ($tourn_settings->{"nc_requested"} ne $ARGS{"nc_requested"}) {

		Tab::ChangeLog->create({
			tourn       => $tourn,
			tag         => "campus",
			person      => $person,
			description => "Changed NSDA campus room request to ".$ARGS{"nc_requested"}
		});

		$tourn->setting("nc_requested", $ARGS{"nc_requested"});
	}

	if ($tourn_settings->{"nc_purchased"} ne $ARGS{"nc_purchased"}) {

		Tab::ChangeLog->create({
			tourn       => $tourn,
			tag         => "campus",
			person      => $person,
			description => "Changed NSDA campus room request to ".$ARGS{"nc_purchased"}
		});

		$tourn->setting("nc_purchased", $ARGS{"nc_purchased"});
	}

	my $msg = "Room allocations changed by admin fiat.  FEEL THE POWER.";
	$m->redirect("nsda_campus.mhtml?msg=$msg");

</%init>
