<%args>
	$tourn
	$event_id => undef
	$username
</%args>
<%init>

	my $event = Tab::Event->retrieve($event_id);
	my $backup_ids = $event->setting("backup_people");

	my $done;

	my $login = Tab::Login->search(
		username => $username
	)->first;

	my $person = $login->person if $login;

	foreach my $id (split(/,/, $backup_ids)) {
		next unless $id;
		$done++ if $person && $id == $person->id;
	}

	my $msg;

	if ($person && not defined $done) {

		$backup_ids .= ',' if $backup_ids;
		$backup_ids .= $person->id;

		$event->setting("backup_people", $backup_ids);
		$msg = "User ".$person->email." will now recieve backups of ".$event->abbr;
	}

	$msg = "User not found" unless $person;
	$msg = "User already getting backups for event" if $done;

	$m->redirect("follow.mhtml?event_id=".$event->id."&msg=$msg");

</%init>

