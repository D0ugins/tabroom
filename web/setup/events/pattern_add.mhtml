<%args>
	$tourn
	$tourn_settings
	$person
</%args>

%	my $districts = $tourn_settings->{"nsda_district"};

    <div class="menu"> 
		<& 
			menu.mas, 
			tourn     => $tourn,
			person    => $person,
			districts => $districts,
			whoami    => "double",
		&> 
	</div> 
	
	<div class="main">
		
		<h2>Add Double Entry Grouping</h2>

			<form action="pattern_save.mhtml" method="post">

			<table>
			
				<tr class="row">		

					<th class="smaller">
						Name
					</th>

					<td>
						<input type="text" name="name" size="40">
					</th>

				</tr>
				
				<tr class="row">		

					<th class="smaller">
						Double Entry Policy	
					</th>

					<td class="smaller nospace">

						<label for="2">
							<span class="fifth hover">
								None <input type="radio" id="2" name="type" value="2" "selected">
							</span>
						</label>

						<label for="0">
							<span class="fifth hover">
								Unlimited <input type="radio" id="0" name="type" value="0">
							</span>
						</label>

						<label for="3">
						<span class="threefifths hover">
							<input type="radio" id="3" name="type" value="3">

							Max 
							<input type="number" name="max" size="3" min="0" max="999" class="smaller">
							events w/in pattern
						</span>
						</label>

					</td>

				</tr>	

				<tr class="liblrow">
					<td colspan="3" align="right">
						<input type="submit" value="Create Group" >
						</form>
					</td>
				</tr>

			</table>

	</div>
