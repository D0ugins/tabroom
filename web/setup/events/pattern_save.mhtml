<%args>
	$tourn
	$name
	$type => undef
	$max     => undef
</%args>
<%init>

	my $pattern = Tab::Pattern->create({
		tourn => $tourn->id,
		name  => $name,
		type  => $type,
		max   => $max
	}) if $type;

	my $msg = "Grouping ".$pattern->name." created" if $type;
	my $err = "No type set; nothing saved" unless $type;

	$m->redirect("/setup/events/double_entry.mhtml?msg=$msg&err=$err");

</%init>

