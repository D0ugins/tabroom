<%args>
	$tourn
	$tourn_settings
</%args>

	<& "menu.mas",
		chosen         => "codes",
		tourn_settings => $tourn_settings,
		tourn          => $tourn
	&>

	<div class="main">

		<h4 class="nospace">NSDA Invoicing Billing Codes</h4>

		<form action="nsda_save.mhtml" method="post">

		<div class="row">
			<span class="twothirds">
				Entries
			</span>
			<span class="third centeralign">
				<input
					type  = "number"
					name  = "nsda_billing_entries"
					value = "<% $tourn_settings->{"nsda_billing_entries"} %>"
				>
			</span>
		</div>

		<div class="row">
			<span class="twothirds">
				Hired Judge Fees
			</span>
			<span class="third centeralign">
				<input
					type  = "number"
					name  = "nsda_billing_judges"
					value = "<% $tourn_settings->{"nsda_billing_judges"} %>"
				>
			</span>
		</div>

		<div class="row">
			<span class="twothirds">
				Judge Bonds
			</span>
			<span class="third centeralign">
				<input
					type  = "number"
					name  = "nsda_billing_bonds"
					value = "<% $tourn_settings->{"nsda_billing_bonds"} %>"
				>
			</span>
		</div>

		<div class="row">
			<span class="twothirds">
				Fines &amp; Penalties
			</span>
			<span class="third centeralign">
				<input
					type  = "number"
					name  = "nsda_billing_fines"
					value = "<% $tourn_settings->{"nsda_billing_fines"} %>"
				>
			</span>
		</div>

		<div class="row libl rightalign">
			<span class="third centeralign">
				<input
					type  = "submit"
					value = "Save Codes"
				>
			</span>
		</div>

		</form>

	</div>
