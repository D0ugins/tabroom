<%args>
	$tourn
	$tourn_settings
	$session
	$person
</%args>
<%init>

	my @concessions = sort {$a->name cmp $b->name} $tourn->concessions;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

</%init>

    <& menu.mas, 
		chosen => "concessions", tourn => $tourn &>

	<div class="main">

		<h2><% $tourn_settings->{"concession_name"} 
			? $tourn_settings->{"concession_name"} 
			: "Concessions" %></h2>

		<& "/funclib/tablesorter.mas", table => "concessme" &>

		<form 
			action="concessions_save.mhtml" 
			method="post"
		>

		<table id="concessme">

			<thead>

				<tr class="ltyellow smallish">

					<th>
						Name
					</th>

					<th>
						Price
					</th>

					<th>
						Cap
					</th>

					<th>
						School Cap
					</th>
					
					<th>
						Order Deadline
					</th>

					<th colspan="2">
						Functions
					</th>

				</tr>

			</thead>

			<tbody>
	
% 			foreach my $concession (@concessions) { 
	
				<tr>
	
					<td>
						<input 
							type  = "text"
							name  = "<% $concession->id %>_name"
							size  = "24"
							value = "<% $concession->name %>"
						>
					</td>
	
					<td class="centeralign">
						<input 
							type  = "text"
							name  = "<% $concession->id %>_price"
							size  = "6"
							value = "<% $concession->price %>"
						>
					</td>

					<td class="centeralign">
						<input 
							type  = "text"
							name  = "<% $concession->id %>_cap"
							size  = "4"
							value = "<% $concession->cap %>"
						>
					</td>

					<td class="centeralign">
						<input 
							type  = "text"
							name  = "<% $concession->id %>_school_cap"
							size  = "4"
							value = "<% $concession->school_cap %>"
						>
					</td>

		            <& "/funclib/datepicker.mas", 
						id => $concession->id."_date", 
						max => $tourn->start
					&>
	
%					my $deadline = $concession->deadline->set_time_zone($tourn->tz) if $concession->deadline;
	
				    <td> 

	                    <input 
							type  = "text"
							name  = "<% $concession->id %>_date"
							id    = "<% $concession->id %>_date"
							size  = "8"
							value = "<% ($deadline) ? Tab::pickerdate($deadline) : "" %>"
						>
							@
	                    <& "/funclib/timepicker.mas", 
							name => $concession->id."_time", 
							size => 8, 
							time => $deadline 
						&>

					</td>

					<td>
						<a 
							class="buttonwhite bluetext hover fa fa-lg fa-edit"
							title="Edit description, or sizes/types available"
							href="concessions_edit.mhtml?concession_id=<% $concession->id %>"
						>
						</a> 
					</td>

					<td>
						<a 
							class="buttonwhite redtext hover fa fa-lg fa-trash"
							href="concessions_rm.mhtml?concession_id=<% $concession->id %>"
						>
						</a> 
					</td>

				</tr>

%			}

			</tbody>

			<tr class="row" >
	
				<td>
					<input 
						type        = "text"
						name        = "new_name"
						size        = "24"
						placeholder = "Add new item"
					>
				</td>
				
				<td class="centeralign">
					<input 
						type = "number"
						name = "new_price"
						size = "5"
						min  = "0"
						max  = "999"
					>
				</td>

				<td class="centeralign">
					<input 
						type = "number"
						name = "new_cap"
						size = "3"
						max  = "9999"
						min  = "0"
					>
				</td>

				<td class="centeralign">
					<input 
						type = "number"
						name = "new_school_cap"
						size = "3"
						max  = "9999"
						min  = "0"
					>
				</td>
	
				<td>

		            <& "/funclib/datepicker.mas", 
						id => "new_date", 
						max => $tourn->start 
					&>

       	            <input 
						type = "text"
						name = "new_date"
						id   = "new_date"
						size = "8"
					>
					@
                    <& "/funclib/timepicker.mas", 
						name => "new_time", 
						size => "8", 
						dt => $tourn->reg_end->set_time_zone($tourn->tz) 
					&>
				</td> 

				<td colspan="2"> 
				</td> 

			</tr>

		</table>

		<div class="liblrow rightalign marno">
			<input type="submit" value=" Save Concessions Changes ">
		</div>

		</form>

	</div>


