<%args>
	$tourn
	$file_id => undef
</%args>
<%init>

	my $msg;

	if ($file_id) { 

		my $form = Tab::File->retrieve($file_id);

		system $Tab::s3_cmd." rm ".$Tab::s3_bucket."/tourns/".$tourn->id."/school_forms/".$form->id."/".$form->filename;

		$msg = "Form ".$form->label." has been deleted";

		$form->delete;
		
	}

	$m->redirect("messages.mhtml?msg=$msg");

</%init>
