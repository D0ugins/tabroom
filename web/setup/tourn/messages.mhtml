<%args>
	$tourn
	$tourn_settings
</%args>

	<& "/funclib/editor.mas", half => 1 &>

	<div class="main">

		<h3><% $tourn->name %></h3>

		<& "tabbar.mas",
			tourn          => $tourn,
			tourn_settings => $tourn_settings,
			whoami         => "messages"
		&>

		<form
			action = "messages_save.mhtml"
			method = "post"
		>

		<span class="pagehalf">
			<h5>Address/payable to</h5>
				<textarea
					rows  = "4"
					class = "half"
					name  = "invoice_address"
			><% $tourn_settings->{"invoice_address"} %></textarea>
		</span>

		<span class="half">
			<h5>Message appearing on invoices</h5>
				<textarea
					rows = "4"
					class = "half"
					name = "invoice_message"
			><% $tourn_settings->{"invoice_message"} %></textarea>
		</span>

		<h5>Message appearing on front page of registration</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "registration_message"
				><% $tourn_settings->{"registration_message"} %></textarea>
			</div>

		<h5>Disclaimer that appears before registration</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "disclaimer"
				><% $tourn_settings->{"disclaimer"} %></textarea>
			</div>

		<h5>Message on waitlist admission emails</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "waitlist_message"
				><% $tourn_settings->{"waitlist_message"} %></textarea>
			</div>

		<br />

		<h5>Message on congress legislation uploads</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "legislation_message"
				><% $tourn_settings->{"legislation_message"} %></textarea>
			</div>

%		if ($tourn_settings->{"nsda_ms_nats"}
%			|| $tourn_settings->{"nsda_nats"}
%		) {

			<h5>Message about judge bonds &amp; refunds</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "judgebond_message"
				><% $tourn_settings->{"judgebond_message"} %></textarea>
			</div>

			<h5>Message about supplementals &amp; consolations</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "suppconn_message"
				><% $tourn_settings->{"suppconn_message"} %></textarea>
			</div>
%		}
%		if ($tourn_settings->{"nsda_nats"}) {

			<h5>Registration Open Notice Email</h5>

			<div class="full centeralign">
				<textarea
					rows = "5"
					cols = "65"
					class = "full"
					name = "nats_open_message"
				><% $tourn_settings->{"nats_open_message"} %></textarea>
			</div>

%		}

		<div class="liblrow rightalign">
			<input
				name  = "from"
				type  = "submit"
				value = "Save Messages"
			>
		</div>

		</form>
	</div>

	<div class="menu">

		<div class="sidenote">

			<h5>School entry forms</h5>

			<p class="semibold redtext biggish">
				Upload template forms here that you wish to have your schools
				be able to download and re-upload filled out copies.
			</p>

%			my $counter = 1;
%			foreach my $form ($tourn->files(type => "school_form")) {

                <div class="full row nospace">

					<span class="threefifths biggish">
						<% $counter++ %>.
						<% $form->label %>
					</span>

					<span class="sixth">

						 <a class  = "buttonwhite bluetext fa-lg fa fa-arrow-down"
						 	target = "_blank"
							 href  = "<% $Tab::s3_url %>/<% $tourn->id."/school_form/".$form->id."/".$form->filename %>"
						 ></a>

					</span>

					<span class="sixth">

						<a
							class = "buttonwhite redtext fa fa-lg fa-trash"
							href  = "form_rm.mhtml?file_id=<% $form->id %>"
							<& "/funclib/confirm.mas",
								warn => 'This will delete both the form and the responses.  You sure?'
							&>
						>
						</a>

					</span>

				</div>

%			}


			<form
				enctype  = "multipart/form-data"
				name     = "form"
				action   = "form_upload.mhtml"
				method   = "post"
			>

			<h6 class="marbottom">Create new form</h6>

				<div class="row">

					<span class="quarter semibold centeralign">
						Label:
					</span>

					<span class="threequarters">
						<input
							type        = "text"
							name        = "label"
							size        = "24"
							placeholder = "Form label"
						>
					</span>

				</div>

				<div class="row centeralign padvert">

					<div class="uploader">

						<input
							type     = "file"
							name     = "new_form"
							style    = "opacity: 0;"
							onchange = "uploaderName(
								'new_form',
								'new_form_file'
							);"
							id       = "new_form"
						>

						<span
							id  = "new_form_file"
							class = "filename half nospace"
							style = "-webkit-user-select: none;"
						>Upload File</span>

						<span
							class = "action half nospace"
							style = "-webkit-user-select: none;"
						>Choose File</span>

					</div>

				</div>

				<div class="full rightalign">
					<input
						type="submit"
						value="Upload"
					>
				</div>

			</div>


			</form>

		</div>

	</div>

