<%args>
	$tourn
	$tourn_settings
</%args>

	<& "/funclib/editor.mas" &>

	<div class="main">

		<h2><% $tourn->name %></h2>

		<& "tabbar.mas",
			tourn          => $tourn,
			tourn_settings => $tourn_settings,
			whoami         => "messages"
		&>

		<form 
			action = "messages_save.mhtml"
			method = "post"
		>

		<h4>Message appearing on invoices</h4>

			<div class="full centeralign">
				<textarea 
					rows = "7"
					cols = "65"
					name = "invoice_message"
				><% $tourn_settings->{"invoice_message"} %></textarea>
			</div>

		<h4>Message appearing on front page of registration</h4>

			<div class="full centeralign">
				<textarea 
					rows = "7"
					cols = "65"
					name = "registration_message"
				><% $tourn_settings->{"registration_message"} %></textarea>
			</div>

		<h4>Disclaimer that appears before registration</h4>

			<div class="full centeralign">
				<textarea 
					rows = "7"
					cols = "65"
					name = "disclaimer"
				><% $tourn_settings->{"disclaimer"} %></textarea>
			</div>

		<h4>Message on waitlist admission emails</h4>

			<div class="full centeralign">
				<textarea 
					rows = "7"
					cols = "65"
					name = "waitlist_message"
				><% $tourn_settings->{"waitlist_message"} %></textarea>
			</div>

		<br />

		<h4>Message on congress legislation uploads</h4>

			<div class="full centeralign">
				<textarea 
					rows = "7"
					cols = "65"
					name = "legislation_message"
				><% $tourn_settings->{"legislation_message"} %></textarea>
			</div>

		<br />

		<div class="liblrow rightalign">
			<input  
				name  = "from"
				type  = "submit"
				value = "Save Messages"
			>
		</div>

		</form>
	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>School entry forms</h4>

			<p class="semibold redtext biggish">
				Upload template forms here that you wish to have your schools
				be able to download and re-upload filled out copies.
			</p>

%			my $counter = 1;
%			foreach my $form ($tourn->files(type => "school_form")) { 

                <div class="full row nospace"> 

					<span class="threefifths biggish">
						<% $counter++ %>.
						<% $form->label %>
					</span>

					<span class="sixth">

						 <a class  = "buttonwhite bluetext fa-lg fa fa-arrow-down"
						 	target = "_blank"
							 href  = "<% $Tab::s3_url %>/<% $tourn->id."/school_form/".$form->id."/".$form->filename %>"
						 ></a>

					</span>

					<span class="sixth">

						<a 
							class = "buttonwhite redtext fa fa-lg fa-trash"
							href  = "form_rm.mhtml?file_id=<% $form->id %>"
							<& "/funclib/confirm.mas", warn => 'what the fuck' &>
						>
						</a>

					</span>

				</div>

%			}


			<form 
				enctype  = "multipart/form-data"
				name     = "form"
				action   = "form_upload.mhtml"
				method   = "post"
			>

			<h6 class="marbottom">Create new form</h6>

				<div class="row">

					<span class="quarter semibold centeralign">
						Label:
					</span>

					<span class="threequarters">
						<input 
							type        = "text"
							name        = "label"
							size        = "24"
							placeholder = "Form label"
						>
					</span>

				</div>

				<div class="row centeralign padvert">

					<div class="uploader centeralign">

						<input 
							type     = "file"
							name     = "new_form"
							style    = "opacity: 0;"
							onchange = "uploaderName(
								'new_form',
								'new_form_file'
							);"
							id       = "new_form"
						>

						<span 
							id  = "new_form_file"
							class = "filename half nospace"
							style = "-webkit-user-select: none;"
						>Upload File</span>

						<span 
							class = "action half nospace"
							style = "-webkit-user-select: none;"
						>Choose File</span>

					</div>

				</div>

				<div class="full rightalign">
					<input 	
						type="submit"
						value="Upload"
					>
					</form>

				</div>

			</div>

		</div>

	</div>

