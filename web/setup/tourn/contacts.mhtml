<%args>
	$tourn
	$tourn_settings
</%args>
<%perl>

    my %questions = ( 
        1 => { 
            label => "nsda_extemp_topics",
            text  => "Do you want to order extemp questions from the NSDA?",
        },
        2 => { 
            label => "nsda_volunteer_trophy",
            text  => "Do you want to order a Volunteer of the Year award?"
        },
        3 => { 
            label => "nsda_student_trophy",
            text  => "Do you want to order a Student of the Year award?"
        },
        4 => { 
            label => "nsda_communicator_trophy",
            text  => "Do you want to order an Communicator of the Year award?"
        }
    );  

</%perl>

	<div class="main">

		<h2><% $tourn->name %></h2>

		<& 
			"tabbar.mas", 
			tourn     => $tourn,
			tourn_settings => $tourn_settings,
			whoami    => "contacts",
			districts => 1
		&> 
		<h4>Tabulation Method</h4>

		<p class='centeralign'>
			You can switch from using JOT to Tabroom at any time.  <br />However, if you
			switch from Tabroom to JOT, please be sure to contact <a 
				class="inline bluetext semibold"
				href="mailto:support@joyoftournaments.com">support@joyoftournaments.com</a>
			well in advance.
		</p>

		<div class="row">

			<span class="third semibold">
				Tabbing Software:
			</span>

			<label for="tabroom">
				<span class="third hover">
					<input 
						type    = "radio"
						name    = "nsda_tabbing_software"
						id      = "tabroom"
						value   = "tabroom"
						<% $tourn_settings->{'nsda_tabbing_software'} ne "jot" ? 'checked="checked"' : "" %>
					>Tabroom.com
				</span>
			</label>

			<label for="jot">
				<span class="third hover">
					<input 
						type    = "radio"
						name    = "nsda_tabbing_software"
						id      = "jot"
						value   = "jot"
						<% $tourn_settings->{'nsda_tabbing_software'} eq "jot" ? 'checked="checked"' : "" %>
					>Joy of Tournaments
				</span>
			</label>

		</div>


		<h4>District orders</h4>

		<p class="centeralign bluetext semibold">
			Please be sure these orders are in 3 weeks before your District
			tournament.
		</p>

%           foreach my $key (sort keys %questions) {

                <label for="<% $questions{$key}{"label"} %>">
                    <div class="row hover">
                        <span class="fourfifths">
                            <% $questions{$key}{"text"} %>
                        </span>

                        <span class="fifth">
                            <input 
                                type  = "checkbox"
                                id    = "<% $questions{$key}{"label"} %>"
                                name  = "<% $questions{$key}{"label"} %>"
                                value = "1"
								<% $tourn_settings->{$questions{$key}{"label"}} ? 'checked="checked"' : "" %>
                            > Yes
                        </span>

                    </div>
                </label>
%           }


		<h4>National Office Staff</h4>

		<p class="centeralign semibold bluetext">

			The following National Office staff are on call for help during
			your District Tournament.   Please call them (in the order listed)
			if you need assistance.

		</p>

%		foreach my $tag (1, 2, 3) { 

%			my $person_id = $tourn_settings->{"nsda_contact_".$tag};
%			next unless $person_id;

%			my $person = Tab::Person->retrieve($person_id);
%			next unless $person;

			<div class="lightrow">

				<span class="third strong padleftmore">
					<% $tag %>.
					<% $person->first." ".$person->last %>
				</span>

				<span class="quarter">
					<% Tab::phone($person->phone) %>
				</span>

				<span class="twofifths nospace">
					<a 
						class="full white hover redtext padmuchmore"
						href="mailto: <% $person->email %>"
					>
					<% $person->email %>
					</a>
				</span>
			</div>

%		}

	</div>
		
