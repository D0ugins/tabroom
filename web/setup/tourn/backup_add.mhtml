<%args>
	$tourn
	$tourn_settings
	$username
</%args>
<%init>

	my $backup_ids = $tourn_settings->{"backup_followers"};

	my $done;

	my $login = Tab::Login->search(
		username => $username
	)->first;

	my $person = $login->person if $login;

	foreach my $id (split(/,/, $backup_ids)) {
		next unless $id;
		$done++ if $person && $id == $person->id;
	}

	my $msg;

	if ($person && not defined $done) {

		$backup_ids .= ',' if $backup_ids;
		$backup_ids .= $person->id;

		$tourn->setting("backup_followers", $backup_ids);
		$msg = "User ".$person->email." will now recieve all backups for ".$tourn->name;
	}

	$msg = "User not found" unless $person;
	$msg = "User already getting backups" if $done;

	$m->redirect("backups.mhtml?msg=$msg");

</%init>

