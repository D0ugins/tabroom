<%args>
	$tourn
</%args>
<%init>

	my @settings = (
		"pilot_speech", 
		"pilot_debate", 
		"pilot_congress",
		"nsda_internet_extemp",
		"nsda_internet_debate",
		"nsda_internet_congress"
	);

	foreach my $setting (@settings) { 
		my $arg = $ARGS{$setting};
		$arg = 0 unless $arg;
		$tourn->setting($setting, $arg);
	}

	my $msg = "Pilot rules settings saved";

	$m->redirect("main.mhtml?msg=$msg");

</%init>
