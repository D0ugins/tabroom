<%args>
	$tourn
</%args>
<%init>

	my @tags = (
		"disclaimer",
		"eligibility_text",
		"waitlist_message",
		"legislation_message",
		"judgebond_message",
		"suppconn_message",
		"invoice_message",
		"invoice_address",
		"registration_message",
		"nats_open_message",
		"mailing_message",
		"competitor_form_message",
		"eligibility_doc_message"
	);

	foreach my $tag (@tags) {

		my $text = $m->comp(
			'/funclib/save_editor.mas',
			text => $ARGS{$tag}
		);

		$tourn->setting($tag, "text", $text);
	}

	my $msg = "Tournament notices & messages are updated";
	$m->redirect("messages.mhtml?msg=$msg");

</%init>
