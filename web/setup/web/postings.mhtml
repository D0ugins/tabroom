<%args>	
	$tourn
	$session
</%args>
<%init>

	my @existing_postings;

	push @existing_postings, $tourn->files(type => "postings");
	push @existing_postings, $tourn->files(type => "front");
	push @existing_postings, $tourn->files(type => "results");

</%init>

	<div class="main">

		<h3>Additional postings</h3>

		<table>

			<tr class="yellowrow">

				<th class="smaller">
					Posting Title
				</th>
				<th class="smaller">
					File
				</th>

				<th class="smaller">
					Date/Time Posted
				</th>

				<th class="smaller">
					Where Posted
				</th>

				<th class="smaller">
				</th>

			</tr>

%			foreach my $posting (@existing_postings) { 

    			<tr class="row">

					<td>
						<a 	
							class="full white" 
							href="<% $Tab::s3_url %>/<% $tourn->id %>/postings/<% $posting->id %>/<% $posting->filename %>">
							<% $posting->label %>
						</a>
					</td>

					<td class="centeralign">
						<a 	
							class="fa fa-lg fa-arrow-down buttonwhite greentext"
							href="<% $Tab::s3_url %>/<% $tourn->id %>/postings/<% $posting->id %>/<% $posting->filename %>">
						</a>
					</td>

					<td>
						<% Tab::niceshortdt($posting->uploaded->set_time_zone($tourn->tz)) %>
					</td>

					<td>
						<% ucfirst($posting->type) %>
					</td>

					<td class="centeralign">
						<a 
							class="redtext button buttonwhite fa fa-trash fa-lg" 
							href="posting_rm.mhtml?posting_id=<% $posting->id %>">
						</a>
					</td>

				</tr>	

%			}

		</table>

		<h4>Add new:</h4>

		<p class="explain">
			Please note: tournament web pages are cached and only re-generate
			every 10 minutes.  Changes may not appear immediately.
		</p>

		<form 
			enctype  = "multipart/form-data"
			onsubmit = "return uploadThis()"
			name     = "posting"
			action   = "posting_upload.mhtml"
			method   = "post"
		>

		<div class="row">

			<span class="quarter">
				Label
			</span>

			<span class="half">
				<input 
					type = "text"
					size = "24"
					name = "label"
				>
			</span>
		</div>

		<div class="row">

			<span class="quarter">
				Type/Location:
			</span>

			<span class="half">
				<select name="type" class="fixedsmall">
					<option value="front">Front Page</option>
					<option value="posting">Postings Page</option>
					<option value="result">Results Page</option>
				</select>
			</span>

		</div>

		<div class="row">

			<span class="quarter">
				File:
			</span>

			<span class="half">
				<div class="uploader wider">
					<input 
						type     = "file"
						name     = "posting"
						style    = "opacity: 0;"
						onchange = "uploaderName()"
						id       = "upload"
					>
					<span 
						id    = "filename"
						class = "filename"
						style = "-webkit-user-select: none;"
					>No file selected</span>

					<span 
						class = "action"
						style = "-webkit-user-select: none;"
					>Choose File</span>
				</div>
			</span>

		</div>

		<div class="full liblrow">

			<span class="quarter">
			</span>

			<input 
				type  = "submit"
				class = "thin"
				value = "Post File">
		</div>

		</form>

	</div>

    <& menu.mas, tourn => $tourn, webpage_type => "postingcontrol" &>
	
