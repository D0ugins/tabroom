<%args>
	$person
	$category_id
	$tourn
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);
	my $judge_per = $category->setting("judge_per");
	my $rounds_per = $category->setting("rounds_per");
	my $err;

</%init>

	<& 
		menu.mas, 
		tourn       => $tourn,
		category_id => $category_id,
		page        => "hires"
	&>

	<div class="main">

		<h2>
			<% $category->name %>
		</h2>

		<& "tabbar.mas", whoami => "hires", category => $category &>
			
		<h4>
			Hired Judging
		</h4>

		<form action="hires_save.mhtml" method="post">

		<input type="hidden" value="<% $category_id %>" name="category_id">

			<label for="exchange">
				<div class="row hover">

					<span class="fourfifths">
						Hiring Exchange (Schools hire tourn-approved judges directly)
					</span> 
						
					<span class="fifth centeralign">
						<input 
							type  = "checkbox"
							id    = "exchange"
							name  = "exchange"
							value = "1"
							<% ($category->setting("exchange")) ? "checked" : "" %>> 
					</span>

				</div>
			</label>
		
			<label for="track_judge_hires">
				<div class="row hover">
				
					<span class="fourfifths">
						Offer tournament hired judging
					</span> 
					
					<span class="fifth centeralign">
						<input 
							type  = "checkbox"
							id    = "track_judge_hires"
							name  = "track_judge_hires"
							value = "1"
							<%  ($category->setting("track_judge_hires")) ? "checked" : "" %>> 
					</span>
					
				</div> 
			</label>

%			if ($judge_per) { 

				<div class="row" >

					<span class="fourfifths">
						Number of hired judges available.  Put 0 to manage hires manually.
					</span> 
				
					<span class="fifth centeralign"> 
						<input 
							type  = "number"
							name  = "hired_jpool"
							min   = "0"
							max   = "9999"
							value = "<% $category->setting("hired_jpool") %>"
						>
					</span>
				
				</div>

%			} elsif ($rounds_per) { 

				<div class="row" >

					<span class="fourfifths">
						Number of hired rounds available.  Put 0 to manage hires manually.
					</span> 
				
					<span class="fifth centeralign"> 
						<input 
							type  = "number"
							name  = "hired_rounds"
							min   = "0"
							max   = "9999"
							value = "<% $category->setting("hired_rounds") %>"
						>
					</span>

				</div>
%			}

			<h4>
				Hired judge cost <% $rounds_per ? "" : "(Use only one)" %>
			</h4>

%			if ($rounds_per) { 

				<div class="row" >

					<span class="fourfifths">
						Charge per round:
					</span> 
					
					<span class="fifth centeralign">
						$<input 
							type  = "number"
							name  = "round_hire_fee"
							min   = "0"
							max   = "9999"
							value = "<% $category->setting("round_hire_fee") %>"
						>
					</span>

				</div>

%			} else { 

%				if ($err eq "You can only use one hiring method for judges, not both.") { 
					<div class="redrow">
% 				} else { 
					<div class="row" >
%				}

					<span class="fourfifths">
						Charge for each whole judge a school hires:
					</span>

					<span class="fifth centeralign">
						$<input 
							type  = "number"
							name  = "hired_fee"
							min   = "0"
							max   = "9999"
							value = "<% $category->setting("hired_fee") %>"
						>
					</span>

				</div>

%				if ($err eq "You can only use one Hiring Method for judges, not both.") { 
					<div class="redrow">
% 				} else { 
					<div class="row" >
%				}

					<span class="fourfifths">
						Charge for each entry covered by hired judging:
					</span> 
					
					<span class="fifth centeralign">
						$<input 
							type  = "number"
							name  = "uncovered_entry_fee"
							min   = "0"
							max   = "9999"
							value = "<% $category->setting("uncovered_entry_fee") %>"
						>
					</span>

				</div> 

%			}

		<div class="liblrow rightalign">
			<input 
				type  = "submit"
				value = " Save Hired Judge Settings "
			>
			</form>
		</div>

	</div>



