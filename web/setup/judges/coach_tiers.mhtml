<%args>	
	$tourn
	$category_id
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id) if $category_id; 
	

</%init>

	<& menu.mas, category_id => $category_id, tourn => $tourn, page => "coach_tiers" &>

	<div class="main">

		<h2>
			<% $category->name %>
		</h2>

		<& "tabbar.mas", whoami => "coach_tiers", category => $category &>

		<h4>Coaches Rating Scale</h4>

		<table> 

			<tr class="yellowrow">

				<th width="50px;">
					<form action="coach_tier_save.mhtml" method="post">
					<input type="hidden" name="category_id" value="<% $category->id %>">
				</th>

				<th class="smaller">
					Name
				</th>

				<th class="smaller">
					Description
				</th>

				<th>
				</th>

			</tr>
		
%			foreach my $tier (sort {$a->name cmp $b->name} $category->rating_tiers( type => "coach") ) { 
		
				<tr class="row">

					<th>
					</th>
	
					<td align="center">
						<input 
							type  = "text"
							name  = "<% $tier->id %>_name"
							size  = "3"
							value = "<% $tier->name %>"
						>
					</td>

					<td>
						<input 
							type  = "text"
							name  = "<% $tier->id %>_description"
							size  = "48"
							value = "<% $tier->description %>"
						>
					</td>

					<td align="center">
						<a 
							class="redtext fa fa-lg fa-trash buttonwhite" 
							href="coach_tier_rm.mhtml?tier_id=<% $tier->id %>"
						>
						</a>
					</td>

				</tr>

%			}

			<tr class="row">

				<th class="smaller">
					New:
				</th>

				<td align="center">
					<input 
						type  = "text"
						name  = "new_name"
						size  = "3"
						value = ""
						class = "starthere"
					>
				</td>

				<td>
					<input 
						type  = "text"
						name  = "new_description"
						size  = "50"
						value = ""
					>
				</td>

				<th>
				</th>

			</tr>

			<tr class="liblrow">

				<td colspan="4" align="right">
					<input type="submit" value="Save Coach Ratings " class="thin">
					</form>
				</td>

			</tr>

		</table>

		<h4>
			Rate Judges by Event Subsets
		</h4>

		<p>
			Use these if you want judges to be rated by their coaches
			separately for sets of events; ie you want judges to be rated
			differently for Extemp and Interp events.
			This only works for coach ratings, not for MPJ/Community Prefs.
		</p>

		<table>

%			my $counter = 1;

%			foreach my $rating_subset ($category->rating_subsets) { 
			
				<tr class="row">

					<th class="smaller">
						<% $counter++ %>
					</td>

					<td>
						<% $rating_subset->name %>
					</td>

					<td class="smaller">

%						foreach my $event ($rating_subset->events) { 
							<span style="display: inline-block; width: 40px; padding-left: 1px; padding-right: 2px;">
								<% $event->abbr %>
							</span>
%						}

					</td>
		
					<td align="center">
						<a class="dkred full block" href="subset_rm.mhtml?rating_subset_id=<% $rating_subset->id %>">
							Delete
						</a>
					</td>

				</tr>

%			}

			<tr class="liblrow">

					<th class="smaller">
						New:
						<form action="subset_add.mhtml" method="post">
						<input type="hidden" name="category_id" value="<% $category->id %>">
					</th>

					<td colspan="2">
						<input type="text" name="name" size="35" value="">
					</td>

					<td align="center">
						<input type="submit" class="thin" value=" Add New ">
						</form>
					</td>

				</tr>

			</table>

			<br />

%		if (scalar $category->rating_subsets > 0) { 

			<h4>Event Group Assignments</h4>
			
			<form action="subset_events.mhtml" method="post">
			<input type="hidden" name="category_id" value="<% $category->id %>">

%			
		
			<table cellpadding="6" cellspacing="1" width="100%">

%				foreach my $event ($category->events) { 
			
					<tr class="row">

						<td>
							<% $event->name %>
						</td>
		
						<td class="rightalign">

							<select name="<% $event->id %>" class="fixed">

								<option value=""> ----- </option>

%								foreach my $rating_subset ($category->rating_subsets) { 

									<option value="<% $rating_subset->id %>" 
										<% ( ($event->rating_subset && $event->rating_subset->id) && ($event->rating_subset->id == $rating_subset->id)) ? "selected" : "" %>>
										<% $rating_subset->name %>
									</option>
%								}

							<select>

						</td>

					</tr>

%				}


				<tr class="liblrow">
					<td colspan="2" align="right">
						<input type="submit" class="thin" value="Save Event Groups">
						</form>
					</td>
				</tr>

			</table>

%		}

	</div>


