<%args>
	$person
	$category_id => undef
	$tourn
	$new => undef
	$page => undef
</%args>
<%perl>

	my $category = Tab::Category->retrieve($category_id) if $category_id; 

	$category = $tourn->categories->first if scalar $tourn->categories == 1 && not defined $new;
	$category_id = $category->id if $category && not defined $new;

	if ($page) { 

		$m->redirect("edit.mhtml?category_id=".$category->id) if $page eq "edit";
		$m->redirect("hires.mhtml?category_id=".$category->id) if $page eq "hires";
		$m->redirect("tabbing.mhtml?category_id=".$category->id) if $page eq "tabbing";
		$m->redirect("ratings.mhtml?category_id=".$category->id) if $page eq "ratings";
		$m->redirect("tiers.mhtml?category_id=".$category->id) if $page eq "tiers";
		$m->redirect("coach_tiers.mhtml?category_id=".$category->id) if $page eq "coach_tiers";
		$m->redirect("partials.mhtml?category_id=".$category->id) if $page eq "partials";
		$m->redirect("pools.mhtml?category_id=".$category->id) if $page eq "pools";
		
	}

	my $judge_per++ if $category && $category->setting("judge_per");

	$page = "edit";
	$page = "new" if $new;

</%perl>

	<& menu.mas, category_id => $category_id, tourn => $tourn, page => $page &>

	<div class="main">

%	if ($category || $new) { 

		<h2>
			<% ($category) ? $category->name : "Add New Judging Group" %> 
		</h2> 
	
%		if ($category) { 
			<& "tabbar.mas", whoami => "edit", category => $category &>
%		}

		<h4>Registration settings</h4>
		
		<form action="edit_save.mhtml" method="post">

		<input
			type  = "hidden"
			value = "<% $category_id %>"
			name  = "category_id">

		<span class="pagehalf">

			<div class="row">
				<span class="quarter">
					Name:
				</span>

				<span class="threequarter  rightalign">
					<input 
						type  = "text"
						name  = "name"
						value = "<% ($category) ? $category->name : "" %>"
						size  = "25">
				</span>
			</div>

			<label for="no_codes">
				<div class="row hover">
					<span class="fivesixth">
						Suppress judge codes (names only)
					</span>
					<span class="sixth centeralign">
						<input 
							type  = "checkbox"
							name  = "no_codes"
							id    = "no_codes"
							value = "1" 
							<% ($category) ? ($category->setting("no_codes")) ? "checked" : "" : "" %>>
					</span>
				</div>
			</label>

			<div class="row">
				<span class="threequarter">
					Start judge codes with
				</span>
				<span class="quarter rightalign ">
					<input 
						type  = "number"
						name  = "code_start"
						size  = "5"
						min   = "1"
						max   = "99999"
						value = "<% ($category) ? $category->setting("code_start") : "" %>">
				</span>
			</div>

			<label for="field_report">
				<div class="row hover">
					<span class="fivesixth">
						Publish the list of judges online
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							name  = "field_report"
							id    = "field_report"
							value = "1" 
							<% ($category) ? ($category->setting("field_report")) ? "checked" : "" : "" %>>
					</span>
				</div>
			</label>

			<label for="judge_cells">
				<div class="row hover">
					<span class="fivesixth">
						Ask for judge phone #s at registration
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							name  = "judge_cells"
							id    = "judge_cells"
							value = "1" 
							<% ($category) ? ($category->setting("judge_cells")) ? "checked" : "" : "" %>>
					</span>
				</div>
			</label>

			<label for="judge_quals">
				<div class="row hover">
					<span class="fivesixth">
						Ask for judge qualifications and histories
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							name  = "judge_quals"
							id    = "judge_quals"
							value = "1" 
							<% ($category) ? ($category->setting("judge_quals")) ? "checked" : "" : "" %>>
					</span>
				</div>
			</label>

			<div class="row" title="Not hires; per-head fee">
				<span class="threefifths">
					Fee for a judge to attend:
				</span>
				<span class="twofifth rightalign">
					<input
						type  = "number"
						size  = "4"
						min   = "0"
						max   = "999"
						name  = "attending_judge_fee"
						value = "<% $category ? $category->setting("attending_judge_fee") : "" %>">
				</span>
			</div>

% 			if ($tourn->setting("ncfl")) { 

				<label for="ask_parli">
					<div class="row">
						<span class="fivesixth">
							Ask for parliamentarians
						</span>
						<span class="sixth centeralign">
							<input
								type  = "checkbox"
								id    = "ask_parli"
								name  = "ask_parli"
								class = "largecheck"
								value = "1" <% $category ? ($category->setting("ask_parli")) ? "checked" : "" : "" %>>
						</span>
					</div> 
				</label>
	
				<label for="tab_room">
					<div class="row">
						<span class="fivesixth">
							Flat obligation (tab room)
						</span>
						<span class="sixth centeralign">
							<input
								type  = "checkbox"
								id    = "tab_room"
								name  = "tab_room"
								class = "largecheck"
								value = "1" <% $category ? ($category->setting("tab_room")) ? "checked" : "" : "" %>>
						</span>
					</div>
				</label>
	
				<div class="row">
					<span class="threefifths">
						Minimum per diocese 
					</span>
					<span class="twofifth rightalign">
						<input
							type  = "number"
							min   = 0
							max   = 999
							name  = "dio_min"
							value = "<% $category ? $category->setting("dio_min") : "" %>"
							size  = "4">
					</span>
				</div>

% 			} 

		</span>

		<span class="pagehalf">

			<div class="row">
				<span class="twothird">
					Abbreviation, max 4 letters:
				</span>
				<span class="third rightalign">
					<input 
						type      = "text"
						maxlength = "4"
						name      = "abbr"
						value     = "<% ($category) ? $category->abbr : "" %>"
						size = "7">
				</span>
			</div>

			<label for="first_year_outs">
				<div class="row hover">
					<span class="fivesixth">
						Registrants can mark first year outs
					</span>
					<span class="sixth centeralign">
						<input 
							type  = "checkbox"
							name  = "first_year_outs"
							id    = "first_year_outs"
							value = "1" 
							<% $category && $category->setting("first_year_outs") ? "checked"  : "" %>
						>
					</span>
				</div>
			</label>

			<div class="row hover">

				<span class="third">
					Label for FYOs:
				</span>

				<span class="twothirds rightalign">
					<input 
						type  = "text"
						name  = "fyo_label"
						id    = "fyo_label"
						size  = "24"
						value = "<% $category ? $category->setting("fyo_label") : "" %>"
					>
				</span>
			</div>


			<label for="neutrals">

				<div class="row hover" title="Neutral judges will be able to judge their own school's entries">

					<span class="fivesixth ">
						Registrants can mark neutral judges 
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							id    = "neutrals"
							name  = "neutrals"
							value = "1"
							<% $category && $category->setting("neutrals") ? "checked" : "" %>>
					</span>

				</div>
			</label>

			<label for="double_entry">

				<div class="row hover">

					<span class="fivesixth">
						Allow judge double-entry
					</span>

					<span class="sixth centeralign">
						<input
							type = "checkbox"
							name = "double_entry"
							id   = "double_entry" = "1" 
							<% ($category && $category->setting("double_entry")) ? "checked" : "" %>>
					</span>
				</div>
			</label>

			<label for="ask_alts">
				<div class="row hover">
					<span class="fivesixth">
						Ask to specify an alternate category
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							id    = "ask_alts"
							name  = "ask_alts"
							value = "1" 
							<% ($category && $category->setting("ask_alts")) ? "checked" : "" %>>
					</span>
				</div>
			</label>

			<label for="linked_only">
				<div class="row hover">
					<span class="fivesixth">
						Require judges to have linked accounts (Online ballots only).
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							id    = "linked_only"
							name  = "linked_only"
							value = "1" 
							<% ($category && $category->setting("linked_only")) ? "checked" : "" %>>
					</span>
				</div>
			</label>

		</span>

		<span class="pagehalf">

			<h4>
				Burden method, pick one
			</h4>

			<div class="row">
			    <span class="threefifths">
					Entries per judge owed
				</span>
				<span class="twofifth rightalign">
					<input
						type  = "number"
						step  = ".01"
						min   = 0
						max   = 99
						name  = "judge_per"
						value = "<% ($category) ? $category->setting("judge_per") : "" %>"
						size  = "4">
				</span>
			</div>

			<div class="row">
			    <span class="threefifths">
					Rounds owed per entry 
				</span>
				<span class="twofifth rightalign">
					<input
						type  = "number"
						min   = 0
						max   = 99
						step  = ".01"
						name  = "rounds_per"
						value = "<% $category ? $category->setting("rounds_per") : "" %>"
						size  = "4">
				</span>
			</div>

		</span>

		<span class="pagehalf">

			<h4>
				Alter burden
			</h4>

			<label for="drops_no_burden">
				<div class="row hover">
					<span class="fivesixth">
						Forgive judge burden for drops
					</span>
					<span class="sixth centeralign">
						<input
							type  = "checkbox"
							id    = "drops_no_burden"
							name  = "drops_no_burden"
							value = "1" <%  ($category && $category->setting("drops_no_burden")) ? "checked" : "" %>>
					</span>
				</div>
			</label>

%			if ($judge_per || $rounds_per) { 

				<div class="row">
					<span class="threefifths" title="Not hires; will print a warning">
						Fine per missing <% $judge_per ? "judge" : "round" %>:
					</span>
					<span class="twofifth rightalign">
						<input
							type  = "number"
							size  = "4"
							min   = "0"
							max   = "999"
							name  = "missing_judge_fee"
							value = "<% $category ? $category->setting("missing_judge_fee") : "" %>">
					</span>
				</div>

%			}

%			if ($category && $category->setting("rounds_per")) { 

				<div class="row">
					<span class="threequarter">
						Maximum rounds for one judge:
					</span>
					<span class="quarter centeralign">
						<input
							type  = "number"
							min   = 0
							max   = 99
							name  = "max_rounds"
							value = "<% $category ? $category->setting("max_rounds") : "" %>"
							size  = "4">
					</span>
				</div>

				<div class="row">
					<span class="threequarter">
						Free rounds: reduce total burden by
					</span>
					<span class="quarter centeralign">
						<input
							type  = "number"
							min   = -99
							max   = 99
							name  = "free"
							value = "<% $category ? $category->setting("free") : "" %>"
							size  = "4">
					</span>
				</div>

				<h5>Raise round burdens for large teams</h5>
				
				<div class="row">
					<span class="twothirds">
						Raise round burden after 
					</span>
					<span class="third">
						<input
							type  = "number"
							min   = 0
							max   = 999
							class = "smaller"
							name  = "commitment_bump_after"
							value = "<% $category ? $category->setting("commitment_bump_after") : "" %>"
							size  = "4"
						>
						entries

					</span>
				</div>
				
				<div class="row">

					<span class="twothirds">
						Raise burden by
					</span>

					<span class="quarter centeralign">
						<input
							type  = "number"
							min   = -99
							max   = 99
							name  = "commitment_bump_unit"
							value = "<% $category ? $category->setting("commitment_bump_unit") : "" %>"
							size  = "4">
					</span>

				</div>


%			} elsif ($category && $category->setting("judge_per")) { 
			
				<div class="row">

					<span class="threequarters">

						Minimum judges owed 
						<p class="explain marno padless">
							If a school has entries
						</p>

					</span>

					<span class="quarter centeralign">

						<input
							type  = "number"
							min   = 0
							max   = 999
							name  = "min_burden"
							value = "<% $category ? $category->setting("min_burden") : "" %>"
							size  = "4"
						>
					</span>

				</div>

				<div class="row">
					<span class="threequarters">
						Maximum judges a school can owe
					</span>
					<span class="quarter centeralign">
						<input
							type  = "number"
							min   = 0
							max   = 999
							name  = "max_burden"
							value = "<% $category ? $category->setting("max_burden") : "" %>"
							size  = "4">
					</span>
				</div>

				<div class="row">
					<span class="threequarters">
						Free judges: reduce judge burden by
					</span>
					<span class="quarter centeralign">
						<input
							type  = "number"
							min   = -99
							max   = 99
							name  = "free"
							value = "<% $category ? $category->setting("free") : "" %>"
							size  = "4">
					</span>
				</div>

				<div class="row">

					<span class="threequarters smallish">
						Maximum number of judges that can <br />count for their alternate category
					</span>
					<span class="quarter centeralign">
						<input
							type  = "number"
							min   = 0
							max   = 999
							name  = "alt_max"
							value = "<% $category ? $category->setting("alt_max") : "" %>"
							size  = "4">
					</span>

				</div>
				
%			} 

		</span>

        <div class="liblrow rightalign">
            <input
				type  = "submit"
				value = " Save Registration Settings">
		</div>

		<& "/funclib/editor.mas" &>

		<h4>Message/policy for judge registrations</h4>

		<span class="full nospace">
			<textarea
				name = "judge_policy"
				rows = 12
				cols = "55"
				wrap = "virtual"
			><% $category ? $category->setting("judge_policy") : "" %></textarea>
		</span>

        <div class="liblrow rightalign">
            <input
				type  = "submit"
				value = " Save Registration Settings">
            </form>
        </div>


%	} else { 

		<h2>Judge Categories</h2>

		<p>
			Add judge categories or edit judge category information.
		</p>

%	}

	</div>
