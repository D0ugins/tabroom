<%args>
	$tourn
	$tourn_settings
	$category_id => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id) if $category_id;

	$m->abort unless $category;

</%init>

	<& "menu.mas",
		category_id    => $category_id,
		tourn          => $tourn,
		tourn_settings => $tourn_settings,
		page           => "nsda_pools"
	&>

	<div class="main">

		<h2>
			<% $category->name %>
		</h2>

		<& "tabbar.mas", 
			tourn          => $tourn,
			tourn_settings => $tourn_settings,
			whoami         => "pools",
			category       => $category
		&>

		<h4>Registration Judge pools</h4>

		<form 
			action = "nsda_pool_save.mhtml"
			method = "post"
		>

		<input 
			type  = "hidden"
			name  = "category_id"
			value = "<% $category->id %>"
		>

		<table>

			<tr class="yellowrow">
				
				<th class="smallish">
					Pool Name
				</th>

				<th class="smallish centeralign">
					Can Hire?
				</th>

				<th class="smallish centeralign">
					Parli
				</th>

				<th class="smallish centeralign">
					Prefer
				</th>

				<th class="smaller">	
					Price Per Round
				</th>

				<th class="smaller">	
				</th>

			</tr>

<%perl>

			my $registration_jpool_count;

			my %jpool_settings = $m->comp(
				"/funclib/jpool_settings.mas", 
				category => $category
			);

			foreach my $jpool (
				sort {$a->name cmp $b->name} 
				$category->jpools
			) { 

				next unless $jpool_settings{$jpool->id}{"registrant"};

</%perl>
				<tr class="row">

					<td class="centeralign">
						<input 
							type  = "text"
							name  = "<% $jpool->id %>_name"
							size  = "24"
							value = "<% $jpool->name %>"
						>
					</td>

					<td class="centeralign nospace">

						<label for="<% $jpool->id %>_hire">
							<span class="full hover padless">
								<input 
									type  = "checkbox"
									class = "bigger"
									name  = "<% $jpool->id %>_hire"
									id    = "<% $jpool->id %>_hire"
									value = "1"
									<% $jpool_settings{$jpool->id}{"hire"} ? "checked" : "" %>
								>
							</span>
						</label>
					</td>


					<td class="centeralign nospace">

						<label for="<% $jpool->id %>_parli">
							<span class="full hover padless">
								<input 
									type  = "checkbox"
									class = "bigger"
									name  = "<% $jpool->id %>_parli"
									id    = "<% $jpool->id %>_parli"
									value = "1"
									<% $jpool_settings{$jpool->id}{"parli"} ? "checked" : "" %>
								>
							</span>
						</label>
					</td>

					<td class="centeralign nospace">

						<label for="<% $jpool->id %>_prefer">
							<span class="full hover padless">
								<input 
									type  = "checkbox"
									class = "bigger"
									name  = "<% $jpool->id %>_prefer"
									id    = "<% $jpool->id %>_prefer"
									value = "1"
									<% $jpool_settings{$jpool->id}{"prefer"} ? "checked" : "" %>
								>
							</span>
						</label>
					</td>


					<td class="centeralign nospace">
						<input 
							type  = "number"
							name  = "<% $jpool->id %>_hire_price"
							value = "<% $jpool_settings{$jpool->id}{"hire_price"} %>"
							min   = 0
							max   = 999
						>
					</td>

					<td class="smallish centeralign nospace">

%						my $warn = "You are about to delete this judge pool and all its judges.  Are you sure?";

						<a 
							class="redtext buttonwhite fa fa-lg fa-trash"
							href="pool_rm.mhtml?jpool_id=<% $jpool->id %>" 
							<& "/funclib/confirm.mas", warn => $warn &>  
						>
						</a>
					</td>

				</tr>

%			} 

			<tr class="row bordertop">

				<td class="centeralign">
					<input 
						type  = "text"
						name  = "new_name"
						size  = "24"
					>
				</td>

				<td class="centeralign nospace">

					<label for="new_hire">
						<span class="full hover padless">
							<input 
								type  = "checkbox"
								class = "bigger"
								name  = "new_hire"
								id    = "new_hire"
								value = "1"
							>
						</span>
					</label>
				</td>

				<td class="centeralign nospace">

					<label for="new_parli">
						<span class="full hover padless">
							<input 
								type  = "checkbox"
								class = "bigger"
								name  = "new_parli"
								id    = "new_parli"
								value = "1"
							>
						</span>
					</label>
				</td>

				<td class="centeralign nospace">

					<label for="new_prefer">
						<span class="full hover padless">
							<input 
								type  = "checkbox"
								class = "bigger"
								name  = "new_prefer"
								id    = "new_prefer"
								value = "1"
							>
						</span>
					</label>
				</td>

				<td class="centeralign nospace">
					<input 
						type  = "number"
						name  = "new_hire_price"
						min   = 0
						max   = 999
					>
				</td>

				<td class="smallish centeralign nospace">

				</td>

			</tr>

			<tr class="liblrow">

				<td class="rightalign" colspan="9">
					<input 
						type  = "submit"
						class = "thin"
						value = " Save Changes "
					>
				</td>

			</tr>

		</table>

		</form>

	</div>

