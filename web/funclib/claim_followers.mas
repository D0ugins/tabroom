<%args>
	$person
</%args>
<%init>
	
	Tab::Follower->set_sql( claim_follower => "
		update follower
		set follower.follower = ? 
		where follower.email = ? 
		and follower.follower is NULL
	");

	Tab::Follower->sql_claim_follower->execute($person->id, $person->email);

	foreach my $login ($person->logins) { 

		next if $login->username eq $person->email;
	
		Tab::Follower->sql_claim_follower->execute($person->id, $login->username);

	}

</%init>
