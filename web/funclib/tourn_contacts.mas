<%args>
	$tourn
</%args>
<%perl>

    my $dbh = Tab::DBI->db_Main();

    my $sth = $dbh->prepare("
		select school.id, person.id, person.email
			from school, chapter, permission, person
		where school.tourn = ?
			and school.chapter = chapter.id
			and chapter.id = permission.chapter
			and permission.tag = 'chapter'
			and permission.person = person.id
			and person.no_email != 1
			and exists (
				select entry.id
					from entry
				where entry.school = school.id
					and entry.unconfirmed = 0
					and entry.dropped = 0
			);
	");

	$sth->execute($tourn->id);

	my %school_contacts;

	while (
		my ($school_id, $person_id, $person_email) = $sth->fetchrow_array()
	) {
		$school_contacts{$school_id}{$person_email}++;
	}

	$sth = $dbh->prepare("
		select school.id, contact_email.value
			from school, school_setting contact_email
		where school.tourn = ?
			and school.id = contact_email.school
			and contact_email.tag = 'contact_email'
			and not exists (
				select person.id
					from person
				where person.email = contact_email.value
					and person.no_email = 1
			)
			and exists (
				select entry.id
					from entry
				where entry.school = school.id
					and entry.unconfirmed = 0
					and entry.dropped = 0
			);
	");

	$sth->execute($tourn->id);

	while (
		my ($school_id, $contact_email) = $sth->fetchrow_array()
	) {
		$school_contacts{$school_id}{$contact_email}++;
	}

	$sth = $dbh->prepare("
		select school.id, person.email, follower.email
		from school, follower
		left join person on person.id = follower.person and person.no_email != 1
		where school.tourn = ?
		and school.id = follower.school
		and follower.type = 'contact'
		and exists (select entry.id from entry where entry.school = school.id and entry.unconfirmed = 0 and entry.dropped = 0)
		and not exists (
			select person.id
			from person
			where person.email = follower.email
			and person.no_email = 1
		)
	");

	$sth->execute($tourn->id);

	while (
		my ($school_id, $person_email, $follower_email) = $sth->fetchrow_array()
	) {
		if ($person_email) {
			$school_contacts{$school_id}{$person_email}++;
		} else {
			$school_contacts{$school_id}{$follower_email}++;
		}
	}

	return %school_contacts;

</%perl>
