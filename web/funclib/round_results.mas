<%args>
	$done => undef
	$round
</%args>
<%init>

	my $limit;

	if ($ARGS{"no_drops"}) { 
		$limit = " and ( ballot.audit != 0 or entry.active = 0 ) ";
	} else { 
		$limit = " and ( ballot.audit != 0 ) ";
	}

	Tab::Panel->set_sql( done_by_round => "
		select distinct panel.*, 
			ballot.judge as judge
		from panel, ballot, entry
		where panel.round = ? 
		and ballot.panel = panel.id
		and ballot.audit != 0
		and ballot.entry = entry.id
		$limit
		order by panel.letter
	") if $done;

	Tab::Panel->set_sql( done_by_round => "
		select distinct panel.*, 
			ballot.judge as judge, 
			ballot.audit as audit
		from panel, ballot, score, entry
		where panel.round = ? 
		and ballot.panel = panel.id
		and ballot.entry = entry.id
		and score.ballot = ballot.id
		$limit
		and not exists ( select b2.id 
			from ballot b2, entry e2
			where b2.panel = panel.id
			and b2.entry = e2.id
			and b2.audit != 1 
			and or e2.active = 1
		)
		order by panel.letter, ballot.judge
	");

	return Tab::Panel->search_done_by_round($round->id);

</%init>

