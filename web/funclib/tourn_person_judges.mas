<%args>
	$tourn
	$person
</%args>
<%init>

	Tab::Judge->set_sql( by_tourn_and_person => "
		select distinct judge.* 
		from judge, category
		where judge.category = category.id
			and category.tourn = ? 
			and judge.person = ? 
		order by judge.last
	");
	
	return Tab::Judge->search_by_tourn_and_person($tourn->id, $person->id);

</%init>

