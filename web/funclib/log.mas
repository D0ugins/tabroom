<%init>

	unless ($ARGS{"tourn"}) { 
		$ARGS{"tourn"} = $ARGS{"event"}->tourn if $ARGS{"event"};
		$ARGS{"tourn"} = $ARGS{"school"}->tourn if $ARGS{"school"};
	};

	my $now = DateTime->now();

	my $change = Tab::ChangeLog->create({
		person      => $ARGS{"person"},
		type        => $ARGS{"type"},
		description => $ARGS{"description"},
		event       => $ARGS{"event"},
		tourn       => $ARGS{"tourn"},
		entry       => $ARGS{"entry"},
		judge       => $ARGS{"judge"},
		fine        => $ARGS{"fine"},
		new_panel   => $ARGS{"new_panel"},
		old_panel   => $ARGS{"old_panel"},
		school      => $ARGS{"school"},
		created     => $now
	});

	return $change;

</%init>

