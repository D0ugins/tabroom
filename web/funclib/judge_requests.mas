<%args>
	$tourn
</%args>
<%init>

	Tab::Judge->set_sql( judge.person_reqs => "
		select distinct judge.* 
		from judge, judge_group
		where judge_group.tourn = ? 
		and judge_group.id = judge.judge_group
		and judge.person_request > 0
		and judge.person = 0
		order by judge.judge_group, judge.last
	");

	return Tab::Judge->search_judge.person_reqs($tourn->id);

</%init>


