<%init>

    Tab::Ad->set_sql( current => "
        select ad.*
        from ad
        where ad.start <  NOW()
        and ad.end > NOW()
        and ad.approved = 1
    ");

    my @ads = List::Util::shuffle Tab::Ad->search_current();

	return unless @ads;

</%init>

	<script>
		$(document).ready(function(){

			$('.slick_ads').slick({
				vertical       : true,
				slidesToShow   : 1,
				slidesToScroll : 1,
				arrows         : false,
				autoplay       : true,
				autoplaySpeed  : 8400,
				draggable      : false
			});

		});
	</script>
	
	<script type="text/javascript">
