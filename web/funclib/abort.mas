<%args>
	$err => undef
	$message => undef
</%args>
<%init>

	if ($err || $message) { 
		$m->print('<div class="blankfull padtopmore">');
		$m->print('<h6 class="redtext centeralign">');
		$m->print($err);
		$m->print($message);
		$m->print('</h6>');
		$m->print('</div>>');
	}

	$m->abort;

</%init>
