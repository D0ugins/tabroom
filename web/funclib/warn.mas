<%args>
    $warn    => undef
	$warning => undef
	$message => undef
</%args>
<%init>

	$warn = $warning if $warning;
	$warn = $message if $message;

    return unless $warn;

    use HTML::Entities;

    my $html = encode_entities($warn) if $warn;

</%init>
    onClick="alertify.alert('<% $html %>');"
%   return;

