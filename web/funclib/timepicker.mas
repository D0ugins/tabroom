<%args>
	$name        => "flurgle"
	$time        => undef
	$size        => "10"
	$id          => undef
	$placeholder => undef
</%args>

%	$id = $name unless $id;

	<script type="text/javascript">
		 $(document).ready(function() {
			 $('#<% $name %>').timepicker({
				 showLeadingZero: false,
				 showPeriod: true,
				 periodSeparator: ' '
			 });	
		 });
	 </script>

	<input 
		class       = "notfirst"
		id          = "<% $name %>"
		size        = "<% $size %>"
		placeholder = "<% $placeholder %>"
		type        = "text"
		name        = "<% $name %>"
		value       = "<% $time ? Tab::pickertime($time) : "" %>"
	>

