<%args>
	$ualt_id => undef
</%args>
<%init>

	Tab::Judge->set_sql( diamonds => "
		select max(degree.diamonds)
			from points.degree_levels degree, points.NEW_USERS_TO_DEGREES nutd
			where nutd.ualt_id = ? 
			and nutd.degree_id = degree.degree_id
	");

	return Tab::Judge->sql_diamonds->select_val($ualt_id);

</%init>

