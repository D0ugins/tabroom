<%args>
	$nsda => undef
</%args>
<%init>

	Tab::Judge->set_sql( diamonds => "
		select max(degree.diamonds)
			from 	
				points.NEW_USERS person,
				points.degree_levels degree, points.NEW_USERS_TO_DEGREES nutd

			where person.user_id = ?
			and person.ualt_id = nutd.ualt_id
			and nutd.degree_id = degree.degree_id
	");

	return Tab::Judge->sql_diamonds->select_val($nsda);

</%init>

