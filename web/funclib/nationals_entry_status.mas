<%args>
	$entry
</%args>
<%init>

	my $status; 
	my $class;

	if ($entry->unconfirmed) {
		$status = "PENDING";
		$class  = "semibold bluetext";
	} elsif ($entry->setting("rejected_by")) { 
		$status = "REJECTED";
		$class  = "semibold graytext";
	} elsif ($entry->active) { 
		$status = "ACCEPTED";
		$class  = "semibold greentext";
	} elsif ($entry->dropped) { 
		$status = "DROPPED";
		$class  = "semibold redtext";
	}

	return $status, $class;

</%init>
