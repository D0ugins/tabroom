<%args>
	$warn
	$url    => undef
	$inline => undef
</%args>
<%init>

	return unless $warn;

    use HTML::Entities;

    my $html = encode_entities($warn) if $warn;

	unless ($inline) { 
		$m->print('onClick="');
	}

	if ($ARGS{"switch"}) { 
		$m->print("
			var linkElement = this;  
			alertify.confirm(  
				'Confirm',  
				'".$html."', 
				function() {
					postSwitch(linkElement, '".$url."'); 
				}, 
				function() {
					alertify.error('Action Canceled'); 
				}  
			);
		");

	} else { 
		$m->print("return confirmAction(this, '".$html."');");
	} 

	$m->print('"');

	return;

</%init>

