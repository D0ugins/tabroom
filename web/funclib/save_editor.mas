<%args>
	$text => undef
</%args>
<%init>

	my $scrubber = HTML::Scrubber->new( 
		allow => [ qw[ p strong b i u hr br ol ul li] ] 
	);

	$text =~ s/&nbsp;/ /g;
			
	my $result = $scrubber->scrub($text);

	$result =~ s/<p>\s+<\/p>//g;  #Nonsense
	$result =~ s/<p><\/p>//g;  #Nonsense

	$result =~ s/^\s+//;  # Leading only
	$result =~ s/\s+$//;  # Trailing

	return $result;

</%init>
