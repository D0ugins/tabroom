<%args>
	$tourn
	$post_level => 3
</%args>
<%init>

    Tab::Round->set_sql( post_results => "
        select round.*
        from round,event,timeslot
        where round.post_primary >= ?
			and round.event = event.id
			and event.tourn = ?
			and round.timeslot = timeslot.id
        order by timeslot DESC
    ");

    return Tab::Round->search_post_results($post_level, $tourn->id);

</%init>
