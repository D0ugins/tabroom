<%init>

	my $selector = int(rand(9));
	$selector++;

	my $start;
	my $end;

	if ($selector == 1) {
		$start = 1;
		$end = 3;
	} elsif ($selector == 2) {
		$start = 5;
		$end = 8;
	} elsif ($selector == 3) {
		$start = 10;
		$end = 15;
	} elsif ($selector == 4) {
		$start = 17;
		$end = 22;
	} elsif ($selector == 5) {
		$start = 28;
		$end = 32;
	} elsif ($selector == 6) {
		$start = 47;
		$end = 50;
	} elsif ($selector == 7) {
		$start = 28;
		$end = 32;
	} elsif ($selector == 8) {
		$start = 5;
		$end = 8;
	} elsif ($selector == 9) {
		$start = 17;
		$end = 22;
	} elsif ($selector == 10) {
		$start = 1;
		$end = 3;
	}

	my $time_controls = "start=".$start.";end=".$end.";";

</%init>

