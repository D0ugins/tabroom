<%args>
	$length => 8
	$number => undef
</%args>

<%init>

    my $result;

	if ($number) { 

		my $passwdkey = '2345678901';

		while ($length) {
			$result.=substr($passwdkey,rand(length($passwdkey)),1);
			$length--;
		}

	} else { 

		my $passwdkey = '23456789abcdefghijkmnopqrstuvwxyzABCDEFGHIJKLMNPQRSTUVWXYZ';
		while ($length) {
			$result.=substr($passwdkey,rand(length($passwdkey)),1);
			$length--;
		}
	}

	return $result;

</%init>
