<%args>
	$round        => undef
	$round_id     => undef
	$nobye        => undef
	$min_bracket  => undef
	$max_bracket  => undef
	$erase_chairs => undef
</%args>
<%init>

	$round = Tab::Round->retrieve($round_id) if $round_id;

	my $limiter;
	
	$limiter .= " and panel.bracket > ".$min_bracket if (defined $min_bracket);
	$limiter .= " and panel.bracket < ".$max_bracket if (defined $max_bracket);

	my $ballot_limiter;

	$ballot_limiter .= " and ballot.chair = 1 " if $erase_chairs && $erase_chairs == 1;
	$ballot_limiter .= " and ballot.chair != 1 " if $erase_chairs && $erase_chairs == 2;

	Tab::Ballot->set_sql( remove_judges => "
		update ballot, panel
		set ballot.judge   = 0
		where ballot.panel = panel.id
		and panel.round    = ?
		$limiter
		$ballot_limiter
	");

	Tab::Ballot->set_sql( remove_scores => "
		delete score.* 
		from score, ballot, panel
		where score.ballot = ballot.id
		and ballot.panel   = panel.id
		and panel.round    = ?
		$limiter
		$ballot_limiter
	");

	Tab::Ballot->set_sql( dedupe_ballots => "
		delete b2.*
			from ballot b1, ballot b2, panel
			where b1.entry  = b2.entry
			and b1.panel    = b2.panel
			and b1.panel    = panel.id
			and panel.round = ?
			and b1.id < b2.id
	");

	Tab::Panel->set_sql( clear_flights => "
		update panel
		set panel.flight = 1
		where panel.round = ? 
		$limiter
	");

	Tab::Panel->set_sql( clear_rooms => "
		update panel
		set panel.room = 0
		where panel.round = ? 
		$limiter
	");

	Tab::Ballot->set_sql( 
		update_ballots => " 
			update ballot,panel 
			set ballot.audit   = 0
			where ballot.panel = panel.id
			and panel.round    = ?
			$limiter
			$ballot_limiter
		");

	Tab::Ballot->set_sql( 
		update_nobye_ballots => " 
			update ballot,panel 
			set ballot.audit   = 0
			where ballot.panel = panel.id
			and panel.round    = ?
			and panel.bye      = 0
			$limiter
			$ballot_limiter
	");

	eval { 
		Tab::Ballot->sql_dedupe_ballots->execute($round->id);
		Tab::Ballot->sql_remove_judges->execute($round->id);
		Tab::Ballot->sql_remove_scores->execute($round->id);
		Tab::Ballot->sql_update_ballots->execute($round->id) unless $nobye;
		Tab::Ballot->sql_update_nobye_ballots->execute($round->id) if $nobye;

		Tab::Panel->sql_clear_flights->execute($round->id);
		Tab::Panel->sql_clear_rooms->execute($round->id) if $round->flighted > 1;
	};

	return;

</%init>
