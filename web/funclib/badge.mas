<%args>
	$quiz
	$size => "small"
</%args>

%	return unless $quiz;
%	return unless $quiz->badge;

%	if ($quiz->badge_link) {
		<a href="<% $quiz->badge_link %>" class="nospace">
%	}
		<img
			class="badge<% $size %>"
			src="<% $Tab::s3_base %>/badges/<% $quiz->id %>/<% $quiz->badge %>"
			alt = "<% $quiz->badge_description ? $quiz->badge_description : $quiz->label." badge " %>"
		>
%	if ($quiz->badge_link) {
		</a>
%	}

%	return;

