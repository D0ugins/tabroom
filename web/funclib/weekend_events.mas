<%args>
	$weekend
</%args>
<%init>
	
	return unless $weekend > 0;

	Tab::Event->set_sql(by_weekend => "
		select event.*
		from event, event_setting weekend
		where event.tourn = ? 
		and event.id = weekend.event
		and weekend.tag = 'weekend'
		and weekend.value = ? 
		order by event.name
	");

	return Tab::Event->search_by_weekend($weekend->tourn->id, $weekend->id);

</%init>
