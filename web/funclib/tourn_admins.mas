<%args>
	$tourn
	$contact => undef
	$admin   => undef
	$owner   => undef
</%args>
<%perl>

	my %perms;

	my @permissions = Tab::Permission->search( tourn => $tourn->id );

	my @contacts;
	my @everyone; 
	my @admins;
	my @owners;

	foreach my $perm (@permissions) { 

		$perms{$perm->person->id}{$perm->tag} = $perm;

		push @owners, $perm->person if $perm->tag eq "owner";

		push @contacts, $perm->person if $perm->tag eq "contact";

		push @admins, $perm->person if $perm->tag eq "full_admin";
		push @admins, $perm->person if $perm->tag eq "owner";
		push @admins, $perm->person if $perm->tag eq "tabbing";
		push @admins, $perm->person if $perm->tag eq "registration";

		push @everyone, $perm->person;

	}

	return @owners if $owner; 
	return @contacts if $contact;
	return @admins if $admin;
	return @everyone;

</%perl>

