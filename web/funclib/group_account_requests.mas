<%args>
	$group
</%args>
<%init>

	Tab::Judge->set_sql( group_pending_person => "
		select judge.*
		from judge
		where judge.judge_group = ? 
		and judge.person = 0
		and judge.person_request != 0
		and judge.person_request is not null
		order by judge.last, judge.first
	");

	return Tab::Judge->search_group_pending_person($group->id);


</%init>
