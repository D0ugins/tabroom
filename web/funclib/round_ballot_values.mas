<%args>
	$round
</%args>
<%init>

	Tab::Ballot->set_sql(by_round => "
		select distinct score.*
			from panel, ballot, score
			where panel.round = ? 
			and panel.id = ballot.panel
			and score.ballot = ballot.id
			order by ballot.entry, ballot.judge
	");

	return Tab::Ballot->search_by_round($round->id);

</%init>
