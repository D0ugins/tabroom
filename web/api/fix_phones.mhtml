<%init>

	my $counter;

	$m->clear_buffer();

	foreach my $person (Tab::Person->retrieve_all) {

		my $phone = $person->phone;
		$phone =~ s/[\D_]//g;

		$person->phone($phone);
		$person->update();

		unless ($counter++ % 100) {
			$m->print("<p>Counter is now $counter</p>");
		}

	}

	$m->print("<h3>I have finished!</h3>");


</%init>
