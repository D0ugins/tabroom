<%args>
	$username => undef
	$password => undef
	$tourn_id => undef
</%args>
<%init>

	use Crypt::PasswdMD5;
	use XML::Simple;
	use Data::Dumper;

	my $login = Tab::Login->search( username => lc($username) )->first;

	unless ($login) { 
		$m->print("<error>No login with the username ".$username." was found.</error>");
		$m->abort;
	} 

	my $person = $login->person;

	$password =~ s/\s+$//g;
	my $db_password = $login->password;
   	my $verify_password = unix_md5_crypt($password,$db_password);
   
   	unless ($verify_password eq $db_password) { 
		$m->print("<error>Password incorrect for ".$username.".</error>");
		$m->abort;
	}

	my $tourn = Tab::Tourn->retrieve($tourn_id);

	unless ($tourn) { 
		$m->print("NO_SUCH_TOURNAMENT");
		$m->abort;
	}

	my %perms = ();

	if ($person->site_admin) { 
		$perms{"owner"}++;
	} else {
		my @tourn_access = Tab::Permission->search( person => $person->id, tourn => $tourn->id );
		%perms = map {$_->tag => $_} @tourn_access;
	}

	unless ($perms{"owner"} || $perms{"full_admin"} || $perms{"tabbing"} || $perms{"category_tabbing"}) { 
		$m->print("TOURN_ACCESS_DENIED");
		$m->abort;
	}

	my $events = [];
	my $rounds = [];
	
	foreach my $event ($tourn->events) { 

		next if $perms{"category_tabbing"} && $perms{"category_tabbing"}->category->id != $event->category->id;
		
		my $xml_event = {
			ID => $event->id,
			EVENTNAME => $event->name,
		};

		push (@{$events}, $xml_event);
	
		foreach my $round ($event->rounds) { 

			my $xml_round = {
				ROUNDNAME  => $round->name,
				ROUNDLABEL => $round->label,
				ID         => $round->id,
				EVENT      => $event->id
			};

			push (@{$rounds}, $xml_round);
		}
	}

	my $xml_hash = {
		EVENT => $events,
		ROUND => $rounds
	};

	my $filename = "RoundList-$person";
	my $filepath = $Tab::file_root."tmp/".$filename;
	`rm -f $filepath.*`; 

	my $xs = new XML::Simple();
	my $xml = $xs->XMLout($xml_hash, RootName => 'TOURNLIST', NoAttr => 1, XMLDecl => 1, OutputFile => "$filepath.xml");

	$m->redirect("/tmp/$filename.xml");
	
</%init>
