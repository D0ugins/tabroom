<%args>
	$judge_id => undef
	$tourn    => undef
	$tourn_id => undef
	$person  => undef
</%args>
<%init>

	my $key = $judge_id;

	return if $m->cache_self( 
		key        => $key,
		expires_in => '5m'
	);

	my $judge = Tab::Judge->retrieve($judge_id) if $judge_id;

	$tourn = Tab::Tourn->retrieve($tourn_id) if $tourn_id;

	if ($tourn && (not defined $judge)) { 
		my $err = "Judge not found";
		$m->redirect("index.mhtml?tourn_id=".$tourn->id."&err=$err");
		$m->redirect("/index/index.mhtml&err=$err");
	}

	my $category = $judge->category if $judge;

	$tourn = $category->tourn if $category;

	my $ncfl++ if $tourn && $tourn->setting("ncfl");

	$m->abort unless $category && $tourn;

	my $live_updates;

	foreach my $event ($category->events) { 
		$live_updates++ if $event->setting("live_updates");
		last if $live_updates;
	}

	my %setting;
</%init>

	<& "menu.mas", 
		tourn_id    => $tourn->id,
		category_id => $category->id
	&>

	<div class="main">
		
		<& "/index/tourn/title.mas", 
			tourn => $tourn &>

        <& "/index/tourn/tabbar.mas", 
			tourn  => $tourn,
			person => $person
		&>

<%perl>

		my @panels = $m->comp('/funclib/judge_panels.mas', 
			judge     => $judge,
			published => 1
		);

		my %seen = (); 

		@panels = grep { ! $seen{$_->id} ++ } @panels;

</%perl>

		<div class="full nospace">

			<span class="half">
				<h4>Judge 
					<% $ncfl ? $judge->code : ""  %>
					<% $judge->first." ".$judge->last %>
				</h4>
			</span>
		
			<span class="half rightalign">
				<h4>
					<% $judge->school > 0 
						? "from ".$judge->school->short_name 
						: " Tournament Hire "
					%>
					<% $ncfl && $judge->school > 0 
						? "(".$judge->school->region->name .")"
						: ""
					%>
				</h4>
			</span>

		</div>

%		if (@panels) { 

			<h6>This Tournaments' Pairings</h6>

			<table>

				<tr class="yellowrow smallish">

					<th>
						Round
					</th>

					<th>
						Div
					</th>

					<th>
						Room
					</th>

					<th>
						Entries
					</th>

				</tr>

%			}

<%perl>

			foreach my $panel (@panels) {

				my @entries = $m->comp("/funclib/panel_entries.mas", panel => $panel);

				my $event = $panel->round->event;

				foreach my $tag ("aff_string", "neg_string", "anonymous_public") { 
					unless ($setting{$event->id}{$tag}) { 
						$setting{$event->id}{$tag} = $event->setting($tag);
					}
				}

				my $aff;
				my $neg;

				foreach my $entry (@entries) { 
					$aff = $entry  if $entry->side == 1;
					$neg = $entry  if $entry->side == 2;
				}

				my $bye++ if $panel->bye;
</%perl>

				<tr class="row smallish">

					<td>
						<a 
							class="white" 
							href="round.mhtml?round_id=<% $panel->round->id %>&tourn_id=<% $tourn->id %>"
						>
							<% $panel->round->realname %>
						</a>
					</td>

					<td>
						<% $panel->round->event->abbr %>
					</td>
				
					<td>
						<% $bye ? "Bye" : $panel->room ? $panel->room->name : "" %>
					</td>

					<td>

%						if ($panel->round->event->type eq "speech") { 

%							foreach my $entry (@entries) { 
								<span class="sixth">
									<% $entry->code %>
								</span>
%							}

%						} else { 
							<span class="half marno">
								<% $bye ? "" : $setting{$entry->id}{"aff_string"} %>
								<% $aff ? $aff->code : "" %>
							</span>
							<span class="half marno">
								<% $bye ? "" : $setting{$entry->id}{"neg_string"} %>
								<% $neg ? $neg->code : ""  %>
							</span>
%						} 

					</td>

				</tr>

%			}

		</table>

<%perl>

		my @results = $m->comp(
			'/funclib/judge_panels.mas', 
			judge        => $judge,
			post_results => 1
		);

		my %rseen = (); 

		@results = grep { ! $rseen{$_->id} ++ } @results;

</%perl>

%		if (@results) { 
			<h6>Decisions</h6>
%		}

		<table>

<%perl>

			foreach my $panel (@results) { 

				my $points;
				$points++ if $panel->round->post_results == 2;

				my $event = $panel->round->event;

				foreach my $tag ("aff_string", "neg_string", "anonymous_public") { 
					unless ($setting{$event->id}{$tag}) { 
						$setting{$event->id}{$tag} = $event->setting($tag);
					}
				}

				my @entries = $m->comp("/funclib/panel_entries.mas", panel => $panel);

				my %done = ();

				foreach my $entry (@entries) { 

					next if $done{$entry->id};
					$done{$entry->id}++;

					my $aff++ if $entry->side == 1;
					my $neg++ if $entry->side == 2;

					my $bye++ if $panel->bye;

</%perl>

					<tr class="row smallish">

						<td>
							<a 
								class="white" 
								href="round.mhtml?round_id=<% $panel->round->id %>&tourn_id=<% $tourn->id %>">
								<% $panel->round->realname %>
							</a>
						</td>

						<td>
							<% $aff ? $setting{$entry->id}{"aff_string"} %>
							<% $neg ? $setting{$entry->id}{"neg_string"} %>
							<% $bye ? "Bye" %>
						</td>

<%perl>

						my @scores = $m->comp(
							'/funclib/panel_scores.mas', 
							panel => $panel,
							entry => $entry,
							judge => $judge
						);

						my %scores_by_recipient =();

 		          		foreach my $score (@scores) {   
							push @{$scores_by_recipient{$score->student->id}}, $score 
								if $score->student && $score->student->id; 
       	    			}

</%perl>
						<td class="fixed nowrap">

%							unless ($setting{$entry->id}{"anonymous_public"}) { 
								<a 	class="padless white" 
									href="entry_record.mhtml?tourn_id=<% $tourn->id %>&entry_id=<% $entry->id %>">
%							}

								<% $entry->code %>

%							unless ($setting{$entry->id}{"anonymous_public"}) { 
								</a>
%							}

						</td>

						<td>
%							foreach my $score (@scores) { 
								<% $score->tag eq "ballot" ? $score->value ? "W" : "L" : "" %>
%							}
						</td>

<%perl>
						my @students = $entry->students;

						foreach my $student (@students) { 

							if ($bye || $points < 1) { 
</%perl>

								<td colspan="<% 2 * scalar $entry->students %>"></td>

<%perl>
							} else {

								if (scalar @students > 1) { 

									my $counter = 1;
</%perl>
									<td>
%										if ($setting{$entry->id}{"anonymous_public"}) { 
											Student <% $counter++%>.
%										} else { 
											<% $student->last %>
%										}
									</td>
%								}

%								foreach my $score (@{$scores_by_recipient{$student->id}}) { 
	
									<td>	
										<% $score->value %>
									</td>	
%								}

%							}

%						}

					</tr>
%				}

				<tr>
					<td>
					</td>
				</tr>

%			}

		</table>

		<h5 class="martopmore">More details</h4>

%		if ($judge->person) { 
		
			<div class="full row marvertno">

				<span class="twofifth nospace">
					<p><% $judge->last %>'s past tournaments:</p>
				</span>

				<span class="threefifths nospace">
					<a 
						class="bluetext third buttonwhite centeralign" 
						href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>" >
						Historical Record
					</a>
				</span>
			</div>
%		}

%		if ($live_updates) { 

			<div class="full row marvertno">

				<span class="twofifth nospace">
					<p>Follow <% $judge->last %>'s assignments:</p>
				</span>

				<span class="threefifths nospace">
					<a 
						class="bluetext third buttonwhite centeralign" 
						href="/index/tourn/updates/judge_follow.mhtml?tourn_id=<% $tourn->id %>&judge_id=<% $judge->id %>">Live Updates</a>

				</span>

			</div>
%		}

	</div>

