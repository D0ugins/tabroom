<%args>
	$tourn_id
	$category_id => undef
	$person => undef
</%args>
<%init>

	my $key = $tourn_id."-".$category_id;
	return if $m->cache_self( key => $key, expires_in => '15m' );

	my $tourn =  Tab::Tourn->retrieve($tourn_id);
	$m->abort unless $tourn;

	my $category =  Tab::Category->retrieve($category_id);

	Tab::Category->set_sql( field_reports => "
		select category.* from category, category_setting
		where category.tourn = ?
		and category.id = category_setting.category
		and category_setting.tag = \"field_report\"
		and category_setting.value = 1
		order by category.name
	");

	my @categories = Tab::Category->search_field_reports($tourn->id);

	$category = $categories[0] unless $category;

	$m->abort unless $category;

	my $rounds_per = $category->setting("rounds_per");

    my $webpage = Tab::Webpage->search( tourn => $tourn_id, special => "fields")->first;

	my $switch;

</%init>

	<div class="main">

		<& title.mas, tourn => $tourn &>

        <& tabbar.mas, tourn => $tourn, person => $person &>

%		if ($category) { 

%			my @judges = sort {$a->school->name cmp $b->school->name} $category->judges(active => 1);

			<h4>Judges in <% $category->name %> (<% scalar @judges %> judges) </h4>

			<& /funclib/tablesorter.mas, table => "sortme" &>

			<table cellpadding="2" cellspacing="1" id="sortme" class="smallish">

				<thead>

				<tr class="yellowrow">

					<th>
						First
					</th>

					<th>
						Last
					</th>

					<th>
						School
					</th>

					<th>
						State
					</th>

%					if ($rounds_per) { 
						<th>
							Rounds
						</th>
%					}

				</tr>
				</thead>
				<tbody>

%				foreach my $judge (@judges) { 

%					my $paradigm = $judge->person->setting("paradigm") if $judge->person;

					<tr>

						<td>
							<a class="white padless" 
%							if ($paradigm) { 
								href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>"
%							}
							>
							<% $judge->first %>
						</td>

						<td>
							<a class="white padless" 
%							if ($paradigm) { 
								href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>"
%							} 
							>
								<% $judge->last %>
							</a>
						</td>

			
						<td>
							<% $judge->school && $judge->school->id ? $judge->school->short_name : "Hired" %>
						</td>

						<td>
							<% $judge->school ? $judge->school->chapter ? $judge->school->chapter->state : "" : "" %>
						</td>

%						if ($rounds_per) { 
							<td>
								<% $judge->obligation + $judge->hired %>
							</td>
%						}

					</tr>

%				}
				</tbody>

			</table>

%		} elsif ($webpage) { 

	        <p>
				<% $webpage->content %>
			</p>

%		} else { 

			<p>Choose an category at right to see the reported field.  You may not see all categories
			or divisions in the field report; the system only reports fields which the tournament
			officials have released.</p>

%		}

		</table>

	</div>

	<div class="menu">
	
		<div class="sidenote">

			<h4>Judges</h4>

%			foreach my $other_category (sort {$a->name cmp $b->name} @categories) { 

				<a class="<% ($other_category->id == $category_id ) ? "dk" : "" %>blue full" 
					href="/index/tourn/judges.mhtml?tourn_id=<% $tourn_id %>&category_id=<% $other_category->id %>">
					<% $other_category->name %> list
				</a>

				<a class="blue half" href="/index/tourn/paradigms.mhtml?tourn_id=<% $tourn_id %>&category_id=<% $other_category->id %>">
					<% $other_category->abbr %> paradigms
				</a>
				
				<a class="blue half" href="/index/tourn/paradigms_print.mhtml?tourn_id=<% $tourn_id %>&category_id=<% $other_category->id %>">
					PDF
				</a>

%			}
	
	
		</div>

	</div>

