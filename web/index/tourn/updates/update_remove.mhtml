<%args>
	$person
	$follower_id => undef
	$indexme     => undef
	$tourn_id    => undef
	$school_id   => undef
	$event_id    => undef
	$category_id    => undef
</%args>
<%init>

	$m->redirect("/user/home.mhtml") unless $person && $person->id;

	my $follower = Tab::Follower->retrieve($follower_id);
	$follower->delete if $follower;

	my $msg = "Follower removed";
	$m->redirect("index.mhtml?event_id=$event_id&category_id=$category_id&tourn_id=$tourn_id&msg=$msg") if $indexme;
	$m->redirect("undo.mhtml?tourn_id=$tourn_id&msg=$msg") if $follower_id;
	$m->redirect("schools.mhtml?tourn_id=$tourn_id&msg=$msg") if $school_id;


</%init>
