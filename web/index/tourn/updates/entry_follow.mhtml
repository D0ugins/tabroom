<%args>
	$entry_id
	$tourn_id
	$person => undef
	$domain => undef
	$phone  => undef
	$email  => undef
</%args>
<%init>

	my $msg;
	my $err;

	my $entry = Tab::Entry->retrieve($entry_id);

	unless ($entry) { 
		$m->print("Entry does not exist.  Hit back and try again");
		$m->abort;
	}

	$email = $person->email if $person && (not defined $email);
	$phone = $person->phone if $person && (not defined $phone);
	$domain = $person->provider if $person && (not defined $domain);

	$phone =~ s/\D//g;

	my $anonymous_public++ if $entry->event->setting("anonymous_public");

	my $emailok = Email::Valid->address( 
		-address => $email, 
		-mxcheck => 0 
	) ? 'yes' : 'no' if $email;

	if ($email && $emailok eq "no") { 
		$err .= "Email address $email is invalid.  Try again <br />" if $emailok eq "no";
		undef $email;
	}

	if ($phone && length($phone) != 10) { 
		$err .= "That phone number had ".length($phone)." digits.  10 digits required <br/>";
		undef $phone;
	}

	if ($phone && not defined $domain) { 
		$err .= "Please choose a phone provider <br />";
		undef $phone;
	}

	my $follower;
	my $follower_id = $person->id if $person;

	if ($email && $phone) { 

		my @existing = Tab::Follower->search( 
			entry => $entry->id,
			email => $email,
			type  => "entry"
		);

		push (@existing, Tab::Follower->search( 
			entry => $entry->id,
			cell  => $phone,
			type  => "entry" 
			)
		);

		my %seen = ();
		@existing = grep { ! $seen{$_->id} ++ } @existing;

		foreach (@existing) { $_->delete; }

		$follower = Tab::Follower->create({
			entry    => $entry->id,
			cell     => $phone,
			email    => $email,
			domain   => $domain,
			follower => $follower_id,
			tourn    => $tourn_id,
			type     => "entry"
		});

		if ($anonymous_public) {
			$msg .= "$email and $phone are now following ".$entry->code." <br /> <br />";
		} else { 
			$msg .= "$email and $phone are now following ".$entry->name." <br /> <br />";
		}

	} elsif ($email) { 

		my @existing = Tab::Follower->search( 
			entry => $entry->id,
			email => $email,
			type  => "entry"
		);

		unless (@existing) { 
			
			$follower = Tab::Follower->create({
				entry    => $entry->id,
				email    => $email,
				follower => $follower_id,
				tourn    => $tourn_id,
				type     => "entry"
			});
			
		
			if ($anonymous_public) {
				$msg .= "$email is now following ".$entry->code." <br /> <br />";
			} else { 
				$msg .= "$email and $phone are now following ".$entry->name." <br /> <br />";
			}


		}

	} elsif ($phone) { 

		my @existing = Tab::Follower->search( 
			entry => $entry_id, 
			cell => $phone, 
			type => "entry" );
		
		unless (@existing) {

			$follower = Tab::Follower->create({
				entry    => $entry->id,
				cell     => $phone,
				domain   => $domain,
				tourn    => $tourn_id,
				follower => $follower_id
			});

		}

		if ($anonymous_public) {
			$msg .= "Phone $phone is now following ".$entry->code." <br /> <br />";
		} else { 
			$msg .= "$email is now following ".$entry->name." <br /> <br />";
		} 

	} 
	
	if ($follower) { 
		$m->comp("send_confirmation.mas", follower => $follower);
	}

	$m->redirect("index.mhtml?event_id=".$entry->event->id."&tourn_id=$tourn_id&msg=$msg&err=$err");

</%init>
