<%args>
	$tourn_id
	$diocese_id => undef
	$person     => undef
</%args>
<%init>

	my $key = $tourn_id."-".$diocese_id;
	return if $m->cache_self( key => $key, expires_in => '10m' );

	$diocese_id =~ s/[\D_]//g;

	my $tourn = Tab::Tourn->retrieve($tourn_id);
	$m->abort unless $tourn;
	$m->abort unless $tourn->setting("ncfl_codes");

	my $diocese = Tab::Region->retrieve($diocese_id) if $diocese_id;

</%init>

	<div class="main">

		<& title.mas, tourn => $tourn &>

        <& tabbar.mas, tourn => $tourn, person => $person &>

<%perl>

		if ($diocese) { 

			my @entries = $m->comp(
				"/funclib/region_entries.mas", 
				region => $diocese, 
				tourn => $tourn
			);

			my @judges = $m->comp(
				"/funclib/region_judges.mas", 
				region      => $diocese,
				prelim_pool => 'DoItForCharlie',
				tourn       => $tourn
			);

</%perl>

			<div class="full nospace">
				<span class="threequarters">
					<h3><% $diocese->arch ? "Archdiocese" : "Diocese" %> of <% $diocese->name %></h3>
				</span>
				<span class="quarter rightalign">
					<h3> <% $diocese->code %></h3>
				</span>
			</div>

			<span class="pagehalf">

				<h4>Entries</h4>

				<& /funclib/tablesorter.mas, table => "sortme" &>

				<table id="sortme">

					<thead>

						<tr class="yellowrow">
							
							<th class="smallish">
								Event
							</th>

							<th class="smallish">
								Code
							</th>

							<th class="smallish">
								Name
							</th>

						</tr>

					</thead>

					<tbody>

%					foreach my $entry (@entries) { 

						<tr>
				
							<td>
								<% $entry->event->abbr %>
							</td>

							<td>
								<% $entry->code %>
							</td>

							<td>
								<% $entry->name %>
							</td>

						</tr>

%					}

					</tbody>

				</table>

			</span>

			<span class="pagehalf">

				<h4>Judges</h4>

				<& /funclib/tablesorter.mas, table => "sortjudges" &>

				<table id="sortjudges">

					<thead>

						<tr class="yellowrow">
							
							<th class="smallish">
								Category
							</th>

							<th class="smallish">
								Code
							</th>

							<th class="smallish">
								Name
							</th>

						</tr>

					</thead>

					<tbody>

%					foreach my $judge (@judges) { 

%						my $judge_name = $judge->first." ".$judge->last;
%						$judge_name =~ s/Hired//g;
%						$judge_name =~ s/  / /g;

						<tr>
				
							<td>
								<% $judge->category->abbr %>
								<% $judge->prelimpool ? "(".$judge->prelimpool.")" : "" %>
							</td>

							<td>
								<% $judge->code %>
							</td>

							<td>
								<% $judge_name %>
							</td>

						</tr>

%					}

				</tbody>

			</table>
%		}

	</div>

	<div class="menu">
	
		<div class="sidenote">

			<h4>Diocese</h4>

			<form action="codes.mhtml" method="post">

			<input 
				type  = "hidden"
				name  = "tourn_id"
				value = "<% $tourn->id %>"
			>

			<select 
				name="diocese_id" 
				onchange="this.form.submit();"
			>

				<option value=""></option>

%			foreach my $region ($m->comp("/funclib/tourn_regions.mas", tourn => $tourn)) { 
				<option 
					value="<% $region->id %>"
					<% $region->id == $diocese_id ? 'selected="selected"' : "" %>
				><% $region->name %></option>
%			}

			</select>

		</div>

	</div>

