<%args>
	$jpool_id
	$tourn_id => undef
	$tourn    => undef
	$person   => undef
</%args>
<%init>

	my $key = $jpool_id;

	return if $m->cache_self( 
		key        => $key,
		expires_in => '15m'
	);

	my $jpool = Tab::JPool->retrieve($jpool_id);
	Tab::Category->columns(TEMP => "nats");

	unless ($tourn) { 
		$tourn = Tab::Tourn->retrieve($tourn_id);
	}

	unless ($jpool && $jpool->id) { 
		$m->comp("/funclib/abort.mas", 
			message => "No such judge pool"
		);
	}

	my $tag = $jpool->setting("paradigm_form");

	unless ($tag) { 
		$m->comp("/funclib/abort.mas", 
			message => "That judge pool has no paradigms"
		);
	}

	my $category = $jpool->category();

	unless ($category->setting("publish_paradigms")) { 
		$m->comp("/funclib/abort.mas", 
			message => "Those paradigms are not published"
		);
	} else { 
		#needed for the menu to work
		$category->nats("publish_paradigms");
	}

	Tab::Judge->columns(TEMP => "schname");

	Tab::Judge->set_sql( paradigms => "
		select judge.*, school.name as schname, school.state as state
		from (judge, jpool_judge, judge_setting paradigm)
		left join school on judge.school = school.id
		where judge.id = jpool_judge.judge
			and jpool_judge.jpool = ? 
			and paradigm.judge = judge.id
			and paradigm.tag = ? 
			and judge.active = 1
		order by judge.last, judge.first
	");


	my @judges = Tab::Judge->search_paradigms($jpool->id, "form_".$tag);

</%init>

	<div class="main">

		<& "title.mas", tourn => $tourn &>

        <& "tabbar.mas", 
			tourn => $tourn, 
			person => $person 
		&>

		<span class="threequarters nospace">
			<h4><% $jpool->name %> Paradigms</h4>
		</span>

		<span 
			class = "quarter rightalign nospace"
			id    = "<% $jpool->id %>_buttonarea"
		> </span>

		<& "/funclib/tablesorter.mas", 
			table => $jpool->id
		&>

		<table id="<% $jpool->id %>">

			<thead>

				<tr class="yellowrow smallish">

					<th>
						Paradigm
					</th>

					<th>
						First
					</th>

					<th>
						Last
					</th>

					<th>
						School
					</th>

					<th>
						State
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $judge (@judges) { 
%					next unless $judge > 0;

					<tr>
						<td class="centeralign nospace">
							<a 
								class="full white"
								href="paradigm.mhtml?tourn_id=<% $tourn %>&judge_id=<% $judge %>&jpool_id=<% $jpool %>">
								<span class="buttonwhite bluetext fa fa-sm fa-file-text-o"></span>
							</a>
						</td>
						
						<td>
							<% $judge->first %>
						</td>

						<td>
							<% $judge->last %>
						</td>

						<td>
							<% $judge->schname ? $judge->schname : "" %>
						</td>

						<td class="centeralign">
							<% $judge->state %> 
						</td>

					</tr>

%				}

			</tbody>

		</table>

	</div>

%	my $id = $category->id;
%	undef $category;

	<& "menu.mas", 
		category_id => $id,
		jpool       => $jpool,
		tourn       => $tourn
	&>


