<%args>
	$person => undef
	$lookup_id => undef
</%args>
<%init>
	
	use Time::HiRes qw( time );
	use Data::Dumper;
	use POSIX qw(strftime);
	my $tz = $person->tz if $person;
	$tz = "UTC" unless $tz;
	my $start=time();
	my $person_name = Tab::Person->retrieve($lookup_id) if $lookup_id;

	$m->abort unless $person_name;

#PULL RESULT.PERCENTILE FOR EACH ENTRY FOR THE IDENTIFIED ACCOUNT; LINK TO HONOR_WEIGHT FOR THE EVENT				
	Tab::Person->columns(TEMP => qw/entry_name/);
	Tab::Person->columns(TEMP => qw/tourn_name/);
	Tab::Person->columns(TEMP => qw/rank/);
	Tab::Person->columns(TEMP => qw/percentile/);
	Tab::Person->columns(TEMP => qw/event_id/);
	Tab::Person->columns(TEMP => qw/honors_weight/);
	Tab::Person->set_sql(pull_points => "
			select person.first, person.last, entry.name as entry_name, tourn.name as tourn_name, result.rank as rank, entry.event as event_id, result.percentile as percentile, event_setting.value as honors_weight
			from person, student, entry_student, entry, result, tourn, event_setting
			Where person.id=?
			and student.person=?
			and student.id=entry_student.student
			and entry.id=entry_student.entry
			and result.entry=entry.id
			and tourn.id=entry.tourn
			and result.percentile>0
			and event_setting.event=entry.event
			and event_setting.tag='honors_weight'
			");

	my @entries = Tab::Person->search_pull_points($lookup_id, $lookup_id);
	#print "Row 1=".Dumper($entries[0]);
	my $total;
	
</%init>

	<& menu.mas &>

	<h4>honors points breakdown for <% $person_name->first." ".$person_name->last %></h4>

	<div class="main">
	<& /funclib/tablesorter.mas, table => "WUDC" &>

		<table cellpadding="3" width="100%" id="WUDC" class="tablesorter">
		<thead>
			<tr class="dkblue">
				<th class="smaller">tournament</th>
				<th class="smaller">Entry</th>
				<th class="smaller">Final Place</th>
				<th class="smaller">Entries</th>
				<th class="smaller">percentile</th>
				<th class="smaller">Weight</th>
				<th class="smaller">Points</th>
			</tr>
		</thead>
%			foreach my $entry (@entries) {
				<tr>
%					my @nentries = Tab::Entry->search(event=> $entry->event_id);
%					my $eventsize = $#nentries+1;				
					<td> <% $entry->tourn_name %> </td>
					<td> <% $entry->entry_name %> </td>
					<td> <% $entry->rank %> </td>
					<td> <% $eventsize %> </td>
%					my $percentile = $entry->percentile/10;
					<td> <% sprintf("%.1f", $percentile) %></td>			
					<td> <% sprintf("%.2f", $entry->honors_weight) %></td>			
					<td> <% sprintf("%.1f", $entry->honors_weight * $percentile) %> </td>
%					$total=$total+$entry->honors_weight * $percentile;
				</tr>
%			}

				<tr><td></td><td></td><td></td><td></td><td></td><td>Total:</td><td><% sprintf("%.1f", $total) %></td></tr>
		</table>
		
% my $end = time();
% #printf("%.2f\n", $end - $start);

	</div>
