		$m->redirect("/panel/schemat/panel_view.mhtml?panel_id=$panel_id&msg=$msg");
	}

	my $wudc++ if $event->type eq "wudc";
	my $wsdc++ if $event->type eq "wsdc";


	my $studpoints++ if $event->type ne "congress" &&  $event->type ne "speech";

