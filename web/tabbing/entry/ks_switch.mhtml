<%args>
	$property_value #from postSwitch(), so 'on' or 0, hopefully never undef
	$person
</%args>
<%init>
	$m->clear_buffer();
	$r->content_type('application/json');

	my $msg = "Preference Stored"; 

	#deal with it anyway though
	if(defined $property_value){
		$person->setting('keyboard_shortcut','text',$property_value);
		$person->update;
		$msg=($property_value eq 'on')?'Keyboard shortcuts enabled':'Keyboard shortcuts disabled';
	}

	$m->print('{ "message": "'.$msg.'" }' );
	$m->abort();
</%init>
