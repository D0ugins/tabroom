<%args>
	$tourn
	$tourn_settings
	$person
	$session
	$ballots     => undef
	$round_id    => undef
	$event_id    => undef
	$timeslot_id => undef
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id) if $round_id;
	my $event = Tab::Event->retrieve($event_id) if $event_id;
	my $timeslot = Tab::Timeslot->retrieve($timeslot_id) if $timeslot_id;

	$m->abort unless $round || $event || $timeslot;

	my @rounds; 
	my $header;

	if ($round) { 

		$event = $round->event;
		push @rounds, $round;
		$header = $event->abbr." ".$round->realname;

	} elsif ($event) { 

		push @rounds, $event->rounds;
		$header = $event->name;

	} elsif ($timeslot) { 

		push @rounds, $timeslot->rounds;
		$header = $timeslot->name;
	}

    my $name = $header;
    $name =~ s/[\W_]//g;

    my $filename = "PrelimOrder-$name-".$session->id;

	$m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		head     => 1 
	);

	my $filepath = $Tab::file_root."tmp/".$filename;
	open (TEXOUT, ">>$filepath.tex");

	my $logo_file = $tourn_settings->{"logo"};

	if ($logo_file) {

		unless (-e "$Tab::file_root/tmp/".$logo_file) { 
			system("cd $Tab::file_root/tmp; $Tab::latex_path_prefix/wget ".$Tab::s3_url."/".$tourn->id."/".$logo_file);
		}
	}

	if (-e "$Tab::file_root/tmp/".$logo_file) { 

		print TEXOUT "\\hspace{-4mm}\n";
		print TEXOUT "\\begin{minipage}[c]{4.0in}\n";
       	print TEXOUT "\\includegraphics[width=1.2in]{".$logo_file."}\n";
		print TEXOUT "\\end{minipage}\n";

	} else { 

		print TEXOUT "\\hspace{-4mm}\n";
		print TEXOUT "\\vspace{-4mm}\n";
		print TEXOUT "\\begin{minipage}[c]{4.0in}\n";
		print TEXOUT "{\\bf \\LARGE \\color{black!64} ".&Tab::texify($tourn->name)." }\n";
		print TEXOUT "\\end{minipage}\n";

	}

	print TEXOUT "\\begin{minipage}[c]{2.75in}\n";
	print TEXOUT "\\strut \\hfill {\\LARGE\\bf ".uc(&Tab::texify($header))." } \n";
	print TEXOUT "\\medskip\n";
	print TEXOUT "\\newline\n";

	print TEXOUT "\\noindent\n";
	print TEXOUT "\\strut \\hfill {\\Large \\color{black!64} PRELIM RESULTS }";
	print TEXOUT "\\end{minipage}\n";
	print TEXOUT "\\vspace{5mm}\n";
	print TEXOUT "\\newline\n";
	
	close TEXOUT;

	foreach my $round (@rounds) { 

		$m->comp("results_table_print.mas", 
			round    => $round,
			filename => $filename,
			ballots  => $ballots
		);
	
	}

	$m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		tail     => 1 
	);

</%init>
