<%args>
	$tourn
	$session
	$person
	$only_category  => undef
	$timeslot_id => undef
	$check_all   => undef
	$type        => undef
	$entry_only  => undef
</%args>
<%init>

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my %event_status;
	my %event_round;
	my %event_done;

    my @unreggeds = sort {ucfirst($a->name) cmp ucfirst($b->name)}
			Tab::School->search_where( 
				tourn => $tourn->id, 
				onsite => { '!=', 1 } 
			);

    my @reggeds  = sort {ucfirst($a->name) cmp ucfirst($b->name)}
			Tab::School->search( 
				tourn => $tourn->id, 
				onsite => 1
			); 

	my %ready_events = ();
	my %done_events = ();
	my @all_events;

	if ($only_category) {

		my ($in_progress, $advance_me, $done) 
			= $m->comp('/funclib/event_breakable.mas', 
				tourn => $tourn, 
				category => $only_category
			);

		%ready_events = map {$_ => 1} @{$advance_me};

		%done_events = map {$_ => 1} @{$done};

		@all_events = $only_category->events;

	} else { 

		my ($in_progress, $advance_me, $done) = 
			$m->comp('/funclib/event_breakable.mas', 
				tourn => $tourn, 
				category => $only_category
			);

		%ready_events = map {$_ => 1} @{$advance_me};
		%done_events = map {$_ => 1} @{$done};
		@all_events = $tourn->events;
	}

	@all_events = sort {$a->abbr cmp $b->abbr} @all_events;
	@all_events = sort {$a->type cmp $b->type} @all_events;

	my @events;

	my $debate;
	my $speech;
	my $congress;

	my %event_flights;

	EVENT:
	foreach my $event (@all_events) { 

		my $online_ballots = $event->setting('online_ballots');
		my @rounds = $event->rounds;

		my $current_round = $m->comp(
			"/funclib/event_current_round.mas", 
			event => $event
		);

		my $done_round = $m->comp(
			"/funclib/event_current_round.mas", 
			event => $event, 
			done => 1
		);

		my $last_round = pop @rounds;

		$event_done{$event->id}++ 
			if $done_round 
			&& $done_round->type eq "final";

		$event_done{$event->id}++ 
			if $done_round 
			&& $done_round->id == $last_round->id;

		unless ($event->type eq "speech" || $event->type eq "congress") { 
			$debate++;
			next EVENT if $type && $type ne "debate";
		}

		if ($event->type eq "speech") {
			$speech++;
			next EVENT if $type && $type ne "speech";
		}

		if ($event->type eq "congress") {
			$congress++;
			next EVENT if $type && $type ne "congress";
		}

		push @events, $event;

		my $switch;

		if ($current_round) { 

			my $flighted = $current_round->flighted;
			$flighted = 1 unless $flighted;
			$event_flights{$event->id} = $flighted; 

			my %done_event;

			foreach my $flight (1 .. $flighted) { 

				next if $done_event{$event->id};
		
				my $timeslot = $current_round->timeslot;

				$event_round{$event->id}{$flight} = $current_round;

				my $start = $current_round->start_time;
				$start = $timeslot->start unless $start;

				$start->set_time_zone($tz);

				my $row;

				if ($online_ballots) { 

					my @unstarted = $m->comp("/funclib/timeslot_judges.mas", 
						flight   => $flight,
						timeslot => $timeslot,
						event    => $event,
						status   => "unstarted");

					if (@unstarted) { 
						$event_status{$event->id}{$flight} .= '
							<span class="nospace third">
							<span class="explain smaller"> Unstarted </span>
							<h2 class="bluetext nospace centeralign">'.scalar @unstarted.'</h2></span>';
						$done_event{$event->id}++;
					}
				}

				my @unentered = $m->comp("/funclib/timeslot_judges.mas", 
					timeslot => $timeslot,
					flight   => $flight,
					status   => "started",
					event    => $event);

				if (@unentered && (scalar @unentered)) { 

					$event_status{$event->id}{$flight} .= '
						<span class="nospace third">
						<span class="explain smaller"> Unentered </span>
						<h2 class="redtext nospace centeralign">'.(scalar @unentered).'</h2></span>';

					undef $event_done{$event->id};
					$done_event{$event->id}++;
				}

				my @half_entered = $m->comp("/funclib/timeslot_judges.mas", 
					timeslot => $timeslot,
					flight   => $flight,
					status   => "half",
					event    => $event);

				if (@half_entered) { 

					$event_status{$event->id}{$flight} .= '
						<span class="nospace third">
						<span class="explain smaller"> Half-in </span>
						<h2 class="yellowtext nospace centeralign">'.scalar @half_entered.'</h2></span>';
					undef $event_done{$event->id};
					$done_event{$event->id}++;
				}
			
				$event_status{$event->id}{$flight} .= '<div class="explain centeralign padtop martop">Start: ';
				$event_status{$event->id}{$flight} .= Tab::nicetime($start)."</div>";

			}

		}

	}

	my $num_types;
	$num_types++ if $congress;
	$num_types++ if $debate;
	$num_types++ if $speech;

</%init>

	<div class="blankfull">

		<div class="nospace">
			<span class="third">
				<h2>
					Status 
				</h2>
			</span>
			
			<span class="twothird rightalign nospace"> 
				<h4>
				<% $tourn->name %>
				</h4>
			</span>

		</div>

		<& "tabbar.mas", 
			whoami => 'dashboard',
			tourn  => $tourn
		&>

		<div class="nospace">

			<span class="third nospace">
				<h4>Tournament Dashboard</h4>
			</span>

			<span class="twothird nospace rightalign">

%				if ($num_types > 1) { 

					<a
						href="dashboard.mhtml?type=" 
						class="buttonwhite fifth centeralign smallish graytext <% $type ? "" : "invert" %>">
						All
					</a>

%					if ($congress) { 
						<a 
							href="dashboard.mhtml?type=congress" 
							class="fifth centeralign smallish buttonwhite greentext <% $type eq "congress" ? "invert" : "" %>">
							Congress
						</a>
%					}

%					if ($debate) { 
						<a 
							href="dashboard.mhtml?type=debate" 
							class="buttonwhite fifth centeralign smallish bluetext <% $type eq "debate" ? "invert" : "" %>">
							Debate
						</a>
%					}

%					if ($speech) { 

						<a 
							href="dashboard.mhtml?type=speech" 
							class="buttonwhite fifth centeralign smallish redtext <% $type eq "speech" ? "invert" : "" %>"
						>
							Speech
						</a>
%					}
%				}

			</span>

		</div>

		<div class="centeralign">

<%perl>

		foreach my $event (@events) { 

			my $flighted = $event_flights{$event->id};
			$flighted = 1  if $ready_events{$event->id};
			$flighted = 1  unless $flighted;

			foreach my $flight (1 .. $flighted) { 

				next unless $event_status{$event->id}{$flight} 
					|| $ready_events{$event->id} 
					|| $event_done{$event->id};

</%perl>
				<span class="padmore quarter border" style="height: 132px; width: 212px;">
				
					<div class="full marno">

						<h4 class="nospace third martop">
							<% $event->abbr %> 
						</h4>

						<h5 class="nospace threefifths rightalign">
							<% $event_round{$event->id}{$flight} 
								? substr($event_round{$event->id}{$flight}->realname,0,8) 
								: ""  
							%> <% 
								$flighted > 1 
								? "F".$flight 
								: "" 
							%>
						</h5>

					</div>

					<% $event_status{$event->id}{$flight} %>

%					if ($done_events{$event->id}) { 

						<div class="martop padmore">
							<span class="dkgreen full centeralign martop">
								All done!
							<span>
						</div>

%					} elsif ($ready_events{$event->id}) { 
					
						<div class="martop">
%							if ($entry_only) { 
								<span class="dkyellow centeralign smallish full">
%							} else { 
								<a 
									class="dkyellow centeralign smallish full" 
									href="/tabbing/break/index.mhtml?event_id=<% $event->id %>"
								>
%							}
								Ready to advance
							</a>
							</span>
						</div>
%					}

				</span>
%			}

%		}

		</div>

	</div>

