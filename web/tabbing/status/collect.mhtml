						$collected{$ts}{$judge."-".$panel}{"room"} = $room;
						$collected{$ts}{$judge."-".$panel}{"event"} = $event;
						$collected{$ts}{$judge."-".$panel}{"date_collected"} = $date_collected;
						$collected{$ts}{$judge."-".$panel}{"event"} = $event;
