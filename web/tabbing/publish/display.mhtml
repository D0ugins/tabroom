<%args>
	$tourn
	$tourn_settings
	$person          => undef
	$person_settings => undef
	$result_set_id   => undef
</%args>
<%init>

	my $result_set = Tab::ResultSet->retrieve($result_set_id) if $result_set_id;

	$m->abort unless $result_set;

	$m->redirect("bracket.mhtml?tourn_id=".$tourn->id."&result_set_id=$result_set_id")
		if $result_set->bracket;

	my $admin_mode;
	my $admin_url;

	if (
		($person && $person->site_admin)
		|| ($person_settings->{"nsda_admin"})
	) {
		$admin_mode++;
		$admin_url = "/tabbing/publish/result_set_adjust.mhtml";
	}

</%init>

	<div class="main">

		<&
			"display_set.mas",
			result_set      => $result_set,
			person          => $person,
			person_settings => $person_settings,
			admin_mode      => $admin_mode,
			admin_url       => $admin_url
		&>

	</div>

	<div class="menu">

		<div class="sidenote">

%			if ($tourn_settings->{"nsda_district"} && $tourn_settings->{"nsda_tabbing_software"} eq "jot") {
			<h4>Qualifiers &amp; Alternates</h4>

			<p>
				If you see any errors, please contact the National office.
			</p>

			<a class="blue full martopmuchmore marbottommore"
				href  = "/tabbing/publish/joydistrict.mhtml?function=Generate Results Sheets"
			>
				Return to Qualifiers List
			</a>


%		} else {

			<h4>Results Display</h4>

			<p>
				This is how this result set will be displayed on the public
				website.
			</p>

			<p>This result set <% $result_set->published ? "IS" : "IS NOT" %> public</p>

			<a class="blue full" href="index.mhtml">
				Return to Web Publishing
			</a>

%			}

		</div>

	</div>

