<%args>
	$tourn
	$person
	$chapter_id => undef
	$from       => undef
	$show_grads => undef
</%args>
<%init>

	unless ($chapter_id) {
		my $err = "You haven't chosen a chapter.  Please choose at right";
		$m->redirect("/user/home.mhtml?err=$err");
	}

	my $now = DateTime->now();
	my $year = $now->year;
	$year-- if $now->month < 7;

	my $chapter = Tab::Chapter->retrieve($chapter_id);

    unless ($chapter) {
        $m->comp("/funclib/abort.mas", message => "No valid chapter ID sent");
    }

	my @students = sort {$a->last cmp $b->last} $chapter->students(retired => 0);

	my @judges = sort {$a->last cmp $b->last} $chapter->chapter_judges;

	@students = sort {$b->diet cmp $a->diet} @students;

	@judges = sort {$b->diet cmp $a->diet} @judges;

</%init>

	<div class="main">

		<h2><% $chapter->name %>: Dietary Restrictions</h2>

		<& "tabbar.mas",
			chapter => $chapter,
			person  => $person,
			whoami  => "students"
		&>

		<& "/funclib/tablesorter.mas",
			table => "students"
		&>

		<span class='twothirds nospace'>
			<h4>
				Competitor Dietary Restrictions
			</h4>
		</span>

		<span
			class = "third rightalign"
			id    = "students_buttonarea"
		></span>

		<p>Two notes:</p>

		<p>
			Do not put personal medical information on Tabroom!  Use these info
			boxes to supply direct information such as "vegetarian only" or "no
			peanuts" rather than extensive information about allergies, conditions,
			or other potentially sensitive private data.
		</p>

		<p>
			This information is not necessarily accessed by all tournament
			hosts!  Please only rely on it if the tournament has indicated they
			will use this information in their counts of meal types.
		</p>

		<form action="diet_save.mhtml" method="post">

		<input
			type  = "hidden"
			name  = "chapter_id"
			value = "<% $chapter_id %>"
		>

		<table id="students">

			<thead>

				<tr class="yellowrow">

					<th class="smaller">
						Last
					</th>

					<th class="smaller">
						First
					</th>

					<th class="smaller">
						Grad Year
					</th>

					<th class="smaller">
						Diet (Vegetarian, vegan, kosher, etc)
					</th>

				</tr>

			</thead>

			<tbody>

% 			foreach my $student (@students) {

%				next if $student->retired > 0;
%				next if $student->grad_year <= $year;

				<tr>

					<td class="nospace">
						<a id="<% $student->id %>"></a>

						<a
							class="white leftalign button"
							href="student_edit.mhtml?student_id=<% $student->id %>&from=<% $student->id %>"
						>
							<% $student->last %>
						</a>
					</td>

					<td class="nospace">
						<a
							class="white leftalign button"
							href="student_edit.mhtml?student_id=<% $student->id %>&from=<% $student->id %>"
						>
							<% $student->first %>
						</a>
					</td>

					<td class="nospace">
						<a
							class="white leftalign button"
							href="student_edit.mhtml?student_id=<% $student->id %>&from=<% $student->id %>"
						>
							<% $student->grad_year %>
						</a>
					</td>

					<td class="centeralign padless">
						<input
							type  = "text"
							name  = "student_diet_<% $student->id %>"
							value = "<% $student->diet %>"
							size  = "32"
						>
					</td>

				</tr>

% 			}
		</tbody>
		</table>

		<& "/funclib/tablesorter.mas",
			table => "judges"
		&>

		<span class='twothirds nospace'>
			<h4>Judge Dietary Restrictions</h4>
		</span>

		<span
			class = "third rightalign"
			id    = "judges_buttonarea"
		></span>

		<table id="judges">

			<thead>
				<tr class="yellowrow">
					<th class="smaller">
						Last
					</th>

					<th class="smaller">
						First
					</th>
					<th class="smaller">
						Diet (Vegetarian, vegan, kosher, etc)
					</th>
				</tr>
			</thead>

			<tbody>

%			foreach my $judge (@judges) {
%				next if $judge->retired;
				<tr>

					<td class="nospace">
						<a id="<% $judge->id %>"></a>
						<a
							class="white leftalign button"
							href="judge_edit.mhtml?judge_id=<% $judge->id %>&from=<% $judge->id %>"
						>
							<% $judge->last %>
						</a>
					</td>

					<td class="nospace">
						<a
							class="white leftalign button"
							href="judge_edit.mhtml?judge_id=<% $judge->id %>&from=<% $judge->id %>"
						>
							<% $judge->first %>
						</a>
					</td>

					<td class="centeralign padless">
						<input
							type  = "text"
							name  = "judge_diet_<% $judge->id %>"
							value = "<% $judge->diet %>"
							size  = "32"
						>
					</td>
				</tr>
% 			}
			</tbody>

			<tr class="liblrow">

				<td
					colspan = "3"
					class   = "rightalign padless padrightmore"
				>

					<input
						type="submit"
						value="Save Diet Preferences"
					>
					</form>
				</td>

			</tr>

		</table>

	</div>

	<div class="menu">

        <div class="sidenote">

			<h4>Competitor Roster</h4>

            <a
				class="blue full"
				href="student_edit.mhtml?chapter_id=<% $chapter->id %>"
			>
                Add a new student
            </a>

            <a
				class="dkblue full"
				href="diets.mhtml?chapter_id=<% $chapter->id %>"
			>
				Dietary Restrictions
            </a>

			<a
				class="blue full"
				href="students.mhtml?show_grads=<% ($show_grads) ? "" : "a" %>&chapter_id=<% $chapter->id %>"
			>
				<% ($show_grads) ? "Hide Graduates" : "Show Graduates" %>
			</a>

		</div>

		<& "/user/menu.mas",
			chapter => $chapter,
			person  => $person,
			tourn   => $tourn,
			nodiv   => 1
		&>

	</div>

