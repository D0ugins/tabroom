<%args>
	$chapter_id
	$person
	$session
	$naudl_err => undef
</%args>
<%init>

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	$m->comp("/user/chapter/auth.mas", chapter => $chapter, person => $person, session => $session);

	my @regions = $m->comp("/funclib/chapter_regions.mas", chapter => $chapter);

	my %region_yes = map {$_->id => 1} @regions;

</%init>

    <script type="text/javascript"> 

		$( document ).ready(function() {
			muricaOrCommies();
			dataShow();
			return;
		});

		function showNaudl (it, box) { 
			$("#"+it).toggleClass("hidden");
			return;
		} 

		function dataShow() { 

			var value = $("#level").val();

			$(".highschool").addClass("hidden");
			$(".university").addClass("hidden");

			if (value === "university") { 

				$(".university").removeClass("hidden");

			} else if (value == "highschool") { 

				$(".highschool").removeClass("hidden");

			}

			return;

		}

		function muricaOrCommies() { 

			var country = $("#country").val();

			$('.state').addClass('hidden');
			$('.statename').addClass('hidden');
			$('.zip').addClass('hidden');
			$('.postal').addClass('hidden');
			$('.US').addClass('hidden');

			if (country === "US") { 
				$('.state').removeClass('hidden');
				$('.zip').removeClass('hidden');
				$('.US').removeClass('hidden');
			} else { 
				$('.postal').removeClass('hidden');
			}

			if (country === "CA" || country === "AU" || country === "GB" || country === "DE"){ 
				$('.state').removeClass('hidden');
			}

			$('.'+country).removeClass('hidden');

		}

    </script>


	<& "/user/menu.mas", chapter => $chapter, person => $person &>

	<div class="main">

		<h2><% $chapter->name %></h2>

		<& tabbar.mas, chapter => $chapter, whoami => "settings" &>

		<h4>Institution Settings</h4>

%		unless ($chapter->level) { 

			<div class="dkred padmuchmore marleft marright centeralign marbottommore">
				<h6>
					Please select your institution's level before continuing
				</h6>
			</div>

%		}

		<form action="save.mhtml" method="post"> 
		<input type="hidden" name="chapter_id" value="<% $chapter->id %>">

		<span class="pagehalf">

			<div class="row">
	
				<span class="third">
					Name
				</span>

				<span class="twothird">
					<input 
						type  = "text"
						name  = "chapter_name"
						size  = "24"
						value = "<% $chapter->name %>">
				</span>

			</div>

			<div class="row">

				<span class="third">
					Level
				</span>

				<span class="twothird <% $chapter->level ? "" : "dkred" %> ">
					<select 
						name     = "level"
						id       = "level"
						onChange = "dataShow()"
						class    = "fixedmed">

						<option value = ""></option>

						<option <% $chapter->level eq "university" ? "selected" : "" %> 
							value="university">College/University</option>

						<option <% $chapter->level eq "highschool" ? "selected" : "" %> 
							value="highschool">High School/Secondary</option>

						<option <% $chapter->level eq "middle" ? "selected" : "" %> 
							value="middle">Middle/Junior High</option>

						<option <% $chapter->level eq "elementary" ? "selected" : "" %> 
							value="elementary">Elementary</option>

						<option <% $chapter->level eq "homeschool" ? "selected" : "" %> 
							value="homeschool">Home School</option>

						<option <% $chapter->level eq "independent" ? "selected" : "" %> 
							value="independent">Independent</option>

						<option <% $chapter->level eq "private" ? "selected" : "" %> 
							value="private">Club/Private Org</option>

					</select>
				</span>

			</div>

			<div class="row">
				<span class="third">
					Street Address
				</span>

				<span class="twothird">
					<input 
						type  = "text"
						name  = "street"
						size  = "24"
						value = "<% $chapter->street %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third">
					City
				</span>

				<span class="twothird">
					<input 
						type  = "text"
						name  = "city"
						size  = "24"
						value = "<% $chapter->city %>"
					>
				</span>
			</div>

			<div class="row state">

				<span class="third">
					<span class="statename US AU DE">
						State
					</span>
					<span class="statename GB">
						Home Country
					</span>
					<span class="statename CA">
						Province
					</span>
				</span>

				<span class="twothird">
					<select name="state" class="fixedmed chosen">
						<& "/funclib/state_select.mas", state => $chapter->state &>
					</select>
				</span>

			</div>

			<div class="row">

				<span class="third">
					Country
				</span>

				<span class="twothird">
					<select 
						id="country" 
						name="country" 
						onChange="muricaOrCommies()"
						class="fixedmed chosen">
						<& /funclib/country_select.mas, country => $chapter->country &>
					</select>
				</span>

			</div>

			<div class="row zip hidden">

				<span class="third">
					ZIP
				</span>

				<span class="twothird">
					<input 
						type  = "text"
						name  = "zip"
						size  = "8"
						value = "<% sprintf("%05d", $chapter->zip) %>"
					>
				</span>

			</div>

			<div class="row postal hidden">

				<span class="third">
					Postal
				</span>

				<span class="twothird">
					<input 
						type  = "text"
						name  = "postal"
						size  = "12"
						value = "<% $chapter->postal %>">
				</span>

			</div>

		</span>

		<span class="pagehalf">

			<div class="row" >

				<span class="third">
					Coach names
				</span>

				<span class="twothird">
					<input 
						type  = "text"
						name  = "coaches"
						size  = "24"
						value = "<% $chapter->setting("coaches") %>">
				</span>

			</div>


			<div class="row hover">

				<label for="self_prefs">

					<span class="seveneighth">
						Entries may enter their own prefs
					</span>

					<span class="hover eighth centeralign">
						<input 
							type  = "checkbox"
							id    = "self_prefs"
							name  = "self_prefs"
							class = "padmore"
							value = "1"
							<% $chapter->setting("self_prefs") ? 'checked="checked"' : "" %>>
					</span>
				</label>

			</div>

%			if ($person->site_admin) { 

				<div class="row highschool university">

					<span class="fourfifths highschool">
						NSDA School ID
					</span>

					<span class="fourfifths university"> 
						Pi Kappa Delta ID
					</span>

					<span class="fifth">
						<input 
							type  = "text"
							size  = "5"
							class = "thin"
							name  = "nsda"
							value = "<% $chapter->nsda %>">
					</span>

				</div>

%			} elsif ( $chapter->nsda ) { 

				<div class="row highschool university">

					<span class="fourfifths highschool">
						NSDA School ID
					</span>

					<span class="fourfifths university"> 
						Pi Kappa Delta ID
					</span>

					<span class="fifth">
						<input type="text" size="5" class="thin" disabled value="<% $chapter->nsda %>">
					</span>

				</div>
%			}

			<div class="row highschool US">

				<span class="fourfifths">
					Nat'l Center for Education Statistics ID
				</span>

				<span class="fifth">
					<input type="text" name="nces" size="5" class="thin" value="<% $chapter->setting("nces") %>">
				</span>

			</div>

			<div class="row highschool US">

				<span class="fourfifth">
					College Board (CEEB) Number:
				</span>

				<span class="fifth">
					<input type="text" size="5" class="thin" name="ceeb"  value="<% $chapter->setting("ceeb") %>">
				</span>

			</div>

			<div class="row hover highschool US">

				<label for="naudl">
					<span class="seveneighth">
						NAUDL Affiliated School
					</span>

					<span class="eighth centeralign">
						<input 
							type    = "checkbox"
							id      = "naudl"
							name    = "naudl"
							class   = "padmore"
							onclick = "showNaudl('naudl_league', this)"
							value   = "1"
							<% $chapter->setting("naudl") ? 'checked="checked"' : "" %>>
					</span>
				</label>
			</div>

			<div 
				id="naudl_league" 
				class="row <% $naudl_err ? "dkred" : "" %> <% $chapter->setting("naudl") ? "" : "hidden" %>" >

				<span class="third">
					NAUDL League
				</span>

				<span class="twothird centeralign">
					<select name="naudl_league" class="fixedmed plain">

						<option value="">Please Choose One</option>

%						foreach my $ns (Tab::CircuitSetting->search( tag => "naudl")) { 

%							foreach my $region ($ns->circuit->regions) { 

								<option 
									value="<% $region->id %>" 
									<% $region_yes{$region->id} ? 'selected="selected"' : "" %>
								><% $region->name %> </option>
%							}
%						}

					</select>
				</span>

			</div>

			<div class="row university">

				<span class="fourfifth">
					IPEDS ID:
				</span>

				<span class="fifth">
					<input 
						type  = "text"
						size  = "5"
						class = "thin"
						name  = "ipeds"
						value = "<% $chapter->setting("ipeds" %>"
					>
				</span>

			</div>


		</span>

		<div class="full libl rightalign padless">
			<input type="submit" value=" Save Chapter Details ">
			</form>
		</div>


	</div>


