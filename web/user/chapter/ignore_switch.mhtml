<%args>
	$person
	$target_id      => undef
	$property_value => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No tournament ID sent"}');
		$m->abort();
	}

	my $tourn = Tab::Tourn->retrieve($target_id);

	unless ($tourn) { 
		$m->print('{ "error": true, "message": "No tournament found for ID '.$target_id.'"}');
		$m->abort();
	}

	if ($property_value == 1) { 

		unless (
			Tab::TournIgnore->search( 
				tourn  => $tourn->id,
				person => $person->id
			)
		) { 

			Tab::TournIgnore->create({
				tourn => $tourn->id, 
				person => $person->id
			});

		}

		$m->print('{ "error": false, "message": "'.$tourn->name.' marked as ignored for '.$person->email.'"}');

	} else { 

		my $ignore = Tab::TournIgnore->search( 
			tourn  => $tourn->id,
			person => $person->id
		)->first;

		if ($ignore) {
			$ignore->delete;
		}

		$m->print('{ "error": false, "message": "'.$tourn->name.' marked as visible for '.$person->email.'"}');

	}

	$m->abort();

</%init>

