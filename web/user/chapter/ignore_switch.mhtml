<%args>
	$person
	$perms
	$target_id      => undef
	$property_name  => undef
	$setting_name   => undef
	$property_value => 0
	$flag           => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No tourn ID sent"}');
		$m->abort();
	}

	my $tourn = Tab::Tourn->retrieve($target_id);

	unless ($tourn) { 
		$m->print('{ "error": true, "message": "No tourn found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $message;

	my @already = Tab::TournIgnore->search( 
		tourn => $tourn->id, 
		person => $person->id
	);

	if ($property_value == 1) { 

		unless (@already) { 
			Tab::TournIgnore->create({
				tourn => $tourn->id, 
				person => $person->id
			});
		}

		$message = " ignored";

	} else { 

		foreach (@already) { 
			$_->delete();
		}

		$message = " un-ignored";
	}

	$m->print('{ "error": false, "message": "'.$tourn->name.' marked as '.$message.'"}');

	$m->abort();

</%init>

