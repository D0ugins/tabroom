%					foreach my $person (@{$committee{$role}}) { 

						<div class="full marleftmuchmore marrightmuchmore lightrow">

							<span class="sixth strong">
								<% ucfirst($role) %>
							</span>

							<span class="third">
								<% $person->first." ".$person->last %>
							</span>

							<span class="third">
								<a 
									href="mailto:<% $person->email %>" 
									class="plain"
								>
									<% $person->email %>
								</a>
							</span>

						</div>

%					}

%				}

%			}

		</div>

	</div>


