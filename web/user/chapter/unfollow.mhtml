<%args>
	$person
	$perms
	$target_id      => undef
	$flag           => undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	unless ($target_id) { 
		$m->print('{ "error": true, "message": "No follower ID sent"}');
		$m->abort();
	}

	my $follower = Tab::Follower->retrieve($target_id);

	unless ($follower) { 
		$m->print('{ "error": true, "message": "No follower found for ID '.$target_id.'"}');
		$m->abort();
	}

	my $email = $follower->follower->email if $follower->follower;
	$email = $follower->email unless $follower->follower;

	$m->print('{ "error": false, "message": "'.$email.' no longer follows this competitor"}');

	$follower->delete();

	$m->abort();

</%init>

