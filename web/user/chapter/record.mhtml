<%args>
	$person
	$perms
	$session
	$student_id => undef
</%args>
<%init>

	my $now = DateTime->now();

	my $student = Tab::Student->retrieve($student_id);

	my $chapter = $student->chapter;

	$m->abort unless (
		$perms->{"chapter"}{$chapter->id} eq "chapter" 
		|| $person->site_admin 
	);

</%init>

	<&  "menu.mas",
		chapter => $chapter,
		person  => $person,
	&>

	<div class="main">

		<h2><% $chapter->name %>: Competitors</h2>

		<& "tabbar.mas", 
			chapter => $chapter,
			person  => $person,
			session => $session,
			whoami  => "students"
		&>


		<span class="fourfifths nospace martopmore">
			<h4>
				<% $student->first." ".$student->last %> records
			</h4>
		</span>

		<span 
			id    = "<% $student->id %>_buttonarea"
			class = "fifth rightalign nospace"
		>
		</span>
			
		<& "/funclib/tablesorter.mas", table => $student->id &>

		<table id="<% $student->id %>">

			<thead>

				<tr class="yellowrow">

					<th class="smaller">
						Tourn
					</th>

					<th class="smaller">
						Date
					</th>

					<th class="smaller">
						Code
					</th>

					<th class="smaller">
						Division
					</th>
					
					<th class="smaller">
						Results
					</th>

				</tr>

			</thead>

			<tbody>
<%perl>

			foreach my $entry (sort {$b <=> $a} $student->entries) { 

				next unless $entry->event && $entry->event->tourn;

				my $tourn = $entry->event->tourn;
				next if $tourn->end > $now;
				my $tz = $tourn->tz;
				$tz = "UTC" unless $tz;

</%perl>

				<tr>


					<td class="smaller nospace">
						<a 
							class  = "white full padvert"
							target = "_blank"
							href   = "history.mhtml?tourn_id=<% $tourn->id %>&student_id=<% $student->id %>"
						>
							<% $tourn->name %>
						</a>
					</td>


					<td class="smaller">
						<% Tab::pickerdate($tourn->start->set_time_zone($tz)) %>
					</td>

					<td class="smaller nowrap">
						<% $entry->code %>
					</td>

					<td class="smaller">
						<% $entry->event->name %>
					</td>

					<td class="smallish centeralign nospace">
						<a 
							class  = "buttonwhite smallish bluetext padmore hover"
							target = "_blank"
							href   = "history.mhtml?tourn_id=<% $tourn->id %>&student_id=<% $student->id %>"
						>
							See Results
						</a>
					</td>

				</tr>

%			}

			</tbody>

		</table>

</div>


