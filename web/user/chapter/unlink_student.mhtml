<%args>
	$person
	$person_settings
	$student_id => undef
</%args>
<%init>

	my $msg;

	if ($person->site_admin || $person_settings->{"nsda_admin"}) { 

		my $student = Tab::Student->retrieve($student_id);

		if ($student) { 
			$student->setting('student_email', 0);
			$student->setting('nsda_joined', 0);
			$student->setting('nsda_points', 0);
			$student->ualt_id(0);
			$student->update();
		}

		$msg = "Student has been de-linked from their NSDA record";

	}

	$m->redirect("student.edit.mhtml?student_id=$student_id&msg=$msg");

</%init>

