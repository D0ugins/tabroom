<%args>
	$person    => undef
	$target_id => undef
</%args>
<%init>

    $m->clear_buffer();
    $r->content_type('application/json');

	if (
		(not defined $person)
		|| ($person->site_admin)
	) {
		$person = eval {
			return Tab::Person->retrieve($target_id);
		};
	}

	if ($person) {
		$m->comp("/funclib/ldap_person.mas", person => $person, reset => 1);
	}

	my $msg = "Your account has been re-synced with external services";

    $m->print('{
        "error": false,
        "message": "'.$msg.'"
    }');

    $m->abort();

</%init>
