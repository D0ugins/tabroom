<%args>
	$session => undef
</%args>
<%init>

	if ($session) { 
		$session->delete();
	}

	my $tokencookie = Apache2::Cookie->new($r,
        -name    => 'TabroomToken',
        -value   => '',
		-secure  => 1,
		-domain  => '.tabroom.com',
        -expires => '-1m',
        -path    => '/'
	);

    $tokencookie->bake($r);
    
    my $msg = "You have been logged out from Tabroom.  Please come again!";
    
    $m->redirect("/index/index.mhtml?msg=$msg");

</%init>


