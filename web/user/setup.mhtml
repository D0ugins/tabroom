<%args>
	$person
	$person_settings
	$session
</%args>

	<& "/user/menu.mas", 
		person          => $person,
		person_settings => $person_settings
	&>

	<div class="main">

		<h2 class="centeralign">
			Welcome to Tabroom!
		</h2>

		<h5 class="centeralign redtext padmuchmore">
			New to Tabroom?  

			<br />
			<br />

			The question mark on the top right corner brings you to the Help
			Guide. 
		</h5>

		<div class="fivesixths nospace automargin martopmore">

			<h5 class="martopmore">
				Are you a coach or director?
			</h5>

			<div class="row padno">

				<span class="twothirds marno semibold">
					To register online for tournaments, first:
				</span>

				<span class="twofifths centeralign">

					<a class = "buttonwhite bluetext invert seveneighths"
						href = "chapter/create.mhtml"
					>
						Create your institution
					</a>
				</span>

			</div>

			<div class="row padno">

				<span class="twothirds marno semibold">
					To manage your own tournament with Tabroom, first:
				</span>

				<span class="twofifths centeralign">

					<a class = "buttonwhite bluetext invert seveneighths"
						href = "tourn/request.mhtml"
					>
						Create tournament
					</a>
				</span>

			</div>

			<h5 class="martopmore">
				How about a judge?
			</h5>

			<div class="row padno">

				<span class="twothirds marno semibold">
				
					To enter online ballots and get emails 
					or text pairings:

				</span>

				<span class="twofifths centeralign">

					<a class = "buttonwhite bluetext invert seveneighths"
						href = "judge/search.mhtml"
					>
						Link your account
					</a>
				</span>

			</div>

			<h5 class="martopmore">
				Or perhaps, you are a competitor?
			</h5>

			<div class="row padno">

				<span class="twothirds marno semibold">
					To sign up for tournaments and get emails or text pairings:
				</span>

				<span class="twofifths centeralign">
					<a class="buttonwhite bluetext invert seveneighths" 
						href="student/search.mhtml" 
					>
						Link your account
					</a>
				</span>

			</div>

		</div>

	</div>

