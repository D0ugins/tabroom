<%args>
	$person
	$session
	$content => undef
	$title => undef
</%args>
<%init>

	my $webpage = Tab::Webpage->search( sitewide => 1 )->first;
	my $now = DateTime->now;

	$webpage->content($content);
	$webpage->title($title);
	$webpage->last_editor($person->id);
	$webpage->posted_on($now);
	$webpage->update;

	my $msg = "About page changes saved";

	$m->redirect("about.mhtml?msg=$msg");

</%init>
