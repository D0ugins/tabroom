<%args>
	$person
	$person_settings
	$from_date => undef
	$to_date   => undef
</%args>
<%init>

	my $now = DateTime->now();

	my $from_dt = eval { 
		return DateTime::Format::MySQL->parse_datetime($from_date);
	};

	$from_dt = Tab::school_year() unless $from_dt;

	my $to_dt = eval { 
		return DateTime::Format::MySQL->parse_datetime($to_date);
	};

	unless ($to_dt) { 
		$to_dt = $from_dt->clone();
		$to_dt->add(years => 1);
	}

	Tab::Ad->set_sql( existing => "
		select * from ad
		where (ad.start > ? OR ad.end < ?)
		order by ad.start DESC
	");

	my @ads = Tab::Ad->search_existing(
		DateTime::Format::MySQL->format_datetime($from_dt),
		DateTime::Format::MySQL->format_datetime($to_dt)
	);

</%init>

	<script>
		function toggleAdd () { 
			$("#add_form").toggleClass('hidden');
			$("#noclickmask").toggleClass('hidden');
			$("#toggleSign").toggleClass('invert');
		}
	</script>

	<div class="blankfull">

		<span class="fifth nospace">
			<h4>Ads</h4>
		</span>

		<span class="fifth nospace">
		</span>

		<span class="fifth nospace semibold bluetext">
			From: <& "/funclib/showdate.mas", dt => $from_dt, tz => "UTC", length => "sortable" &>
		</span>

		<span class="fifth nospace semibold bluetext">
			To: <& "/funclib/showdate.mas", dt => $to_dt, tz => "UTC", length => "sortable" &>
		</span>

		<span 
			id    = "ads_buttonarea"
			class = "fifth nospace rightalign notmask"
		>
			<a 
				onClick="toggleAdd()" 
				id="toggleSign"
				class="fa fa-sm fa-plus buttonwhite bluetext"
			></a>
		</span>

		<& "/funclib/tablesorter.mas", table => "ads" &> 

		<table id="ads">

			<thead>

				<tr class="yellowrow smallish">

					<th>
						Tag
					</th>

					<th>
						Image
					</th>

					<th>
						Link URL
					</th>

					<th>
						Sort Order
					</th>

					<th>
						Start
					</th>

					<th>
						End
					</th>

					<th>
						Owner
					</th>

					<th>
						Approver
					</th>

					<th>
						OK?
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $ad (@ads) { 

						<& "/funclib/datepicker.mas", 
							id => $ad->id."_start"
						&>

						<& "/funclib/datepicker.mas", 
							id => $ad->id."_end"
						&>

					<tr>

						<td>
							<span class="invisible"><% $ad->tag %></span>

							<input 
								type          = "text"
								target_id     = "<% $ad->id %>"
								property_name = "tag"
								size          = 16
								value         = "<% $ad->tag %>"
                                onChange      = "postSwitch( this, 'ad_switch.mhtml');"
							>
						</td>

						<td class="nospace centeralign">
							<span class="invisible"><% $ad->filename %></span>
							<a 
								class  = "fa fa-lg fa-file-image-o buttonwhite bluetext"
								target = "_blank"
								href   = "<% $Tab::s3_base %>/ads/<% $ad->id %>/<% $ad->filename %>"
							></a>
						</td>

						<td>
							<span class="invisible"><% $ad->url %></span>
							<input 
								type          = "url"
								target_id     = "<% $ad->id %>"
								property_name = "url"
								size          = 32
								value         = "<% $ad->url %>"
                                onChange      = "postSwitch( this, 'ad_switch.mhtml');"
							>
						</td>

						<td class='centeralign'>
							<span class="invisible"><% $ad->sort_order %></span>
							<input 
								id            = "<% $ad->id %>_sort_order"
								target_id     = "<% $ad->id %>"
								type          = "text"
								property_name = "sort_order"
								size          = "8"
                                onChange      = "postSwitch( this, 'ad_switch.mhtml');"
								value         = "<% $ad->sort_order %>"
							>
						</td>

						<td class='centeralign'>
							<span class="invisible"><% Tab::pickerdate($ad->start) %></span>
							<input 
								id            = "<% $ad->id %>_start"
								target_id     = "<% $ad->id %>"
								type          = "text"
								property_name = "start"
								id            = "start"
								size          = "8"
                                onChange      = "postSwitch( this, 'ad_switch.mhtml');"
								value         = "<% Tab::pickerdate($ad->start) %>"
							>
						</td>

						<td class='centeralign'>
							<span class="invisible"><% Tab::pickerdate($ad->end) %></span>
							<input 
								id            = "<% $ad->id %>_end"
								target_id     = "<% $ad->id %>"
								type          = "text"
								property_name = "end"
								id            = "end"
								size          = "8"
                                onChange      = "postSwitch( this, 'ad_switch.mhtml');"
								value         = "<% Tab::pickerdate($ad->end) %>"
							>
						</td>

						<td
							class="smaller"
							title="<% $ad->person->email %>"
						>
							<% $ad->person->first." ".$ad->person->last %>
						</td>

						<td
							class="smaller"
							title="<% $ad->approved_by ? $ad->approved_by->email : "" %>"
						>
							<% $ad->approved_by ? $ad->person->first." ".$ad->person->last : "" %>
						</td>

						<td class="centeralign">
                            <span class="invisible"><% $ad->approved ? "Y" : "N" %></span>
                            <span class="hidden"><% $ad->approved %></span>

                            <label class="switch smaller">
                                <input 
                                    type          = "checkbox"
                                    value         = "1"
                                    id            = "<% $ad->id %>_approved"
									property_name = "approved"
                                    target_id     = "<% $ad->id %>"
                                    onChange      = "postSwitch( this, 'ad_switch.mhtml');"
                                    <% $ad->approved ? 'checked="checked"' : "" %>
                                >
                                <div class="slider smaller"></div>
                            </label>
						</td>

					</tr>
%				}
			</tbody>

		</table>

		<div id="add_form" class="sideoverlay hidden notmask">

			<span class="closebox">
				<a 
					onClick = "toggleAdd()"
					id      = "toggleSign"
					class   = "fa fa-lg fa-times buttonwhite redtext invert hover"
				></a>
			</span>

			<h4>Add New Ad</h4>

			<form
				action   = "ad_add.mhtml"
				method   = "post"
				onsubmit = "return uploadThis();"
				enctype  = "multipart/form-data"
			>

				<div class="row">
					<span class="third semibold">
						Banner (PNG or JPG):
					</span>

					<span class="twothirds">

						<div class="uploader wider">
							<input 
								type     = "file"
								id       = "ads_uploader"
								name     = "ads_uploader"
								style    = "opacity: 0;"
								onchange = "uploaderName('ads_uploader', 'ads_file')"
							>

							<span 
								id    = "ads_file"
								class = "filename"
								style = "-webkit-user-select : none;"
							>No file selected</span>

							<span 
								class = "action"
								style = "-webkit-user-select: none;"
							>Choose File</span>
						</div>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						Tagline (internal only)
					</span>
					<span class="twothirds">
						<input 
							type  = "text"
							name  = "tag"
							size  = "32"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						URL For link:
					</span>
					<span class="twothirds">
						<input 
							type  = "url"
							name  = "url"
							size  = "32"
						>
					</span>
				</div>

				<& "/funclib/datepicker.mas", 
					id => "start_date"
				&>

				<& "/funclib/datepicker.mas", 
					id => "end_date"
				&>

				<div class="row">
					<span class="third semibold">
						Start display:
					</span>
					<span class="twothirds">
						<input 
							type  = "text"
							name  = "start_date"
							id    = "start_date"
							size  = "16"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						End display:
					</span>
					<span class="twothirds">
						<input 
							type  = "text"
							name  = "end_date"
							id    = "end_date"
							size  = "16"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						Owner/Requestor
					</span>
					<span class="twothirds">
						<input 
							type  = "email"
							name  = "person_email"
							size  = "32"
							value = "<% $person->email %>"
						>
					</span>
				</div>

				<div class="row">
					<span class="third semibold">
						OK?
					</span>

					<label for="approved">
					<span class="twothirds hover">
						<input 
							type  = "checkbox"
							name  = "approved"
							id    = "approved"
							value = 1
						>
					</span>
					</label>
				</div>

				<div class="libl row rightalign">
					<input type="submit" value="Upload Ad">
				</div>

			</form>
		</div>

	</div>

	<div id="noclickmask" class="hidden"></div>
