<%args>
	$person
	$session
</%args>
<%init>

	$m->abort unless $person->site_admin;

	my @tags = ("school_consent");

	foreach my $tag (@tags) { 

		my $object = Tab::TournSetting->search( 
			tourn => 0,
			tag   => $tag
		)->first;

		if ($object) { 

			if ($ARGS{$tag}) { 

				$object->value_text($ARGS{$tag});
				$object->update;

			} else {
				$object->delete;
			}


		} elsif ($ARGS{$tag}) { 

			Tab::TournSetting->create({
				tourn      => 0,
				tag        => $tag,
				value      => "text",
				value_text => $ARGS{$tag}
			});

		}

	}

	my $msg = "Settings for Districts saved";

	$m->redirect("district_forms.mhtml?msg=$msg");

</%init>

