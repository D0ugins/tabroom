<%args>
	$session
	$person
	$person_settings
</%args>
<%init>

	$m->abort unless $person->site_admin;

	my $school_consent = Tab::TournSetting->search( 
		tourn => 0,
		tag   => "school_consent"
	)->first;

</%init>

	<& ../menu.mas, 
		whoami          => "bqd",
		person          => $person,
		person_settings => $person_settings
	&>


	<& "/funclib/editor.mas" &>

	<div class="main">

		<h2>NSDA District Forms</h2>

		<form 
			action = "district_forms_save.mhtml"
			method = "post"
		>

		<h4> School Consent Form </h4>

		<div class="full lightrow">

			<textarea
				name  = "school_consent"
				cols  = 60
				rows  = 40 
			><% $school_consent ? $school_consent->value_text : "" %></textarea>

		</div>

		<div class="liblrow rightalign">
			<input type="submit" value="Save Districts Settings">
			</form>
		</div>


	</div>

