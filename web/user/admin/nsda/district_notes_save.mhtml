<%args>
	$tourn_id
	$notes
</%args>
<%init>
	$m->clear_buffer();
	$r->content_type('application/json');

	my $tourn = Tab::Tourn->retrieve($tourn_id);

	my $msg;
	my $err;

	if ($tourn && $notes) { 
		$msg = "Notes updated for " . $tourn->name;
		$tourn->setting('nsda_notes','text',$notes);
		$m->print('{"error":false,"message":"'.$msg.'"}');
		$m->abort();

	} else { 
		
		$m->print('{ "error":true,"message":"'.$err.'" }');
		$m->abort();
	}

</%init>
