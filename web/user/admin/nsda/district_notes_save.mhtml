<%args>
	$tourn_id
	$notes 		=> undef
</%args>
<%init>

	$m->clear_buffer();
	$r->content_type('application/json');

	my $tourn = Tab::Tourn->retrieve($tourn_id);

	my $msg;
	my $err;

	if ($tourn) {
		if ($notes){
			$msg = "Notes updated for " . $tourn->name;
			$tourn->setting('nsda_notes','text',$notes);
			$m->print('{"error":false,"message":"'.$msg.'"}');
			$m->abort();
		} else {
			$msg = "Notes updated for " . $tourn->name;
			my $tourn_notes = $tourn->setting('nsda_notes');
			$m->print('{"error":false,"notes":"'.$tourn_notes.'"}');
			$m->abort();
		}
	} else {
		$err = "No Tournament Sent";
		$m->print('{ "error":true,"message":"'.$err.'" }');
		$m->abort();
	}

</%init>
