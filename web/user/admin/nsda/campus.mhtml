<%args>
	$person
	$person_settings
</%args>
<%init>

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("
		select
			tourn.id, tourn.name,
			nsda_campus_requested.value,
			nsda_campus_purchaser.value,
			nsda_campus_purchased.value

		from (tourn, tourn_setting nsda_campus_requested)

			left join tourn_setting nsda_campus_purchased
				on nsda_campus_purchased.tag = 'nsda_campus_purchased'
				and nsda_campus_purchased.tourn = tourn.id

			left join tourn_setting nsda_campus_purchaser
				on nsda_campus_purchaser.tag = 'nsda_campus_purchaser'
				and nsda_campus_purchaser.tourn = tourn.id

		where nsda_campus_requested.tag = 'nsda_campus_requested'
			and nsda_campus_requested.tourn = tourn.id
	");

	$sth->execute();

</%init>

	<& ../menu.mas,
		whoami          => "campus",
		person          => $person,
		person_settings => $person_settings
	&>

	<div class="main">

		<& "/funclib/tablesorter.mas", table => "campus" &>

		<span class="fourfifths nospace">
			<h4>NSDA Campus Purchases</h4>
		</span>

		<span
			class = "fifth rightalign nospace"
			id    = "campus_buttonarea"
		>
		</span>

		<p class="centeralign semibold redtext">
			"Requested" amount of rooms does NOT necessarily reflect a completed purchase form.
		</p>

		<table id="campus">

			<thead>
				<tr class="ltyellow">
					<th>
						Tournament
					</th>

					<th>
						Contact
					</th>

					<th>
						Requested
					</th>

					<th>
						Purchased
					</th>
				</tr>
			</thead>

			<tbody>
<%init>
				while (
					my (
						$tourn_id, $tourn_name,
						$requested,
						$contact,
						$purchased
					) = $sth->fetchrow_array()
				) {
</%init>
					<tr id="<% $tourn_id %>">

						<td>
							<% $tourn_name %>
						</td>

						<td>
							<a
								href="mailto:<% $contact %>"
								class="full plain padvertless"
							><% $contact %></a>
						</td>

						<td class="centeralign">
							<input
								name         = "requested"
								type         = "number"
								min          = "0"
								max          = "999"
								value        = "<% $requested %>"
								target_id    = "<% $tourn_id %>"
								setting_name = "nsda_campus_requested"
								onChange     = "postSwitch(this, 'tourn_switch.mhtml');"
							>
						</td>

						<td class="centeralign">
							<input
								name         = "purchased"
								type         = "number"
								min          = "0"
								max          = "999"
								value        = "<% $purchased %>"
								target_id    = "<% $tourn_id %>"
								setting_name = "nsda_campus_purchased"
								onChange     = "postSwitch(this, 'tourn_switch.mhtml');"
							>
						</td>
					</tr>
%				}

			<tbody>
		</table>
	</div>

