<%args>
	$person
	$person_settings
	$name       => undef
	$circuit_id => undef
</%args>
<%init>

	my @chapters;

	my $circuit = Tab::Circuit->retrieve($circuit_id) if $circuit_id;

	undef $name if $name eq "Name";

	if ($name || $circuit_id) { 

		if ($name && $circuit_id) { 

			Tab::Chapter->set_sql( chapter_name => "
				select distinct chapter.id
				from chapter, chapter_circuit
				where chapter.id = chapter_circuit.chapter
				and chapter_circuit.circuit = ? 
				and chapter.name like ?
				order by chapter.name DESC, name
			");

			@chapters = Tab::Chapter->search_chapter_name($circuit_id, "%".$name."%");
		
		} elsif ($name) { 

			@chapters = Tab::Chapter->search_like( name => "%".$name."%", {order_by => 'name'});

		} elsif ($circuit_id) {

			$circuit->chapters;

		}
	}

	my $switch;

</%init>

	<& 
		"menu.mas", 
		whoami          => "schools",
		person          => $person,
		person_settings => $person_settings,
	&>

	<div class="main">

		<h2>School Search</h2>

		<table>

			<tr class="row">

				<td>
					School Name
				</td>

				<td>
					<form action="chapters.mhtml#default">
					<input 
						type        = "text"
						size        = "48"
						name        = "name"
						placeholder = "Name"
						value       = "<% $name %>"
					>
				</td>

			</tr>

			<tr class="row">

				<td>
					Circuit
				</td>

				<td>
					<select name="circuit_id" class="biggishspan nowrap">
						<option value="">Search All</option>

%						foreach my $circuit (sort {$a->name cmp $b->name} Tab::Circuit->retrieve_all) {
							<option value="<% $circuit->id%>" <% $circuit->id == $circuit_id ? "selected" : "" %>>
								<% $circuit->name %>
							</option>
%						}
					</select>
				</td>

			</tr>

			<tr class="liblrow">
				
				<td colspan="2" class="rightalign">
					<input type="submit" value=" Go ">
					</form>
				</td>

			</tr>

		</table>

%		if ($name || $circuit_id) { 

			<h4>Schools <% $name ? "matching \"".$name."\"" : ""  %> <% $circuit ? "in ".$circuit->abbr : "" %>:</h4>

%			if (@chapters) { 

				<& "/funclib/tablesorter.mas", table => "foobar" &>

				<table id="foobar">

					<thead>

					<tr class="yellowrow">

						<th>
							Circs
						</th>

						<th>
							Name
						</th>

						<th>
							Contacts
						</th>

						<th>
							Locale
						</th>

						<th colspan="3">
						</th>

					</tr>

					</thead>

					<tbody>

%					foreach my $chapter (@chapters) { 
			
						<tr class="row">

							<td class="centeralign smallish">
%								foreach my $circuit ($chapter->circuits) { 
									<% $circuit->abbr %>
%								}
							</td>

							<td class="smallish">
								<% $chapter->name %>
							</td>

							<td class="smaller nospace">

<%perl>
								foreach my $admin (
									$m->comp("/funclib/chapter_admins.mas", 
										chapter => $chapter, 
										contact => 1)
								) { 
</%perl>
									<a class="nowrap white marless padless" 
										href="mailto:<% $admin->email %>" 
										title="<% $admin->email %>"
									>
										<% $admin->first." ".$admin->last %> 
									</a>
%								}
							</td>

							<td class="centeralign smallish">
								<% $chapter->state ? $chapter->state."/" : "" %><% $chapter->country %>
							</td>

							<td class="centeralign smallish marno padless">
								<a 	class="buttonwhite bluetext fa fa-lg fa-edit" 
									href="/user/chapter/tournaments.mhtml?chapter_id=<% $chapter->id %>">
								</a>
							</td>

%							if ($person->site_admin) { 
								<td class="centeralign marno padless smallish">  
									<a 
										title="Student roster"
										class="buttonwhite greentext fa fa-lg fa-list-alt"
										href="chapter_roster.mhtml?chapter_id=<% $chapter->id %>"
									>
									</a>
								</td>
%							}

							<td class="centeralign smallish marno padless">
								<a 	
									title="Deduplicate"
									class="buttonwhite redtext fa fa-lg fa-compress"
									href="chapter_merge.mhtml?target_id=<% $chapter->id %>"
								>
								</a>
							</td>

						</tr>

%					}

					</tbody>

				</table>

%			}

%		}


	</div>

