<%args>
	$person
	$person_settings
	$edit_id => undef
</%args>
<%init>

	my $edit = Tab::Person->retrieve($edit_id);
	my $switch;

	unless ($edit) { 
		$m->print("No user was found with that ID");
		$m->abort();
	}

	my %edit_settings = $edit->all_settings;

</%init>

	<& 
		"menu.mas",
		whoami          => "persons",
		person          => $person,
		edit_id         => $edit_id,
		person_settings => $person_settings
	&>

	<div class="main">

		<h2>Edit <% $edit->first." ".$edit->last %>'s details</h2>

		<span class="pagehalf">

			<h4>Personal Record</h4>

			<div class="row">

				<span class="twofifths smallish">
					Email &amp; login:
				</span>

				<span class="rightalign threefifths">

					<form 
						action = "person_save.mhtml"
						method = "post"
					>

					<input 
						type  = "hidden"
						name  = "edit_id"
						value = "<% $edit->id %>"
					>

					<input 
						type  = "text"
						name  = "email"
						value = "<% $edit->email %>"
						size  = "24"
					>
				</span>

			</div>

			<div class="row">
	
				<span class="twofifths smallish">
					First Name:
				</span>

				<span class="rightalign threefifths">
					<input 
						type  = "text"
						name  = "first"
						value = "<% $edit->first %>"
						size  = "24"
					>
				</span>
	
			</div>

			<div class="row">

				<span class="twofifths smallish">
					Last Name:
				</span>

				<span class="rightalign threefifths" >
					<input 
						type  = "text"
						name  = "last"
						value = "<% $edit->last %>"
						size  = "24"
					>
				</span>
	
			</div>

			<div class="row">

				<span class="twofifths smallish">
					Street Address:
				</span>

				<span class="rightalign threefifths" >
					<input 
						type  = "text"
						name  = "street"
						value = "<% $edit->street %>"
						size  = "24"
					>
				</span>
	
			</div>
	
			<div class="row">

				<span class="twofifths smallish">
					City
				</span>

				<span class="rightalign threefifths" >
					<input 
						type  = "text"
						name  = "city"
						value = "<% $edit->city %>"
						size  = "24"
					>
				</span>

			</div>

			<div class="row">
	
				<span class="twofifths smallish">
					State/Province
				</span>	

				<span class="rightalign threefifths" >
					<select 
						name  = "state"
						class = "fixedmed chosen"
					>
						<& 
							"/funclib/state_select.mas",
							state => $edit->state 
						&>
					</select>
				</span>

			</div>

			<div class="row">
	
				<span class="twofifths smallish">
					Country
				</span>	

				<span class="rightalign threefifths" >
					<select name="country" class="fixedmed">

						<& "/funclib/country_select.mas", 
							country => $edit->country 
						&>

					</select>
				</span>

			</div>

			<div class="row">

				<span class="twofifths smallish">
					ZIP code
				</span>

				<span class="rightalign threefifths" >
					<input 
						type  = "text"
						name  = "zip"
						value = "<% sprintf("%05d", $edit->zip) %>"
						size  = "24"
					>
				</span>

			</div>

			<div class="row">

				<span class="twofifths smallish">
					Phone Number
				</span>

				<span class="rightalign threefifths">
					<input 
						type  = "text"
						name  = "phone"
						value = "<% $edit->phone %>"
						size  = "10"
					>
				</span>

			</div>

			<div class="row">

	            <span class="twofifths smallish">
	                Cell provider
	            </span>

	            <span class="rightalign threefifths">
	                <select name="provider" class="fixedmed chosen">
						<& /funclib/cell_domains.mas, provider => $edit->provider &>
	                </select>
	            </span>
	
    	    </div>

			<label for="no_email">
				<div class="row hover">

					<span class="fourfifths smallish">
						No Emails*:
					</span>

					<span class="fifth">
						<input 
							type  = "checkbox"
							id    = "no_email"
							value = "1"
							name  = "no_email"
							<% ($edit->no_email) ? "checked" : "" %>
						>
					</span>

				</div>
			</label>

			<div class="row">

				<span class="half">
					NSDA Merit Number
				</span>

				<span class="half">
					<input
						type  = "number"
						min   = "1000"
						max   = "99999999"
						name  = "merit_number"
						value = <% $edit->ualt_id %>
					>
				</span>

			</div>


			<label for="site_admin">
				<div class="row hover">
					<span class="fourfifths smallish">
						Tabroom Site Admin (God-like powers)
					</span>

					<span class="fifth">
						<input 
							type  = "checkbox"
							value = "1"
							id    = "site_admin"
							name  = "site_admin"
							<% ($edit->site_admin) ? "checked" : "" %>
						>
					</span>
		
				</div>
			</label>

			<label for="nsda_admin">

				<div class="row hover">

					<span class="fourfifths smallish">
						NSDA Districts Admin
					</span>

					<span class="fifth">
						<input 
							type  = "checkbox"
							value = "1"
							id    = "nsda_admin"
							name  = "nsda_admin"
							<% ($edit_settings{"nsda_admin"}) ? "checked" : "" %>
						>
					</span>
		
				</div>
			</label>

			<label for="scream_in_pain">

				<div 
					title="Causes Tabroom to scream in pain on every page reload"
					class="row hover">

					<span class="fourfifths smallish">
						Scream in Pain
					</span>

					<span class="fifth">
						<input 
							type  = "checkbox"
							value = "1"
							id    = "scream_in_pain"
							name  = "scream_in_pain"
							<% ($edit_settings{"scream_in_pain"}) ? "checked" : "" %>
						>
					</span>
		
				</div>
			</label>

		</span>


		<span class="pagehalf">

			<h4>Logins</h4>

%			my $counter;

%			foreach my $login ($edit->logins) { 

%				$counter++;

				<div class="row centeralign padmuchmore">
					<h5 
						class="nospace button marbottomless padtopless" 
					>Login <% $counter %>: <% $login->username %></h5>
				</div>

				<div class="row">
					<span class="twofifths">
						Username:
					</span>
					<span class="threefifths">
						<input 
							type  = "text"
							name  = "<% $login->id %>_username"
							size  = "24"
							value = "<% $login->username %>"
						>
					</span>
				</div>

				<div class="row">
					<span class="twofifths">
						NSDA ID:
					</span>
					<span class="threefifths">
						<input 
							type  = "text"
							size  = "24"
							name  = "<% $login->id %>_ualt"
							value = "<% $login->ualt_id %>"
						>
					</span>
				</div>

				<div class="row">
					<span class="twofifths">
						# Accesses
					</span>
					<span class="threefifths">
						<input 
							disabled 
							type  = "text"
							size  = "24"
							value = "<% $login->accesses %>"
						>
					</span>
				</div>

				<div class="row">
					<span class="twofifths">
						Last Access
					</span>
					<span class="threefifths">
						<input 
							disabled 
							type  = "text"
							size  = "24"
							value = "<% Tab::xmldt($login->last_access) %>"
						>
					</span>
				</div>

				<div class="row centeralign padmore">
					<a 
						target = "_blank"
						class  = "dkblue button"
						href   = "/user/login/forgot_send.mhtml?username=<% $login->username %>"
					>
						Trigger Password Reset
					</a>
				</div>

%			}

		</span>

		<div class="liblrow rightalign">
			<input  type="submit" value=" Save Changes "> 
			</form>
		</div>

	</div>

