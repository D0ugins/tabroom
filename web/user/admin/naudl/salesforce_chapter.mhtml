<%args>
	$chapter_id => undef
</%args>
<%init>

	use JSON;

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my @students = $chapter->students;

	my $now = DateTime->now();
	my $year = $now->year;

	$year++ if $now->month > 7;

	my %json_array = ();

	my %race_encoding = (
		asian      => "Asian",
		latino     => "Latino",
		black      => "Black_African_American",
		amerindian => "American_Indian_Native_American",
		pacific    => "Native_Hawaiian_Pacific_Islander",
		white      => "White",
		dual       => "Two_or_more_races",
		other      => "Other"
	);

	foreach my $student (@students) { 

		next if $student->retired;
		next if $student->grad_year && $student->grad_year < $year;

		push @{$json_array{"students_from_tabroom"}},
			$m->comp("salesforce_student.mas", student => $student);

	} 
	
