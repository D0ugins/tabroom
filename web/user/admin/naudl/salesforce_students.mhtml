<%args>
	$chapter_id => undef
</%args>
<%init>

	use JSON;

	my $chapter = Tab::Chapter->retrieve($chapter_id);

	my @students = $chapter->students;

	my $now = DateTime->now();
	my $year = $now->year;

	$year++ if $now->month > 7;

	my %json_array = ();

	my %race_encoding = (
		asian      => "Asian",
		latino     => "Latino",
		black      => "Black_African_American",
		amerindian => "American_Indian_Native_American",
		pacific    => "Native_Hawaiian_Pacific_Islander",
		white      => "White",
		dual       => "Two_or_more_races",
		other      => "Other"
	);

	foreach my $student (@students) { 

		next if $student->retired;
		next if $student->grad_year && $student->grad_year < $year;

		my %student_record;

		$student_record{"Expected_graduation_year"} = $student->grad_year;
		$student_record{"First_Name"} = $student->first;
		$student_record{"Middle_Name"} = $student->middle if $student->middle;
		$student_record{"Last_Name"} = $student->last;
		$student_record{$race_encoding{$student->race}} = "true" if $student->race;
		$student_record{"studentschoolid"} = $student->school_sid if $student->school_sid;
		$student_record{"tabroomid"} = "TR".$student->id,
		push @{$json_array{"students_from_tabroom"}}, \%student_record;

	} 
	
	$m->clear_buffer();
	$r->content_type('application/json');
	my $json = encode_json(\%json_array);

	$m->print($json);

	$m->flush_buffer();
	$m->abort();

</%init>
