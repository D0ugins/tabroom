<%args>
	$person
	$person_settings
</%args>
<%init>

	my $date_limit = "2017-06-01 00:00:00";

	Tab::Tourn->columns(TEMP => "naudl_league");
	Tab::Tourn->columns(TEMP => "naudl_processed");

	Tab::Tourn->set_sql( naudl_attendance => "
		select tourn.*, naudl.value as naudl_league, naudl_processed.value_date as processed
		from (tourn, tourn_circuit, circuit)
		left join circuit_setting naudl 
			on circuit.id = naudl.circuit
			and naudl.tag = 'naudl_league_code'

		left join tourn_setting naudl_processed
			on naudl_processed.tourn = tourn.id
			and naudl_processed.tag = 'naudl_processed'

			where tourn.start > ? 
			and tourn.end < NOW()
			and tourn.hidden != 1
			and tourn.id = tourn_circuit.tourn
			and circuit.id = tourn_circuit.circuit

			and exists (
				select school.id
				from school, chapter, chapter_circuit, region, circuit_setting
				where school.tourn = tourn.id
				and school.chapter = chapter.id
				and chapter.naudl = 1
				and chapter_circuit.chapter = chapter.id
				and chapter_circuit.region = region.id
				and chapter_circuit.circuit = circuit_setting.circuit
				and circuit_setting.tag = 'naudl'
			)

		group by tourn.id
		order by tourn.id desc
	");


	my @tourns = Tab::Tourn->search_naudl_attendance($date_limit);

</%init>

	<& "../menu.mas", 
		person => $person,
		person_settings => $person_settings,
		whoami => "naudl_tourns"
	&>

	<div class="main">

		<span class="threequarters">
			<h2><% scalar @tourns %> NAUDL Attended Tournaments</h2>
		</span>

		<span 
			class = "quarter rightalign"
			id    = "naudl_tourns_buttonarea"
		>

		</span>

	<& "/funclib/tablesorter.mas", table => "naudl_tourns" &>

	<table id="naudl_tourns">

		<thead>

			<tr class="smallish yellowrow">

				<th>
					ID
				</th>

				<th>
					Name
				</th>

				<th>
					Location
				</th>

				<th>
					Date
				</th>

				<th>
					League
				</th>

				<th>
					Processed
				</th>

				<th>
					Redo
				</th>

			</tr>

		</thead>

		<tbody>

<%perl>
		foreach my $tourn (@tourns) { 

			my $league = $tourn->naudl_league;
			$league = "a0IE0000004hec4" unless $league;

			my $location;
			$location = $tourn->city.", " if $tourn->city;
			$location .= $tourn->state;

</%perl>


				<tr class='smallish'>

					<td>
						TR<% $tourn->id %>
					</td>

					<td>
						<% $tourn->name %>
					</td>

					<td>
						<% $location %>
					</td>

					<td>
						<% Tab::csvdt($tourn->start) %>
					</td>

					<td>
						<% $league %>
					</td>

					<td>
						<% Tab::csvdt($tourn->naudl_processed) %>
					</td>

					<td class="centeralign padless marless">
						<a 
							href="salesforce_autopost.mhtml?tourn_id=<% $tourn->id %>"
							class       = "buttonwhite fa-lg fa fa-cloud-upload greentext hover"
							title       = "Post tournament data again"
						>
						</a>
					</td>
				</tr>
%			}

		</tbody>

	</table>

	</div>


