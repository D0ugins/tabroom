<%args>
	$person
	$session
</%args>
<%init>

	$m->abort unless $person->site_admin;

	my $bqd_resolution = Tab::TournSetting->search( 
		tourn => 0,
		tag   => "bqd_resolution"
	)->first;

	my $bqd_rules = Tab::TournSetting->search( 
		tourn => 0,
		tag   => "bqd_rules"
	)->first;

	my $bqd_speech_times = Tab::TournSetting->search( 
		tourn => 0,
		tag   => "bqd_speech_times"
	)->first;

</%init>

	<& menu.mas, whoami => "bqd" &>

	<div class="main">

		<h2>Edit the Big Questions Debate ballot</h2>

		<p>
			These settings will edit the various text on BQD ballots
		</p>

		<form action="bqd_save.mhtml" method="post">

		<div class="lightrow">
			
			<span class="third">
				Resolution/Topic
			</span> 
			
			<span class="twothirds">
				<input 
					type  = "text"
					name  = "bqd_resolution"
					size  = "50"
					value = "<% $bqd_resolution ? $bqd_resolution->value_text : "" %>
				">
			</span>

		</div>

		<div class="lightrow">
			
			<span class="third">
				Ballot Rules
			</span> 
			
			<span class="twothirds">
				<textarea
					name  = "bqd_rules"
					cols  = 60
					rows  = 8
				><% $bqd_rules ? $bqd_rules->value_text : "" %></textarea>
			</span>

		</div>

		<div class="lightrow">
			
			<span class="third">
				Ballot Speech Times
			</span> 
			
			<span class="twothirds">
				<textarea
					name  = "bqd_speech_times"
					cols  = 60
					rows  = 8
				><% $bqd_speech_times ? $bqd_speech_times->value_text : "" %></textarea>
			</span>

		</div>


		<div class="liblrow rightalign">
			<input type="submit" value="Save BQD Settings">
			</form>
		</div>


	</div>

