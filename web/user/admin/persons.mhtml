<%args>
	$person
	$person_settings
	$session
</%args>
<%init>

	my %search_terms;

	my @persons;

	my $limit;
	my $login;

	if ($ARGS{"email"}) {
		my $email = $ARGS{"email"};
		$email =~ s/'/\\'/g;
		$email =~ s/';//g;

		$limit .= " and person.email like '".$email."%' ";
		$login .= " and login.username like '".$email."%' ";
	}

	if ($ARGS{"phone"}) {
		$ARGS{"phone"} =~ s/[\D_]//g;;
		$limit .= " and person.phone like '".$ARGS{"phone"}."%' ";
		Tab::debuglog("limit is $limit");
	}

	if ($ARGS{"first"}) {
		my $first = $ARGS{"first"};
		$first =~ s/'/\\'/g;
		$first =~ s/;//g;
		$limit .= " and person.first like '".$first."%' ";
	}

	if ($ARGS{"last"}) {

		my $last = $ARGS{"last"};
		$last =~ s/'/\\'/g;
		$last =~ s/;//g;
		$limit .= " and person.last like '".$last."%' ";
	}

	if ($ARGS{"nsda"}) {
		$ARGS{"nsda"} =~ s/[\D_]//g;
		$limit .= " and person.nsda like '".$ARGS{"nsda"}."%' ";
	}

	my %found;

	if ($limit) {

		Tab::debuglog("I am here yas with limit $limit");

		my $dbh = Tab::DBI->db_Main();

		my $sth = $dbh->prepare("
			select person.id, person.first, person.last, person.phone, person.email, person.nsda,
				person.state, person.country

			from person
			where person.id > 0
			$limit
		");

		$sth->execute();

		while (
			my (
				$id, $first, $last, $phone, $email, $nsda, $state, $country
			) = $sth->fetchrow_array()
		) {

			$found{$id}{"first"}   = $first;
			$found{$id}{"last"}    = $last;
			$found{$id}{"email"}   = $email;
			$found{$id}{"phone"}   = $phone;
			$found{$id}{"nsda"}    = $nsda;
			$found{$id}{"state"}   = $state;
			$found{$id}{"country"} = $country;
		}

		$sth->finish();

		if ($login) {

			$sth = $dbh->prepare("
				select person.id, person.first, person.last, person.phone, person.email, person.nsda,
					person.state, person.country
				from person, login
				where person.id > 0
				and person.id = login.person
				$login
			");

			$sth->execute();

			while (
				my (
					$id, $first, $last, $phone, $email, $nsda, $state, $country
				) = $sth->fetchrow_array()
			) {

				$found{$id}{"first"}   = $first;
				$found{$id}{"last"}    = $last;
				$found{$id}{"email"}   = $email;
				$found{$id}{"phone"}   = $phone;
				$found{$id}{"nsda"}    = $nsda;
				$found{$id}{"state"}   = $state;
				$found{$id}{"country"} = $country;
			}

			$sth->finish();

		}

		$dbh->disconnect();
	}

</%init>

	<& menu.mas,
		person          => $person,
		person_settings => $person_settings,
		whoami          => "persons"
	&>

	<div class="main">

		<h2>User Account Search</h2>

