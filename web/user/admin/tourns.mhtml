<%args>
	$person 
	$person_settings 
	$name       => undef
	$circuit_id => undef
</%args>
<%init>

	my @tourns;

	my $circuit = Tab::Circuit->retrieve($circuit_id) if $circuit_id;

	if ($name || $circuit_id) { 

		if ($name && $circuit_id) { 

			Tab::Tourn->set_sql( tourn_name => "
				select distinct tourn.id
				from tourn, tourn_circuit
				where tourn.id = tourn_circuit.tourn
				and tourn_circuit.circuit = ? 
				and tourn.name like ?
				order by tourn.start DESC, name
			");

			@tourns = Tab::Tourn->search_tourn_name($circuit_id, "%".$name."%");
		
		} elsif ($name) { 

			@tourns = Tab::Tourn->search_like( 	
				name      => "%".$name."%",
				{order_by => 'start DESC, name'}
			);

		} elsif ($circuit_id) {

			$circuit->tourns();

		}
	}

	Tab::Tourn->columns(TEMP => "weekendname");
	Tab::Tourn->columns(TEMP => "weekendstart");

	Tab::Tourn->set_sql(now => "
		select tourn.*
		from tourn
		where tourn.end > ? 
		and tourn.start < ? 
		and not exists ( 
			select weekend.id
			from weekend
			where weekend.tourn = tourn.id
		)
		and tourn.hidden != 1
	");

	Tab::Tourn->set_sql(now_weekend => "
		select tourn.*, weekend.name as weekendname, weekend.start as weekendstart
		from tourn, weekend
		where tourn.id = weekend.tourn
		and weekend.end > ? 
		and weekend.start < ? 
		and tourn.hidden != 1
	");

	my $now = DateTime->now();
	my $start = $now->clone;
	my $end = $now->clone;

	$end->add(days => 3);
	$start->subtract(days => 3);

	my @tourns_now;

	push @tourns_now, Tab::Tourn->search_now_weekend(
		DateTime::Format::MySQL->format_datetime($start),
		DateTime::Format::MySQL->format_datetime($end)
	);

	push @tourns_now, Tab::Tourn->search_now(
		DateTime::Format::MySQL->format_datetime($start),
		DateTime::Format::MySQL->format_datetime($end)
	);

</%init>

	<& 
		"menu.mas",
		whoami          => "tourns",
		person          => $person,
		person_settings => $person_settings
	&>

	<form action="tourns.mhtml">

	<div class="main">

		<h2>Tournament Search</h2>

		<div class="row">

			<span class="third">
				Tournament Name
			</span>

			<span class="twothird">
				<input 
					type        = "text"
					size        = "48"
					name        = "name"
					placeholder = "Name"
					value       = "<% $name %>"
				>
			</span>

		</div>

		<div class="row">

			<span class="third">
				Circuit
			</span>

			<span class="twothird">

				<select 
					class="fixed"
					name="circuit_id" 
				>

					<option value="">Search All</option>

<%perl>
					foreach my $circuit (
						sort {$a->name cmp $b->name} 
						Tab::Circuit->retrieve_all
					) {
</%perl>
						<option
							value="<% $circuit->id%>" 
							<% $circuit->id == $circuit_id ? "selected" : "" %>
						><% $circuit->name %></option>
%					}
				</select>
			</span>

		</div>

		<div class="liblrow rightalign marno">
			<input type="submit" value=" Go ">
			</form>
		</div>

		<& "/funclib/tablesorter.mas", table => 'sortme' &>

%		if ($name || $circuit_id) { 

			<h4>Tournaments 
				<% 
					$name ? "matching \"".$name."\"" : "" 
				%><% 
					$circuit ? "in ".$circuit->abbr : "" 
				%>:
			</h4>

%			if (@tourns) { 

				<table id="sortme">

					<thead>

						<tr class="yellowrow">

							<th class="smallish">
								Circs
							</th>

							<th class="smallish">
								Name
							</th>

							<th class="smallish">
								Contacts
							</th>

							<th class="smallish">
								Locale
							</th>

							<th class="smallish">
								Start
							</th>

							<th colspan="2">
							</th>

						</tr>

					</thead>
					<tbody>

%					foreach my $tourn (@tourns) { 
			
						<tr>

							<td class="centeralign smallish">
								<% $m->comp(
										"/funclib/tourn_circuits.mas", 
										tourn      => $tourn,
										print_abbr => 1
								) %>
							</td>

							<td class="smallish">

<%perl>
								if ($tourn->weekendname) { 

									my $name = $tourn->name;
									$name =~ s/District Tournament//g;
</%perl>
									<span class="half semibold nowrap">
										<% $name %>
									</span>

									<span class="half nowrap">
										<% $tourn->weekendname %>
									</span>

%								} else { 
									
									<% $tourn->name %>

%								}
							</td>

							<td class="smallish">

%								foreach my $admin (
%									$m->comp("/funclib/tourn_admins.mas", 
%										tourn => $tourn, 
%										contact => 1)
%								) { 
									<a 
										class = "white nowrap padvert padless"
										href  = "mailto:<% $admin->email %>"
									>
										<span style="text-decoration: none;">
										<% $admin->first." ".$admin->last %> <br />
									</a>
%								}
							</td>

							<td class="centeralign smallish">
								<% $tourn->location %>
							</td>

							<td class="centeralign smallish">
							
%							if ($tourn->weekendstart) { 
								<% Tab::shortdate(Tab::register_datetime($tourn->weekendstart)) %>
%							} else {
								<% Tab::shortdate($tourn->start) %>
%							}
							</td>

							<td class="centeralign">
								<a 
									class="bluetext button buttonwhite fa fa-edit fa-sm"
									href="/user/tourn/select.mhtml?tourn_id=<% $tourn->id %>"
								>
								</a>
							</td>

%           				my $warn = "This will delete the tournament ".$tourn->name." utterly.  There is no going back.  Be sure";

							<td class="centeralign">
								<a 
									class="redtext button buttonwhite fa fa-trash fa-sm"
									href="tourn_delete.mhtml?tourn_id=<% $tourn->id %>" 
									<& "/funclib/confirm.mas", warn => $warn &>
								>
								</a>
							</td>

						</tr>

%					}
					</tbody>

				</table>

%			} else { 
			
				<h5>None found</h5>

				<p class="centeralign">
					<object 
						style="height: 195px; width: 320px">
						<param 
							name="movie" 
							value="http://www.youtube.com/v/1ytCEuuW2_A?version=3&feature=player_detailpage&autoplay=1">
						<param 
							name  = "allowFullScreen"
							value = "true">
						<param 
							name  = "allowScriptAccess"
							value = "always">
						<embed 
							src="http://www.youtube.com/v/1ytCEuuW2_A?version=3&feature=player_detailpage" 
							type              = "application/x-shockwave-flash"
							allowfullscreen   = "true"
							allowScriptAccess = "always"
							width             = "320"
							height            = "195"
						>
					</object>
				</p>

%			}

%		}

		</br>

%		if (@tourns_now) {

			<& "/funclib/tablesorter.mas", table => 'now' &>

			<span class="threequarters">
				<h4><% scalar @tourns_now %> Tournaments happening around now:</h4>
			</span>

			<span 
				id    = "now_buttonarea"
				class = "quarter rightalign"
			>
			</span>


			<table id="now">

				<thead>

				<tr class="yellowrow">
				
					<th class="smallish">
						Circs
					</th>

					<th class="smallish">
						Name
					</th>

					<th class="smallish">
						Contacts
					</th>

					<th class="smallish">
						Locale
					</th>
		
					<th class="smallish">
						Start
					</th>

					<th colspan="1">
					</th>
				</tr>

				</thead>

				<tbody>

%				foreach my $tourn_now (@tourns_now) {

					<tr>
						<td class="smallish">
							<% $m->comp("/funclib/tourn_circuits.mas", 
									tourn => $tourn_now, 
									print_abbr => 1
								) 
							%>
						</td>

						<td class="smallish">
<%perl>
							if ($tourn_now->weekendname) { 

								my $name = $tourn_now->name;
								$name =~ s/District Tournament//g;
</%perl>
								<span class="half semibold nowrap">
									<% $name %>
								</span>

								<span class="half nowrap marno padvert">
									<% $tourn_now->weekendname %>
								</span>

%							} else { 
								<% $tourn_now->name %>
%							}

						</td>

						<td class="smallish">

<%perl>
							foreach my $admin_now (
								$m->comp("/funclib/tourn_admins.mas", 
									tourn => $tourn_now, 
									contact => 1
								)
							) {
</%perl>
								<a 
									class="white nowrap padless" 
									href="mailto:<% $admin_now->email %>"
								>
									<span style="text-decoration: none;">
									<% $admin_now->first." ".$admin_now->last %> <br />
								</a>
%							}
						</td>

						<td class="centeralign smallish">
							<% $tourn_now->location %>
						</td>

						<td class="centeralign smallish">

%							if ($tourn_now->weekendstart) { 
								<% Tab::shortdate(
									Tab::DBI::date_inflate($tourn_now->weekendstart)
									) %>

%							} else {
								<% Tab::shortdate($tourn_now->start) %>
%							}
						</td>

						<td class="centeralign">
							<a 
								class="bluetext button buttonwhite fa fa-edit fa-sm"
								href="/user/tourn/select.mhtml?tourn_id=<% $tourn_now->id %>"
							>
							</a>
						</td>
					</tr>

%				}

				</tbody>
			</table>
%		}
	</div>

