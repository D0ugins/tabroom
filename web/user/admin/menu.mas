<%args>
	$whoami          => undef
	$nodiv           => undef
	$person          => undef
	$person_settings => undef
	$edit_id         => undef
</%args>

%	unless ($nodiv) { 
		<div class="menu">
%	}	

%	if ($person->site_admin) { 

		<div class="sidenote">
		
			<h4>God-like powers</h4>

			<a 
				class = "<% $whoami eq "circuits" ? "dk" : "" %>blue half"
				href  = "/user/admin/circuits.mhtml"
			>  
				Circuits
			</a>

			<a 
				class = "<% $whoami eq "tourns" ? "dk" : "" %>blue half" 
				href  = "/user/admin/tourns.mhtml"
			>  
				Tournaments
			</a>

			<a 
				class="<% $whoami eq "persons" ? "dk" : "" %>blue half" 
				href="/user/admin/persons.mhtml" 
			>  
				Accounts
			</a>

			<a 
				class="<% $whoami eq "schools" ? "dk" : "" %>blue half" 
				href="/user/admin/chapters.mhtml" 
			>  
				Schools
			</a>

			<a 
				class="<% $whoami eq "person_merger" ? "dk" : "" %>yellow half" 
				href="/user/admin/person_merge.mhtml" 
			>  
				Merge Accounts
			</a>

			<a 
				class="<% $whoami eq "merger" ? "dk" : "" %>yellow martop half" 
				href="/user/admin/chapter_merge.mhtml" 
			>  
				Merge Schools
			</a>

			<a class="blue martop full" href="circuit_edit.mhtml">
				Create a new Circuit
			</a>

			<a 
				class="<% $whoami eq "about" ? "dk" : "" %>blue full"
				href="/user/admin/about.mhtml"
			>  
				Edit About Page
			</a>

%			if ($whoami eq "persons" && $person && $edit_id) { 
				<a class="martop yellow full" href="ldap_renew.mhtml?edit_id=<% $edit_id %>">
					Trigger LDAP Update
				</a>
%			}

%		}

%	unless ($nodiv) { 
		</div>
%	}

%	if ($person->site_admin || $person_settings && $person_settings->{'nsda_admin'}) { 

%		unless ($nodiv) { 
			<div class="sidenote">
%		}

			<h4>NSDA Admin Powers</h4>

			<a 
				class = "<% $whoami eq "autopoint" ? "dk" : "" %>blue full"
				href  = "/user/admin/nsda/autopoint.mhtml"
			>  
				NSDA Autopoint Post
			</a>

			<a 
				class = "<% $whoami eq "districts" ? "dk" : "" %>blue half"
				href  = "/user/admin/nsda/districts.mhtml"
			>  
				Districts &amp; Leaders
			</a>

			<a
				class = "<% $whoami  eq "district_tourns" ? "dk" : "" %>blue half"
				href  = "/user/admin/nsda/tourns.mhtml" 
			>
				District Tourns
			</a>

			<a 
				class = "<% $whoami eq "admins" ? "dk" : "" %>blue full"
				href  = "/user/admin/nsda/admins.mhtml"
			>  
				NSDA Office Admin Roster
			</a>

			<a 
				class = "<% $whoami eq "calendar" ? "dk" : "" %>blue martop half"
				href  = "/user/admin/nsda/calendar_admin.mhtml"
			>  
				Calendar Edit
			</a>

			<a 
				class = "<% $whoami eq "add_calendar" ? "dk" : "" %>blue half"
				href  = "/index/wsdc_calendar.mhtml"
			>  
				Add to Calendar
			</a>

			<a 
				class = "<% $whoami eq "bqd" ? "dk" : "" %>blue half"
				href  = "/user/admin/nsda/bqd.mhtml"
			>
				BQD Ballot Settings
			</a>

			<a 
				class = "<% $whoami eq "bqd" ? "dk" : "" %>blue half"
				href  = "/user/admin/nsda/district_forms.mhtml"
			>
				District Forms
			</a>

%	}

%	unless ($nodiv) { 
		</div>
%	}


	</div>
