<%args>
	$edit_id => undef
</%args>
<%init>

	my $edit = Tab::Person->retrieve($edit_id);

	my $resp;

	foreach my $login ($edit->logins) {
		$resp .= "<br/>" if $resp;
		$resp .= "LDAP sync for login ".$login->username." yielded: ";
		$resp .= $m->comp("/funclib/ldap_person.mas", login => $login, reset => $ARGS{"full"});

	}

	my $msg = "LDAP Accounts Renewed<br />$resp";

	$m->redirect("person_edit.mhtml?edit_id=".$edit_id."&msg=$msg");

</%init>
