<%args>
	$person
	$person_settings
	$session
	$district_id => undef
	$default     => undef
</%args>
<%init>

	$default = "committee";

	my $district = Tab::District->retrieve($district_id) if $district_id;

</%init>

	<& "/user/menu.mas", 
		person          => $person,
		person_settings => $person_settings,
		district        => $district
	&>

	<div class="main">

		<h2><% $district->name %></h2>

		<& "show_district.mas", 
			person          => $person,
			person_settings => $person_settings,
			district        => $district,
			default         => $default
		&>

	</div>



