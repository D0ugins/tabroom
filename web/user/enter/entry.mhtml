%			my $disclaimed = Tab::Person->retrieve($school_settings{"disclaimed"});
%			my $disclaimed_at = $school_settings{'disclaimed_at'};
%			$disclaimed_at->set_time_zone($tz) if $disclaimed_at;

			<div class="full">

				<span class="nospace third"> 
