%					foreach my $empty (@empties) { 

						<div class="full centeralign">
							<a 
								href="/user/enter/details.mhtml?school_id=<% $school->id %>&entry_id=<% $empty->id %>"
								class="button dkred"
							>
								<% $empty->code %> in
								<% $empty->event->abbr %>
							</a>
						</div>
%					}

