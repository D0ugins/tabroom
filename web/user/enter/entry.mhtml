%					if ($strike_end) { 
		
						<tr class="row">
		
							<td class="smaller">	
								<% $category->name %> strikes/ratings due by:
							</td>
		
							<td class="smaller">
								<% &Tab::nicedt($strike_end->set_time_zone($tourn->tz)) %>
							</td>

