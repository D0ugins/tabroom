		%reasons = $m->comp(
			"/funclib/judgemath/nats_check_judging.mas",
			school => $school
		);

        foreach my $student (
			$m->comp('/funclib/school_students.mas', school => $school)
		) {
            $m->comp("/funclib/status_check.mas",
                school  => $school,
                student => $student
            );
        }
	}

