<%args> 
	$school
	$person
	$event_id => undef
</%args>
<%init>

	my $tourn = $school->tourn;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now;

	my $dbh = Tab::DBI->db_Main();

	my $sth = $dbh->prepare("

		select entry_student.id, entry.id, entry.code, entry.name, entry.waitlist, entry.dropped, 
				student.id, student.chapter, student.first, student.last, student.ualt_id,
				event.name, event.abbr, event.id

		from entry_student, entry, student, event

		where entry.school = ? 
			and entry.id = entry_student.entry
			and entry_student.student = student.id
			and entry.event = event.id

			group by entry_student.id
			order by student.last, student.first

	");

	$sth->execute($school->id);

	my %students = ();
	my %entries = ();

	while (my (
		$entry_student_id, 
			$entry_id, $entry_code, $entry_name, $entry_waitlist, $entry_dropped, 
			$student_id, $student_chapter, $student_first, $student_last, $student_nsda,
			$event_name, $event_abbr, $event_id
		)  = $sth->fetchrow_array() ) {

		unless ($students{$student_id}{"name"}) { 
			$students{$student_id}{"name"} = $student_first." ".$student_last;
			$students{$student_id}{"last"} = $student_last;
			$students{$student_id}{"nsda"} = $student_nsda;
			$students{$student_id}{"chapter"} = $student_chapter;
		}

		unless ($entries{$entry_id}{"code"}) { 

			$entries{$entry_id}{"code"} = $entry_code;
			$entries{$entry_id}{"name"} = $entry_name;
			$entries{$entry_id}{"dropped"} = $entry_dropped;
			$entries{$entry_id}{"waitlist"} = $entry_waitlist;

			$entries{$entry_id}{"event_id"} = $event_id;
			$entries{$entry_id}{"event_name"} = $event_name;
			$entries{$entry_id}{"event_abbr"} = $event_abbr;

		}

		push @{$entries{$entry_id}{"students"}}, $student_id;
		push @{$students{$student_id}{"entries"}}, $entry_id;

	}

	my @unregistered_students = $school->chapter->students( retired => 0 );
	my $school_year = Tab::school_year();

	my $add_deadline = $tourn->reg_end; 
	$add_deadline->set_time_zone($tz);

	my $drop_deadline = $tourn->setting("drop_deadline");
	$drop_deadline = $add_deadline unless $drop_deadline;
	$drop_deadline->set_time_zone($tz);

</%init>

	<div class="menu">

		<div class="sidenote">

			<h4>Deadlines</h4>

			<div class="row">

				<span class="third">
					Add deadline
				</span>

				<span class="twothirds rightalign">
					<span class="half nospace">
						<% Tab::niceshortdayte($add_deadline) %>
					</span>
					<span class="half nospace">
						<% Tab::shorttime($add_deadline) %>
						<% Tab::tzname($tz) %>
					</span>
				</span>
			</div>

			<div class="row">

				<span class="third">
					Drop/namechange
				</span>

				<span class="twothirds rightalign">
					<span class="half nospace">
						<% Tab::niceshortdayte($drop_deadline) %>
					</span>
					<span class="half nospace">
						<% Tab::shorttime($drop_deadline) %>
						<% Tab::tzname($tz) %>
					</span>
				</span>
			</div>

		</div>

	</div>

	<div class="main">
	
		<h2><% $tourn->name %></h2>
		
		<& menu.mas, school => $school, whoami => "by_person" &>

		<h4>Registration by competitor</h4>
		<hr />

%		unless ($now > $add_deadline) { 

			<div class="full rightalign nospace">

				<span class="quarter rightalign">
					New entrant:
				</span>

				<span>

					<form 
						action="by_person_edit.mhtml" 
						method="post"
					>

						<input 
							type  = "hidden"
							name  = "school_id"
							value = "<% $school->id %>"
						>

						<select 
							name        = "student_id"
							class       = "fixedmed"
							onChange    = "this.form.submit();"
						>

							<option value=""></option>
%							foreach my $student (@unregistered_students) {

%								next if $student->grad_year < $school_year->year;
%								next if $students{$student->id};

								<option value="<% $student->id %>"><% $student->first." ".$student->last %></option>
%							}
						</select>

					</form>
				</span>
			</div>
%		}

%		foreach my $student_id (sort {$students{$a}{"last"} cmp $students{$b}{"last"} } keys %students) { 

			<div class="full nospace martop">

				<a 
					href="by_person_edit.mhtml?student_id=<% $student_id %>&school_id=<% $school->id %>"
					class="fa fa-sm button marleftmore marno buttonwhite thinner bluetext fa-edit"
				></a>

					<span class="threequarters">

						<h6>
							<% $students{$student_id}{"name"} %>
						</h6>

					</span>

%					unless ($now > $drop_deadline) { 

%						my $warn = "This will drop ".$students{$student_id}{"name"}." from ALL ";
%						$warn .= scalar @{$students{$student_id}{"entries"}};
%						$warn .= " entries.  Continue only if you are certain!";

						<span class="fifth rightalign">

						<a 
							href="by_person_drop.mhtml?student_id=<% $student_id %>&school_id=<% $school->id %>"
							class="fa fa-sm button buttonwhite thinner redtext fa-trash"
							<& "/funclib/confirm.mas", warn => $warn &>
						></a>

						</span>

%					}

			</div>


%			foreach my $entry_id (@{$students{$student_id}{"entries"}}) { 

				<div class="lightrow <% $entries{$entry_id}{"dropped"} ? "strike" : "" %>">

					<span class="quarter centeralign redtext strong nostrike">
						<% $entries{$entry_id}{"dropped"} ? "DROPPED" : "" %>
						<% $entries{$entry_id}{"waitlist"} ? "WAITLIST" : "" %>
					</span>

					<span class="fifth">
						<% $entries{$entry_id}{"event_name"} %>
					</span>

					<span class="fifth">
						<div class="full padno">
							<% $entries{$entry_id}{"code"} %>
						</div>
					</span>

					<span class="third">

%						my $notfirst;

%						foreach my $other_id (@{$entries{$entry_id}{"students"}}) { 

%							next if $other_id == $student_id;

							<div class="full padno padleft">
								<% $notfirst++ ? "and" : "with" %> <% $students{$other_id}{"name"}  %>
							</div>

%						}
					</span>

				</div>

%			}

%		}

	</div>

