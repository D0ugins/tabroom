<%args>
	$category_id
	$school_id
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);

	my $category = Tab::Category->retrieve($category_id);

	my $judge_hire = Tab::JudgeHire->search(
		category => $category->id,
		school   => $school->id
	)->first;

	if ($ARGS{"hires"} > 0) { 

		if ($judge_hire) { 

			$judge_hire->rounds_requested($ARGS{"hire"});
			$judge_hire->rounds_accepted($ARGS{"hire"});

		} else { 

			Tab::JudgeHire->create({
				category         => $category->id,
				school           => $school->id,
				rounds_requested => $ARGS{"hire"},
				rounds_accepted  => $ARGS{"hire"}
			});

			

		}

	}

	unless


</%init>

