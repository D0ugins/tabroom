						<span class="half">
							<% $tourn_cap %>
						</span>

					</div>
%				}

%				if ($tourn_school_cap) {

					<div class="full row">

						<span class="half">
							School tourn cap
						</span>

						<span class="half">
							<% $tourn_school_cap %>
						</span>

					</div>
%				}

