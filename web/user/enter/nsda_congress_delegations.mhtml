<%args>
	$person
	$session
	$school_id
	$save => undef
</%args>
<%init>

	my $school = Tab::School->retrieve($school_id);
	$m->abort unless $school;

	my $tourn = $school->tourn;
	$m->abort unless $school->chapter;
	$m->abort unless $tourn->setting("nsda_district");

	my $district = Tab::District->retrieve($tourn->setting("nsda_district")); 

	my $event = Tab::Event->search(
		tourn => $tourn->id,
		abbr  => "HOU"
	)->first;

	unless ($event) { 
		$m->comp("/funclib/abort.mas", 
			warning => "No event for the House found."
		);
	}

	my $num_houses = $event->setting("house_chambers");
	my @entries = $school->entries( event => $event->id );

	my %entry_errors = ();
	my %chamber_count;

	my $errs;

	if ($save) { 

		foreach my $entry (@entries) { 

			my $chamber = $ARGS{$entry->id."_bloc"};

			if (not defined $chamber) { 

				$chamber = 0;
				$entry_errors{"blank"}{$entry->id}++;

			} elsif ($chamber < 1 || $chamber > $num_houses) { 

				$entry_errors{"range"}{$entry->id}++;

			} else { 

				$entry->setting("nsda_house_bloc", $chamber);
				$chamber_count{$chamber}++;
			}
			
		}

		$save = "Bloc information saved";

	}

	my $min;
	my $max;

	foreach my $chamber (1 .. $num_houses) { 

		$min = $chamber_count{$chamber} 
			if not defined $min;

		$min = $chamber_count{$chamber} 
			if defined $min
			&& $min > $chamber_count{$chamber};

		$max = $chamber_count{$chamber} 
			if $chamber_count{$chamber} > $max;

	}


	if (  ($max - $min) > 1) { 
		$errs  = "Your blocs are unbalanced.  House bloc assignemnts must be as even as possible.";
	}

</%init>

%	if ($errs) { 

		<script type="text/javascript" language="javascript">
			$(document).ready(function() {
				$.jGrowl("<% $errs %>", { 
					header   : 'Warning',
					life     : 8000,
					theme    : 'warning',
					position : 'top-center',
					closer   : false 
				});
			});

		</script>

%	}

%	if ($save) { 

		<script type="text/javascript" language="javascript">
			$(document).ready(function() {
				$.jGrowl("<% $save %>", { 
					header   : 'Message',
					life     : 5000,
					position : 'top-center',
					closer   : false
				});
			});
		</script>

%	}

	<& 
		"nsda_menu.mas", 
		school => $school,
		whoami => "home"
	&>

	<div class="main">

		<& 
			"tabbar.mas", 
			school => $school, 
			whoami => "nsda"
		&>

		<h4>Congress House Delegations</h4>


		<form 
			action = "nsda_congress_delegations.mhtml"
			method = "post"
		>

		<input 
			type  = "hidden"
			name  = "school_id"
			value = "<% $school->id %>"
		>

		<input 
			type  = "hidden"
			name  = "save"
			value = "1"
		>

		<div class="yellowrow strong smallish padless">

			<span class="sixth">
				Code
			</span>

			<span class="half">
				Entry Name
			</span>

			<span class="third">
				Bloc
			</span>

		</div>

%		foreach my $entry (@entries) {

			<div class="<% $entry_errors{"blank"}{$entry->id} ? "lirdrow": "lightrow" %>">

				<span class="sixth">
					<% $entry->code %>
				</span>

				<span class="half">
					<% $entry->name %>
				</span>

				<span class="third nospace">

%					foreach my $house (1 .. $num_houses) { 

						<label for="<% $entry->id %>_<% $house %>">

						<span class="third marno hover">

							<input 
								type  = "radio"
								name  = "<% $entry->id %>_bloc"
								value = "<% $house %>"
								id    = "<% $entry->id %>_<% $house %>"
								<% 
									$entry->setting("nsda_house_bloc") == $house 
									? 'checked="checked"' 
									: "" 
								%>
							>
							<% $house %>
						</span>

						</label>
%					}

				</span>

			</div>

%		}

		<div class="liblrow marno rightalign">

			<input	
				type  = "submit"
				value = "Save Blocs"
			>

		</div>

	</div>



