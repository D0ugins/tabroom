<%args>
	$school
	$category_id => undef 
	$person
	$prefs => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id) if $category_id;
	my $tourn = $school->tourn;

	use POSIX;
	my $now = DateTime->now;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $strike_end = $category->setting("strike_end");
	my $read_only++ if $strike_end < $now;

	my $strike_start = $category->setting("strike_start");
	$strike_start->set_time_zone($tz) if $strike_start;
	$read_only++ if $strike_start > $now;

    my $freebieref = $m->comp("/funclib/free_strikes.mas", category => $category); 
    my %freebie = %{$freebieref}; 

    my %rating_name = (); 
    foreach my $tier ($category->rating_tiers) { 
        $rating_name{$tier->id} = $tier->name if $tier->id;
    }   

    my %rating_by_judge = (); 

	if ($category->setting("coach_ratings")) { 
	    foreach my $rating ($m->comp("/funclib/category_ratings.mas", category => $category, type => "coach")) { 
	        $rating_by_judge{$rating->judge->id} = $rating_name{$rating->rating_tier->id} if $rating->judge && $rating->rating_tier && $rating->judge->id && $rating->rating_tier->id;
	    }   
	}   

	my @judges = Tab::Judge->search( category => $category->id, active => 1 );
	@judges = sort {$a->last cmp $b->last} @judges;
	@judges = sort {$a->school->name cmp $b->school->name} @judges;

	my %conflicts_by_id = ();
	my @school_conflicts = $m->comp("/funclib/school_conflicts.mas", school => $school, category => $category);
	foreach (@school_conflicts) { 
		$conflicts_by_id{$_->judge->id} = $_; 
	}

	my $bank = $category->setting("school_strikes");

	my %strikes_by_id = ();
	my @school_strikes = $m->comp("/funclib/school_strikes.mas", school => $school, category => $category);
	foreach (@school_strikes) { 
		$strikes_by_id{$_->judge->id} = $_; 
		$bank-- unless $freebie{$_->judge->id};
	}

	@judges = sort { $strikes_by_id{$b->id} <=> $strikes_by_id{$a->id} } @judges;
	my $switch;

</%init>

	<& /funclib/tablesorter.mas, table => "strikes" &>

    <div class="menu">

		<& menu.mas,
			person      => $person,
			school      => $school,
			whoami      => "school_strikes",
			nodiv       => 1,
			category_id => $category->id 
		&>

	</div>

	<div class="main">

%		unless ($prefs) {
			<h2><% $school->name %> at the <% $tourn->name %></h2>
			<& ../tabbar.mas, school => $school, whoami => "ratings" &>
%		}


		<div>
			<span class="twothird">
				<h4>School-wide Strikes in <% $category->abbr %></h4>
			</span>

			<span class="third right">
				<h5>Limit: <% $category->setting("school_strikes") %></h5>
			</span>
		</div>

%		if ($read_only) { 
			<p>Pref deadline was <% Tab::nicedt($strike_end) %> (Timezone: <% $tz %>).  
%		}


		<table cellpadding="4" width="100%" id="strikes">

			<thead>

				<tr class="yellowrow">

					<th>
						First
					</th>

					<th>
						Last
					</th>
	
					<th>
						School
					</th>

%					if ($category->setting("coach_ratings")) { 
						<th>
							Exp
						</th>
%					}

%					if ($category->strike_timeslots) {
						<th>
							Constraints 
						</th>
%					}

					<th>
						Strike
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $judge (@judges) {

%					next if $judge->school && $judge->school->id == $school->id;
%					next if $conflicts_by_id{$judge->id};
%					my $paradigm = $judge->person->setting("paradigm") if $judge->person;

%					if ($freebie{$judge->id}) { 
						<tr class="ligrnrow">
%					} elsif ($strikes_by_id{$judge->id}) { 
						<tr <% ($switch++ % 2) ? "class=\"evenrow\"" : "class=\"oddrow\"" %>>
%					} else { 
						<tr>
%					}

						<td class="smallish">
%							if ($paradigm) { 
								<a class="white" href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>" target="_blank">
%							} else { 
								<a class="white" href="http://judgephilosophies.wikispaces.com/<% $judge->last %>%2C+<% $judge->first %>" target="_blank">
%							} 
								<% $judge->first %>
							</a>
						</td>

						<td class="smallish">
%							if ($paradigm) { 
								<a class="white" href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>" target="_blank">
%							} else { 
								<a class="white" href="http://judgephilosophies.wikispaces.com/<% $judge->last %>%2C+<% $judge->first %>" target="_blank">
%							} 
								<% $judge->last %>
							</a>
						</td>
				
						<td class="smaller">
							<% ($judge->school->id) ? $judge->school->short_name." ".$judge->school->chapter->state : "Hire" %>
						</td>

%						if ($category->setting("coach_ratings")) { 
							<td class="smaller centeralign">
								<% $rating_by_judge{$judge->id} %>
							</td>
%						}
				
%						if ($category->strike_timeslots) {
							<td class="smaller">
%								foreach my $strike_timeslot ($category->strike_timeslots) { 
									<div>
										<% ($strike_timeslot->strike($judge)) ? "No rounds ".$strike_timeslot->name : "" %>
									</div>
%								}
							</td>
%						}

						<td align="center">

%							if ($conflicts_by_id{$judge->id}) { 

								<a class="noblock">Conflict</a>

%							} elsif ($read_only) { 

								<span style="color: #006600; font-weight: bold; color: <% $strikes_by_id{$judge->id} ? "#660000" : "#006600" %>">
									<% ($strikes_by_id{$judge->id}) ? "Struck" : "Not Struck" %>
								</span>

%							} else { 

%								if ($bank || $strikes_by_id{$judge->id} || $freebie{$judge->id}) { 
									<a class="<% $strikes_by_id{$judge->id} ? "dkred" : "dkblue" %> block" 
										href="school_strike_switch.mhtml?school_id=<% $school->id %>&judge_id=<% $judge->id %>&category_id=<% $category->id %>">
										<% ($strikes_by_id{$judge->id}) ? "Unstrike" : "Steee-rike!" %>
									</a>
%								}
%							}

						</td>

					</tr>	

%				}	
				
			</tbody>

		</table>

	</div>

