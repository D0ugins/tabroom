<%args>
	$school
	$category_id => undef 
	$entry_id => undef
	$person
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id) if $category_id;
	my $entry = Tab::Entry->retrieve($entry_id) if $entry_id;
	my $tourn = $school->tourn;

	use POSIX;
	my $now = DateTime->now;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
	my $strike_end = $category->setting("strike_end");
	$strike_end->set_time_zone($tz) if $strike_end;
	my $read_only++ if $strike_end < $now;

	my $strike_start = $category->setting("strike_start");
	$strike_start->set_time_zone($tz) if $strike_start;
	$read_only++ if $strike_start > $now;

	undef $read_only if $entry && $entry->setting("open_prefs");

    my $freebieref = $m->comp("/funclib/free_strikes.mas", category => $category); 
    my %freebie = %{$freebieref}; 

    my %rating_name = (); 
    foreach my $tier ($category->rating_tiers) { 
        $rating_name{$tier->id} = $tier->name;
    }   

    my %rating_by_judge = (); 
    foreach my $rating (
		$m->comp(
			"/funclib/category_ratings.mas", 
			category => $category,
			type     => "coach"
		)
	) { 

        $rating_by_judge{$rating->judge->id} = $rating_name{$rating->rating_tier->id} 
			if $rating->judge && $rating->rating_tier;
    }   

	my @judges = Tab::Judge->search( category => $category->id, active => 1 );
	@judges = sort {$a->last cmp $b->last} @judges;
	@judges = sort {$a->school->name cmp $b->school->name} @judges;

	my %conflicts_by_id = ();

	my @entry_conflicts = $m->comp(
		"/funclib/entry_conflicts.mas", 
			entry     => $entry,
			category  => $category,
			conflicts => 'only'
	) if $entry;

	my @school_conflicts = $m->comp(
		"/funclib/school_conflicts.mas", 
			school    => $school,
			category  => $category,
			conflicts => 'only'
	) if $entry;

	foreach (@entry_conflicts, @school_conflicts) { 
		$conflicts_by_id{$_->judge->id} = $_; 
	}

	my $bank = $category->setting("entry_strikes");

	my %strikes_by_id = ();

	my @entry_strikes = $m->comp(
		"/funclib/entry_strikes.mas", 
			entry    => $entry,
			category => $category
	) if $entry;

	my %dedupe;

	foreach (@entry_strikes) { 

		if ($dedupe{$_->judge->id."-".$_->entry->id."-".$_->type}++) { 

			$_->delete;

		} else { 

			$strikes_by_id{$_->judge->id} = $_; 
			$bank-- unless $freebie{$_->judge->id};
		}
	}

	my $switch;

    my @school_strikes = $m->comp(
		"/funclib/school_strikes.mas", 
			school => $school, 
			category => $category 
		);


    my %school_strikes_by_id = ();
    foreach (@school_strikes) { 
		$school_strikes_by_id{$_->judge->id} = $_; 
	}

	@judges = sort { $school_strikes_by_id{$b->id} <=> $school_strikes_by_id{$a->id} } @judges;

	@judges = sort { $strikes_by_id{$b->id} <=> $strikes_by_id{$a->id} } @judges;

	my @event_struck_judges = $m->comp(
		"/funclib/event_strike_judges.mas", 
		event => $entry->event
	) if $entry;


	my %event_struck = map {$_->id => 1} @event_struck_judges;

</%init>

	<& /funclib/tablesorter.mas, table => "strikes" &>

    <div class="menu">

		<& menu.mas, 
			person   => $person,
			school   => $school,
			whoami   => "entry_strikes",
			nodiv    => 1,
			category_id => $category->id,
			entry_id => $entry_id &>

	</div>

	<div class="main">


		<& ../tabbar.mas, school => $school, whoami => "ratings" &>

%		unless ($entry) { 

			<h5>Choose an entry at right to enter strikes for</h5>

%		} else { 

		<span class="twothird">
			<h4>Strikes for <% $entry->name %></h4>
		</span>

		<span class="third rightalign">
			<h5>Limit: <% $category->setting("entry_strikes") %></h5>
		</span>

%		if ($read_only) { 
			<p>Pref deadline was <% Tab::nicedt($strike_end) %> (Timezone: <% $tz %>).  
%		} elsif (%freebie) { 
			<p>Judges highlighted in green are free strikes</p>
%		}

		<table cellpadding="4" width="100%" id="strikes">

			<thead>

				<tr class="yellowrow">

					<th>
						First
					</th>

					<th>
						Last
					</th>
	
					<th>
						School
					</th>

%					if ($category->setting("coach_ratings")) { 
						<th>
							Exp
						</th>
%					}

%					if ($category->strike_timeslots) {
						<th>
							Constraints 
						</th>
%					}

					<th>
						Strike
					</th>

				</tr>

			</thead>

			<tbody>

%				foreach my $judge (@judges) {

%					next if $event_struck{$judge->id};
%					next if $judge->school && $judge->school->id == $school->id;
%					my $paradigm = $judge->person->setting("paradigm") if $judge->person;

					<tr <% $freebie{$judge->id} ? 'class="ligrnrow"' : "" %>>

						<td class="smallish">
%							if ($paradigm) {
								<a 
									class  = "white"
									target = "_blank"
									href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>" 
								>
%							} else { 
								<a 
									class="white" 
									target="_blank"
									href="http://judgephilosophies.wikispaces.com/<% $judge->last %>%2C+<% $judge->first %>" 
								>
%							} 
								<% $judge->first %>
							</a>
						</td>

						<td class="smallish">
%							if ($paradigm) {
								<a 
									class="white" 
									target="_blank"
									href="/index/paradigm.mhtml?judge_person_id=<% $judge->person->id %>" 
								>
%							} else { 
								<a 
									class="white" 
									target="_blank"
									href="http://judgephilosophies.wikispaces.com/<% $judge->last %>%2C+<% $judge->first %>" 
								>
%							} 
								<% $judge->last %>
							</a>
						</td>
				
						<td class="smaller">
							<% ($judge->school->id) ? $judge->school->short_name." ".$judge->school->chapter->state : "Hire" %>
						</td>

%						if ($category->setting("coach_ratings")) { 
							<td class="smaller centeralign">
								<% $rating_by_judge{$judge->id} %>
							</td>
%						}
				
%						if ($category->strike_timeslots) {
							<td class="smaller">
%								foreach my $strike_timeslot ($category->strike_timeslots) { 
									<div>
										<% ($strike_timeslot->strike($judge)) ? "No rounds ".$strike_timeslot->name : "" %>
									</div>
%								}
							</td>
%						}

						<td class="centeralign padless">

%							if ($conflicts_by_id{$judge->id}) { 
								<a class="red button">Conflict</a>
%							} elsif ($school_strikes_by_id{$judge->id}) { 
								<a class="red button">School Strike</a>
%							} elsif ($read_only) { 
								<span class="<% $strikes_by_id{$judge->id} ? "dkred" : "dkblue" %>">
									<% ($strikes_by_id{$judge->id}) ? "Struck" : "Not Struck" %>
								</span>
%							} else { 

%								if ($bank || $strikes_by_id{$judge->id} || $freebie{$judge->id} ) { 
									<a 
										class="<% $strikes_by_id{$judge->id} ? "redtext" : "bluetext" %> buttonwhite hover" 
										href="entry_strike_switch.mhtml?entry_id=<% $entry->id %>&school_id=<% $school->id %>&judge_id=<% $judge->id %>&category_id=<% $category->id %>"
									> <% ($strikes_by_id{$judge->id}) ? "Unstrike" : "Steee-rike!" %>
%								}

								</a>
%							}
						</td>

					</tr>	

%				}	
				
			</tbody>

		</table>

%		}

	</div>

