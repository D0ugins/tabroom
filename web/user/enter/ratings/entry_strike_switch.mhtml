<%args>
	$entry_id
	$judge_id
	$person
</%args>
<%perl>

	my $entry = Tab::Entry->retrieve($entry_id);
	my $judge = Tab::Judge->retrieve($judge_id);
	my $category = $entry->event->category;

	unless ($category->id == $judge->category->id) { 
		my $err = "You cannot strike judges outside your judge category.  Quit messing around.";
		$m->redirect("entry_strikes.mhtml?school_id=".$entry->school->id."&entry_id=$entry_id&category_id=".$category->id."&err=$err");
	}

    # Get the list of existing strikes.
    my @strikes = $m->comp('/funclib/entry_strikes.mas', entry => $entry );
    my %strikes_by_id = ();

    my $freebieref = $m->comp("/funclib/free_strikes.mas", category => $category); 
    my %freebie = %{$freebieref}; 

	my $bank = $category->setting("entry_strikes");

    foreach (@strikes) { 
		$strikes_by_id{$_->judge->id} = $_; 
		$bank-- unless $freebie{$_->judge->id};
	}

	if ($strikes_by_id{$judge_id}) {

		$strikes_by_id{$judge_id}->delete;
		my $msg = "You have un-struck ".$judge->first." ".$judge->last;
		$m->redirect("entry_strikes.mhtml?school_id=".$entry->school->id."&entry_id=$entry_id&category_id=".$category->id."&msg=$msg");
		$bank++;

	} elsif ($freebie{$judge_id} || $bank > 0) { 

		$bank--;

		my $strike = Tab::Strike->create({
			tourn => $category->tourn->id,
			entry => $entry_id,
			type => "entry",
			registrant => 1,
			judge => $judge_id
		});

		my $msg = "You have struck ".$judge->first." ".$judge->last." like a gong.";
		$m->redirect("entry_strikes.mhtml?school_id=".$entry->school->id."&entry_id=$entry_id&category_id=".$category->id."&msg=$msg#yo");
	
	} else { 

		my $msg = "You already have reached your strike limit.  Unstrike a judge if you hate that judge sufficiently to strike them";
		$m->redirect("entry_strikes.mhtml?school_id=".$entry->school->id."&entry_id=$entry_id&category_id=".$category->id."&msg=$msg#yo");

	}
	
</%perl>

