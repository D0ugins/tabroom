<%args>
	$person
	$school
</%args>
<%init>

	use POSIX;

	my $tourn = $school->tourn;
	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

    my $now = DateTime->now(time_zone => $tz);

	my $interps; 

	foreach my $event ($tourn->events) {

		$interps++ if $event->setting('ask_for_titles');

	}

</%init>

	<& 
		"nsda_menu.mas", 
		school => $school,
		whoami => "home"
	&>

	<div class="main">

		<& 
			"tabbar.mas", 
			school => $school, 
			whoami => "nsda"
		&>

		<h4 class="martopmore padmuchmore">
			Forms and guidelines for NSDA District Tournaments
		</h4>

		<h6 class="greentext">Where are the green sheets?</h6>

		<p class="padmore marbottommore">
			The full registration forms (with your principal's signature) is
			<span class="strong inline">no longer required</span> for registration
			at Districts.  You only need to download and sign the School Consent Form
			and Single Entry letters below.
		</p>

		<div class="full lightrow padmuchmore">

			<span class="third">
				<h6>1. School Consent Forms</h6>
			</span>

			<span class="twothirds">

%			foreach my $weekend ($tourn->weekends()) { 

				<div class="nospace borderbottom">

					<span class="quarter">
						<% $weekend->name %>  
					</span>
					<span class="quarter">
						<% $weekend->start->month_name %> <% $weekend->start->day %>
					</span>
					<span class="half centeralign">
						<a 
							class = "buttonwhite smallish bluetext hover"
							href  = "nsda_school_consent.mhtml?school_id=<% $school->id %>&weekend_id=<% $weekend->id %>"
						>
							Print Form
						</a>
					</span>
				</div>

%			}

			</span>

		</div>

		<div class="full lightrow padmuchmore">

			<span class="threequarters">
				<h6>2. Single Entry Letters of Intent</h6>
			</span>

			<span class="quarter">
				<a 
					class = "buttonwhite bluetext hover bigger block centeralign"
					href  = "nsda_single_entry.mhtml?school_id=<% $school->id %>"
				>
					Enter Preferences
				</a>
			</span>

		</div>


%		if ($interps && $person->site_admin) { 

			<div class="full lightrow padmuchmore">

				<span class="threequarters">
					<h6>3. Interp Piece Titles Report</h6>
				</span>

				<span class="quarters">
					<a 
						class = "buttonwhite redtext hover
								fa fa-lg fa-file-pdf-o"
						href  = "nsda_interp_titles.mhtml?form=pdf&school_id=<% $school->id %>"
					>
					</a>

					<a 
						class = "buttonwhite greentext hover
								fa fa-lg fa-file-excel-o"
						href  = "nsda_interp_titles.mhtml?form=csv&school_id=<% $school->id %>"
					>
					</a>
				</span>

			</div>

%		}

	</div>

