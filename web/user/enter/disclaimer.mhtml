<%args>
	$person
	$school
</%args>
<%init>

	my $tourn = $school->tourn;

	my %tourn_settings = $tourn->all_settings();

</%init>

	<div class="main">
	
		<h2><% $tourn->name %></h2>

		<h4>Notes/Disclaimer</h4>

%		if ($tourn_settings{"nsda_district"}) { 

			<p class="strong">
				The coach(es) of all schools attending districts to qualify for
				the National tournament must agree to the following statement:
			</p>

%		}

		<div class="padmore border martopmore">
			<p>
				<% $tourn_settings{"disclaimer"} %>
			</p>
		</div>

%		if ($tourn_settings{"refund_information"}) { 

			<form action="refund_save.mhtml" method="post">

			<input 
				type  = "hidden"
				name  = "school_id"
				value = "<% $school->id %>"
			>

			<div class="lightrow martopmore">

				<span class="half">
					Make refund checks payable to:
				</span>

				<span class="half">
					<input 
						type="text" 
						name="refund_payable" 
						size="34"
						value="<% $school->setting('refund_payable') %>"
					>
				</span>

			</div>

			<div class="lightrow">

				<span class="half">
					Address to send refund checks
				</span>

				<span class="half">
					<textarea 
						name="refund_address" 
						cols="32" 
						rows="4"
					><% $school->setting('refund_address') %></textarea>
				</span>

			</div>

			<div class="liblrow rightalign">

				<input 
					type  = "submit"
					value = "Save Refund Information"
				>

			</div>


%		} elsif ($tourn_settings{"nsda_district"}) {

			<div class="full lightrow padmore martopmore rightalign">
				<a 
					class="buttonwhite bluetext hover invert" 
					href="nsda_roster_check.mhtml?school_id=<% $school->id %>&disclaimed=1"
				>
					I understand and agree
				</a>
			</div>

%		} else { 
		
			<div class="full lightrow padmore martopmore rightalign">
				<a 
					class="buttonwhite bluetext hover invert" 
					href="entry.mhtml?school_id=<% $school->id %>&disclaimed=1"
				>
					I understand and agree
				</a>
			</div>

%		}

	</div>

