<%args>
	$person
	$school
</%args>
<%init>

	my $tourn = $school->tourn;

</%init>

	<div class="main">
	
		<h2><% $tourn->name %></h2>

		<h4>Before you register, a word from the tournament:</h4>

		<br />

		<div style="border: 2px solid black; padding: 15px;">

			<% $tourn->setting("disclaimer") %>

		</div>

		<br />
		<br />
		<br />

%		if ($tourn->setting("refund_information")) { 

			<form action="refund_save.mhtml" method="post">
			<input type="hidden" name="school_id" value="<% $school->id %>">

			<div class="row">

				<span class="half">
					Make refund checks payable to:
				</span>

				<span class="half">
					<input type="text" name="refund_payable" size="34">
				</span>

			</div>

			<div class="row">

				<span class="half">
					Address to send refund checks
				</span>

				<span class="half">
					<textarea name="refund_address" cols="32" rows="4"></textarea>
				</span>

			</div>

			<div class="liblrow rightalign">

				<input type="submit" value="Save Refund Information">

			</div>


%		} else { 
		
			<div class="yellowrow full centeralign">
				<a class="dkblue button" href="entry.mhtml?school_id=<% $school->id %>">
					I understand and agree
				</a>
			</div>

%		}

	</div>

