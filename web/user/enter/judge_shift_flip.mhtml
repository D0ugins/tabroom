<%args>
	$school_id
	$judge_id
	$shift_id
</%args>
<%init>

	my $shift = Tab::JudgeShift->retrieve($shift_id);

	my $school = Tab::School->retrieve($school_id);
	my $judge = Tab::Judge->retrieve($judge_id);
	
	my $strike =  $shift->strike($judge);

	if ($strike) { 

		$strike->delete;

	} else { 

		my $strike = Tab::Strike->create({
			tourn => $school->tourn->id,
			shift => $shift->id,
			type  => "time",
			judge => $judge->id,
			start => $shift->start,
			end   => $shift->end
		});

	}

	$m->redirect("judge_shift.mhtml?school_id=".$school->id."&judge_id=".$judge->id);

</%init>
