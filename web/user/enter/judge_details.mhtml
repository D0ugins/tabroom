			my @days = $m->comp("/funclib/tourn_days.mas", tourn => $tourn);
</%perl>

			<div class='full explain'>
				<% $category_settings{"departure_notice"} %>
			</div>

			<div class="row">

				<span class="third semibold redtext">
					Judge will depart the tournament at:
				</span>

				<span class="third">
<%perl>

			   		if (scalar @days > 1) {

						foreach my $day (@days)  {
</%perl>
							<label for="start_<% $day->ymd %>">
								<span class="quarter hover marno">
									<input
										type  = "radio"
										name  = "departure_date"
										value = "<% $day->mdy('/') %>"
										id	= "start_<% $day->ymd %>"
										<% $departure && ($day->ymd eq $departure->ymd) ? "checked" : "" %>
									>
									<% $day->day_abbr %>
								</span>
							</label>
%				   		}
%					} else {

						<input
							type  = "hidden"
							name  = "departure_date"
							value = "<% $days[0]->mdy('/') %>"
						>
%					}
				</span>

				<span class="third">
					Time:
					<& "/funclib/timepicker.mas",
						name => "departure_time",
						size => 8,
						time => $departure
					&>
				</span>
			</div>
%		}

%		if ($category_settings{"diversity_selfie"}) {

