<%args>
    $person
    $school_id  => undef
</%args>
<%init>

    my $school = Tab::School->retrieve($school_id);

	unless ($school > 0) {
		$m->comp("/funclib/abort.mas", messages => "School not found for ID $school_id");
	}

    $m->comp( "/funclib/create_nsda_invoice.mas",
        person => $person,
        school => $school,
        admin  => 0
    );

</%init>
