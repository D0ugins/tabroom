		<div class="sidenote">

			<h4>Competitor</h4>

			<div class="row full">
				<% $student->first." ".$student->middle." ".$student->last %>
			</div>

			<div class="row full">
				Graduates: <% $student->grad_year %>
			</div>

			<div class="row full">
				<% $student->person ? $student->person->email : "" %>
			</div>

		</div>

		<div class="sidenote">
		
			<h4>ADA Rooms</h4>		

			<p class="bigger">

