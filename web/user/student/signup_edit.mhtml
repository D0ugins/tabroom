				<label for="at_large">
					<div class="row hover">

						<span class="half rightalign padtopmore padbottommore">
							At-large applicant? 
						</span>

						<span class"third">
							<input 
								id    = "at_large"
								type  = "checkbox"
								class = "largecheck"
								name  = "atlarge"
								value = "1"
								<% $entry_settings{"atlarge"} ? 'checked="checked"' : "" %>
							>
						</span>

					</div>
				</label>
				
%			}

