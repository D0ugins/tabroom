<%args>
	$person
	$school_id => undef
	$student_id => undef
</%args>
<%init>

	my ($school, $student, $school_settings) = 
		$m->comp(
			"signup_check.mas",
			person     => $person,
			school_id  => $school_id,
			student_id => $student_id
		);

	my $tourn = $school->tourn;

	my @already = $m->comp(
		"/funclib/student_entries.mas", 
		student => $student,
		tourn   => $tourn
	);

	my $signup_memo = $school->files(
		type => "signup"
	)->first;

    my %ok_events = $m->comp(
		"/funclib/student_clear_events.mas", 
			student     => $student,
			school      => $school,
			unconfirmed => 1
    );  

	my $now = DateTime->now();

</%init>

	<& "/user/menu.mas", 
		whoami => "student", 
		person => $person
	&>

	<div class="main">

		<& "tourn_info.mas", 
			school          => $school,
			school_settings => $school_settings
		&> 

%		foreach my $entry (@already) { 

%			my $event = $entry->event;

			<div class="row">

				<span class="fifth">
					<a 
						class="plain full marno padmore hover" 
						target="_blank" 
						href="/index/tourn/events.mhtml?event_id=<% $event->id %>"
					><% $event->abbr %></a>
				</span>

%				unless ($tourn->setting("hide_codes")) { 
					<span class="fifth">
						<% $entry->code %>
					</span>
%				}

%				if ($school_settings->{"signup_show_fees"}) { 
					<span class="fifth">
						<% $event->fee 
							? $event->fee." per entry" 
							: "" 
						%>
						<% $tourn->setting("per_student_fee") 
							? $tourn->setting("per_student_fee")." per competitor" 
							: ""
						%>
						<% $tourn->setting("per_person_fee") 
							? $tourn->setting("per_person_fee")." per person" 
							: ""
						%>
					</span>
%				}

				<span class="fifth">
%					if ($entry->unconfirmed) { 

						<span class="full marno redtext semibold">
							No Coach Approval
						</span>

%					} elsif ($entry->waitlist) { 

						<span class="full marno orangetext semibold">
							Waitlisted
						</span>

%					} elsif ($entry->dropped) { 

						<span class="full marno orangetext semibold">
							Dropped
						</span>

%					} elsif ($entry->active) { 

						<span class="full marno bluetext semibold">
							Confirmed!
						</span>
%					}

				</span>

				<span class="centeralign tenth">

<%perl>
					if ($school_settings->{"signup_active"} 
						&& $entry->unconfirmed 
						&& $school_settings->{'signup_deadline'} > $now
					) { 

						my $warn = "This will drop your signup for this tournament.  Your partner(s), if any, will be notified as well.  You sure?";

</%perl>
						<a 
							id            = "<% $entry->id %>"
							target_id     = "<% $entry->id %>"
							on_success    = "destroy"
							property_name = "<% $entry->studentid %>"
							onClick       = "postConfirm('<% $warn %>', this, 'drop_entry.mhtml');"
							class         = "buttonwhite fa-sm fa fa-arrow-down redtext hover"
							title         = "Drop This Entry"
						>
						</a>
%					}

				</span>

			</div>

%		}

		<form 
			action = "signup_edit.mhtml"
			method = "post"
		>
			
			<input
				type  = "hidden"
				name  = "student_id"
				value = "<% $student->id %>"
			>

			<input
				type  = "hidden"
				name  = "school_id"
				value = "<% $school->id %>"
			>

		<div class="full nospace centeralign">

			<span class="mdborder pagelimit even">

				<span class="quarter semibold bluetext bigger">
					Register in:
				</span>

				<span class="half">

					<select 	
						name  = "event_id"
						class = "fixedbig"
					>

<%perl>
							my %event_by_id = map {$_->id => $_} $tourn->events;

							foreach my $event_id (
								sort 
								{$event_by_id{$a}->name cmp $event_by_id{$b}->name}
								keys %ok_events
							) { 

								my $event = $event_by_id{$event_id};
</%perl>
		
								<option 
									value="<% $event->id %>"
								><% $event->name %>
%									if ($school_settings->{"signup_show_fees"}) { 
										(<% $event->fee 
											? $event->fee." per entry" 
											: "" 
										%>)
%									}
								</option>
%							}

					</select>

				</span>

				<span class="quarter">
					<input 
						type  = "submit"
						value = "Sign Up"
					>
				</span>

			</span>

		</div>

	</div>

