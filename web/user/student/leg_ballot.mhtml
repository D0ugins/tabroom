<%args>
	$entry_id
	$person
</%args>
<%init>

	use Text::CSV;

	my $entry = Tab::Entry->retrieve($entry_id);
	$m->abort unless $entry;

	my $ok;

	foreach my $student ($entry->students) {
		next if $ok;
		$ok++ if $student->person == $person->id;
	}

	unless ($ok) {
		$m->comp("/funclib/abort.mas",
			message => "You may only fill out a legislation ballot for entries linked to your own Tabroom account"
		);
	}

	my $msg;
	my $err;

	my $event = $entry->event;
	my $tourn = $event->tourn;

	my $now = DateTime->now();

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;

	my %event_settings = $event->all_settings();

	my %bills = eval {
		return %{$event_settings{"leg_ballot"}};
	};

	my %votes = eval {
		return %{$entry->setting("leg_ballot")};
	};


	if ($ARGS{"saveme"}) {

		my %taken;

		foreach my $id (sort { $a <=> $b } keys %bills ) {

			if ($ARGS{$id}) {

				unless ($taken{$ARGS{$id}}++) {
					$votes{$id} = $ARGS{$id};
				} else {
					delete $votes{$id};
					$err .= "<br />" if $err;
					$err .= "You gave two bills a ranking of ".$ARGS{$id}.". Bill $id vote is now blank";
				}

			} else {
				delete $votes{$id};
			}
		}

		$entry->setting("leg_ballot", "json", \%votes);
		$msg = "Your votes have been recorded!";
	}

</%init>

    <& "/user/menu.mas",
        whoami => "competitor",
        person => $person,
    &>

%	if ($msg) {
		<script>
			$(document).ready(function() {
				alertify.notify('<% $msg %>', "custom");
			});

		</script>
%	}
%	if ($err) {
		<script>
			$(document).ready(function() {
				alertify.warning('<% $err %>');
			});

		</script>
%	}

	<div class="main">

		<div class="full nospace">
			<span class="fourfifths nospace">
				<h5>Legislation Ballot: <% $event->abbr %></h4>
			</span>

			<span class="fifth rightalign">
				<a
					class = "buttonwhite bluetext invert smallish"
					href = "/user/student/index.mhtml?default=future"
				>Return</a>
			</span>
		</div>

		<div class="full bluebordertop blueborderbottom">

			<span class="full centeralign semibold bigger bluetext">
				Rank each piece of legislation in order of your preference.  No ties, but blanks are allowed
			</span>

			<div class="full ltbordertop centeralign">
				<span class="fifth nospace semibold rightalign">
					Voting Opens
					<span class="halfspacer"></span>
				</span>

				<span class="twofifths nospace leftalign redtext semibold">
					<& "/funclib/showdt.mas",
						dt     => $event_settings{"leg_ballot_opens"},
						tz     => $person->tz,
						tzname => 1,
						length => "murica",
						at     => 1
					&>
				</span>
			</div>

			<div class="full ltbordertop centeralign padtop">
				<span class="fifth nospace semibold rightalign">
					Voting Closes
					<span class="halfspacer"></span>
				</span>

				<span class="twofifths nospace leftalign redtext semibold">
					<& "/funclib/showdt.mas",
						dt     => $event_settings{"leg_ballot_closes"},
						tz     => $person->tz,
						at     => 1,
						length => "murica",
						tzname => 1,
					&>
				</span>
			</div>

		</div>

%		if ($now < $event_settings{"leg_ballot_opens"}) {

			<p class="centeralign semibold redtext">
				Legislation Voting is not yet open.
			</p>

%		} elsif ($now > $event_settings{"leg_ballot_closes"}) {

			<p class="centeralign semibold redtext">
				Legislation Voting has closed.
			</p>

%		} else {

			<form
				action = "leg_ballot.mhtml"
				method = "post"
			>

				<input
					type  = "hidden"
					name  = "saveme"
					value = "yes"
				>

				<input
					type  = "hidden"
					name  = "entry_id"
					value = "<% $entry_id %>"
				>

			<div class="ltyellow full marno martop semibold padvertless smallish">
				<span class="tenth semibold bluetext">
					<span class="halfspacer"></span>
					#
				</span>

				<span class="threefifths nospace">
					Bill Title
				</span>

				<span class="tenth semibold bluetext">
					Link
				</span>

				<span class="tenth nospace centeralign">
					Your Rank
				</span>
			</div>

%			foreach my $id (sort { $a <=> $b } keys %bills ) {

				<div class="full row marno">
					<span class="tenth semibold bluetext">
						<span class="halfspacer"></span>
						<% $id %>.
					</span>

					<span class="threefifths nospace">
						<% ucfirst($bills{$id}{"label"}) %>
					</span>

					<span class="tenth semibold bluetext padvertno">
%						if ($bills{$id}{"url"}) {
							<a
								href     = "<% $bills{$id}{"url"} %>"
								class    = "fa fa-sm fa-link buttonwhite bluetext"
								target   = "_blank"
								tabindex = "-1"
							></a>
%						}
					</span>

					<span class="tenth nospace centeralign">
						<input
							type = "number"
							name = "<% $id %>"
							min  = "1"
							max  = "<% scalar (keys %bills) %>"
							value = "<% $votes{$id} %>"
						>
					</span>
				</div>
%			}

			<div class="full liblrow marno rightalign">
				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Save Your Vote"
					>
				</span>
			</div>

			</form>
%		}

	</div>
