<%args>
	$person
	$perms
	$region
	$chapter_id => undef
</%args>
<%init>

	my $msg;

	if ($region && $chapter_id) {

		Tab::ChapterCircuit->create({
			chapter => $chapter_id,
			circuit => $region->circuit->id,
			region  => $region->id
		});

		$msg = "Chapter added to ".$region->name;

	}

	$m->redirect("/user/diocese/schools.mhtml?region_id=".$region."&msg=$msg");


</%init>
