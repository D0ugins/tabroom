<%args>
	$region
	$tourn    
	$tourn_settings
</%args>
<%init>

	use POSIX;

	my $tz = $tourn->tz;
	$tz = "UTC" unless $tz;
    my $now = DateTime->now->set_time_zone($tz);

	my $filename = "Diocese-SchoolInvoices-".$region->name;
	$filename =~ s/[\W_]//g;

	my $filepath = $Tab::file_root."/tmp/";
	my $garbage = `rm -f $filepath"."$filename.*`;

    $m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		head     => 1,
		array    => "1.8" 
	);

	open (TEXOUT, ">>$filepath"."$filename.tex");

	foreach my $school (
		sort {$a->name cmp $b->name}
		$region->schools(tourn => $tourn->id)
	) {

		$m->comp("/funclib/ncfl/invoice_school_print.mas", 
			school           => $school,
			tourn            => $tourn,
			tourn_settings   => $tourn_settings,
			filename         => $filename,
			head             => 1,
			skip_concessions => 0,
			skip_payments    => 0,
			skip_entry       => 0
		);

	}

	$m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		tail     => 1
	);

</%init>
