<%args>
	$name => undef
	$all => undef
	$circuit
</%args>
<%init>

	my @chapters;
	undef $name if $name eq "Name";

	if ($name) { 

		Tab::Chapter->set_sql( chapter_name => "
			select distinct chapter.id
			from chapter, chapter_circuit
			where chapter.id = chapter_circuit.chapter
			and chapter_circuit.circuit = ? 
			and chapter.name like ?
			order by chapter.name
			");

			@chapters = Tab::Chapter->search_chapter_name($circuit->id, "%".$name."%");

	} elsif ($all) { 

		@chapters = $m->comp("/funclib/circuit_chapters.mas", circuit => $circuit);

	}

	my $switch;

</%init>

	<& "menu.mas", 
		whoami => "chapters", 
		circuit => $circuit 
	 &>

	<div class="main">

		<h2>School Search: <% $circuit->abbr %></h2>

		<form action="chapters.mhtml#default">
		<input 
			type  = "hidden"
			name  = "circuit_id"
			value = "<% $circuit->id %>"
		>

		<div class="row">

			<span class="sixth">
				School Name
			</span>

			<span class="half">
				<input 
					type        = "text"
					name        = "name"
					size        = "47"
					placeholder = "Name"
					value       = "<% $name %>"
				>
			</span>

			<span class="sixth centeralign">
				<input type="submit" value="Go">
			</span>

			<span class="sixth centeralign">
				<input 
					name  = "all"
					type  = "submit"
					value = "See All"
				>
			</span>


			</tr>

		</div>

		</form>


%		if (@chapters) { 

			<& "/funclib/tablesorter.mas", table => "members" &>

			<div class="nospace martopmore">

				<span class="half marno">
					<h4>Members found</h4>
				</span>

				<span 
					class = "half rightalign marno"
					id    = "members_buttonarea"
				>
				</span>

			</div>


			<table id="members">

				<thead>

					<tr class="yellowrow">

						<th>
							Name
						</th>

						<th>
							Contacts
						</th>

						<th>
							Location
						</th>

						<th>
							Edit
						</th>

						<th>
							Full member?
						</th>

						<th>
							Remove
						</th>
					</tr>

				</thead>

				<tbody>

%				foreach my $chapter (@chapters) { 
			
					<tr id="<% $chapter->id %>">

						<td class="limit2">
							<% substr($chapter->name,0,32) %>
						</td>

						<td class="smaller">

%							foreach my $admin (
%								$m->comp("/funclib/chapter_admins.mas", 
%									chapter => $chapter, 
%									contact => 1)
%							) { 
								<a 
									class = "nowrap full padless marless white"
									href  = "mailto:<% $admin->email %>"
									title = "<% $admin->email %>"
								>
									<span class="half">
										<% $admin->first." ".$admin->last %> 
									</span>
									<span class="half">
										(<% $admin->email %>)
									</span>
								</a>
%							}
						</td>

						<td class="centeralign">
							<% $chapter->state ? $chapter->state."/" : "" %><% $chapter->country %>
						</td>

						<td class="centeralign">
							<a 
								class = "buttonwhite bluetext fa fa-lg fa-edit"
								href  = "chapter_edit.mhtml?chapter_id=<% $chapter->id %>&circuit_id=<% $circuit->id %>"
							>
							</a>
						</td>

						<td class="centeralign">

							<span class="hidden"><% $chapter->member %></span>

							<label class="switch">
								<input 
									type          = "checkbox"
									value         = "1"
									property_name = "full_member"
									target_id     = "<% $chapter->id %>"
									setting_name  = "<% $circuit->id %>"
									onChange      = "postSwitch( this, 'member_switch.mhtml');"
									<% $chapter->member ? 'checked="checked"' : "" %>
								>
								<div class="slider"></div>

							</label>

						</td>


						<td class="centeralign">
							<a 
								class         = "buttonwhite redtext fa fa-trash"
								target_id     = "<% $chapter->id %>" 
								setting_name  = "<% $circuit->id %>"
								on_success    = "destroy"
								property_name = "rm_member"
								onClick       = "postSwitch(this, 'member_switch.mhtml');"
								title         = "Remove Member"
							></a>
						</td>

					</tr>

%				}

				</thead>

			</table>

%		} else { 
			
			<h5>None found</h5>

%		}


	</div>

