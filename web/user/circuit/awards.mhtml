<%args>
	$person
	$circuit
	$sweep_award => undef
	$sweep_set   => undef
	$default     => "award_settings"
</%args>
<%init>

	my %awards = map {$_->id => $_} $circuit->awards();

	my %sweep_sets;
	if ($sweep_award) {
		%sweep_sets = map {$_->id => $_} $sweep_award->sweep_sets();
	}

	my @tabs = ("award_settings");

	push @tabs, "rulesets" if $sweep_award;

</%init>

	<& menu.mas,
		circuit => $circuit,
		whoami  => "awards",
		award   => $sweep_award
	&>

	<div class="main">

		<span class="threefifths nospace">
			<h4>
				Cumulative Awards &amp; Qualifying Bids
			</h4>
		</span>

		<span class="twofifths nospace rightalign">
			<form
				action  = "awards.mhtml"
				method  = "post"
			>
				<input
					type  = "hidden"
					name  = "circuit_id"
					value = "<% $circuit->id %>"
				>

				<select
					name     = "sweep_award_id"
					class    = "fixedbig"
					onChange = "this.form.submit();"
				>
					<option value="">
						Add new award/qualification
					</option>

%					foreach my $award_id (sort {$awards{$a} cmp $awards{$b}} keys %awards) {
						<option
							value="<% $award_id %>"
							<% $award_id == $sweep_award ? 'selected' : "" %>
						>
							<% $awards{$award_id}->name %>
						</option>
%					}
				</select>
			</form>
		</span>

		<& "/funclib/tabs.mas",
			tabs    => \@tabs,
			default => $default,
		&>

		<div class="screens award_settings">

		<form
			action = "award_save.mhtml"
			method = "post"
		>

			<input
				type  = "hidden"
				name  = "circuit_id"
				value = "<% $circuit->id %>"
			>
			<input
				type  = "hidden"
				name  = "sweep_award_id"
				value = "<% $sweep_award %>"
			>

			<div class="row">
				<span class="third semibold bluetext">
					Name
				</span>
				<span class="twothirds">
					<input
						type  = "text"
						size  = "64"
						name  = "name"
						value = "<% $sweep_award ? $sweep_award->name : "" %>"
					>
				</span>
			</div>

			<div class="row">
				<span class="third semibold bluetext">
					Description
				</span>
				<span class="twothirds">
					<textarea
						type  = "text"
						rows  = "2"
						cols  = "64"
						name  = "description"
					><% $sweep_award ? $sweep_award->description : "" %></textarea>
				</span>
			</div>

			<div class="row">
				<span class="third semibold bluetext">
					Target
				</span>
				<span class="twothirds">
					<label for="entry">
						<span class="third hover">
							<input
								type  = "radio"
								name  = "target"
								id    = "entry"
								value = "entry"
								<% $sweep_award && $sweep_award->target eq "entry"
									? "checked"
									: ""
								%>
							>Entries/Teams
						</span>
					</label>
					<label for="individual">
						<span class="third hover">
							<input
								type  = "radio"
								name  = "target"
								id    = "individual"
								<% $sweep_award && $sweep_award->target eq "individual"
									? "checked"
									: ""
								%>
								value = "individual"
							>Individual Speakers
						</span>
					</label>
					<label for="school">
						<span class="third hover">
							<input
								type  = "radio"
								name  = "target"
								id    = "school"
								<% $sweep_award && $sweep_award->target eq "school"
									? "checked"
									: ""
								%>
								value = "school"
							>Schools/Institutions
						</span>
					</label>
				</span>
			</div>

			<div class="row">
				<span class="third semibold bluetext">
					Period
				</span>
				<span class="twothirds">
					<label for="annual">
						<span class="third hover">
							<input
								type  = "radio"
								name  = "period"
								id    = "annual"
								value = "annual"
								<% $sweep_award && $sweep_award->period eq "annual"
									? "checked"
									: ""
								%>
							>
							Annual
						</span>
					</label>
					<label for="cumulative">
						<span class="third hover">
							<input
								type  = "radio"
								name  = "period"
								id    = "cumulative"
								<% $sweep_award && $sweep_award->period eq "cumulative"
									? "checked"
									: ""
								%>
								value = "cumulative"
							>
							Cumulative
						</span>
					</label>
				</span>
			</div>

			<div class="row">
				<span class="third semibold bluetext">
					Count the best
				</span>
				<span class="twothirds">
					<span class="third hover">
						<input
							type  = "number"
							min   = "0"
							max   = "9999"
							name  = "count"
							value = "<% $sweep_award ? $sweep_award->count : "" %>"
						> scores
					</span>
					<span class="third hover italic">
						Leave blank to count all
					</span>
				</span>
			</div>

			<div class="row">
				<span
					title = "Minimum schools required in the event/division for points to be earned."
					class = "third semibold bluetext"
				>
					Minimum schools required
				</span>
				<span class="twothirds">
					<span class="third hover">
						<input
							type  = "number"
							min   = "0"
							max   = "9999"
							name  = "min_schools"
							value = "<% $sweep_award && $sweep_award->min_schools > 0 ? $sweep_award->min_schools : "" %>"
						> scores
					</span>
					<span class="third hover italic">
						Leave blank for no minimum
					</span>
				</span>
			</div>

			<div class="row">
				<span
					title = "Minimum entries required in the event/division for points to be earned."
					class = "third semibold bluetext"
				>
					Minimum entries required
				</span>
				<span class="twothirds">
					<span class="third hover">
						<input
							type  = "number"
							min   = "0"
							name  = "min_entries"
							max   = "9999"
							value = "<% $sweep_award && $sweep_award->min_entries > 0 ? $sweep_award->min_entries : "" %>"
						> scores
					</span>
					<span class="third hover italic">
						Leave blank for no minimum
					</span>
				</span>
			</div>

			<div class="libl row rightalign">
				<span class="third centeralign">
					<input
						type  = "submit"
						value = "Save Award Settings"
					>
				</span>
			</div>
		</form>

		</div>

%		if ($sweep_award) {

			<div class="screens rulesets nospace">

				<div class="full marno ltborderbottom">
					<span class="half">
						<h5>Rulesets for <% $sweep_award->name %></h5>
					</span>

					<span class="half nospace rightalign">

						<form
							action  = "awards.mhtml"
							method  = "post"
						>
							<input
								type  = "hidden"
								name  = "default"
								value = "rulesets"
							>

							<input
								type  = "hidden"
								name  = "circuit_id"
								value = "<% $circuit->id %>"
							>

							<input
								type  = "hidden"
								name  = "sweep_award_id"
								value = "<% $sweep_award->id %>"
							>

							<select
								name     = "sweep_set_id"
								class    = "fixedbig"
								onChange = "this.form.submit();"
							>
								<option value="">
									Add new ruleset
								</option>

%								foreach my $sweepset_id (sort {$sweep_sets{$a} cmp $sweep_sets{$b}} keys %sweep_sets) {
									<option
										value="<% $sweepset_id %>"
										<% $sweep_set && $sweepset_id == $sweep_set->id ? 'selected' : "" %>
									>
										<% $sweep_sets{$sweepset_id}->name %>
									</option>
%								}
							</select>
						</form>
					</span>
				</div>

				<div class="setup padtopless full">
					<&  "/funclib/sweeps/setup_set.mas",
						set         => $sweep_set,
						circuit     => $circuit,
						sweep_award => $sweep_award
					&>
				</div>

%				if ($sweep_set) {
					<div class="rules padtopmore full">
						<&  "/funclib/sweeps/show_rules.mas",
							set         => $sweep_set,
							circuit     => $circuit,
							sweep_award => $sweep_award
						&>
					</div>

					<div class="add_rules padtopmore full">
						<&  "/funclib/sweeps/add_rules.mas",
							set         => $sweep_set,
							circuit     => $circuit,
							sweep_award => $sweep_award
						&>
					</div>
%				}
			</div>
%		}

	</div>
