<%args>
	$person
	$name
	$abbr
	$circuit_id         => undef
	$timezone           => undef
	$state              => undef
	$country            => undef
</%args>
<%init>

	my $msg;
	my $circuit;

	my @settings = (
		"url",
		"autoapprove",
		"naudl",
		"naudl_member",
		"naudl_league_code",
		"ncfl",
		"full_members",
		"tourn_only",
		"track_bids",
		"regions",
		"demographics",
		"judge_demographics",
		"judge_training",
		"tourns_no_add"
	);

	#Save new information if it is a circuit that exists

	if ($circuit_id) { 

		$circuit = Tab::Circuit->retrieve($circuit_id);
		$circuit->name($name);
		$circuit->abbr($abbr);
		$circuit->state($state);
		$circuit->country($country);
		$circuit->tz($timezone);
		$circuit->update;

		$msg = "Circuit information has been updated";

		foreach my $setting (@settings) { 
			$ARGS{$setting} = 0 unless $ARGS{$setting};
			$circuit->setting($setting, $ARGS{$setting});
		}

	}  # end of if circuit_id

	$m->redirect("index.mhtml?circuit_id=$circuit_id&msg=$msg");

</%init>
