%			}

			<a 
				class="<% $whoami eq "conflicts" ? "dk" : "" %>blue half" 
				href="/user/judge/conflicts.mhtml"
			>
				Conflicts
			</a>

			<a 
				class="blue half" 
				href="/user/judge/paradigm.mhtml"
			>
				Paradigm
			</a>

%			if ($m->comp("/funclib/tourn_exchange.mas")) { 
