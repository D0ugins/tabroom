<%args>
	$person
	$judge_id => undef
	$past     => undef
</%args>
<%init>

	my $judge = Tab::Judge->retrieve($judge_id);

	if ($judge > 0 && $judge->person && $judge->person->id != $person->id) {
		my $name = $person->last;
		$m->print("That judge is not you.  Stop messing around, $name");
		$m->abort;
	}

	my @judges = $person->judges unless $judge;

	push (@judges, $judge) if $judge;

	my $now = DateTime->now();

</%init>

	<& "/user/menu.mas", person => $person &>

	<div class="main">

		<h2>Judging</h2>

<%perl>
		foreach my $judge (@judges) {

			my $category = $judge->category;
			next unless $category;

			my $tourn = $category->tourn;
			next unless $tourn;

			my $tz = $tourn->tz;
			$tz = "UTC" unless $tz;

			my $start = $tourn->start->set_time_zone($tz);
			my $end = $tourn->end->set_time_zone($tz);

			next unless $past || $end > $now;

</%perl>
			<h5 class="martopmore"><% $tourn->name %> </h5>

			<span class="pagehalf settings odd">
				<span class="third semibold settingstext">
					Dates
				</span>
				<span class="twothirds settingstext">
					<% Tab::niceshortdate($start) %>
					<% $start->day != $end->day ? " - ".Tab::niceshortdate($end) : "" %>/<% $start->year %>
				</span>
			</span>

			<span class="pagehalf settings odd">
				<span class="third semibold settingstext">
					School
				</span>
				<span class="twothirds settingstext">
					<% $judge->school > 0 ? $judge->school->short_name : "Hired" %>
				</span>
			</span>

			<span class="pagehalf settings even settings">
				<span class="third semibold settingstext">
					Category
				</span>

				<span class="twothirds settingstext">
					<% $category->name %>
				</span>
			</span>

			<span class="pagehalf settings even hover settings">

%				if ($end > $now && $category->setting("diversity_selfie")) {

					<label for="<% $judge->id %>_diverse">
						<span class="fourfifths semibold padleft">
							Identify as diversity enhancing?
						</span>

						<span class="sixth centeralign">
							<label class = "switch smaller">
								<input
									class         = "padsettingbox"
									type          = "checkbox"
									value         = "1"
									id            = "<% $judge->id %>_diverse"
									setting_name  = "diverse"
									target_id     = "<% $judge->id %>"
									onChange      = "postSwitch( this, 'judge_switch.mas');"
									<%  $judge->setting("diverse") ? 'checked' : "" %>
								>
								<div class="<% $ARGS{"onred"} ? "onred" : "" %> slider"></div>
							</label>
						</span>
					</label>

%					if ($category->setting("diversity_notice")) {
						<p class="explain">
							<% $category->setting("diversity_notice") %>
						</p>
%					}

%				}
			</span>

%			unless ($category->setting("no_codes")) {
				<span class="pagehalf settings odd">
					<span class="half settingstext semibold">
						Judge Code
					</span>
					<span class="half ">
						<% $judge->code %>
					</span>
				</span>
%			}

%			if ($start < $now) {
				<span class="pagehalf settings odd">
					<span class="half settingstext semibold">
						Rounds judged
					</span>
					<span class="half settingstext">
						<% scalar $m->comp("/funclib/judge_panels.mas", judge => $judge) %>
					</span>
				</span>
%			} elsif ($category->setting("rounds_per")) {

				<span class="pagehalf settings odd">
					<span class="half settingstext semibold">
						Obligation for School
					</span>
					<span class="half settingstext">
						<% $judge->obligation %>
					</span>
				</span>

				<span class="pagehalf settings odd">
					<span class="half settingstext semibold">
						Hired Rounds
					</span>
					<span class="half settingstext">
						<% $judge->hired %>
					</span>
				</span>
%			}

%			if ($category->tourn->setting("nsda_nats")) {
%				my $nationals = $m->comp("/funclib/current_nationals.mas");
				<span class="pagehalf settings odd centeralign">
					<a class="buttonwhite bluetext larger marvert centeralign invert"
						href="/user/judge/nats.mhtml"
					>
						Nationals Forms
					</a>
				</span>
%			}

%			if ($m->comp("/funclib/person_panels.mas", person => $person, judge => $judge)
%				|| $m->comp("/funclib/person_published.mas", person => $person, judge => $judge)
%			) {

				<div class="libl centeralign padvert pagefull">
					<a
						class="buttonwhite bluetext marvert invert"
						href="panels.mhtml"
					>Ballot Assignments</a>
				</div>
%			}

			</span>

%		}

	</div>

