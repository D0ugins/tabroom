%				if ($event_settings{"online_mode"} && $event_settings{"online_mode"} ne "async") {
% 					if ($event_settings{"online_mode"} eq "sync") {
						<% $panel->room > 0 ? $panel->room->name : "" %>
% 					}
                        Room Link:
						<& "/funclib/online_room.mas",
							panel  => $panel,
							person => $person,
							class  => "marno top invert"
						&>
%        	   }
			</span>
