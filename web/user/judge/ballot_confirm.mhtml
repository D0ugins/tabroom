				<span class="third nospace">
					<h5 class="nospace">
						Decision Complete
					</h5>
				</span>
<%perl>

			my $proceed++;
			my $aff_count = 0;
			my $neg_count = 0;
			my $switch;

			my %results;

			my ($winner, $side, $order) = $m->comp(
				'/funclib/panel_winner.mas',
				panel => $panel,
				judge => $judge
			);

			foreach my $ojudge (@judges) {

				my ($thiswin, $winside, $winorder) = $m->comp(
					'/funclib/panel_winner.mas',
					panel => $panel,
					judge => $ojudge,
					noob  => 1
				);

				$aff_count++ if $winside == 1;
				$neg_count++ if $winside == 2;
