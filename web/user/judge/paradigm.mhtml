<%args>
	$person
</%args>
<%init>

	my $paradigm_timestamp = $person->setting('paradigm_timestamp');
	
</%init>

	<& /funclib/editor.mas &>

	<& menu.mas, person => $person &>

	<div class="main">

		<h2>Your Paradigm</h2>

		<p>
			This paradigm will be displayed publicly on the main site, and will
			also be linked off pref/strike sheets for tournaments.  
		</p>

		<div class='full lightodd centeralign'>
			<% $paradigm_timestamp ? "Last edited: ".Tab::nicedt($paradigm_timestamp) : "" %>
		</div>

		<span class="block centeralign">
			<form action="paradigm_save.mhtml" method="post">
			<textarea 
				class = "budgeleft"
				name  = "paradigm"
				rows  = "20"
			><% $person->setting("paradigm") %></textarea>
		</span>

		<span class="liblrow rightalign block">
			<input type="submit" value="Save Paradigm">
			</form>
		</span>

	</div>

