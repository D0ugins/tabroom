<%args>
	$person
	$whoami => undef
</%args>
<%init>

</%init>

	<div class="menu">

		<div class="sidenote">

			<h4>Programs you've judged for</h4>

%			foreach my $cj ($person->chapter_judges) {
				<a
					class="blue full"
					href="profile.mhtml?chapter_judge_id=<% $cj->id %>"
				>
					<% $cj->chapter->name %>
				</a>
%			}

		</div>

		<div class="sidenote">

			<h4>Judging</h4>

%			if ($m->comp("/funclib/tourn_exchange.mas")) {
				<a
					class="<% $whoami eq "exchange" ? "dk" : "" %>blue full martopmore"
					href="/user/judge/hire.mhtml?person_id=<% $person->id %>"
				>
					Offer rounds as a hired judge
				</a>
%			}

			<a
				class="<% $whoami eq "conflicts" ? "dk" : "" %>blue full"
				href="/user/judge/conflicts.mhtml"
			>
				Standing Conflicts
			</a>


			<h4>Recent judging</h4>


%			my $count;

%			foreach my $judge (sort {$b->id <=> $a->id} $person->judges) {

%				next unless $judge->category && $judge->category->tourn;
%				last if $count++ > 10;
				<a
					class="nowrap blue full"
					href="/user/judge/tourn.mhtml?tourn_id=<% $judge->category->tourn->id %>"
				>
					<% $judge->category->abbr %> at <% $judge->category->tourn->name %>
				</a>
%			}

			<a
				class="yellow full martopmore"
				href="history.mhtml?person_id=<% $person->id %>"
			>
				Full Judging History
			</a>

		</div>

		<div class="sidenote">

			<a class="yellow full" href="/user/home.mhtml">
				Return to your homepage
			</a>

		</div>

	</div>
