		@ballots
	) {

		$ranking++;

		my $rank   = $ballot->scores(tag => "rank")->first;
		my $points = $ballot->scores(tag => "points")->first;
		my $subscores = $ballot->scores(tag => "subscores")->first;

		unless ($rank) { 
			$rank = Tab::Score->create({
				tag      => 'rank',
				ballot   => $ballot->id,
				value    => $ranking,
				tiebreak => 1
			});
		} elsif ($rank->value != $ranking) { 
			$rank->value($ranking);
			$rank->update();
		}

		unless ($points) { 
			$points = Tab::Score->create({
				tag      => 'points',
				ballot   => $ballot->id,
				value    => $ballot_scores{$ballot->id}{'points'},
				tiebreak => 3
			});
		} elsif ($points->value != $ballot_scores{$ballot->id}{"points"}) { 
			$points->value($ballot_scores{$ballot->id}{"points"});
			$points->update();
		}

		unless ($subscores) { 
			$subscores = Tab::Score->create({
				tag      => 'subpoints',
				ballot   => $ballot->id,
				value    => 0,
				content  => $json->pretty->encode($ballot_scores{$ballot->id}{'subtotals'}),
				tiebreak => 3
			});
		} else { 
			$subscores->content($json->pretty->encode($ballot_scores{$ballot->id}{'subtotals'}));
			$subscores->update();
		}
	}

