<%args>
	$person
</%args>

%	my $switch;

	<& menu.mas,
		person => $person,
		whoami => "judgehistory"
	&>

	<div class="main">

		<h2>Your judging history</h2>

		<table>

			<tr class="yellowrow">

				<th class="smaller">
					Tournament
				</th>

				<th class="smaller">
					Year
				</th>

				<th class="smaller">
					Dates
				</th>

				<th class="smaller">
					Division
				</th>

				<th class="smaller">
					Rounds
				</th>

			</tr>

%			foreach  my $judge (sort {$b->id <=> $a->id} $person->judges) {

%				my $tourn = $judge->category->tourn;
%				next unless $tourn;

				<tr class="row">

					<td>
						<a class="white nowrap block" href="tourn.mhtml?tourn_id=<% $tourn->id %>">
						<% $tourn->name %>
						</a>
					</td>

					<td class="smaller">
						<% $tourn->start->year %>
					</td>

					<td class="smaller" width="75px">
						<% Tab::niceshortdate($tourn->start->set_time_zone($tourn->tz)) %>
						<% ($tourn->start->day != $tourn->end->day) ? "-".Tab::niceshortdate($tourn->end->set_time_zone($tourn->tz)) : "" %>
					</td>

					<td class="smaller">
						<% $judge->category->name %>
					</td>

					<td class="centeralign">
						<% scalar $m->comp("/funclib/judge_panels.mas", judge => $judge)  %>
						<% ($judge->obligation) ? "/".$judge->obligation : "" %>
					</td>

				</tr>

%			}

		</table>

	</div>

