<%args>
	$school
	$person
	$event_id => undef
</%args>
<%init>

	my $tourn = $school->tourn;

	use POSIX;
	my @entries = $m->comp("/funclib/tourn_entries.mas", tourn => $tourn);
	my @judges = $m->comp("/funclib/tourn_judges.mas", tourn => $tourn);
	my @schools = $tourn->schools;

</%init>

	<& "menu.mas",
		event_id => $event_id,
		school   => $school,
		whoami   => "stats"
	&>

	<div class="main">

		<h2><% $school->chapter->name %>: Results</h2>

		<& "/user/chapter/tabbar.mas",
			chapter => $school->chapter,
			person  => $person,
			whoami => "results"
		&>

		<h3 class="normalweight centeralign padtopmore">
			<% $tourn->name %>
		</h3>

		<div class="half center padtop">

			<h5 class="centeralign semibold">
				Statistics
			</h5>

			<table>

				<tr class="row">

					<td>
						Schools
					</td>

					<td class="rightalign">
						<% scalar @schools %>
					</td>

				</tr>

				<tr class="row">

					<td>
						Entries
					</td>

					<td class="rightalign">
						<% scalar @entries %>
					</td>

				</tr>

				<tr class="row">

					<td>
						Judges
					</td>

					<td class="rightalign">
						<% scalar @judges %>
					</td>

				</tr>

				<tr class="row">

					<td>
						States
					</td>

					<td class="rightalign">
						<% $m->comp("/funclib/tourn_states.mas", tourn => $tourn) %>
					</td>

				</tr>

			</table>

		</div>


	</div>

