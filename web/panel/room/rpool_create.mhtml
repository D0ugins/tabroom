<%args>
	$tourn
	$person
	$rg_name => undef
	$perms   => undef
</%args>
<%init>

	if ($rg_name) { 

		my $rpool = Tab::RPool->create({
			tourn => $tourn->id,
			name  => $rg_name,
		});

		my $msg = "Pool $rg_name create";
		$m->redirect("rpool.mhtml?rpool_id=".$rpool->id."&msg=$msg");

	}

	my $no_setup++ if ${$perms}{"entry_only"};
	$no_setup++ if ${$perms}{"limited"} &! ${$perms}{"setup"};

</%init>

	<& menu.mas, 
		tourn    => $tourn,
		whoami   => "rpools",
		no_setup => $no_setup  
	&>

	<div class="main">

		<h2>Create a room pool</h2>

		<h4>Give it a name:</h4>

		<div class="row full">

			<form action="rpool_create.mhtml" method="post">

			<input 
				type = "text"
				name = "rg_name"
				size = "30"
			>

			<input 
				type  = "submit"
				class = "thin marleftmore"
				value = " That's it.  Create it"
				title = "What, were you expecting this to be complicated?"
			>
			</form>
		</div>

	</div>
