<%args>
	$tourn
	$perms
	$event_id => undef
</%args>
<%init>

	my ($eventref, $catref) = $m->comp(
		"/funclib/allowed_events.mas",
		tourn => $tourn,
		perms => $perms,
		type  => "admin"
	);

	my @events = @{$eventref};
	my @categories = @{$catref};

	my $event = Tab::Event->retrieve($event_id) if $event_id;
	$event = $events[0] if not defined $event;


</%init>

	<div class="main">

%		if ($event) {

			<h2>Publish <% $event->name %></h2>

			<form action="save.mhtml" method="post">

			<input
				type  = "hidden"
				name  = "event_id"
				value = "<% $event->id %>"
			>

			<table>

				<tr class="yellowrow">

					<th class="smaller centeralign padno">
						Rnd
					</th>

					<th class="smaller"
						title="Use this to post an alphabetical list of entries in a given round online without pairing/room/judge info">
						Entry List
					</th>

					<th class="smaller"
						title="Publish pairings with rooms and entry assignments.  Judges optional.">
						Pairing
					</th>

					<th class="smaller"
						title="Publish results of the round, with or without speaker points">
						Results
					</th>
					<th class="smaller"
						title="Publish feedback and RFDs of the round to the students and coaches">
						Feedback/RFD
					</th>

				</tr>

%				foreach my $round (sort {$a->name <=> $b->name} $event->rounds) {

					<tr class="row">

						<td class="semibold bluetext centeralign hover" title="<% $round->realname %>">
							<% $round->label ?  substr($round->label,0,1) : $round->name %>
						</td>

						<td class="smaller centeralign nospace">

							<label
								for   = "<% $round->id %>_publish_entry_list"
							>
							<span class="full hover nospace">
								<input
									type  = "checkbox"
									name  = "<% $round->id %>_publish_entry_list"
									id    = "<% $round->id %>_publish_entry_list"
									value = "1"
									<% $round->setting("publish_entry_list") ? 'checked="checked"' : "" %>
								>
							</span>
							</label>
						</td>

						<td class="smallish padno centeralign">

							<label for="publish_<% $round->id %>_0">
								<span class="threetenths hover marno leftalign padless">
									<input
										type  = "radio"
										name  = "publish_<% $round->id %>"
										id    = "publish_<% $round->id %>_0"
										value = "0"
										<% $round->published ? "" : 'checked="checked"' %>
									>
										Not Public
								</span>
							</label>

							<label for="publish_<% $round->id %>_1">
								<span class="threetenths hover leftalign padless">
									<input
										type  = "radio"
										name  = "publish_<% $round->id %>"
										id    = "publish_<% $round->id %>_1"
										value = "1"
										<% $round->published == 1 ? 'checked="checked"' : "" %>
									>
										Public
								</span>
							</label>

							<label for="publish_<% $round->id %>_2">
								<span class="threetenths hover leftalign padless">
									<input
										type  = "radio"
										name  = "publish_<% $round->id %>"
										id    = "publish_<% $round->id %>_2"
										value = "2"
										<% $round->published == 2 ? 'checked="checked"' : "" %>
									>
										w/o judges
								</span>
							</label>

%							if ($event->type eq "wudc") {
								<label for="publish_<% $round->id %>_3">
									<span class="third hover">
										<input
											type  = "radio"
											name  = "publish_<% $round->id %>"
											id    = "publish_<% $round->id %>_3"
											value = "3"
											<% $round->published == 3 ? 'checked="checked"' : "" %>
										>
											w/Motion
									</span>
								</label>
%							}
						</td>

						<td class="smallish padno nowrap centeralign">

							<label for="result_<% $round->id %>_0">
								<span class="threetenths hover leftalign padless">
									<input
										type  = "radio"
										name  = "result_<% $round->id %>"
										id    = "result_<% $round->id %>_0"
										value = "0"
										<% $round->post_results == 0 ? "checked" : "" %>
									>
										Not Public
								</span>
							</label>

							<label for="result_<% $round->id %>_1">
								<span class="threetenths hover leftalign padless">
									<input
										type  = "radio"
										name  = "result_<% $round->id %>"
										id    = "result_<% $round->id %>_1"
										value = "1"
										<% $round->post_results == 1 ? "checked" : "" %>
									>
										Records (W/L)
								</span>
							</label>

							<label for="result_<% $round->id %>_2">
								<span class="threetenths hover leftalign padless">
									<input
										type  = "radio"
										name  = "result_<% $round->id %>"
										id    = "result_<% $round->id %>_2"
										value = "2"
										<% $round->post_results == 2 ? "checked" : "" %>
									>
									All results
								</span>
							</label>

						</td>

						<td>
							<label for="feedback_<% $round->id %>_2">
								<span class="full nospace hover centeralign">
									<input
										type  = "checkbox"
										name  = "feedback_<% $round->id %>"
										id    = "feedback_<% $round->id %>_2"
										value = "2"
										<% $round->setting("public_feedback") ? "checked" : "" %>
									>
								</span>
							</label>
						</td>

					</tr>

%				}
			</table>

			<div class="liblrow rightalign">
				<span class="third centeralign">
					<input
						type  = "submit"
						value = " Save Publish Settings "
					>
				</span>
			</div>

			</form>

%		}

	</div>

	<div class="menu">

		<div class="sidenote">

			<h4>Events</h4>
<%perl>

			@events = sort {$a->type cmp $b->type} @events;

			my $last_type;

			foreach my $oevent (@events) {

				$last_type = $oevent->type unless $last_type;

				my $class = "martop" if $oevent->type ne $last_type;

				$last_type = $oevent->type;

</%perl>

				<a
					class="<% $oevent->id == $event_id? "dk" : ""%>blue nowrap <% $class %> full"
					href="index.mhtml?event_id=<% $oevent->id %>"
				>
					<% $oevent->name %>
				</a>
%			}

%			unless ($perms->{'detailed'}) {

			<a
				href  = "timeslots.mhtml"
				class = "martop yellow full"
			>
				By Entire Timeslot
			</a>

%			my $warn = "This will publish all round pairings/schematics, and all results, of all events.  You sure?";

			<a
				href  = "publish_everything.mhtml"
				class = "martop yellow full"
				<& "/funclib/confirm.mas", warn => $warn &>
			>
				Just publish everything
			</a>

%			}

		</div>

	</div>

