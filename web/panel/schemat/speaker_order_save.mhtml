<%args>
	$panel_id => undef
</%args>
<%init>

	my $panel = Tab::Panel->retrieve($panel_id) if $panel_id;

	return unless $panel;

	my %taken;

	Tab::Ballot->set_sql("update_speaker" => "
		update ballot
			set speakerorder = ?
			where entry = ?
			and panel = ?
	");

	my @entries = $m->comp('/funclib/panel_entries.mas', panel => $panel);
	@entries = sort { $ARGS{$a} <=> $ARGS{$b} } @entries;

	my $factor = (scalar @entries * 2);

	my $position = 1;
	foreach my $entry (@entries) {
		Tab::Ballot->sql_update_speaker->execute( ($position++ + $factor), $entry->id, $panel->id);
	}

	$position = 1;
	foreach my $entry (@entries) {
		Tab::Ballot->sql_update_speaker->execute($position++, $entry->id, $panel->id);
	}

	$m->redirect("panel_view.mhtml?panel_id=".$panel->id);

</%init>
