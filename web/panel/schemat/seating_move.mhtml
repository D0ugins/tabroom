<%args>
	$person
	$panel_id    => undef
	$entry_id    => undef
	$seat_marker => undef
</%args>
<%init>
	
	$m->clear_buffer();

	my $panel = Tab::Panel->retrieve($panel_id) if $panel_id;
	my $entry = Tab::Entry->retrieve($entry_id) if $entry_id;

	if ($panel && $entry) { 

		my @ballots = Tab::Ballot->search( 
			panel => $panel->id,
			entry => $entry->id
		);

		foreach my $ballot (@ballots) { 
			$ballot->seat($seat_marker);
			$ballot->update();
		}


		$m->print('{ "error": false, "message": "'.$entry->name.' seated at '.$seat_marker.'"}');
		$m->abort();
	
	}

	$m->print('{ "error": true, "message": "No valid entry or chamber found"}');
	$m->abort();

</%init>
