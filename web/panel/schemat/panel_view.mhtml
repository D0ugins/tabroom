		function showJudges() {

			var checkObjectId = "<% $panel->id %>_bye";
	
			if ($("#"+checkObjectId).prop("checked") ) {

				$(".judgebar").addClass('hidden');
				$(".coachover").removeClass('hidden');

			} else { 

				$(".judgebar").removeClass('hidden');
				$(".coachover").addClass('hidden');
			} 

		};

		$(document).ready(function(){
			showJudges();
		});

	</script>

