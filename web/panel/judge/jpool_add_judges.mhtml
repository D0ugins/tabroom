<%args>
	$jpool_id
	$category_id => undef
</%args>
<%init>

	my $category = Tab::Category->retrieve($category_id);

	$m->comp("/funclib/abort.mas", message => "No judge category found for ID $category_id");

	my $counter;

	foreach my $judge ($category->judges) { 

		next unless $judge->active; 

		unless (
			Tab::JPoolJudge->search(
				judge => $judge->id,
				jpool => $jpool_id
			)
		) {
			eval { 
				Tab::JPoolJudge->create({
					judge => $judge->id,
					jpool => $jpool_id
				});
			};

			$counter++;
		}
	}

	my $msg = $counter." judges added to judge pool";

	$m->redirect("jpool.mhtml?jpool_id=".$jpool_id."&msg=$msg");

</%init>
