<%args>
	$person
	$jpool_id
	$message => undef
	$blast   => undef
</%args>
<%init>

	my $jpool = Tab::JPool->retrieve($jpool_id);

	if ($message) {

		my $email;
		$email++ unless $blast;

		my @emails = $m->comp("/funclib/judge_follower.mas",
			jpool       => $jpool->id,
			person_only => 1,
			emails      => $email
		);

		$subject = "Message to judge pool ".$jpool->name;

		if ($email) {

		    $message = $message."\n-----------------------------<br />\n";
			$message = $message."Email sent to:\n";
			$message = $message." $sent_to\n\n ";

			$m->comp( "/funclib/send_email.mas",
				from    => $person,
				array   => \@emails,
				subject => $subject,
				body    => $message
			);

		} else {

			$message = substr($message, 0, 150);

		    $m->comp( "/funclib/send_notify.mas",
				from    => $person->email,
				array   => \@emails,
				subject => $subject,
				body    => $message
			);
		}
	}

</%init>

	<div class="main">

		<h4>Blast Judge Pool <% $jpool->name %></h4>

		<form action="blast_jpool.mhtml" method="post">

		<input
			type  = "hidden"
			name  = "jpool_id"
			value = "<% $jpool_id %>"
		>

		<div class="row full">
			<span class="quarter semibold bluetext">
				Message:
			</span>

			<span class="threequarters">
				<textarea
					name="message"
					rows="3"
					cols="64"
				></textarea>
			</span>
		</div>

		<div class="row full">
			<span class="quarter semibold bluetext">
				Send as
			</span>

			<span class="threequarters">
				<label for="blast">
					<span class="half" title="Blast messages will go as texts and emails and are limited to 150 letters">
						Blast (Text/Emails)
						<input
							type  = "radio"
							name  = "blast"
							value = "1"
							checked
						>
					</span>
				</label>
				<label for="email">
					<span class="half">
						Email Only
						<input
							type  = "radio"
							name  = "blast"
							value = "0"
							checked
						>
					</span>
				</label>
			</span>
		</div>

		<div class="libl row rightalign">
			<span class="quarter rightalign">
				<input
					type="submit"
					value="Send Message"
				>
			</span>
		</div>

	</div>
