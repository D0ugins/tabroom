<%args>
	$jpool_id
	$round_id
	$event_id => undef
	$category_id => undef
</%args>
<%init>
	
	my $jpool_round = Tab::JPoolRound->search( 
		round => $round_id, 
		jpool => $jpool_id
	)->first;

	$jpool_round->delete if $jpool_round;

	my $msg = "Round will no longer draw from that pool";

	$m->redirect("event.mhtml?round_id=$round_id&event_id=".$event_id."&msg=$msg") if $event_id;

	$m->redirect("jpool.mhtml?jpool_id=$jpool_id&round_id=$round_id&category_id=".$category_id."&msg=$msg");

</%init>
