<%args>
	$jpool_id
	$round_id
</%args>
<%init>
	
	my $round = Tab::Round->retrieve($round_id);

	my $msg;

	unless (Tab::JPoolRound->search({ round => $round->id, jpool => $jpool_id })) { 
		Tab::JPoolRound->create({
			round => $round->id,
			jpool => $jpool_id
		});

		$msg = $round->realname." will now draw from this judge pool";
	}

	$m->redirect("jpool.mhtml?jpool_id=$jpool_id&category_id=".$round->event->category->id."&msg=$msg");


</%init>
