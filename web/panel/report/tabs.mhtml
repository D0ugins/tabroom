<%args>
	$tourn
	$person
	$perms
</%args>
<%init>

	my @events;

	my $category;

	if (${$perms}{"category_tabbing"} && ${$perms}{"category_tabbing"}->category) { 
		@events = ${$perms}{"category_tabbing"}->category->events;
		$category = ${$perms}{"category_tabbing"}->category;
	} else { 
		@events = $tourn->events unless ${$perms}{"category_tabbing"};
	}

	@events = sort {$a->name cmp $b->name} @events;
	@events = sort {$a->type cmp $b->type} @events;

	my @timeslots = $m->comp('/funclib/category_timeslots.mas', category => $category) if $category;
	@timeslots = $tourn->timeslots unless @timeslots;
	@timeslots = sort { $a->start cmp $b->start } @timeslots;

</%init>

