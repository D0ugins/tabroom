<%args>
	$tourn
	$session
	$round_id => undef
	$sort_by  => undef
</%args>
<%init>

	my $round = Tab::Round->retrieve($round_id);
	$m->abort unless $round;

	my $event = $round->event;

    my $now = DateTime->now;    
    $now->set_time_zone($tourn->tz);

    my $name = $event->name;
    $name =~ s/[\W_]//g;

    my $filename = "Roster-$name-".$session->id;
    my $filepath = $Tab::file_root."tmp/".$filename;
    `rm -f $filepath.*`; 

    $m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		wide     => 1,
		head     => 1
	);

    open (TEXOUT, ">>$filepath.tex");

	print TEXOUT "\\noindent\n";
	print TEXOUT "{\\LARGE \\bf ". Tab::texify($event->name);
	print TEXOUT " \\hfill Chamber Assignments } \n";
	print TEXOUT "\\bigskip\n";
	print TEXOUT "\\newline\n";

	my $designation = $event->setting("schem_designation");
	my $tabular; 

	if ($designation eq "codes") { 
		$tabular = "\\begin{tabular}{|p{.95in}p{2.35in}|}\n";
	} elsif ($designation eq "names") { 
		$tabular = "\\begin{tabular}{|p{1.45in}p{1.85in}|}\n";
	} else { 
		$tabular = "\\begin{tabular}{|p{1.9in}p{1.65in}|}\n";
	}


	my $switch;
	my $colorswitch;

	my %panels = map {$_->id => $_} $round->panels;

	my @entries = $m->comp("/funclib/round_entries.mas", round => $round);

	if ($designation eq "names" || $sort_by eq "names") { 

		@entries = sort {$a->lastname cmp $b->lastname} @entries;

	} else { 

		@entries = 
            map  { $_->[0] } 
            sort { $a->[1] <=> $b->[1] } 
            map  { [$_, $_->code=~/(\d+)/] } 
			@entries;

	}

	my $countdown;
	my $half = POSIX::ceil(scalar (@entries) / 2);

	$half = 43 if $half > 43;

	my $halfswitch;
	my $notfirst;

	foreach my $entry (@entries) { 

		next unless $panels{$entry->panelid};

		if ($countdown-- < 1) { 

			my $countdown_correction;

			if ($notfirst++) { 

				print TEXOUT "\\hline\n";
				print TEXOUT "\\end{tabular}\n";
				print TEXOUT "\\end{minipage}\n";

				if ($halfswitch++ % 2) { 
					print TEXOUT "\\hspace{.1in}\n";
				} else { 
					print TEXOUT "\\newpage\n";
					print TEXOUT "\\noindent\n";
				}

			} else { 
				$halfswitch++;
			}

			print TEXOUT "\\begin{minipage}[t][][t]{3.65in}\n";
			print TEXOUT "\\vspace{0pt}\\raggedright\n";
			print TEXOUT $tabular;
			print TEXOUT "\\hline\n";
			print TEXOUT "\\rowcolor[rgb]{1,.95,.72}\[5.5pt\]\[5.5pt\]\n";
			print TEXOUT " Contestant & Chamber \\\\ \n";
			undef $colorswitch;
			$countdown = $half - 1;
		}

		print TEXOUT "\\rowcolor[rgb]{.93,.93,.93}\[5.5pt\]\[5.5pt\]\n" 
			if $colorswitch++ % 2;

		if ($designation eq "both") { 
			print TEXOUT "\\parbox{.4in}{\n";
			print TEXOUT "\\footnotesize\n";
			print TEXOUT Tab::texify($entry->code);
			print TEXOUT "}\n";
			print TEXOUT "\\parbox{1.1in}{\n";
			print TEXOUT "\\truncate{1.45in}{\n";
		}

		if ($designation eq "names") { 
			print TEXOUT "\\truncate{1.40in}{\n";
		}
		
		if ($designation eq "codes") { 
			print TEXOUT "\\truncate{.90in}{\n";
			print TEXOUT Tab::texify($entry->code);
		}
		
		if ($designation ne "codes") { 

			my $firstname = $entry->name;
			my $lastname = $entry->lastname;

			$firstname =~ s/$lastname//g;
			$firstname =~  s/\s+$//;

			print TEXOUT Tab::texify($entry->lastname);
			print TEXOUT ", ";
			print TEXOUT Tab::texify($firstname);
		}

		print TEXOUT "}\n";

		if ($designation eq "both") { 
			print TEXOUT "}\n";
		}

		print TEXOUT " & ";

		print TEXOUT Tab::texify($entry->panelletter).": \\hfill ";
		print TEXOUT Tab::texify($entry->roomname);
		print TEXOUT "\\\\ \n";

	}

	print TEXOUT "\\hline\n";
	print TEXOUT "\\end{tabular}\n";
	print TEXOUT "\\end{minipage}\n";
	close TEXOUT;

    $m->comp("/funclib/printout.mas", 
		tourn    => $tourn,
		filename => $filename,
		tail     => 1 
	);

</%init>
