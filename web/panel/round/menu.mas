<%args>
	$tourn
	$event  => undef
	$whoami => undef
	$nodiv  => undef
	$perms 
</%args>
<%init>

	my $ncfl++ if $tourn->setting("ncfl");

	my @events;

	my $category;

	if (${$perms}{"category_tab"} && ${$perms}{"category_tab"}->category) { 
		@events = ${$perms}{"category_tab"}->category->events;
		$category = ${$perms}{"category_tab"}->category;
	} else { 
		@events = $tourn->events unless ${$perms}{"category_tab"};
	}

	@events = sort {$a->name cmp $b->name} @events;
	@events = sort {$a->type cmp $b->type} @events;

</%init>

%	unless ($nodiv) { 

		<div class="menu">
%	}

		<div class="sidenote">

			<h4>Mass Attack</h4>

			<a 
				class="<% $whoami eq "mass" ? "dk" : "" %>blue full" 
				href="mass_create.mhtml"
			>
				Panel All Non-Debate Events
			</a>

		</div>

		<div class="sidenote">

			<h4>Panel prelims of</h4>

%			my $last_type;

%			foreach my $oevent (@events) { 

%				$last_type = $oevent->type unless $last_type;

%				my $class = "martop" if $oevent->type ne $last_type;
%				$last_type = $oevent->type;
				
				<a 
					class="<% $event && $oevent->id == $event->id ? "dk" : ""%>blue half" 
					href="event.mhtml?event_id=<% $oevent->id %>"
				>
					Panel <% $oevent->abbr %> 
				</a>
%			}

		</div>

%		if ($event) { 

			<div class="sidenote">

				<h4><% $event->name %></h4>

				<a 
					class="yellow full" 
					href="/panel/report/disasters.mhtml?event_id=<% $event->id %>"
				>
					Check for Disasters
				</a>

%				if ($ncfl) { 
					<a 
						class="yellow full" 
						href="speaker_order.mhtml?event_id=<% $event->id %>"
					>
						Check NCFL Speaker Order Thing
					</a>
%				}

			</div>
%		}

%		if ($tourn->events( type => "wudc")) { 
		
			<div class="sidenote">

				<h4>Set Motions</h4>

%				foreach my $o_event ($tourn->events( type => "wudc")) {
					<a 
						class="blue full" 
						href="motions.mhtml?event_id=<% $o_event->id %>"
					>
						<% $o_event->name %>
					</a>
%				}
			</div>

%		}

%	unless ($nodiv) { 
		</div>
%	}
