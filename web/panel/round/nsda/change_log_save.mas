<%args>
    $round_id
	$person
    $description
</%args>
<%init>

    my $round = Tab::Round->retrieve($round_id) if $round_id;
	$m->abort unless $round;

	$description = $round->realname.": ".$description;
    $description =~ s/\r|\n//g;
	my $now = DateTime->now();
    
	Tab::ChangeLog->create({ 
		type        => 'tabbing',
		event       => $round->event->id,
		tourn       => $round->event->tourn->id,
		person      => $person->id,
		created     => $now,
		description => $description
	});

    return;
    
</%init>

