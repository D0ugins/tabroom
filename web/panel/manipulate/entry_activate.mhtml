<%args>
	$tourn
	$tourn_settings
	$perms
	$person
	$session
	$event_id => undef
</%args>
<%init>

    my ($eventref, $catref) = $m->comp(
        "/funclib/allowed_events.mas",
        tourn => $tourn,
        perms => $perms
    );

    my %cats = map {$_->id => $_} @{$catref};
    my %evs = map {$_->id => $_} @{$eventref};

	my $event = $evs{$event_id};

	unless ($event) {

		my @keys = keys %evs;

		if (scalar @keys == 1) {
			$event_id = shift @keys;
			$event = $evs{$event_id};
		}
	}

	my @entries;

	if ($event) {
		@entries = $m->comp(
			"/funclib/tourn_entries.mas",
			tourn => $event->tourn,
			all   => "yeah",
			event => $event->id,
			names => "yes"
		);
	} elsif (not defined $perms->{detailed}) {
		@entries = $m->comp(
			"/funclib/tourn_entries.mas",
			tourn => $tourn,
			all   => "yeah",
			names => "yes"
		);
	}

</%init>

	<div class="menu">

%		if ($event) {

			<div class="sidenote">

				<h4>Commands</h4>

<%perl>
				my $warn = "This button will mark ALL entries as dropped. ";
				$warn .= " That could be disastrous, maybe.  You sure?";
</%perl>

				<a
					class = "full yellow"
					href  = "deactivate_entries.mhtml?event_id=<% $event->id %>"
					<& "/funclib/confirm.mas", warn => $warn &>
				>
					Deactivate All <% $event->abbr %> Entries
				</a>

<%perl>
				$warn = "This button will mark ALL entries as un-dropped.  ";
				$warn .= "That could be disastrous, maybe.  You sure?";
</%perl>

				<a
					class="full yellow"
					href="activate_entries.mhtml?event_id=<% $event->id %>"
					<& "/funclib/confirm.mas", warn => $warn &>
				>
					Activate All <% $event->abbr %> Entries
				</a>

			</div>
%		}

		<div class="sidenote">

			<h4>Events</h4>

%			unless ($perms->{details}) {
				<a
					href="entry_activate.mhtml"
					class="blue full"
				>All Entries</a>
%			}

%			foreach my $other_id (sort {$evs{$a}->abbr cmp $evs{$b}->abbr} keys %evs) {
				<a
					class = "<% $event == $other_id ? "dk" : "" %>blue full"
					href  = "entry_activate.mhtml?event_id=<% $other_id %>"
				><% $evs{$other_id}->name %></a>
%			}

		</div>

	</div>

	<div class="main">

		<span class="fivesixths">
			<h3>Entry Roll Call</h3>
		</span>
		<span
			id    = "sortable_table_buttonarea"
			class = "sixth rightalign"
		>
		</span>

		<& "/funclib/tablesorter.mas",
			table => "sortable_table"
		 &>

		<table id="sortable_table">

			<thead>

				<tr class="yellowrow">

					<th class="smaller">
						Code
					</th>

					<th class="smaller">
						Name
					</th>

					<th class="smaller">
						School
					</th>

					<th class="smaller">
						Event
					</th>

					<th class="smaller">
						Active
					</th>

				</tr>

			</thead>

			<tbody>

%			foreach my $entry (@entries) {

				<tr>

					<td class="smallish nowrap">
						<% $entry->code  %>
					</td>

					<td class="smallish">
%						unless ($perms->{detailed} || $perms->{entry_only}) {
							<a
								class  = "white"
								target = "_blank"
								href   = "/register/entry/edit.mhtml?entry_id=<% $entry->id %>"
							>
%						}
							<% $entry->fullnames %>
%						unless ($perms->{detailed} || $perms->{entry_only}) {
							</a>
%						}
					</td>

					<td class="smallish">
						<% $entry->school->short_name %>
					</td>

					<td class="smallish centeralign">
						<% $entry->event->abbr %>
					</td>

					<td class="smallish nospace centeralign">

						<span class="hidden">
							<% $entry->dropped ? "2" : "1" %>
						</span>

						<label class="switch">
							<input
								type          = "checkbox"
								value         = "1"
								id            = "<% $entry->id %>"
								property_name = "active"
								target_id     = "<% $entry->id %>"
								onChange      = "postSwitch( this, '/register/entry/entry_switch.mhtml');"
								<% $entry->active ? 'checked="checked"' : "" %>
							>
							<div class="slider"></div>
						</label>
					</td>

				</tr>
%			}

			</tbody>

		</table>

	</div>

